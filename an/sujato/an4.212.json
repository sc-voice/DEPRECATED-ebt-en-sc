    {
      "segments": [
        {
          "scid": "an4.212:1.1",
          "pli": "“Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“Mendicants, someone with four qualities is cast down to hell. "
        },
        {
          "scid": "an4.212:1.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.212:1.3",
          "pli": "Kāyaduccaritena, vacīduccaritena, manoduccaritena, micchādiṭṭhiyā—",
          "en": "Bad conduct by way of body, speech, and mind, and wrong view. "
        },
        {
          "scid": "an4.212:1.4",
          "pli": "imehi kho, bhikkhave, catūhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "Someone with these four qualities is cast down to hell. "
        },
        {
          "scid": "an4.212:2.1",
          "pli": "Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge. ",
          "en": "Someone with four qualities is raised up to heaven. "
        },
        {
          "scid": "an4.212:2.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.212:2.3",
          "pli": "Kāyasucaritena, vacīsucaritena, manosucaritena, sammādiṭṭhiyā—",
          "en": "Good conduct by way of body, speech, and mind, and right view. "
        },
        {
          "scid": "an4.212:2.4",
          "pli": "imehi kho, bhikkhave, catūhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge”ti. ",
          "en": "Someone with these four qualities is raised up to heaven.” "
        },
        {
          "scid": "an4.212:2.5",
          "pli": "Dutiyaṃ. ",
          "en": ""
        }
      ],
