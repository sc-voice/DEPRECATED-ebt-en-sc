        {
          "scid": "an10.174:1.1",
          "pli": "“Pāṇātipātampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "“Mendicants, I say that killing living creatures is threefold: "
        },
        {
          "scid": "an10.174:1.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:2.1",
          "pli": "Adinnādānampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that stealing is threefold: "
        },
        {
          "scid": "an10.174:2.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:3.1",
          "pli": "Kāmesumicchācārampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that sexual misconduct is threefold: "
        },
        {
          "scid": "an10.174:3.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:4.1",
          "pli": "Musāvādampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that lying is threefold: "
        },
        {
          "scid": "an10.174:4.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:5.1",
          "pli": "Pisuṇavācampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that divisive speech is threefold: "
        },
        {
          "scid": "an10.174:5.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:6.1",
          "pli": "Pharusavācampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that harsh speech is threefold: "
        },
        {
          "scid": "an10.174:6.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:7.1",
          "pli": "Samphappalāpampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that talking nonsense is threefold: "
        },
        {
          "scid": "an10.174:7.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:8.1",
          "pli": "Abhijjhampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that covetousness is threefold: "
        },
        {
          "scid": "an10.174:8.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:9.1",
          "pli": "Byāpādampāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that ill will is threefold: "
        },
        {
          "scid": "an10.174:9.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:10.1",
          "pli": "Micchādiṭṭhimpāhaṃ, bhikkhave, tividhaṃ vadāmi—",
          "en": "I say that wrong view is threefold: "
        },
        {
          "scid": "an10.174:10.2",
          "pli": "lobhahetukampi, dosahetukampi, mohahetukampi. ",
          "en": "caused by greed, hate, or delusion. "
        },
        {
          "scid": "an10.174:10.3",
          "pli": "Iti kho, bhikkhave, lobho kammanidānasambhavo, doso kammanidānasambhavo, moho kammanidānasambhavo. ",
          "en": "And so greed, hate, and delusion are sources and origins for deeds. "
        },
        {
          "scid": "an10.174:10.4",
          "pli": "Lobhakkhayā kammanidānasaṅkhayo, dosakkhayā kammanidānasaṅkhayo, mohakkhayā kammanidānasaṅkhayo”ti. ",
          "en": "With the ending of greed, hate, and delusion, the sources of deeds are ended.” "
        },
        {
          "scid": "an10.174:10.5",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
