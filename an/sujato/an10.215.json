    {
      "segments": [
        {
          "scid": "an10.215:1.1",
          "pli": "“Dasahi, bhikkhave, dhammehi samannāgatā upāsikā avisāradā agāraṃ ajjhāvasati. ",
          "en": "“A laywoman living at home with these ten qualities is not self-assured. "
        },
        {
          "scid": "an10.215:1.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.215:1.3",
          "pli": "Pāṇātipātinī hoti … ",
          "en": "She kills living creatures. … "
        },
        {
          "scid": "an10.215:1.4",
          "pli": "adinnādāyinī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.5",
          "pli": "kāmesumicchācārinī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.6",
          "pli": "musāvādinī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.7",
          "pli": "pisuṇavācā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.8",
          "pli": "pharusavācā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.9",
          "pli": "samphappalāpinī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.10",
          "pli": "abhijjhālunī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.11",
          "pli": "byāpannacittā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:1.12",
          "pli": "micchādiṭṭhikā hoti …. ",
          "en": "She has wrong view. … "
        },
        {
          "scid": "an10.215:1.13",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgatā upāsikā avisāradā agāraṃ ajjhāvasati. ",
          "en": "A laywoman living at home with these ten qualities is not self-assured. "
        },
        {
          "scid": "an10.215:2.1",
          "pli": "Dasahi, bhikkhave, dhammehi samannāgatā upāsikā visāradā agāraṃ ajjhāvasati. ",
          "en": "A laywoman living at home with these ten qualities is self-assured. "
        },
        {
          "scid": "an10.215:2.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.215:2.3",
          "pli": "Pāṇātipātā paṭiviratā hoti … ",
          "en": "She doesn’t kill living creatures. … "
        },
        {
          "scid": "an10.215:2.4",
          "pli": "adinnādānā paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.5",
          "pli": "kāmesumicchācārā paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.6",
          "pli": "musāvādā paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.7",
          "pli": "pisuṇāya vācāya paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.8",
          "pli": "pharusāya vācāya paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.9",
          "pli": "samphappalāpā paṭiviratā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.10",
          "pli": "anabhijjhālunī hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.11",
          "pli": "abyāpannacittā hoti … ",
          "en": " "
        },
        {
          "scid": "an10.215:2.12",
          "pli": "sammādiṭṭhikā hoti …. ",
          "en": "She has right view. … "
        },
        {
          "scid": "an10.215:2.13",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgatā upāsikā visāradā agāraṃ ajjhāvasatī”ti. ",
          "en": "A laywoman living at home with these ten qualities is self-assured.” "
        },
        {
          "scid": "an10.215:2.14",
          "pli": "Pañcamaṃ. ",
          "en": ""
        }
      ],
