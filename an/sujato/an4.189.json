    {
      "segments": [
        {
          "scid": "an4.189:1.1",
          "pli": "“Cattārome, bhikkhave, sacchikaraṇīyā dhammā. ",
          "en": "“Mendicants, these four things should be realized. "
        },
        {
          "scid": "an4.189:1.2",
          "pli": "Katame cattāro? ",
          "en": "What four? "
        },
        {
          "scid": "an4.189:1.3",
          "pli": "Atthi, bhikkhave, dhammā kāyena sacchikaraṇīyā; ",
          "en": "There are things to be realized directly. "
        },
        {
          "scid": "an4.189:1.4",
          "pli": "atthi, bhikkhave, dhammā satiyā sacchikaraṇīyā; ",
          "en": "There are things to be realized with mindfulness. "
        },
        {
          "scid": "an4.189:1.5",
          "pli": "atthi, bhikkhave, dhammā cakkhunā sacchikaraṇīyā; ",
          "en": "There are things to be realized with vision. "
        },
        {
          "scid": "an4.189:1.6",
          "pli": "atthi, bhikkhave, dhammā paññāya sacchikaraṇīyā. ",
          "en": "There are things to be realized with wisdom. "
        },
        {
          "scid": "an4.189:1.7",
          "pli": "Katame ca, bhikkhave, dhammā kāyena sacchikaraṇīyā? ",
          "en": "What things are to be realized directly? "
        },
        {
          "scid": "an4.189:1.8",
          "pli": "Aṭṭha vimokkhā, bhikkhave, kāyena sacchikaraṇīyā. ",
          "en": "The eight liberations. "
        },
        {
          "scid": "an4.189:2.1",
          "pli": "Katame ca, bhikkhave, dhammā satiyā sacchikaraṇīyā? ",
          "en": "What things are to be realized with mindfulness? "
        },
        {
          "scid": "an4.189:2.2",
          "pli": "Pubbenivāso, bhikkhave, satiyā sacchikaraṇīyo. ",
          "en": "Past lives. "
        },
        {
          "scid": "an4.189:3.1",
          "pli": "Katame ca, bhikkhave, dhammā cakkhunā sacchikaraṇīyā? ",
          "en": "What things are to be realized with vision? "
        },
        {
          "scid": "an4.189:3.2",
          "pli": "Sattānaṃ cutūpapāto, bhikkhave, cakkhunā sacchikaraṇīyo. ",
          "en": "The passing away and rebirth of sentient beings. "
        },
        {
          "scid": "an4.189:4.1",
          "pli": "Katame ca, bhikkhave, dhammā paññāya sacchikaraṇīyā? ",
          "en": "What things are to be realized with wisdom? "
        },
        {
          "scid": "an4.189:4.2",
          "pli": "Āsavānaṃ khayo, bhikkhave, paññāya sacchikaraṇīyo. ",
          "en": "The ending of defilements. "
        },
        {
          "scid": "an4.189:4.3",
          "pli": "Ime kho, bhikkhave, cattāro sacchikaraṇīyā dhammā”ti. ",
          "en": "These are the four things to be realized.” "
        },
        {
          "scid": "an4.189:4.4",
          "pli": "Navamaṃ. ",
          "en": ""
        }
      ],
