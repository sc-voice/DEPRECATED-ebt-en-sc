    {
      "segments": [
        {
          "scid": "an3.6:1.1",
          "pli": "“Tīhi, bhikkhave, dhammehi samannāgato bālo veditabbo. ",
          "en": "“A fool is known by three things. "
        },
        {
          "scid": "an3.6:1.2",
          "pli": "Katamehi tīhi? ",
          "en": "What three? "
        },
        {
          "scid": "an3.6:1.3",
          "pli": "Akusalena kāyakammena, akusalena vacīkammena, akusalena manokammena. ",
          "en": "Unskillful deeds by way of body, speech, and mind. "
        },
        {
          "scid": "an3.6:1.4",
          "pli": "Imehi kho, bhikkhave, tīhi dhammehi samannāgato bālo veditabbo. ",
          "en": "These are the three things by which a fool is known. "
        },
        {
          "scid": "an3.6:2.1",
          "pli": "Tīhi, bhikkhave, dhammehi samannāgato paṇḍito veditabbo. ",
          "en": "An astute person is known by three things. "
        },
        {
          "scid": "an3.6:2.2",
          "pli": "Katamehi tīhi? ",
          "en": "What three? "
        },
        {
          "scid": "an3.6:2.3",
          "pli": "Kusalena kāyakammena, kusalena vacīkammena, kusalena manokammena. ",
          "en": "Skillful deeds by way of body, speech, and mind. "
        },
        {
          "scid": "an3.6:2.4",
          "pli": "Imehi kho, bhikkhave, tīhi dhammehi samannāgato paṇḍito veditabbo. ",
          "en": "These are the three things by which an astute person is known. "
        },
        {
          "scid": "an3.6:2.5",
          "pli": "Tasmātiha … pe …. ",
          "en": "So you should train …” "
        },
        {
          "scid": "an3.6:2.6",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
