    },
    {
      "segments": [
        {
          "scid": "an5.239:1.1",
          "pli": "“Pañcahi, bhikkhave, dhammehi samannāgato āvāsiko bhikkhu yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“Mendicants, a resident mendicant with five qualities is cast down to hell. "
        },
        {
          "scid": "an5.239:1.2",
          "pli": "Katamehi pañcahi? ",
          "en": "What five? "
        },
        {
          "scid": "an5.239:1.3",
          "pli": "Āvāsamaccharī hoti; ",
          "en": "They’re stingy regarding monasteries, "
        },
        {
          "scid": "an5.239:1.4",
          "pli": "kulamaccharī hoti; ",
          "en": "families, "
        },
        {
          "scid": "an5.239:1.5",
          "pli": "lābhamaccharī hoti; ",
          "en": "material possessions, "
        },
        {
          "scid": "an5.239:1.6",
          "pli": "vaṇṇamaccharī hoti; ",
          "en": "and praise. "
        },
        {
          "scid": "an5.239:1.7",
          "pli": "saddhādeyyaṃ vinipāteti. ",
          "en": "And they waste a gift given in faith. "
        },
        {
          "scid": "an5.239:1.8",
          "pli": "Imehi kho, bhikkhave, pañcahi dhammehi samannāgato āvāsiko bhikkhu yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "A resident mendicant with these five qualities is cast down to hell. "
        },
        {
          "scid": "an5.239:2.1",
          "pli": "Pañcahi, bhikkhave, dhammehi samannāgato āvāsiko bhikkhu yathābhataṃ nikkhitto evaṃ sagge. ",
          "en": "A resident mendicant with five qualities is raised up to heaven. "
        },
        {
          "scid": "an5.239:2.2",
          "pli": "Katamehi pañcahi? ",
          "en": "What five? "
        },
        {
          "scid": "an5.239:2.3",
          "pli": "Na āvāsamaccharī hoti; ",
          "en": "They’re not stingy regarding monasteries, "
        },
        {
          "scid": "an5.239:2.4",
          "pli": "na kulamaccharī hoti; ",
          "en": "families, "
        },
        {
          "scid": "an5.239:2.5",
          "pli": "na lābhamaccharī hoti; ",
          "en": "material possessions, "
        },
        {
          "scid": "an5.239:2.6",
          "pli": "na vaṇṇamaccharī hoti; ",
          "en": "and praise. "
        },
        {
          "scid": "an5.239:2.7",
          "pli": "saddhādeyyaṃ na vinipāteti. ",
          "en": "And they don’t waste a gift given in faith. "
        },
        {
          "scid": "an5.239:2.8",
          "pli": "Imehi kho, bhikkhave, pañcahi dhammehi samannāgato āvāsiko bhikkhu yathābhataṃ nikkhitto evaṃ sagge”ti. ",
          "en": "A resident mendicant with these five qualities is raised up to heaven.” "
        },
        {
          "scid": "an5.239:2.9",
          "pli": "Navamaṃ. ",
          "en": ""
        }
      ],
