      "segments": [
        {
          "scid": "an10.78:1.1",
          "pli": "“Dasahi, bhikkhave, asaddhammehi samannāgatā nigaṇṭhā. ",
          "en": "“Mendicants, Jain ascetics have ten bad qualities. "
        },
        {
          "scid": "an10.78:1.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.78:1.3",
          "pli": "Assaddhā, bhikkhave, nigaṇṭhā; ",
          "en": "They’re faithless and "
        },
        {
          "scid": "an10.78:1.4",
          "pli": "dussīlā, bhikkhave, nigaṇṭhā; ",
          "en": "unethical, "
        },
        {
          "scid": "an10.78:1.5",
          "pli": "ahirikā, bhikkhave, nigaṇṭhā; ",
          "en": "without conscience "
        },
        {
          "scid": "an10.78:1.6",
          "pli": "anottappino, bhikkhave, nigaṇṭhā; ",
          "en": "or prudence, "
        },
        {
          "scid": "an10.78:1.7",
          "pli": "asappurisasambhattino, bhikkhave, nigaṇṭhā; ",
          "en": "and devoted to bad persons. "
        },
        {
          "scid": "an10.78:1.8",
          "pli": "attukkaṃsakaparavambhakā, bhikkhave, nigaṇṭhā; ",
          "en": "They glorify themselves and put others down. "
        },
        {
          "scid": "an10.78:1.9",
          "pli": "sandiṭṭhiparāmāsā ādhānaggāhī duppaṭinissaggino, bhikkhave, nigaṇṭhā; ",
          "en": "They’re attached to their own views, holding them tight, and refusing to let go. "
        },
        {
          "scid": "an10.78:1.10",
          "pli": "kuhakā, bhikkhave, nigaṇṭhā; ",
          "en": "They’re deceptive, "
        },
        {
          "scid": "an10.78:1.11",
          "pli": "pāpicchā, bhikkhave, nigaṇṭhā; ",
          "en": "with bad desires "
        },
        {
          "scid": "an10.78:1.12",
          "pli": "pāpamittā, bhikkhave, nigaṇṭhā—",
          "en": "and bad friends. "
        },
        {
          "scid": "an10.78:1.13",
          "pli": "imehi kho, bhikkhave, dasahi asaddhammehi samannāgatā nigaṇṭhā”ti. ",
          "en": "Jain ascetics have these ten bad qualities.” "
        },
        {
          "scid": "an10.78:1.14",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
