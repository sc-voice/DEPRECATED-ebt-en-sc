    {
      "segments": [
        {
          "scid": "an6.141:1.1",
          "pli": "“Rāgassa, bhikkhave, abhiññāya cha dhammā bhāvetabbā. ",
          "en": "“For insight into greed, six things should be developed. "
        },
        {
          "scid": "an6.141:1.2",
          "pli": "Katame cha? ",
          "en": "What six? "
        },
        {
          "scid": "an6.141:1.3",
          "pli": "Buddhānussati, dhammānussati, saṅghānussati, sīlānussati, cāgānussati, devatānussati. ",
          "en": "The recollection of the Buddha, the teaching, the Saṅgha, ethics, generosity, and the deities. "
        },
        {
          "scid": "an6.141:1.4",
          "pli": "Rāgassa, bhikkhave, abhiññāya ime cha dhammā bhāvetabbā”ti. ",
          "en": "For insight into greed, these six things should be developed.”"
        }
      ],
