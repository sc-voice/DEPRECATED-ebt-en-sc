      "segments": [
        {
          "scid": "an8.17:1.1",
          "pli": "“Aṭṭhahi, bhikkhave, ākārehi itthī purisaṃ bandhati. ",
          "en": "“Mendicants, a woman catches a man using eight features. "
        },
        {
          "scid": "an8.17:1.2",
          "pli": "Katamehi aṭṭhahi? ",
          "en": "What eight? "
        },
        {
          "scid": "an8.17:1.3",
          "pli": "Ruṇṇena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "With weeping, "
        },
        {
          "scid": "an8.17:1.4",
          "pli": "hasitena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "laughing, "
        },
        {
          "scid": "an8.17:1.5",
          "pli": "bhaṇitena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "speaking, "
        },
        {
          "scid": "an8.17:1.6",
          "pli": "ākappena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "appearance, "
        },
        {
          "scid": "an8.17:1.7",
          "pli": "vanabhaṅgena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "gifts of wildflowers, "
        },
        {
          "scid": "an8.17:1.8",
          "pli": "gandhena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "scents, "
        },
        {
          "scid": "an8.17:1.9",
          "pli": "rasena, bhikkhave, itthī purisaṃ bandhati; ",
          "en": "tastes, "
        },
        {
          "scid": "an8.17:1.10",
          "pli": "phassena, bhikkhave, itthī purisaṃ bandhati. ",
          "en": "and touches. "
        },
        {
          "scid": "an8.17:1.11",
          "pli": "Imehi kho, bhikkhave, aṭṭhahākārehi itthī purisaṃ bandhati. ",
          "en": "A woman catches a man using these eight features. "
        },
        {
          "scid": "an8.17:1.12",
          "pli": "Te, bhikkhave, sattā subaddhā, ye phassena baddhā”ti. ",
          "en": "But those beings who are caught by touch are well and truly caught.” "
        },
        {
          "scid": "an8.17:1.13",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
