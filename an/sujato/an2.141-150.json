    {
      "segments": [
        {
          "scid": "an2.141-150:141.1.1",
          "pli": "“Dvemāni, bhikkhave, dānāni. ",
          "en": "“There are these two gifts. "
        },
        {
          "scid": "an2.141-150:141.1.2",
          "pli": "Katamāni dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:141.1.3",
          "pli": "Āmisadānañca dhammadānañca. ",
          "en": "A gift of material things and a gift of the teaching. "
        },
        {
          "scid": "an2.141-150:141.1.4",
          "pli": "Imāni kho, bhikkhave, dve dānāni. ",
          "en": "These are the two gifts. "
        },
        {
          "scid": "an2.141-150:141.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ dānānaṃ yadidaṃ dhammadānan”ti. ",
          "en": "The better of these two gifts is the gift of the teaching.” "
        },
        {
          "scid": "an2.141-150:141.1.6",
          "pli": "142 ",
          "en": "142 "
        },
        {
          "scid": "an2.141-150:142.1.1",
          "pli": "“Dveme, bhikkhave, yāgā. ",
          "en": "“There are these two offerings. "
        },
        {
          "scid": "an2.141-150:142.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:142.1.3",
          "pli": "Āmisayāgo ca dhammayāgo ca. ",
          "en": "An offering of material things and an offering of the teaching. "
        },
        {
          "scid": "an2.141-150:142.1.4",
          "pli": "Ime kho, bhikkhave, dve yāgā. ",
          "en": "These are the two offerings. "
        },
        {
          "scid": "an2.141-150:142.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ yāgānaṃ yadidaṃ dhammayāgo”ti. ",
          "en": "The better of these two offerings is an offering of the teaching.” "
        },
        {
          "scid": "an2.141-150:142.1.6",
          "pli": "143 ",
          "en": "143 "
        },
        {
          "scid": "an2.141-150:143.1.1",
          "pli": "“Dveme, bhikkhave, cāgā. ",
          "en": "“There are these two acts of generosity. "
        },
        {
          "scid": "an2.141-150:143.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:143.1.3",
          "pli": "Āmisacāgo ca dhammacāgo ca. ",
          "en": "Generosity with material things and generosity with the teaching. "
        },
        {
          "scid": "an2.141-150:143.1.4",
          "pli": "Ime kho, bhikkhave, dve cāgā. ",
          "en": "These are the two acts of generosity. "
        },
        {
          "scid": "an2.141-150:143.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ cāgānaṃ yadidaṃ dhammacāgo”ti. ",
          "en": "The better of these two acts of generosity is generosity with the teaching.” "
        },
        {
          "scid": "an2.141-150:143.1.6",
          "pli": "144 ",
          "en": "144 "
        },
        {
          "scid": "an2.141-150:144.1.1",
          "pli": "“Dveme, bhikkhave, pariccāgā. ",
          "en": "“There are these two kinds of charity. "
        },
        {
          "scid": "an2.141-150:144.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:144.1.3",
          "pli": "Āmisapariccāgo ca dhammapariccāgo ca. ",
          "en": "Charity in material things and charity in the teaching. "
        },
        {
          "scid": "an2.141-150:144.1.4",
          "pli": "Ime kho, bhikkhave, dve pariccāgā. ",
          "en": "These are the two kinds of charity. "
        },
        {
          "scid": "an2.141-150:144.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ pariccāgānaṃ yadidaṃ dhammapariccāgo”ti. ",
          "en": "The better of these two kinds of charity is a charity in the teaching.” "
        },
        {
          "scid": "an2.141-150:144.1.6",
          "pli": "145 ",
          "en": "145 "
        },
        {
          "scid": "an2.141-150:145.1.1",
          "pli": "“Dveme, bhikkhave, bhogā. ",
          "en": "“There are these two riches. "
        },
        {
          "scid": "an2.141-150:145.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:145.1.3",
          "pli": "Āmisabhogo ca dhammabhogo ca. ",
          "en": "Riches in material things and riches in the teaching. "
        },
        {
          "scid": "an2.141-150:145.1.4",
          "pli": "Ime kho, bhikkhave, dve bhogā. ",
          "en": "These are the two riches. "
        },
        {
          "scid": "an2.141-150:145.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ bhogānaṃ yadidaṃ dhammabhogo”ti. ",
          "en": "The better of these two riches is riches in the teaching.” "
        },
        {
          "scid": "an2.141-150:145.1.6",
          "pli": "146 ",
          "en": "146 "
        },
        {
          "scid": "an2.141-150:146.1.1",
          "pli": "“Dveme, bhikkhave, sambhogā. ",
          "en": "“There are these two kinds of enjoyment. "
        },
        {
          "scid": "an2.141-150:146.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:146.1.3",
          "pli": "Āmisasambhogo ca dhammasambhogo ca. ",
          "en": "Enjoyment of material things and enjoyment of the teaching. "
        },
        {
          "scid": "an2.141-150:146.1.4",
          "pli": "Ime kho, bhikkhave, dve sambhogā. ",
          "en": "These are the two kinds of enjoyment. "
        },
        {
          "scid": "an2.141-150:146.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ sambhogānaṃ yadidaṃ dhammasambhogo”ti. ",
          "en": "The better of these two kinds of enjoyment is the enjoyment of the teaching.” "
        },
        {
          "scid": "an2.141-150:146.1.6",
          "pli": "147 ",
          "en": "147 "
        },
        {
          "scid": "an2.141-150:147.1.1",
          "pli": "“Dveme, bhikkhave, saṃvibhāgā. ",
          "en": "“There are these two kinds of sharing. "
        },
        {
          "scid": "an2.141-150:147.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:147.1.3",
          "pli": "Āmisasaṃvibhāgo ca dhammasaṃvibhāgo ca. ",
          "en": "Sharing material things and sharing the teaching. "
        },
        {
          "scid": "an2.141-150:147.1.4",
          "pli": "Ime kho, bhikkhave, dve saṃvibhāgā. ",
          "en": "These are the two kinds of sharing. "
        },
        {
          "scid": "an2.141-150:147.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ saṃvibhāgānaṃ yadidaṃ dhammasaṃvibhāgo”ti. ",
          "en": "The better of these two kinds of sharing is sharing the teaching.” "
        },
        {
          "scid": "an2.141-150:147.1.6",
          "pli": "148 ",
          "en": "148 "
        },
        {
          "scid": "an2.141-150:148.1.1",
          "pli": "“Dveme, bhikkhave, saṅgahā. ",
          "en": "“There are these two kinds of inclusion. "
        },
        {
          "scid": "an2.141-150:148.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:148.1.3",
          "pli": "Āmisasaṅgaho ca dhammasaṅgaho ca. ",
          "en": "Inclusion in material things and inclusion in the teaching. "
        },
        {
          "scid": "an2.141-150:148.1.4",
          "pli": "Ime kho, bhikkhave, dve saṅgahā. ",
          "en": "These are the two kinds of inclusion. "
        },
        {
          "scid": "an2.141-150:148.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ saṅgahānaṃ yadidaṃ dhammasaṅgaho”ti. ",
          "en": "The better of these two kinds of inclusion is inclusion in the teaching.” "
        },
        {
          "scid": "an2.141-150:148.1.6",
          "pli": "149 ",
          "en": "149 "
        },
        {
          "scid": "an2.141-150:149.1.1",
          "pli": "“Dveme, bhikkhave, anuggahā. ",
          "en": "“There are these two kinds of support. "
        },
        {
          "scid": "an2.141-150:149.1.2",
          "pli": "Katame dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:149.1.3",
          "pli": "Āmisānuggaho ca dhammānuggaho ca. ",
          "en": "Support in material things and support in the teaching. "
        },
        {
          "scid": "an2.141-150:149.1.4",
          "pli": "Ime kho, bhikkhave, dve anuggahā. ",
          "en": "These are the two kinds of support. "
        },
        {
          "scid": "an2.141-150:149.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imesaṃ dvinnaṃ anuggahānaṃ yadidaṃ dhammānuggaho”ti. ",
          "en": "The better of these two kinds of support is support in the teaching.” "
        },
        {
          "scid": "an2.141-150:149.1.6",
          "pli": "150 ",
          "en": "150 "
        },
        {
          "scid": "an2.141-150:150.1.1",
          "pli": "“Dvemā, bhikkhave, anukampā. ",
          "en": "“There are these two kinds of sympathy. "
        },
        {
          "scid": "an2.141-150:150.1.2",
          "pli": "Katamā dve? ",
          "en": "What two? "
        },
        {
          "scid": "an2.141-150:150.1.3",
          "pli": "Āmisānukampā ca dhammānukampā ca. ",
          "en": "Sympathy in material things and sympathy in the teaching. "
        },
        {
          "scid": "an2.141-150:150.1.4",
          "pli": "Imā kho, bhikkhave, dve anukampā. ",
          "en": "These are the two kinds of sympathy. "
        },
        {
          "scid": "an2.141-150:150.1.5",
          "pli": "Etadaggaṃ, bhikkhave, imāsaṃ dvinnaṃ anukampānaṃ yadidaṃ dhammānukampā”ti. ",
          "en": "The better of these two kinds of sympathy is sympathy in the teaching.” "
        },
        {
          "scid": "an2.141-150:150.1.6",
          "pli": "Dānavaggo tatiyo. ",
          "en": ""
        }
      ],
