      "segments": [
        {
          "scid": "an4.64:1.1",
          "pli": "“Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“Mendicants, someone with four qualities is cast down to hell. "
        },
        {
          "scid": "an4.64:1.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.64:1.3",
          "pli": "Pāṇātipātī hoti, adinnādāyī hoti, kāmesumicchācārī hoti, musāvādī hoti—",
          "en": "They kill living creatures, steal, commit sexual misconduct, and lie. "
        },
        {
          "scid": "an4.64:1.4",
          "pli": "imehi kho, bhikkhave, catūhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ nirayeti. ",
          "en": "Someone with these four qualities is cast down to hell. "
        },
        {
          "scid": "an4.64:2.1",
          "pli": "Pāṇātipāto adinnādānaṃ, ",
          "en": "Killing, stealing, "
        },
        {
          "scid": "an4.64:2.2",
          "pli": "Musāvādo ca vuccati; ",
          "en": "telling lies, "
        },
        {
          "scid": "an4.64:2.3",
          "pli": "Paradāragamanañcāpi, ",
          "en": "and visiting others’ wives: "
        },
        {
          "scid": "an4.64:2.4",
          "pli": "Nappasaṃsanti paṇḍitā”ti. ",
          "en": "astute people don’t praise these things.” "
        },
        {
          "scid": "an4.64:2.5",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
