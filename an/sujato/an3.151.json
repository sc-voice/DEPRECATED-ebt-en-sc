        {
          "scid": "an3.151:1.1",
          "pli": "“Tīhi, bhikkhave … pe … ",
          "en": "“When a foolish, incompetent, bad person has three qualities they keep themselves broken and damaged. … "
        },
        {
          "scid": "an3.151:1.2",
          "pli": "sāvajjena kāyakammena, sāvajjena vacīkammena, sāvajjena manokammena … pe …. ",
          "en": "Blameworthy deeds by way of body, speech, and mind. … "
        },
        {
          "scid": "an3.151:2.1",
          "pli": "Tīhi, bhikkhave … pe … ",
          "en": "When an astute, competent, good person has three qualities they keep themselves healthy and whole. … "
        },
        {
          "scid": "an3.151:2.2",
          "pli": "anavajjena kāyakammena, anavajjena vacīkammena, anavajjena manokammena … pe …. ",
          "en": "Blameless deeds by way of body, speech, and mind. …” "
        },
        {
          "scid": "an3.151:2.3",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
