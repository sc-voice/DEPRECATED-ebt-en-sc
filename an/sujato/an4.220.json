    {
      "segments": [
        {
          "scid": "an4.220:1.1",
          "pli": "“Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“Mendicants, someone with four qualities is cast down to hell. "
        },
        {
          "scid": "an4.220:1.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.220:1.3",
          "pli": "Assaddho hoti, dussīlo hoti, kusīto hoti, duppañño hoti—",
          "en": "They’re faithless, unethical, lazy, and witless. "
        },
        {
          "scid": "an4.220:1.4",
          "pli": "imehi kho, bhikkhave, catūhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "Someone with these four qualities is cast down to hell. "
        },
        {
          "scid": "an4.220:2.1",
          "pli": "Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge. ",
          "en": "Someone with four qualities is raised up to heaven. "
        },
        {
          "scid": "an4.220:2.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.220:2.3",
          "pli": "Saddho hoti, sīlavā hoti, āraddhavīriyo hoti, paññavā hoti—",
          "en": "They’re faithful, ethical, energetic, and wise. "
        },
        {
          "scid": "an4.220:2.4",
          "pli": "imehi kho, bhikkhave, catūhi dhammehi samannāgato yathābhataṃ nikkhitto evaṃ sagge”ti. ",
          "en": "Someone with these four qualities is raised up to heaven.” "
        },
        {
          "scid": "an4.220:2.5",
          "pli": "Dasamaṃ. ",
          "en": " "
        },
        {
          "scid": "an4.220:2.6",
          "pli": "Parisasobhaṇavaggo dutiyo. ",
          "en": " "
        },
        {
          "scid": "an4.220:3.1",
          "pli": "Parisā diṭṭhi akataññutā, ",
          "en": " "
        },
        {
          "scid": "an4.220:3.2",
          "pli": "Pāṇātipātāpi dve maggā; ",
          "en": " "
        },
        {
          "scid": "an4.220:3.3",
          "pli": "Dve vohārapathā vuttā, ",
          "en": " "
        },
        {
          "scid": "an4.220:3.4",
          "pli": "Ahirikaṃ duppaññena cāti. ",
          "en": ""
        }
      ],
