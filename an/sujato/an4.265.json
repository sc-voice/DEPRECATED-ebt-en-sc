    {
      "segments": [
        {
          "scid": "an4.265:1.1",
          "pli": "“Catūhi, bhikkhave, dhammehi samannāgato yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“Mendicants, someone with four qualities is cast down to hell. "
        },
        {
          "scid": "an4.265:1.2",
          "pli": "Katamehi catūhi? ",
          "en": "What four? "
        },
        {
          "scid": "an4.265:1.3",
          "pli": "Attanā ca adinnādāyī hoti, parañca adinnādāne samādapeti, adinnādāne ca samanuñño hoti, adinnādānassa ca vaṇṇaṃ bhāsati—",
          "en": "They themselves steal … "
        },
        {
          "scid": "an4.265:1.4",
          "pli": "imehi kho … pe …. ",
          "en": "Someone with four qualities is raised up to heaven. … "
        },
        {
          "scid": "an4.265:2.1",
          "pli": "Attanā ca adinnādānā paṭivirato hoti, parañca adinnādānā veramaṇiyā samādapeti, adinnādānā veramaṇiyā ca samanuñño hoti, adinnādānā veramaṇiyā ca vaṇṇaṃ bhāsati—imehi kho, bhikkhave … pe …. ",
          "en": "They don’t themselves steal … "
        },
        {
          "scid": "an4.265:2.2",
          "pli": "Dutiyaṃ. ",
          "en": ""
        }
      ],
