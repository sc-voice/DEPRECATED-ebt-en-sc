    {
      "segments": [
        {
          "scid": "an8.18:1.1",
          "pli": "“Aṭṭhahi, bhikkhave, ākārehi puriso itthiṃ bandhati. ",
          "en": "“Mendicants, a man catches a woman using eight features. "
        },
        {
          "scid": "an8.18:1.2",
          "pli": "Katamehi aṭṭhahi? ",
          "en": "What eight? "
        },
        {
          "scid": "an8.18:1.3",
          "pli": "Ruṇṇena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "With weeping, "
        },
        {
          "scid": "an8.18:1.4",
          "pli": "hasitena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "laughing, "
        },
        {
          "scid": "an8.18:1.5",
          "pli": "bhaṇitena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "speaking, "
        },
        {
          "scid": "an8.18:1.6",
          "pli": "ākappena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "appearance, "
        },
        {
          "scid": "an8.18:1.7",
          "pli": "vanabhaṅgena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "gifts of wildflowers, "
        },
        {
          "scid": "an8.18:1.8",
          "pli": "gandhena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "scents, "
        },
        {
          "scid": "an8.18:1.9",
          "pli": "rasena, bhikkhave, puriso itthiṃ bandhati; ",
          "en": "tastes, "
        },
        {
          "scid": "an8.18:1.10",
          "pli": "phassena, bhikkhave, puriso itthiṃ bandhati. ",
          "en": "and touches. "
        },
        {
          "scid": "an8.18:1.11",
          "pli": "Imehi kho, bhikkhave, aṭṭhahākārehi puriso itthiṃ bandhati. ",
          "en": "A man catches a woman using these eight features. "
        },
        {
          "scid": "an8.18:1.12",
          "pli": "Te, bhikkhave, sattā subaddhā, ye phassena baddhā”ti. ",
          "en": "But those beings who are caught by touch are well and truly caught.” "
        },
        {
          "scid": "an8.18:1.13",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
