    {
      "segments": [
        {
          "scid": "an5.120:1.1",
          "pli": "“Pañcahi, bhikkhave, dhammehi samannāgatā bhikkhunī yathābhataṃ nikkhittā evaṃ niraye. ",
          "en": "“Mendicants, a nun with five qualities is cast down to hell. "
        },
        {
          "scid": "an5.120:1.2",
          "pli": "Katamehi pañcahi? ",
          "en": "What five? "
        },
        {
          "scid": "an5.120:1.3",
          "pli": "Ananuvicca apariyogāhetvā avaṇṇārahassa vaṇṇaṃ bhāsati, ",
          "en": "Without examining or scrutinizing, she praises those deserving of criticism, "
        },
        {
          "scid": "an5.120:1.4",
          "pli": "ananuvicca apariyogāhetvā vaṇṇārahassa avaṇṇaṃ bhāsati, ",
          "en": "and criticizes those deserving of praise. "
        },
        {
          "scid": "an5.120:1.5",
          "pli": "micchāvāyāmā ca hoti, ",
          "en": "She has wrong effort and "
        },
        {
          "scid": "an5.120:1.6",
          "pli": "micchāsatinī ca, ",
          "en": "wrong mindfulness, "
        },
        {
          "scid": "an5.120:1.7",
          "pli": "saddhādeyyaṃ vinipāteti. ",
          "en": "and wastes gifts given in faith. "
        },
        {
          "scid": "an5.120:1.8",
          "pli": "Imehi kho, bhikkhave, pañcahi dhammehi samannāgatā bhikkhunī yathābhataṃ nikkhittā evaṃ niraye. ",
          "en": "A nun with these five qualities is cast down to hell. "
        },
        {
          "scid": "an5.120:2.1",
          "pli": "Pañcahi, bhikkhave, dhammehi samannāgatā bhikkhunī yathābhataṃ nikkhittā evaṃ sagge. ",
          "en": "A nun with five qualities is raised up to heaven. "
        },
        {
          "scid": "an5.120:2.2",
          "pli": "Katamehi pañcahi? ",
          "en": "What five? "
        },
        {
          "scid": "an5.120:2.3",
          "pli": "Anuvicca pariyogāhetvā avaṇṇārahassa avaṇṇaṃ bhāsati, ",
          "en": "After examining and scrutinizing, she criticizes those deserving of criticism, "
        },
        {
          "scid": "an5.120:2.4",
          "pli": "anuvicca pariyogāhetvā vaṇṇārahassa vaṇṇaṃ bhāsati, ",
          "en": "and praises those deserving of praise. "
        },
        {
          "scid": "an5.120:2.5",
          "pli": "sammāvāyāmā ca hoti, ",
          "en": "She has right effort and "
        },
        {
          "scid": "an5.120:2.6",
          "pli": "sammāsatinī ca, ",
          "en": "right mindfulness, "
        },
        {
          "scid": "an5.120:2.7",
          "pli": "saddhādeyyaṃ na vinipāteti. ",
          "en": "and doesn’t waste gifts given in faith. "
        },
        {
          "scid": "an5.120:2.8",
          "pli": "Imehi kho, bhikkhave, pañcahi dhammehi samannāgatā bhikkhunī yathābhataṃ nikkhittā evaṃ sagge”ti. ",
          "en": "A nun with these five qualities is raised up to heaven.” "
        },
        {
          "scid": "an5.120:2.9",
          "pli": "Dasamaṃ. ",
          "en": " "
        },
        {
          "scid": "an5.120:2.10",
          "pli": "Andhakavindavaggo dutiyo. ",
          "en": " "
        },
        {
          "scid": "an5.120:3.1",
          "pli": "Kulūpako pacchāsamaṇo, ",
          "en": " "
        },
        {
          "scid": "an5.120:3.2",
          "pli": "samādhiandhakavindaṃ; ",
          "en": " "
        },
        {
          "scid": "an5.120:3.3",
          "pli": "Maccharī vaṇṇanā issā, ",
          "en": " "
        },
        {
          "scid": "an5.120:3.4",
          "pli": "diṭṭhivācāya vāyamāti. ",
          "en": ""
        }
      ],
