    {
      "segments": [
        {
          "scid": "an10.192:1.1",
          "pli": "“Sappurisadhammañca vo, bhikkhave, desessāmi asappurisadhammañca. ",
          "en": "“Mendicants, I will teach you the teaching of the good persons and the teaching of the bad persons. "
        },
        {
          "scid": "an10.192:1.2",
          "pli": "Taṃ suṇātha … pe … ",
          "en": " "
        },
        {
          "scid": "an10.192:1.3",
          "pli": "katamo ca, bhikkhave, asappurisadhammo? ",
          "en": "And what is the teaching of the bad persons? "
        },
        {
          "scid": "an10.192:1.4",
          "pli": "Pāṇātipāto … pe … ",
          "en": "Killing living creatures … "
        },
        {
          "scid": "an10.192:1.5",
          "pli": "micchādiṭṭhi—",
          "en": "wrong view. "
        },
        {
          "scid": "an10.192:1.6",
          "pli": "ayaṃ vuccati, bhikkhave, asappurisadhammo. ",
          "en": "This is the teaching of the bad persons. "
        },
        {
          "scid": "an10.192:2.1",
          "pli": "Katamo ca, bhikkhave, sappurisadhammo? ",
          "en": "And what is the teaching of the good persons? "
        },
        {
          "scid": "an10.192:2.2",
          "pli": "Pāṇātipātā veramaṇī … pe … ",
          "en": "Not killing living creatures … "
        },
        {
          "scid": "an10.192:2.3",
          "pli": "sammādiṭṭhi—",
          "en": "right view. "
        },
        {
          "scid": "an10.192:2.4",
          "pli": "ayaṃ vuccati, bhikkhave, sappurisadhammo”ti. ",
          "en": "This is the teaching of the good persons.” "
        },
        {
          "scid": "an10.192:2.5",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
