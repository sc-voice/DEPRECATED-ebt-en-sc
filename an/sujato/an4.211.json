        {
          "scid": "an4.211:1.1",
          "pli": "“Cattārome, bhikkhave, parisadūsanā. ",
          "en": "“Mendicants, these four corrupt an assembly. "
        },
        {
          "scid": "an4.211:1.2",
          "pli": "Katame cattāro? ",
          "en": "What four? "
        },
        {
          "scid": "an4.211:1.3",
          "pli": "Bhikkhu, bhikkhave, dussīlo pāpadhammo parisadūsano; ",
          "en": "A monk, nun, layman, or laywoman who is unethical, of bad character. "
        },
        {
          "scid": "an4.211:1.4",
          "pli": "bhikkhunī, bhikkhave, dussīlā pāpadhammā parisadūsanā; ",
          "en": " "
        },
        {
          "scid": "an4.211:1.5",
          "pli": "upāsako, bhikkhave, dussīlo pāpadhammo parisadūsano; ",
          "en": " "
        },
        {
          "scid": "an4.211:1.6",
          "pli": "upāsikā, bhikkhave, dussīlā pāpadhammā parisadūsanā. ",
          "en": " "
        },
        {
          "scid": "an4.211:1.7",
          "pli": "Ime kho, bhikkhave, cattāro parisadūsanā. ",
          "en": "These are the four that corrupt an assembly. "
        },
        {
          "scid": "an4.211:2.1",
          "pli": "Cattārome, bhikkhave, parisasobhanā. ",
          "en": "Mendicants, these four beautify an assembly. "
        },
        {
          "scid": "an4.211:2.2",
          "pli": "Katame cattāro? ",
          "en": "What four? "
        },
        {
          "scid": "an4.211:2.3",
          "pli": "Bhikkhu, bhikkhave, sīlavā kalyāṇadhammo parisasobhano; ",
          "en": "A monk, nun, layman, or laywoman who is ethical, of good character. "
        },
        {
          "scid": "an4.211:2.4",
          "pli": "bhikkhunī, bhikkhave, sīlavatī kalyāṇadhammā parisasobhanā; ",
          "en": " "
        },
        {
          "scid": "an4.211:2.5",
          "pli": "upāsako, bhikkhave, sīlavā kalyāṇadhammo parisasobhano; ",
          "en": " "
        },
        {
          "scid": "an4.211:2.6",
          "pli": "upāsikā, bhikkhave, sīlavatī kalyāṇadhammā parisasobhanā. ",
          "en": " "
        },
        {
          "scid": "an4.211:2.7",
          "pli": "Ime kho, bhikkhave, cattāro parisasobhanā”ti. ",
          "en": "These are the four that beautify an assembly.” "
        },
        {
          "scid": "an4.211:2.8",
          "pli": "Paṭhamaṃ. ",
          "en": ""
        }
      ],
