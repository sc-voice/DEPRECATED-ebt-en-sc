      "segments": [
        {
          "scid": "an10.25:0.1",
          "pli": "Aṅguttara Nikāya 10 ",
          "en": "Numbered Discourses 10 "
        },
        {
          "scid": "an10.25:0.2",
          "pli": "3. Mahāvagga ",
          "en": "3. The Great Chapter "
        },
        {
          "scid": "an10.25:0.3",
          "pli": "25. Kasiṇasutta ",
          "en": "25. Meditation on Universals "
        },
        {
          "scid": "an10.25:0.4",
          "pli": "“Dasayimāni, bhikkhave, kasiṇāyatanāni. ",
          "en": "“Mendicants, there are these ten universal dimensions of meditation. "
        },
        {
          "scid": "an10.25:0.5",
          "pli": "Katamāni dasa? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.25:0.6",
          "pli": "Pathavīkasiṇameko sañjānāti uddhaṃ adho tiriyaṃ advayaṃ appamāṇaṃ; ",
          "en": "Someone perceives the meditation on universal earth above, below, across, non-dual and limitless. "
        },
        {
          "scid": "an10.25:0.7",
          "pli": "āpokasiṇameko sañjānāti … pe … ",
          "en": "They perceive the meditation on universal water … "
        },
        {
          "scid": "an10.25:0.8",
          "pli": "tejokasiṇameko sañjānāti … ",
          "en": "the meditation on universal fire … "
        },
        {
          "scid": "an10.25:0.9",
          "pli": "vāyokasiṇameko sañjānāti … ",
          "en": "the meditation on universal air … "
        },
        {
          "scid": "an10.25:0.10",
          "pli": "nīlakasiṇameko sañjānāti … ",
          "en": "the meditation on universal blue … "
        },
        {
          "scid": "an10.25:0.11",
          "pli": "pītakasiṇameko sañjānāti … ",
          "en": "the meditation on universal yellow … "
        },
        {
          "scid": "an10.25:0.12",
          "pli": "lohitakasiṇameko sañjānāti … ",
          "en": "the meditation on universal red … "
        },
        {
          "scid": "an10.25:0.13",
          "pli": "odātakasiṇameko sañjānāti … ",
          "en": "the meditation on universal white … "
        },
        {
          "scid": "an10.25:0.14",
          "pli": "ākāsakasiṇameko sañjānāti … ",
          "en": "the meditation on universal space … "
        },
        {
          "scid": "an10.25:0.15",
          "pli": "viññāṇakasiṇameko sañjānāti uddhaṃ adho tiriyaṃ advayaṃ appamāṇaṃ. ",
          "en": "They perceive the meditation on universal consciousness above, below, across, non-dual and limitless. "
        },
        {
          "scid": "an10.25:0.16",
          "pli": "Imāni kho, bhikkhave, dasa kasiṇāyatanānī”ti. ",
          "en": "These are the ten universal dimensions of meditation.” "
        },
        {
          "scid": "an10.25:0.17",
          "pli": "Pañcamaṃ. ",
          "en": ""
        }
      ],
