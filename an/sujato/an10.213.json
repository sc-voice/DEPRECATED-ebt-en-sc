    {
      "segments": [
        {
          "scid": "an10.213:1.1",
          "pli": "“Dasahi, bhikkhave, dhammehi samannāgato mātugāmo yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "“A female with ten qualities is cast down to hell. "
        },
        {
          "scid": "an10.213:1.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.213:1.3",
          "pli": "Pāṇātipātī hoti … pe … ",
          "en": "She kills living creatures. … "
        },
        {
          "scid": "an10.213:1.4",
          "pli": "adinnādāyī hoti … ",
          "en": "She steals. … "
        },
        {
          "scid": "an10.213:1.5",
          "pli": "kāmesumicchācārī hoti … ",
          "en": "She commits sexual misconduct. … "
        },
        {
          "scid": "an10.213:1.6",
          "pli": "musāvādī hoti … ",
          "en": "She lies. … "
        },
        {
          "scid": "an10.213:1.7",
          "pli": "pisuṇavāco hoti … ",
          "en": "She speaks divisively. … "
        },
        {
          "scid": "an10.213:1.8",
          "pli": "pharusavāco hoti … ",
          "en": "She speaks harshly. … "
        },
        {
          "scid": "an10.213:1.9",
          "pli": "samphappalāpī hoti … ",
          "en": "She indulges in talking nonsense. … "
        },
        {
          "scid": "an10.213:1.10",
          "pli": "abhijjhālu hoti … ",
          "en": "She’s covetous. … "
        },
        {
          "scid": "an10.213:1.11",
          "pli": "byāpannacitto hoti … ",
          "en": "She has cruel intentions. … "
        },
        {
          "scid": "an10.213:1.12",
          "pli": "micchādiṭṭhiko hoti …. ",
          "en": "She has wrong view. … "
        },
        {
          "scid": "an10.213:1.13",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgato mātugāmo yathābhataṃ nikkhitto evaṃ niraye. ",
          "en": "A female with these ten qualities is cast down to hell. "
        },
        {
          "scid": "an10.213:2.1",
          "pli": "Dasahi, bhikkhave, dhammehi samannāgato mātugāmo yathābhataṃ nikkhitto evaṃ sagge. ",
          "en": "A female with ten qualities is raised up to heaven. "
        },
        {
          "scid": "an10.213:2.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.213:2.3",
          "pli": "Pāṇātipātā paṭivirato hoti … pe … ",
          "en": "She doesn’t kill living creatures. … "
        },
        {
          "scid": "an10.213:2.4",
          "pli": "adinnādānā paṭivirato hoti … ",
          "en": "She doesn’t steal. … "
        },
        {
          "scid": "an10.213:2.5",
          "pli": "kāmesumicchācārā paṭivirato hoti … ",
          "en": "She doesn’t commit sexual misconduct. … "
        },
        {
          "scid": "an10.213:2.6",
          "pli": "musāvādā paṭivirato hoti … ",
          "en": "She doesn’t lie. … "
        },
        {
          "scid": "an10.213:2.7",
          "pli": "pisuṇāya vācāya paṭivirato hoti … ",
          "en": "She doesn’t speak divisively. … "
        },
        {
          "scid": "an10.213:2.8",
          "pli": "pharusāya vācāya paṭivirato hoti … ",
          "en": "She doesn’t speak harshly. … "
        },
        {
          "scid": "an10.213:2.9",
          "pli": "samphappalāpā paṭivirato hoti … ",
          "en": "She doesn’t indulge in talking nonsense. … "
        },
        {
          "scid": "an10.213:2.10",
          "pli": "anabhijjhālu hoti … ",
          "en": "She’s content. … "
        },
        {
          "scid": "an10.213:2.11",
          "pli": "abyāpannacitto hoti … ",
          "en": "She’s kind hearted. … "
        },
        {
          "scid": "an10.213:2.12",
          "pli": "sammādiṭṭhiko hoti …. ",
          "en": "She has right view. … "
        },
        {
          "scid": "an10.213:2.13",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgato mātugāmo yathābhataṃ nikkhitto evaṃ sagge”ti. ",
          "en": "A female with these ten qualities is raised up to heaven.” "
        },
        {
          "scid": "an10.213:2.14",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
