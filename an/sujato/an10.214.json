    {
      "segments": [
        {
          "scid": "an10.214:1.1",
          "pli": "“Dasahi, bhikkhave, dhammehi samannāgatā upāsikā yathābhataṃ nikkhittā evaṃ niraye. ",
          "en": "“A laywoman with ten qualities is cast down to hell. "
        },
        {
          "scid": "an10.214:1.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.214:1.3",
          "pli": "Pāṇātipātinī hoti … pe … ",
          "en": "She kills living creatures. … "
        },
        {
          "scid": "an10.214:1.4",
          "pli": "micchādiṭṭhikā hoti …. ",
          "en": "She has wrong view. … "
        },
        {
          "scid": "an10.214:1.5",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgatā upāsikā yathābhataṃ nikkhittā evaṃ niraye. ",
          "en": "A laywoman with these ten qualities is cast down to hell. "
        },
        {
          "scid": "an10.214:2.1",
          "pli": "Dasahi, bhikkhave, dhammehi samannāgatā upāsikā yathābhataṃ nikkhittā evaṃ sagge. ",
          "en": "A laywoman with ten qualities is raised up to heaven. "
        },
        {
          "scid": "an10.214:2.2",
          "pli": "Katamehi dasahi? ",
          "en": "What ten? "
        },
        {
          "scid": "an10.214:2.3",
          "pli": "Pāṇātipātā paṭiviratā hoti … pe … ",
          "en": "She doesn’t kill living creatures. … "
        },
        {
          "scid": "an10.214:2.4",
          "pli": "sammādiṭṭhikā hoti …. ",
          "en": "She has right view. … "
        },
        {
          "scid": "an10.214:2.5",
          "pli": "Imehi kho, bhikkhave, dasahi dhammehi samannāgatā upāsikā yathābhataṃ nikkhittā evaṃ sagge”. ",
          "en": "A laywoman with these ten qualities is raised up to heaven.” "
        },
        {
          "scid": "an10.214:2.6",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
