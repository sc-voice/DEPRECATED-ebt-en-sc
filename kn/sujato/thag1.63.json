        {
          "scid": "thag1.63:4.1",
          "pli": "1.63. Pakkhattheragāthā",
          "en": "1.63. Pakkha"
        },
        {
          "scid": "thag1.63:5.1",
          "pli": "“Cutā patanti patitā,",
          "en": "They fall, collapsed and fallen;"
        },
        {
          "scid": "thag1.63:5.2",
          "pli": "giddhā ca punarāgatā;",
          "en": "greedy, they return."
        },
        {
          "scid": "thag1.63:5.3",
          "pli": "Kataṃ kiccaṃ rataṃ rammaṃ,",
          "en": "The work is done, the joyful is enjoyed,"
        },
        {
          "scid": "thag1.63:5.4",
          "pli": "sukhenanvāgataṃ sukhan”ti.",
          "en": "happiness is found through happiness."
        },
        {
          "scid": "thag1.63:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.63:6.2",
          "pli": "Pakkho thero ….",
          "en": ""
        }
      ],
