        {
          "scid": "thag1.109:4.1",
          "pli": "1.109. Saṃgharakkhitattheragāthā",
          "en": "1.109. Saṃgharakkhita"
        },
        {
          "scid": "thag1.109:5.1",
          "pli": "“Na nūnāyaṃ paramahitānukampino,",
          "en": "Even on retreat he doesn’t heed the counsel"
        },
        {
          "scid": "thag1.109:5.2",
          "pli": "Rahogato anuvigaṇeti sāsanaṃ;",
          "en": "of the one with supreme compassion for his welfare."
        },
        {
          "scid": "thag1.109:5.3",
          "pli": "Tathāhayaṃ viharati pākatindriyo,",
          "en": "He lives with unrestrained faculties,"
        },
        {
          "scid": "thag1.109:5.4",
          "pli": "Migī yathā taruṇajātikā vane”ti.",
          "en": "like a young deer in the woods."
        },
        {
          "scid": "thag1.109:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.109:6.2",
          "pli": "Saṃgharakkhito thero ….",
          "en": ""
        }
      ],
