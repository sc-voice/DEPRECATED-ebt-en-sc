      "segments": [
        {
          "scid": "thag2.5:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.5:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.5:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.5:4.1",
          "pli": "2.5. Ajinattheragāthā",
          "en": "2.5. Ajina"
        },
        {
          "scid": "thag2.5:5.1",
          "pli": "“Api ce hoti tevijjo,",
          "en": "Even a master of the three knowledges,"
        },
        {
          "scid": "thag2.5:5.2",
          "pli": "maccuhāyī anāsavo;",
          "en": "who has conquered death, and is without defilements,"
        },
        {
          "scid": "thag2.5:5.3",
          "pli": "Appaññātoti naṃ bālā,",
          "en": "is looked down on for being unknown"
        },
        {
          "scid": "thag2.5:5.4",
          "pli": "avajānanti ajānatā.",
          "en": "by ignorant fools."
        },
        {
          "scid": "thag2.5:6.1",
          "pli": "Yo ca kho annapānassa,",
          "en": "But any person here"
        },
        {
          "scid": "thag2.5:6.2",
          "pli": "lābhī hotidha puggalo;",
          "en": "who gets food and drink"
        },
        {
          "scid": "thag2.5:6.3",
          "pli": "Pāpadhammopi ce hoti,",
          "en": "is honored by them,"
        },
        {
          "scid": "thag2.5:6.4",
          "pli": "so nesaṃ hoti sakkato”ti.",
          "en": "even if they are of bad character."
        },
        {
          "scid": "thag2.5:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.5:7.2",
          "pli": "Ajino thero ….",
          "en": ""
        }
      ],
