      "segments": [
        {
          "scid": "thag3.12:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.12:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.12:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.12:4.1",
          "pli": "3.12. Uttarapālattheragāthā",
          "en": "3.12. Uttarapāla"
        },
        {
          "scid": "thag3.12:5.1",
          "pli": "“Paṇḍitaṃ vata maṃ santaṃ,",
          "en": "I was, indeed, an astute scholar,"
        },
        {
          "scid": "thag3.12:5.2",
          "pli": "alamatthavicintakaṃ;",
          "en": "competent to think on the meaning."
        },
        {
          "scid": "thag3.12:5.3",
          "pli": "Pañca kāmaguṇā loke,",
          "en": "The five kinds of sensual stimulation in the world,"
        },
        {
          "scid": "thag3.12:5.4",
          "pli": "sammohā pātayiṃsu maṃ.",
          "en": "so delusory, were my downfall."
        },
        {
          "scid": "thag3.12:6.1",
          "pli": "Pakkhando māravisaye,",
          "en": "Leaping into Māra’s domain,"
        },
        {
          "scid": "thag3.12:6.2",
          "pli": "daḷhasallasamappito;",
          "en": "I was struck by a powerful dart."
        },
        {
          "scid": "thag3.12:6.3",
          "pli": "Asakkhiṃ maccurājassa,",
          "en": "But I was able to free myself"
        },
        {
          "scid": "thag3.12:6.4",
          "pli": "ahaṃ pāsā pamuccituṃ.",
          "en": "from the trap laid by the King of Death."
        },
        {
          "scid": "thag3.12:7.1",
          "pli": "Sabbe kāmā pahīnā me,",
          "en": "I have given up all sensual pleasures;"
        },
        {
          "scid": "thag3.12:7.2",
          "pli": "bhavā sabbe padālitā;",
          "en": "all rebirths are shattered;"
        },
        {
          "scid": "thag3.12:7.3",
          "pli": "Vikkhīṇo jātisaṃsāro,",
          "en": "transmigration is finished;"
        },
        {
          "scid": "thag3.12:7.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag3.12:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.12:8.2",
          "pli": "Uttarapālo thero ….",
          "en": ""
        }
      ],
