      "segments": [
        {
          "scid": "thag4.3:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.3:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.3:4.1",
          "pli": "4.3. Sabhiyattheragāthā",
          "en": "4.3. Sabhiya"
        },
        {
          "scid": "thag4.3:5.1",
          "pli": "“Pare ca na vijānanti,",
          "en": "Others don’t understand"
        },
        {
          "scid": "thag4.3:5.2",
          "pli": "mayamettha yamāmase;",
          "en": "that our lives must have limits."
        },
        {
          "scid": "thag4.3:5.3",
          "pli": "Ye ca tattha vijānanti,",
          "en": "Those who do understand this"
        },
        {
          "scid": "thag4.3:5.4",
          "pli": "tato sammanti medhagā.",
          "en": "settle their quarrels right away."
        },
        {
          "scid": "thag4.3:6.1",
          "pli": "Yadā ca avijānantā,",
          "en": "And when those who don’t understand"
        },
        {
          "scid": "thag4.3:6.2",
          "pli": "iriyantyamarā viya;",
          "en": "behave as though they were immortal,"
        },
        {
          "scid": "thag4.3:6.3",
          "pli": "Vijānanti ca ye dhammaṃ,",
          "en": "those who understand the Dhamma"
        },
        {
          "scid": "thag4.3:6.4",
          "pli": "āturesu anāturā.",
          "en": "are like the healthy among the sick."
        },
        {
          "scid": "thag4.3:7.1",
          "pli": "Yaṃ kiñci sithilaṃ kammaṃ,",
          "en": "Any lax act,"
        },
        {
          "scid": "thag4.3:7.2",
          "pli": "saṃkiliṭṭhañca yaṃ vataṃ;",
          "en": "any corrupt observance,"
        },
        {
          "scid": "thag4.3:7.3",
          "pli": "Saṅkassaraṃ brahmacariyaṃ,",
          "en": "or suspicious spiritual life,"
        },
        {
          "scid": "thag4.3:7.4",
          "pli": "na taṃ hoti mahapphalaṃ.",
          "en": "is not very fruitful."
        },
        {
          "scid": "thag4.3:8.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever has no respect"
        },
        {
          "scid": "thag4.3:8.2",
          "pli": "gāravo nūpalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag4.3:8.3",
          "pli": "Ārakā hoti saddhammā,",
          "en": "is as far from true Dhamma"
        },
        {
          "scid": "thag4.3:8.4",
          "pli": "nabhaṃ puthaviyā yathā”ti.",
          "en": "as the sky from the earth."
        },
        {
          "scid": "thag4.3:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.3:9.2",
          "pli": "Sabhiyo thero ….",
          "en": ""
        }
      ],
