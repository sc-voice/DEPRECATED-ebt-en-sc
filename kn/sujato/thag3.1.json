        {
          "scid": "thag3.1:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.1:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.1:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.1:4.1",
          "pli": "3.1 Aṅgaṇikabhāradvājattheragāthā",
          "en": "3.1. Aṅgaṇikabhāradvāja"
        },
        {
          "scid": "thag3.1:5.1",
          "pli": "“Ayoni suddhimanvesaṃ,",
          "en": "Seeking purity the wrong way,"
        },
        {
          "scid": "thag3.1:5.2",
          "pli": "aggiṃ paricariṃ vane;",
          "en": "I served the sacred fire in a grove."
        },
        {
          "scid": "thag3.1:5.3",
          "pli": "Suddhimaggaṃ ajānanto,",
          "en": "Not knowing the path to purity,"
        },
        {
          "scid": "thag3.1:5.4",
          "pli": "akāsiṃ amaraṃ tapaṃ.",
          "en": "I mortified my flesh in search of immortality."
        },
        {
          "scid": "thag3.1:6.1",
          "pli": "Taṃ sukhena sukhaṃ laddhaṃ,",
          "en": "I’ve gained this happiness by means of happiness:"
        },
        {
          "scid": "thag3.1:6.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "see the excellence of the teaching!"
        },
        {
          "scid": "thag3.1:6.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag3.1:6.4",
          "pli": "kataṃ buddhassa sāsanaṃ.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag3.1:7.1",
          "pli": "Brahmabandhu pure āsiṃ,",
          "en": "In the past I was related to Brahmā,"
        },
        {
          "scid": "thag3.1:7.2",
          "pli": "idāni khomhi brāhmaṇo;",
          "en": "but now I really am a brahmin!"
        },
        {
          "scid": "thag3.1:7.3",
          "pli": "Tevijjo nhātako camhi,",
          "en": "I am master of the three knowledges, I’m a bathed initiate,"
        },
        {
          "scid": "thag3.1:7.4",
          "pli": "sottiyo camhi vedagū”ti.",
          "en": "I’m a scholar and a knowledge master."
        },
        {
          "scid": "thag3.1:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.1:8.2",
          "pli": "Aṅgaṇikabhāradvājo thero ….",
          "en": ""
        }
      ],
