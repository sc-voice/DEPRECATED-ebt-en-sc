        },
        {
          "scid": "thag1.2:4.1",
          "pli": "1.2. Mahākoṭṭhikattheragāthā",
          "en": "1.2. Mahākoṭṭhita"
        },
        {
          "scid": "thag1.2:5.1",
          "pli": "“Upasanto uparato,",
          "en": "Calm and quiet,"
        },
        {
          "scid": "thag1.2:5.2",
          "pli": "mantabhāṇī anuddhato;",
          "en": "thoughtful in counsel, and stable—"
        },
        {
          "scid": "thag1.2:5.3",
          "pli": "Dhunāti pāpake dhamme,",
          "en": "he shakes off bad qualities"
        },
        {
          "scid": "thag1.2:5.4",
          "pli": "dumapattaṃva māluto”ti.",
          "en": "as the wind shakes leaves off a tree."
        },
        {
          "scid": "thag1.2:6.1",
          "pli": "Itthaṃ sudaṃ āyasmā mahākoṭṭhiko thero gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior venerable Mahākoṭṭhita."
        }
      ],
