        {
          "scid": "thag2.45:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.45:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.45:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag2.45:4.1",
          "pli": "2.45. Visākhapañcālaputtattheragāthā",
          "en": "2.45. Visākhapañcālaputta"
        },
        {
          "scid": "thag2.45:5.1",
          "pli": "“Na ukkhipe no ca parikkhipe pare,",
          "en": "One should not suspend others from the Saṅgha, nor raise objections against them;"
        },
        {
          "scid": "thag2.45:5.2",
          "pli": "Na okkhipe pāragataṃ na eraye;",
          "en": "and neither disparage nor raise one’s voice against one who has crossed to the further shore."
        },
        {
          "scid": "thag2.45:5.3",
          "pli": "Na cattavaṇṇaṃ parisāsu byāhare,",
          "en": "One should not praise oneself among the assemblies,"
        },
        {
          "scid": "thag2.45:5.4",
          "pli": "Anuddhato sammitabhāṇi subbato.",
          "en": "but be stable, measured in speech, and true to your vows."
        },
        {
          "scid": "thag2.45:6.1",
          "pli": "Susukhumanipuṇatthadassinā,",
          "en": "For one who sees the goal, so very subtle and fine,"
        },
        {
          "scid": "thag2.45:6.2",
          "pli": "Matikusalena nivātavuttinā;",
          "en": "who is skilled in thought and humble in manner,"
        },
        {
          "scid": "thag2.45:6.3",
          "pli": "Saṃsevitavuddhasīlinā,",
          "en": "who has cultivated mature ethics—"
        },
        {
          "scid": "thag2.45:6.4",
          "pli": "Nibbānaṃ na hi tena dullabhan”ti.",
          "en": "it’s not hard to gain extinguishment."
        },
        {
          "scid": "thag2.45:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.45:7.2",
          "pli": "Visākho pañcālaputto thero ….",
          "en": ""
        }
      ],
