        {
          "scid": "thag1.22:4.1",
          "pli": "1.22. Cittakattheragāthā",
          "en": "1.22. Cittaka"
        },
        {
          "scid": "thag1.22:5.1",
          "pli": "“Nīlā sugīvā sikhino,",
          "en": "Crested peacocks with beautiful blue necks"
        },
        {
          "scid": "thag1.22:5.2",
          "pli": "Morā kārambhiyaṃ abhinadanti;",
          "en": "cry out in Karaṃvī."
        },
        {
          "scid": "thag1.22:5.3",
          "pli": "Te sītavātakīḷitā,",
          "en": "Stirred by a cool breeze,"
        },
        {
          "scid": "thag1.22:5.4",
          "pli": "Suttaṃ jhāyaṃ nibodhentī”ti.",
          "en": "they wake the sleeper to practice absorption."
        },
        {
          "scid": "thag1.22:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.22:6.2",
          "pli": "Cittako thero ….",
          "en": ""
        }
