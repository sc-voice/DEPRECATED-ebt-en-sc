      "segments": [
        {
          "scid": "thig2.5:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.5:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.5:3.1",
          "pli": "5. Cittātherīgāthā",
          "en": "2.5. Cittā"
        },
        {
          "scid": "thig2.5:4.1",
          "pli": "“Kiñcāpi khomhi kisikā,",
          "en": "Though I’m skinny,"
        },
        {
          "scid": "thig2.5:4.2",
          "pli": "gilānā bāḷhadubbalā;",
          "en": "sick, and very feeble,"
        },
        {
          "scid": "thig2.5:4.3",
          "pli": "Daṇḍamolubbha gacchāmi,",
          "en": "I climb the mountain,"
        },
        {
          "scid": "thig2.5:4.4",
          "pli": "pabbataṃ abhirūhiya.",
          "en": "leaning on a staff."
        },
        {
          "scid": "thig2.5:5.1",
          "pli": "Saṅghāṭiṃ nikkhipitvāna,",
          "en": "Having laid down my outer robe,"
        },
        {
          "scid": "thig2.5:5.2",
          "pli": "pattakañca nikujjiya;",
          "en": "and overturned my bowl,"
        },
        {
          "scid": "thig2.5:5.3",
          "pli": "Sele khambhesimattānaṃ,",
          "en": "propping myself against a rock,"
        },
        {
          "scid": "thig2.5:5.4",
          "pli": "tamokhandhaṃ padāliyā”ti.",
          "en": "I shattered the mass of darkness."
        },
        {
          "scid": "thig2.5:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.5:6.2",
          "pli": "Cittā therī ….",
          "en": ""
        }
      ],
