      "segments": [
        {
          "scid": "thig2.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.1:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.1:3.1",
          "pli": "1. Abhirūpanandātherīgāthā",
          "en": "2.1. Abhirūpanandā"
        },
        {
          "scid": "thig2.1:4.1",
          "pli": "“Āturaṃ asuciṃ pūtiṃ,",
          "en": "Nandā, see this bag of bones as"
        },
        {
          "scid": "thig2.1:4.2",
          "pli": "passa nande samussayaṃ;",
          "en": "diseased, filthy, and rotten."
        },
        {
          "scid": "thig2.1:4.3",
          "pli": "Asubhāya cittaṃ bhāvehi,",
          "en": "With mind unified and serene,"
        },
        {
          "scid": "thig2.1:4.4",
          "pli": "ekaggaṃ susamāhitaṃ.",
          "en": "meditate on the ugly aspects of the body."
        },
        {
          "scid": "thig2.1:5.1",
          "pli": "Animittañca bhāvehi,",
          "en": "Meditate on the signless,"
        },
        {
          "scid": "thig2.1:5.2",
          "pli": "mānānusayamujjaha;",
          "en": "give up the underlying tendency to conceit;"
        },
        {
          "scid": "thig2.1:5.3",
          "pli": "Tato mānābhisamayā,",
          "en": "and when you comprehend conceit,"
        },
        {
          "scid": "thig2.1:5.4",
          "pli": "upasantā carissasī”ti.",
          "en": "you will live at peace."
        },
        {
          "scid": "thig2.1:6.1",
          "pli": "Itthaṃ sudaṃ abhirūpanandā therī gāthāyo abhāsitthāti.",
          "en": "It was thus that the Buddha regularly advised the senior nun Nandā with these verses."
        }
      ],
