      "segments": [
        {
          "scid": "thag5.6:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.6:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.6:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.6:4.1",
          "pli": "5.6. Nadīkassapattheragāthā",
          "en": "5.6. Nadīkassapa"
        },
        {
          "scid": "thag5.6:5.1",
          "pli": "“Atthāya vata me buddho,",
          "en": "It was truly for my benefit"
        },
        {
          "scid": "thag5.6:5.2",
          "pli": "nadiṃ nerañjaraṃ agā;",
          "en": "that the Buddha went to the river Nerañjara."
        },
        {
          "scid": "thag5.6:5.3",
          "pli": "Yassāhaṃ dhammaṃ sutvāna,",
          "en": "When I heard his teaching,"
        },
        {
          "scid": "thag5.6:5.4",
          "pli": "micchādiṭṭhiṃ vivajjayiṃ.",
          "en": "I shunned wrong view."
        },
        {
          "scid": "thag5.6:6.1",
          "pli": "Yajiṃ uccāvace yaññe,",
          "en": "I used to perform a diverse spectrum of sacrifices;"
        },
        {
          "scid": "thag5.6:6.2",
          "pli": "aggihuttaṃ juhiṃ ahaṃ;",
          "en": "I served the sacred flame,"
        },
        {
          "scid": "thag5.6:6.3",
          "pli": "‘Esā suddhī’ti maññanto,",
          "en": "imagining, “This is purity.”"
        },
        {
          "scid": "thag5.6:6.4",
          "pli": "andhabhūto puthujjano.",
          "en": "I was a blind, ordinary person."
        },
        {
          "scid": "thag5.6:7.1",
          "pli": "Diṭṭhigahanapakkhando,",
          "en": "Caught in the thicket of wrong view,"
        },
        {
          "scid": "thag5.6:7.2",
          "pli": "parāmāsena mohito;",
          "en": "deluded by misapprehension."
        },
        {
          "scid": "thag5.6:7.3",
          "pli": "Asuddhiṃ maññisaṃ suddhiṃ,",
          "en": "Thinking impurity was purity,"
        },
        {
          "scid": "thag5.6:7.4",
          "pli": "andhabhūto aviddasu.",
          "en": "I was blind and ignorant."
        },
        {
          "scid": "thag5.6:8.1",
          "pli": "Micchādiṭṭhi pahīnā me,",
          "en": "I’ve abandoned wrong view;"
        },
        {
          "scid": "thag5.6:8.2",
          "pli": "bhavā sabbe padālitā;",
          "en": "all rebirths are shattered."
        },
        {
          "scid": "thag5.6:8.3",
          "pli": "Juhāmi dakkhiṇeyyaggiṃ,",
          "en": "I serve the truly worthy flame:"
        },
        {
          "scid": "thag5.6:8.4",
          "pli": "namassāmi tathāgataṃ.",
          "en": "I bow to the Realized One."
        },
        {
          "scid": "thag5.6:9.1",
          "pli": "Mohā sabbe pahīnā me,",
          "en": "I’ve given up all delusion;"
        },
        {
          "scid": "thag5.6:9.2",
          "pli": "bhavataṇhā padālitā;",
          "en": "craving for rebirth is shattered;"
        },
        {
          "scid": "thag5.6:9.3",
          "pli": "Vikkhīṇo jātisaṃsāro,",
          "en": "transmigration through births is finished;"
        },
        {
          "scid": "thag5.6:9.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag5.6:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.6:10.2",
          "pli": "Nadīkassapo thero ….",
          "en": ""
        }
      ],
