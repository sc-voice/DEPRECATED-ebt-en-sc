      "segments": [
        {
          "scid": "thig3.6:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.6:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.6:3.1",
          "pli": "6. Sukkātherīgāthā",
          "en": "3.6. Sukkā"
        },
        {
          "scid": "thig3.6:4.1",
          "pli": "“Kiṃme katā rājagahe manussā,",
          "en": "“What’s up with these people in Rājagaha?"
        },
        {
          "scid": "thig3.6:4.2",
          "pli": "Madhuṃ pītāva acchare;",
          "en": "They sprawl like they’ve been drinking mead!"
        },
        {
          "scid": "thig3.6:4.3",
          "pli": "Ye sukkaṃ na upāsanti,",
          "en": "They don’t attend on Sukkā"
        },
        {
          "scid": "thig3.6:4.4",
          "pli": "Desentiṃ buddhasāsanaṃ.",
          "en": "as she teaches the Buddha’s instructions."
        },
        {
          "scid": "thig3.6:5.1",
          "pli": "Tañca appaṭivānīyaṃ,",
          "en": "But the wise—"
        },
        {
          "scid": "thig3.6:5.2",
          "pli": "asecanakamojavaṃ;",
          "en": "it’s as if they drink it up,"
        },
        {
          "scid": "thig3.6:5.3",
          "pli": "Pivanti maññe sappaññā,",
          "en": "so irresistible, delicious and nutritious,"
        },
        {
          "scid": "thig3.6:5.4",
          "pli": "valāhakamivaddhagū.",
          "en": "like travelers enjoying a cool cloud.”"
        },
        {
          "scid": "thig3.6:6.1",
          "pli": "Sukkā sukkehi dhammehi,",
          "en": "“She’s known as Sukkā because of her bright qualities,"
        },
        {
          "scid": "thig3.6:6.2",
          "pli": "vītarāgā samāhitā;",
          "en": "free of greed, serene."
        },
        {
          "scid": "thig3.6:6.3",
          "pli": "Dhāreti antimaṃ dehaṃ,",
          "en": "She bears her final body,"
        },
        {
          "scid": "thig3.6:6.4",
          "pli": "jetvā māraṃ savāhinin”ti.",
          "en": "having vanquished Māra and his mount.”"
        },
        {
          "scid": "thig3.6:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.6:7.2",
          "pli": "Sukkā therī ….",
          "en": ""
        }
      ],
