      "segments": [
        {
          "scid": "thig5.9:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.9:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.9:3.1",
          "pli": "9. Bhaddākuṇḍalakesātherīgāthā",
          "en": "5.9. Bhaddā Kuṇḍalakesā"
        },
        {
          "scid": "thig5.9:4.1",
          "pli": "“Lūnakesī paṅkadharī,",
          "en": "My hair mown off, covered in mud,"
        },
        {
          "scid": "thig5.9:4.2",
          "pli": "ekasāṭī pure cariṃ;",
          "en": "I used to wander wearing just one robe."
        },
        {
          "scid": "thig5.9:4.3",
          "pli": "Avajje vajjamatinī,",
          "en": "I saw fault where there was none,"
        },
        {
          "scid": "thig5.9:4.4",
          "pli": "vajje cāvajjadassinī.",
          "en": "and no fault where there was."
        },
        {
          "scid": "thig5.9:5.1",
          "pli": "Divāvihārā nikkhamma,",
          "en": "Leaving my day’s meditation"
        },
        {
          "scid": "thig5.9:5.2",
          "pli": "gijjhakūṭamhi pabbate;",
          "en": "on Vulture’s Peak Mountain,"
        },
        {
          "scid": "thig5.9:5.3",
          "pli": "Addasaṃ virajaṃ buddhaṃ,",
          "en": "I saw the stainless Buddha"
        },
        {
          "scid": "thig5.9:5.4",
          "pli": "bhikkhusaṃghapurakkhataṃ.",
          "en": "at the fore of the mendicant Saṅgha."
        },
        {
          "scid": "thig5.9:6.1",
          "pli": "Nihacca jāṇuṃ vanditvā,",
          "en": "I bent my knee and bowed,"
        },
        {
          "scid": "thig5.9:6.2",
          "pli": "sammukhā añjaliṃ akaṃ;",
          "en": "and in his presence raised my joined palms."
        },
        {
          "scid": "thig5.9:6.3",
          "pli": "‘Ehi bhadde’ti maṃ avaca,",
          "en": "“Come Bhaddā,” he said;"
        },
        {
          "scid": "thig5.9:6.4",
          "pli": "sā me āsūpasampadā.",
          "en": "that was my ordination."
        },
        {
          "scid": "thig5.9:7.1",
          "pli": "Ciṇṇā aṅgā ca magadhā,",
          "en": "“I’ve wandered among the Aṅgans and Magadhans,"
        },
        {
          "scid": "thig5.9:7.2",
          "pli": "vajjī kāsī ca kosalā;",
          "en": "the Vajjīs, Kāsīs, and Kosalans."
        },
        {
          "scid": "thig5.9:7.3",
          "pli": "Anaṇā paṇṇāsa vassāni,",
          "en": "I have eaten the alms-food of the nations"
        },
        {
          "scid": "thig5.9:7.4",
          "pli": "raṭṭhapiṇḍaṃ abhuñjahaṃ.",
          "en": "free of debt for fifty years.”"
        },
        {
          "scid": "thig5.9:8.1",
          "pli": "Puññaṃ vata pasavi bahuṃ,",
          "en": "“O! He has made so much merit!"
        },
        {
          "scid": "thig5.9:8.2",
          "pli": "Sappañño vatāyaṃ upāsako;",
          "en": "That lay follower is so very wise."
        },
        {
          "scid": "thig5.9:8.3",
          "pli": "Yo bhaddāya cīvaraṃ adāsi,",
          "en": "He gave a robe to Bhaddā,"
        },
        {
          "scid": "thig5.9:8.4",
          "pli": "Vippamuttāya sabbaganthehī”ti.",
          "en": "who is released from all ties.”"
        },
        {
          "scid": "thig5.9:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.9:9.2",
          "pli": "Bhaddā kuṇḍalakesā therī ….",
          "en": ""
        }
      ],
