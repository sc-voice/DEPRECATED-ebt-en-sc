          "scid": "thag1.114:4.1",
          "pli": "1.114. Adhimuttattheragāthā",
          "en": "1.114. Adhimutta (1st)"
        },
        {
          "scid": "thag1.114:5.1",
          "pli": "“Kāyaduṭṭhullagaruno,",
          "en": "Your body is uncomfortably heavy,"
        },
        {
          "scid": "thag1.114:5.2",
          "pli": "hiyyamānamhi jīvite;",
          "en": "and life is running out;"
        },
        {
          "scid": "thag1.114:5.3",
          "pli": "Sarīrasukhagiddhassa,",
          "en": "greedy for physical pleasure,"
        },
        {
          "scid": "thag1.114:5.4",
          "pli": "kuto samaṇasādhutā”ti.",
          "en": "how can you find happiness as an ascetic?"
        },
        {
          "scid": "thag1.114:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.114:6.2",
          "pli": "Adhimutto thero ….",
          "en": ""
        }
