          "scid": "thag1.31:4.1",
          "pli": "1.31 Gahvaratīriyattheragāthā",
          "en": "1.31. Gahvaratīriya"
        },
        {
          "scid": "thag1.31:5.1",
          "pli": "“Phuṭṭho ḍaṃsehi makasehi,",
          "en": "Pestered by flies and mosquitoes"
        },
        {
          "scid": "thag1.31:5.2",
          "pli": "araññasmiṃ brahāvane;",
          "en": "in the wilds, the formidable forest,"
        },
        {
          "scid": "thag1.31:5.3",
          "pli": "Nāgo saṃgāmasīseva,",
          "en": "one should mindfully endure,"
        },
        {
          "scid": "thag1.31:5.4",
          "pli": "sato tatrādhivāsaye”ti.",
          "en": "like an elephant at the head of the battle."
        },
        {
          "scid": "thag1.31:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.31:6.2",
          "pli": "Gahvaratīriyo thero ….",
          "en": ""
        }
      ],
