  "sections": [
    {
      "segments": [
        {
          "scid": "thag4.12:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.12:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.12:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.12:4.1",
          "pli": "4.12. Muditattheragāthā",
          "en": "4.12. Mudita"
        },
        {
          "scid": "thag4.12:5.1",
          "pli": "“Pabbajiṃ jīvikatthohaṃ,",
          "en": "I went forth to save my life."
        },
        {
          "scid": "thag4.12:5.2",
          "pli": "laddhāna upasampadaṃ;",
          "en": "But I embraced faith"
        },
        {
          "scid": "thag4.12:5.3",
          "pli": "Tato saddhaṃ paṭilabhiṃ,",
          "en": "after receiving full ordination."
        },
        {
          "scid": "thag4.12:5.4",
          "pli": "daḷhavīriyo parakkamiṃ.",
          "en": "I strove, strong in effort:"
        },
        {
          "scid": "thag4.12:6.1",
          "pli": "Kāmaṃ bhijjatuyaṃ kāyo,",
          "en": "gladly, let this body be broken!"
        },
        {
          "scid": "thag4.12:6.2",
          "pli": "maṃsapesī visīyaruṃ;",
          "en": "Let this lump of meat be dissolved!"
        },
        {
          "scid": "thag4.12:6.3",
          "pli": "Ubho jaṇṇukasandhīhi,",
          "en": "Let both my legs fall off"
        },
        {
          "scid": "thag4.12:6.4",
          "pli": "jaṅghāyo papatantu me.",
          "en": "at the knees!"
        },
        {
          "scid": "thag4.12:7.1",
          "pli": "Nāsissaṃ na pivissāmi,",
          "en": "I won’t eat, I won’t drink,"
        },
        {
          "scid": "thag4.12:7.2",
          "pli": "vihārā ca na nikkhame;",
          "en": "I won’t leave my dwelling,"
        },
        {
          "scid": "thag4.12:7.3",
          "pli": "Napi passaṃ nipātessaṃ,",
          "en": "nor will I lie down on my side,"
        },
        {
          "scid": "thag4.12:7.4",
          "pli": "taṇhāsalle anūhate.",
          "en": "until the dart of craving is drawn out."
        },
        {
          "scid": "thag4.12:8.1",
          "pli": "Tassa mevaṃ viharato,",
          "en": "As I meditate like this,"
        },
        {
          "scid": "thag4.12:8.2",
          "pli": "passa vīriyaparakkamaṃ;",
          "en": "see my energy and vigor!"
        },
        {
          "scid": "thag4.12:8.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag4.12:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag4.12:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.12:9.2",
          "pli": "Mudito thero ….",
          "en": ""
        },
        {
          "scid": "thag4.12:10.1",
          "pli": "Catukkanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag4.12:11.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag4.12:12.1",
          "pli": "Nāgasamālo bhagu ca,",
          "en": ""
        },
        {
          "scid": "thag4.12:12.2",
          "pli": "sabhiyo nandakopi ca;",
          "en": ""
        },
        {
          "scid": "thag4.12:12.3",
          "pli": "Jambuko senako thero,",
          "en": ""
        },
        {
          "scid": "thag4.12:12.4",
          "pli": "sambhūto rāhulopi ca.",
          "en": ""
        },
        {
          "scid": "thag4.12:13.1",
          "pli": "Bhavati candano thero,",
          "en": ""
        },
        {
          "scid": "thag4.12:13.2",
          "pli": "dasete buddhasāvakā;",
          "en": ""
        },
        {
          "scid": "thag4.12:13.3",
          "pli": "Dhammiko sappako thero,",
          "en": ""
        },
        {
          "scid": "thag4.12:13.4",
          "pli": "mudito cāpi te tayo;",
          "en": ""
        },
        {
          "scid": "thag4.12:13.5",
          "pli": "Gāthāyo dve ca paññāsa,",
          "en": ""
        },
        {
          "scid": "thag4.12:13.6",
          "pli": "therā sabbepi terasāti.",
          "en": ""
        }
      ],
