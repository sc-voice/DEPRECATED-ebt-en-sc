      "segments": [
        {
          "scid": "thag2.47:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.47:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.47:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag2.47:4.1",
          "pli": "2.47. Anūpamattheragāthā",
          "en": "2.47. Anūpama"
        },
        {
          "scid": "thag2.47:5.1",
          "pli": "“Nandamānāgataṃ cittaṃ,",
          "en": "The conceited mind, addicted to pleasure,"
        },
        {
          "scid": "thag2.47:5.2",
          "pli": "sūlamāropamānakaṃ;",
          "en": "impales itself on its own stake."
        },
        {
          "scid": "thag2.47:5.3",
          "pli": "Tena teneva vajasi,",
          "en": "It always goes where"
        },
        {
          "scid": "thag2.47:5.4",
          "pli": "yena sūlaṃ kaliṅgaraṃ.",
          "en": "there’s a stake, a chopping block."
        },
        {
          "scid": "thag2.47:6.1",
          "pli": "Tāhaṃ cittakaliṃ brūmi,",
          "en": "I declare you the demon mind!"
        },
        {
          "scid": "thag2.47:6.2",
          "pli": "taṃ brūmi cittadubbhakaṃ;",
          "en": "I declare you the insidious mind!"
        },
        {
          "scid": "thag2.47:6.3",
          "pli": "Satthā te dullabho laddho,",
          "en": "You’ve found the teacher so hard to find—"
        },
        {
          "scid": "thag2.47:6.4",
          "pli": "mānatthe maṃ niyojayī”ti.",
          "en": "don’t lead me away from the goal."
        },
        {
          "scid": "thag2.47:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.47:7.2",
          "pli": "Anūpamo thero ….",
          "en": ""
        }
      ],
