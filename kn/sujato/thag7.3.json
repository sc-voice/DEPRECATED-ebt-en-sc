  "sections": [
    {
      "segments": [
        {
          "scid": "thag7.3:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag7.3:2.1",
          "pli": "Sattakanipāta",
          "en": "The Book of the Sevens"
        },
        {
          "scid": "thag7.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag7.3:4.1",
          "pli": "7.3. Bhaddattheragāthā",
          "en": "7.3. Bhadda"
        },
        {
          "scid": "thag7.3:5.1",
          "pli": "“Ekaputto ahaṃ āsiṃ,",
          "en": "I was an only child,"
        },
        {
          "scid": "thag7.3:5.2",
          "pli": "piyo mātu piyo pitu;",
          "en": "loved by my mother and father."
        },
        {
          "scid": "thag7.3:5.3",
          "pli": "Bahūhi vatacariyāhi,",
          "en": "They had me by practicing"
        },
        {
          "scid": "thag7.3:5.4",
          "pli": "laddho āyācanāhi ca.",
          "en": "many prayers and observances."
        },
        {
          "scid": "thag7.3:6.1",
          "pli": "Te ca maṃ anukampāya,",
          "en": "Out of compassion for me"
        },
        {
          "scid": "thag7.3:6.2",
          "pli": "atthakāmā hitesino;",
          "en": "wishing me well and wanting the best for me,"
        },
        {
          "scid": "thag7.3:6.3",
          "pli": "Ubho pitā ca mātā ca,",
          "en": "my mother and father"
        },
        {
          "scid": "thag7.3:6.4",
          "pli": "buddhassa upanāmayuṃ.",
          "en": "took me to see the Buddha."
        },
        {
          "scid": "thag7.3:7.1",
          "pli": "‘Kicchā laddho ayaṃ putto,",
          "en": "“We had this son with difficulty;"
        },
        {
          "scid": "thag7.3:7.2",
          "pli": "sukhumālo sukhedhito;",
          "en": "he is delicate and dainty."
        },
        {
          "scid": "thag7.3:7.3",
          "pli": "Imaṃ dadāma te nātha,",
          "en": "We offer him to you, Lord,"
        },
        {
          "scid": "thag7.3:7.4",
          "pli": "jinassa paricārakaṃ’.",
          "en": "to attend upon the victor.”"
        },
        {
          "scid": "thag7.3:8.1",
          "pli": "Satthā ca maṃ paṭiggayha,",
          "en": "The teacher, having accepted me,"
        },
        {
          "scid": "thag7.3:8.2",
          "pli": "ānandaṃ etadabravi;",
          "en": "declared to Ānanda:"
        },
        {
          "scid": "thag7.3:8.3",
          "pli": "‘Pabbājehi imaṃ khippaṃ,",
          "en": "“Quickly give him the going-forth—"
        },
        {
          "scid": "thag7.3:8.4",
          "pli": "hessatyājāniyo ayaṃ’.",
          "en": "this one will be a thoroughbred!”"
        },
        {
          "scid": "thag7.3:9.1",
          "pli": "Pabbājetvāna maṃ satthā,",
          "en": "After he, the teacher, had sent me forth,"
        },
        {
          "scid": "thag7.3:9.2",
          "pli": "vihāraṃ pāvisī jino;",
          "en": "the victor entered his dwelling."
        },
        {
          "scid": "thag7.3:9.3",
          "pli": "Anoggatasmiṃ sūriyasmiṃ,",
          "en": "Before the sun set"
        },
        {
          "scid": "thag7.3:9.4",
          "pli": "tato cittaṃ vimucci me.",
          "en": "my mind was freed."
        },
        {
          "scid": "thag7.3:10.1",
          "pli": "Tato satthā nirākatvā,",
          "en": "The teacher didn’t neglect me;"
        },
        {
          "scid": "thag7.3:10.2",
          "pli": "paṭisallānavuṭṭhito;",
          "en": "when he came out from seclusion,"
        },
        {
          "scid": "thag7.3:10.3",
          "pli": "‘Ehi bhaddā’ti maṃ āha,",
          "en": "he said: “Come Bhadda!”"
        },
        {
          "scid": "thag7.3:10.4",
          "pli": "sā me āsūpasampadā.",
          "en": "That was my ordination."
        },
        {
          "scid": "thag7.3:11.1",
          "pli": "Jātiyā sattavassena,",
          "en": "At seven years old"
        },
        {
          "scid": "thag7.3:11.2",
          "pli": "laddhā me upasampadā;",
          "en": "I received ordination."
        },
        {
          "scid": "thag7.3:11.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges;"
        },
        {
          "scid": "thag7.3:11.4",
          "pli": "aho dhammasudhammatā”ti.",
          "en": "oh, the excellence of the teaching!"
        },
        {
          "scid": "thag7.3:12.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag7.3:12.2",
          "pli": "Bhaddo thero ….",
          "en": ""
        }
      ],
