        {
          "scid": "thig1.7:3.1",
          "pli": "7. Vīrātherīgāthā",
          "en": "1.7. Vīrā"
        },
        {
          "scid": "thig1.7:4.1",
          "pli": "“Vīrā vīrehi dhammehi,",
          "en": "She’s known as Vīrā because of her heroic qualities,"
        },
        {
          "scid": "thig1.7:4.2",
          "pli": "bhikkhunī bhāvitindriyā;",
          "en": "a nun with faculties developed."
        },
        {
          "scid": "thig1.7:4.3",
          "pli": "Dhāreti antimaṃ dehaṃ,",
          "en": "She bears her final body,"
        },
        {
          "scid": "thig1.7:4.4",
          "pli": "jetvā māraṃ savāhinin”ti.",
          "en": "having vanquished Māra and his mount."
        },
        {
          "scid": "thig1.7:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.7:5.2",
          "pli": "Vīrā therī ….",
          "en": ""
        }
      ],
