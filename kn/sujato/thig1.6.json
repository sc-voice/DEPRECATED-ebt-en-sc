        },
        {
          "scid": "thig1.6:4.1",
          "pli": "“Dhīre nirodhaṃ phusehi,",
          "en": "Dhīrā, touch cessation,"
        },
        {
          "scid": "thig1.6:4.2",
          "pli": "Saññāvūpasamaṃ sukhaṃ;",
          "en": "the blissful stilling of perception."
        },
        {
          "scid": "thig1.6:4.3",
          "pli": "Ārādhayāhi nibbānaṃ,",
          "en": "Win extinguishment,"
        },
        {
          "scid": "thig1.6:4.4",
          "pli": "Yogakkhemamanuttaran”ti.",
          "en": "the supreme sanctuary."
        },
        {
