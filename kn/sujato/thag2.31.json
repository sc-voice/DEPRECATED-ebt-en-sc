      "segments": [
        {
          "scid": "thag2.31:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.31:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.31:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.31:4.1",
          "pli": "2.31. Migasirattheragāthā",
          "en": "2.31. Migasira"
        },
        {
          "scid": "thag2.31:5.1",
          "pli": "“Yato ahaṃ pabbajito,",
          "en": "When I had gone forth"
        },
        {
          "scid": "thag2.31:5.2",
          "pli": "sammāsambuddhasāsane;",
          "en": "in the teaching of the Buddha,"
        },
        {
          "scid": "thag2.31:5.3",
          "pli": "Vimuccamāno uggacchiṃ,",
          "en": "while letting go, I rose up;"
        },
        {
          "scid": "thag2.31:5.4",
          "pli": "kāmadhātuṃ upaccagaṃ.",
          "en": "escaping the sensual realm."
        },
        {
          "scid": "thag2.31:6.1",
          "pli": "Brahmuno pekkhamānassa,",
          "en": "Then, as the supreme one looked on,"
        },
        {
          "scid": "thag2.31:6.2",
          "pli": "tato cittaṃ vimucci me;",
          "en": "my mind was freed."
        },
        {
          "scid": "thag2.31:6.3",
          "pli": "Akuppā me vimuttīti,",
          "en": "My freedom is unshakable"
        },
        {
          "scid": "thag2.31:6.4",
          "pli": "sabbasaṃyojanakkhayā”ti.",
          "en": "with the ending of all fetters."
        },
        {
          "scid": "thag2.31:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.31:7.2",
          "pli": "Migasiro thero ….",
          "en": ""
        }
      ],
