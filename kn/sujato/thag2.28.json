        {
          "scid": "thag2.28:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.28:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.28:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.28:4.1",
          "pli": "2.28. Bharatattheragāthā",
          "en": "2.28. Bharata"
        },
        {
          "scid": "thag2.28:5.1",
          "pli": "“Ehi nandaka gacchāma,",
          "en": "Come, Nandaka, let’s go"
        },
        {
          "scid": "thag2.28:5.2",
          "pli": "upajjhāyassa santikaṃ;",
          "en": "to visit our preceptor."
        },
        {
          "scid": "thag2.28:5.3",
          "pli": "Sīhanādaṃ nadissāma,",
          "en": "We’ll roar our lion’s roar"
        },
        {
          "scid": "thag2.28:5.4",
          "pli": "buddhaseṭṭhassa sammukhā.",
          "en": "before the best of Buddhas."
        },
        {
          "scid": "thag2.28:6.1",
          "pli": "Yāya no anukampāya,",
          "en": "The sage gave us the going forth"
        },
        {
          "scid": "thag2.28:6.2",
          "pli": "amhe pabbājayī muni;",
          "en": "out of compassion, so we could realize"
        },
        {
          "scid": "thag2.28:6.3",
          "pli": "So no attho anuppatto,",
          "en": "the ending of all fetters—"
        },
        {
          "scid": "thag2.28:6.4",
          "pli": "sabbasaṃyojanakkhayo”ti.",
          "en": "now we have reached that goal."
        },
        {
          "scid": "thag2.28:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.28:7.2",
          "pli": "Bharato thero ….",
          "en": ""
        }
      ],
