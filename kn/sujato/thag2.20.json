      "segments": [
        {
          "scid": "thag2.20:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.20:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.20:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag2.20:4.1",
          "pli": "2.20. Sirimattheragāthā",
          "en": "2.20. Sirima"
        },
        {
          "scid": "thag2.20:5.1",
          "pli": "“Pare ca naṃ pasaṃsanti,",
          "en": "If others praise one"
        },
        {
          "scid": "thag2.20:5.2",
          "pli": "attā ce asamāhito;",
          "en": "who has no immersion,"
        },
        {
          "scid": "thag2.20:5.3",
          "pli": "Moghaṃ pare pasaṃsanti,",
          "en": "they praise in vain,"
        },
        {
          "scid": "thag2.20:5.4",
          "pli": "attā hi asamāhito.",
          "en": "as one has no immersion."
        },
        {
          "scid": "thag2.20:6.1",
          "pli": "Pare ca naṃ garahanti,",
          "en": "If others rebuke one"
        },
        {
          "scid": "thag2.20:6.2",
          "pli": "attā ce susamāhito;",
          "en": "who does have immersion,"
        },
        {
          "scid": "thag2.20:6.3",
          "pli": "Moghaṃ pare garahanti,",
          "en": "they rebuke in vain,"
        },
        {
          "scid": "thag2.20:6.4",
          "pli": "attā hi susamāhito”ti.",
          "en": "as one does have immersion."
        },
        {
          "scid": "thag2.20:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.20:7.2",
          "pli": "Sirimā thero ….",
          "en": ""
        },
        {
          "scid": "thag2.20:7.3",
          "pli": "Vaggo dutiyo.",
          "en": ""
        },
        {
          "scid": "thag2.20:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.20:9.1",
          "pli": "Cundo ca jotidāso ca,",
          "en": ""
        },
        {
          "scid": "thag2.20:9.2",
          "pli": "thero heraññakāni ca;",
          "en": ""
        },
        {
          "scid": "thag2.20:9.3",
          "pli": "Somamitto sabbamitto,",
          "en": ""
        },
        {
          "scid": "thag2.20:9.4",
          "pli": "kāḷo tisso ca kimilo;",
          "en": ""
        },
        {
          "scid": "thag2.20:9.5",
          "pli": "Nando ca sirimā ceva,",
          "en": ""
        },
        {
          "scid": "thag2.20:9.6",
          "pli": "dasa therā mahiddhikāti.",
          "en": ""
        }
      ],
