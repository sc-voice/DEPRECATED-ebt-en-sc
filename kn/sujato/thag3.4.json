      "segments": [
        {
          "scid": "thag3.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.4:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.4:4.1",
          "pli": "3.4. Dhaniyattheragāthā",
          "en": "3.4. Dhaniya"
        },
        {
          "scid": "thag3.4:5.1",
          "pli": "“Sukhañce jīvituṃ icche,",
          "en": "If you wish to live in happiness,"
        },
        {
          "scid": "thag3.4:5.2",
          "pli": "sāmaññasmiṃ apekkhavā;",
          "en": "longing for the ascetic life,"
        },
        {
          "scid": "thag3.4:5.3",
          "pli": "Saṃghikaṃ nātimaññeyya,",
          "en": "don’t look down on the Saṅgha’s robes,"
        },
        {
          "scid": "thag3.4:5.4",
          "pli": "cīvaraṃ pānabhojanaṃ.",
          "en": "or its food and drinks."
        },
        {
          "scid": "thag3.4:6.1",
          "pli": "Sukhañce jīvituṃ icche,",
          "en": "If you wish to live in happiness,"
        },
        {
          "scid": "thag3.4:6.2",
          "pli": "sāmaññasmiṃ apekkhavā;",
          "en": "longing for the ascetic life,"
        },
        {
          "scid": "thag3.4:6.3",
          "pli": "Ahi mūsikasobbhaṃva,",
          "en": "stay in the Saṅgha’s lodgings"
        },
        {
          "scid": "thag3.4:6.4",
          "pli": "sevetha sayanāsanaṃ.",
          "en": "like a snake making use of a mouse’s hole."
        },
        {
          "scid": "thag3.4:7.1",
          "pli": "Sukhañce jīvituṃ icche,",
          "en": "If you wish to live in happiness,"
        },
        {
          "scid": "thag3.4:7.2",
          "pli": "sāmaññasmiṃ apekkhavā;",
          "en": "longing for the ascetic life,"
        },
        {
          "scid": "thag3.4:7.3",
          "pli": "Itarītarena tusseyya,",
          "en": "develop this one quality:"
        },
        {
          "scid": "thag3.4:7.4",
          "pli": "ekadhammañca bhāvaye”ti.",
          "en": "be content with whatever is offered."
        },
        {
          "scid": "thag3.4:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.4:8.2",
          "pli": "Dhaniyo thero ….",
          "en": ""
        }
      ],
