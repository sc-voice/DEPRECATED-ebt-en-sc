        {
          "scid": "thag1.21:4.1",
          "pli": "1.21. Nigrodhattheragāthā",
          "en": "1.21. Nigrodha"
        },
        {
          "scid": "thag1.21:5.1",
          "pli": "“Nāhaṃ bhayassa bhāyāmi,",
          "en": "I’m not afraid of fear,"
        },
        {
          "scid": "thag1.21:5.2",
          "pli": "Satthā no amatassa kovido;",
          "en": "for our teacher is expert in the deathless."
        },
        {
          "scid": "thag1.21:5.3",
          "pli": "Yattha bhayaṃ nāvatiṭṭhati,",
          "en": "Mendicants proceed by the path"
        },
        {
          "scid": "thag1.21:5.4",
          "pli": "Tena maggena vajanti bhikkhavo”ti.",
          "en": "where no fear remains."
        },
        {
          "scid": "thag1.21:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.21:6.2",
          "pli": "Nigrodho thero ….",
          "en": ""
        }
      ],
