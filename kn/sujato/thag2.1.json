      "segments": [
        {
          "scid": "thag2.1:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.1:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.1:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.1:4.1",
          "pli": "2.1. Uttarattheragāthā",
          "en": "2.1. Uttara (1st)"
        },
        {
          "scid": "thag2.1:5.1",
          "pli": "“Natthi koci bhavo nicco,",
          "en": "No life is permanent,"
        },
        {
          "scid": "thag2.1:5.2",
          "pli": "saṅkhārā vāpi sassatā;",
          "en": "and no conditions last forever."
        },
        {
          "scid": "thag2.1:5.3",
          "pli": "Uppajjanti ca te khandhā,",
          "en": "The aggregates are reborn"
        },
        {
          "scid": "thag2.1:5.4",
          "pli": "cavanti aparāparaṃ.",
          "en": "and pass away, again and again."
        },
        {
          "scid": "thag2.1:6.1",
          "pli": "Etamādīnavaṃ ñatvā,",
          "en": "Knowing this danger,"
        },
        {
          "scid": "thag2.1:6.2",
          "pli": "bhavenamhi anatthiko;",
          "en": "I don’t need another life."
        },
        {
          "scid": "thag2.1:6.3",
          "pli": "Nissaṭo sabbakāmehi,",
          "en": "I’ve escaped all sensual pleasures,"
        },
        {
          "scid": "thag2.1:6.4",
          "pli": "patto me āsavakkhayo”ti.",
          "en": "and attained the ending of defilements."
        },
        {
          "scid": "thag2.1:7.1",
          "pli": "Itthaṃ sudaṃ āyasmā uttaro thero gāthāyo abhāsitthāti.",
          "en": "It was thus that these verses were recited by the senior venerable Uttara."
        }
      ],
