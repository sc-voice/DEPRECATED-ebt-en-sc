          "scid": "thig1.13:3.1",
          "pli": "13. Visākhātherīgāthā",
          "en": "1.13. Visākhā"
        },
        {
          "scid": "thig1.13:4.1",
          "pli": "“Karotha buddhasāsanaṃ,",
          "en": "Fulfill the Buddha’s instructions,"
        },
        {
          "scid": "thig1.13:4.2",
          "pli": "yaṃ katvā nānutappati;",
          "en": "after which you’ll not regret."
        },
        {
          "scid": "thig1.13:4.3",
          "pli": "Khippaṃ pādāni dhovitvā,",
          "en": "Having quickly washed your feet,"
        },
        {
          "scid": "thig1.13:4.4",
          "pli": "ekamante nisīdathā”ti.",
          "en": "sit in a discreet place to meditate."
        },
        {
          "scid": "thig1.13:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.13:5.2",
          "pli": "Visākhā therī ….",
          "en": ""
        }
