      "segments": [
        {
          "scid": "thig2.7:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.7:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.7:3.1",
          "pli": "7. Mittātherīgāthā",
          "en": "2.7. Mittā (2nd)"
        },
        {
          "scid": "thig2.7:4.1",
          "pli": "“Cātuddasiṃ pañcadasiṃ,",
          "en": "I rejoice in the host of gods,"
        },
        {
          "scid": "thig2.7:4.2",
          "pli": "yā ca pakkhassa aṭṭhamī;",
          "en": "having observed the sabbath"
        },
        {
          "scid": "thig2.7:4.3",
          "pli": "Pāṭihāriyapakkhañca,",
          "en": "complete in all eight factors,"
        },
        {
          "scid": "thig2.7:4.4",
          "pli": "aṭṭhaṅgasusamāgataṃ.",
          "en": "on the fourteenth and the fifteenth days,"
        },
        {
          "scid": "thig2.7:5.1",
          "pli": "Uposathaṃ upāgacchiṃ,",
          "en": "and the eighth day of the fortnight,"
        },
        {
          "scid": "thig2.7:5.2",
          "pli": "devakāyābhinandinī;",
          "en": "as well as on the fortnightly special displays."
        },
        {
          "scid": "thig2.7:5.3",
          "pli": "Sājja ekena bhattena,",
          "en": "Today I eat just once a day,"
        },
        {
          "scid": "thig2.7:5.4",
          "pli": "muṇḍā saṅghāṭipārutā;",
          "en": "my head is shaven, I wear the outer robe."
        },
        {
          "scid": "thig2.7:5.5",
          "pli": "Devakāyaṃ na patthehaṃ,",
          "en": "I don’t long for the host of gods,"
        },
        {
          "scid": "thig2.7:5.6",
          "pli": "vineyya hadaye daran”ti.",
          "en": "for stress has been removed from my heart."
        },
        {
          "scid": "thig2.7:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.7:6.2",
          "pli": "Mittā therī ….",
          "en": ""
        }
      ],
