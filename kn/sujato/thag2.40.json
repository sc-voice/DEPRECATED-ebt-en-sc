        {
          "scid": "thag2.40:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.40:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.40:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.40:4.1",
          "pli": "2.40. Kappaṭakurattheragāthā",
          "en": "2.40. Kappaṭakura"
        },
        {
          "scid": "thag2.40:5.1",
          "pli": "“Ayamiti kappaṭo kappaṭakuro,",
          "en": "This fellow, “Rag-rice”, he sure is a rag!"
        },
        {
          "scid": "thag2.40:5.2",
          "pli": "Acchāya atibharitāya;",
          "en": "Into the vase of the deathless, polished and overflowing,"
        },
        {
          "scid": "thag2.40:5.3",
          "pli": "Amataghaṭikāyaṃ dhammakaṭamatto,",
          "en": "sufficient teaching has been poured;"
        },
        {
          "scid": "thag2.40:5.4",
          "pli": "Katapadaṃ jhānāni ocetuṃ.",
          "en": "the path to build up absorptions has been laid out."
        },
        {
          "scid": "thag2.40:6.1",
          "pli": "Mā kho tvaṃ kappaṭa pacālesi,",
          "en": "Don’t nod off, Rag—"
        },
        {
          "scid": "thag2.40:6.2",
          "pli": "Mā tvaṃ upakaṇṇamhi tāḷessaṃ;",
          "en": "I’ll smack your ear!"
        },
        {
          "scid": "thag2.40:6.3",
          "pli": "Na hi tvaṃ kappaṭa mattamaññāsi,",
          "en": "Nodding off in the middle of the Saṅgha?"
        },
        {
          "scid": "thag2.40:6.4",
          "pli": "Saṃghamajjhamhi pacalāyamāno”ti.",
          "en": "You know no bounds."
        },
        {
          "scid": "thag2.40:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.40:7.2",
          "pli": "Kappaṭakuro thero ….",
          "en": ""
        },
        {
          "scid": "thag2.40:7.3",
          "pli": "Vaggo catuttho.",
          "en": ""
        },
        {
          "scid": "thag2.40:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.40:9.1",
          "pli": "Migasiro sivako ca,",
          "en": ""
        },
        {
          "scid": "thag2.40:9.2",
          "pli": "upavāṇo ca paṇḍito;",
          "en": ""
        },
        {
          "scid": "thag2.40:9.3",
          "pli": "Isidinno ca kaccāno,",
          "en": ""
        },
        {
          "scid": "thag2.40:9.4",
          "pli": "nitako ca mahāvasī;",
          "en": ""
        },
        {
          "scid": "thag2.40:9.5",
          "pli": "Poṭiriyaputto nisabho,",
          "en": ""
        },
        {
          "scid": "thag2.40:9.6",
          "pli": "usabho kappaṭakuroti.",
          "en": ""
        }
      ],
