          "scid": "thag1.81:4.1",
          "pli": "1.81. Samitiguttattheragāthā",
          "en": "1.81. Samitigutta"
        },
        {
          "scid": "thag1.81:5.1",
          "pli": "“Yaṃ mayā pakataṃ pāpaṃ,",
          "en": "Whatever bad things I’ve done"
        },
        {
          "scid": "thag1.81:5.2",
          "pli": "pubbe aññāsu jātisu;",
          "en": "in previous lives,"
        },
        {
          "scid": "thag1.81:5.3",
          "pli": "Idheva taṃ vedanīyaṃ,",
          "en": "are to be experienced right here,"
        },
        {
          "scid": "thag1.81:5.4",
          "pli": "vatthu aññaṃ na vijjatī”ti.",
          "en": "not in any other place."
        },
        {
          "scid": "thag1.81:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.81:6.2",
          "pli": "Samitigutto thero ….",
          "en": ""
        }
