      "segments": [
        {
          "scid": "thag1.20:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.20:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.20:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag1.20:4.1",
          "pli": "1.20. Ajitattheragāthā",
          "en": "1.20. Ajita"
        },
        {
          "scid": "thag1.20:5.1",
          "pli": "“Maraṇe me bhayaṃ natthi,",
          "en": "I do not fear death;"
        },
        {
          "scid": "thag1.20:5.2",
          "pli": "nikanti natthi jīvite;",
          "en": "nor do I long for life."
        },
        {
          "scid": "thag1.20:5.3",
          "pli": "Sandehaṃ nikkhipissāmi,",
          "en": "I’ll lay down this body,"
        },
        {
          "scid": "thag1.20:5.4",
          "pli": "sampajāno paṭissato”ti.",
          "en": "aware and mindful."
        },
        {
          "scid": "thag1.20:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.20:6.2",
          "pli": "Ajito thero …",
          "en": ""
        },
        {
          "scid": "thag1.20:6.3",
          "pli": "vaggo dutiyo.",
          "en": ""
        },
        {
          "scid": "thag1.20:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.20:8.1",
          "pli": "Cūḷavaccho mahāvaccho,",
          "en": ""
        },
        {
          "scid": "thag1.20:8.2",
          "pli": "vanavaccho ca sīvako;",
          "en": ""
        },
        {
          "scid": "thag1.20:8.3",
          "pli": "Kuṇḍadhāno ca belaṭṭhi,",
          "en": ""
        },
        {
          "scid": "thag1.20:8.4",
          "pli": "dāsako ca tatopari;",
          "en": ""
        },
        {
          "scid": "thag1.20:8.5",
          "pli": "Siṅgālapitiko thero,",
          "en": ""
        },
        {
          "scid": "thag1.20:8.6",
          "pli": "kulo ca ajito dasāti.",
          "en": ""
        }
      ],
