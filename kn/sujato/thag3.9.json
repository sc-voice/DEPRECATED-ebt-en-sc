      "segments": [
        {
          "scid": "thag3.9:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.9:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.9:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.9:4.1",
          "pli": "3.9. Yasojattheragāthā",
          "en": "3.9. Yasoja"
        },
        {
          "scid": "thag3.9:5.1",
          "pli": "“Kālapabbaṅgasaṅkāso,",
          "en": "“With knobbly knees,"
        },
        {
          "scid": "thag3.9:5.2",
          "pli": "kiso dhamanisanthato;",
          "en": "thin and veiny,"
        },
        {
          "scid": "thag3.9:5.3",
          "pli": "Mattaññū annapānamhi,",
          "en": "eating and drinking but little—"
        },
        {
          "scid": "thag3.9:5.4",
          "pli": "adīnamānaso naro”.",
          "en": "this person’s spirit is undaunted.”"
        },
        {
          "scid": "thag3.9:6.1",
          "pli": "“Phuṭṭho ḍaṃsehi makasehi,",
          "en": "“Pestered by flies and mosquitoes"
        },
        {
          "scid": "thag3.9:6.2",
          "pli": "araññasmiṃ brahāvane;",
          "en": "in the wilds, the formidable forest,"
        },
        {
          "scid": "thag3.9:6.3",
          "pli": "Nāgo saṅgāmasīseva,",
          "en": "one should mindfully endure,"
        },
        {
          "scid": "thag3.9:6.4",
          "pli": "sato tatrādhivāsaye.",
          "en": "like an elephant at the head of the battle."
        },
        {
          "scid": "thag3.9:7.1",
          "pli": "Yathā brahmā tathā eko,",
          "en": "A monk alone is like the supreme Brahmā;"
        },
        {
          "scid": "thag3.9:7.2",
          "pli": "yathā devo tathā duve;",
          "en": "a pair of monks are like gods;"
        },
        {
          "scid": "thag3.9:7.3",
          "pli": "Yathā gāmo tathā tayo,",
          "en": "three are like a village;"
        },
        {
          "scid": "thag3.9:7.4",
          "pli": "kolāhalaṃ tatuttarin”ti.",
          "en": "and more than that is a rabble.”"
        },
        {
          "scid": "thag3.9:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.9:8.2",
          "pli": "Yasojo thero ….",
          "en": ""
        }
      ],
