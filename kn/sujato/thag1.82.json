        {
          "scid": "thag1.82:4.1",
          "pli": "1.82. Kassapattheragāthā",
          "en": "1.82. Kassapa"
        },
        {
          "scid": "thag1.82:5.1",
          "pli": "“Yena yena subhikkhāni,",
          "en": "Go, child, to any place"
        },
        {
          "scid": "thag1.82:5.2",
          "pli": "sivāni abhayāni ca;",
          "en": "where there’s plenty of food,"
        },
        {
          "scid": "thag1.82:5.3",
          "pli": "Tena puttaka gacchassu,",
          "en": "where it’s safe and free of peril—"
        },
        {
          "scid": "thag1.82:5.4",
          "pli": "mā sokāpahato bhavā”ti.",
          "en": "may you not be overcome by sorrow!"
        },
        {
          "scid": "thag1.82:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.82:6.2",
          "pli": "Kassapo thero ….",
          "en": ""
        }
      ],
