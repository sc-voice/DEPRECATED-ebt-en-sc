      "segments": [
        {
          "scid": "thag2.16:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.16:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.16:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag2.16:4.1",
          "pli": "2.16. Mahākāḷattheragāthā",
          "en": "2.16. Mahākāḷa"
        },
        {
          "scid": "thag2.16:5.1",
          "pli": "“Kāḷī itthī brahatī dhaṅkarūpā,",
          "en": "There’s a big black woman who looks like a crow."
        },
        {
          "scid": "thag2.16:5.2",
          "pli": "Satthiñca bhetvā aparañca satthiṃ;",
          "en": "She broke off thigh-bones, first one then another;"
        },
        {
          "scid": "thag2.16:5.3",
          "pli": "Bāhañca bhetvā aparañca bāhaṃ,",
          "en": "she broke off arm-bones, first one then another;"
        },
        {
          "scid": "thag2.16:5.4",
          "pli": "Sīsañca bhetvā dadhithālakaṃva;",
          "en": "she broke off a skull like a curd-bowl, and then"
        },
        {
          "scid": "thag2.16:5.5",
          "pli": "Esā nisinnā abhisandahitvā.",
          "en": "arranged them and sat nearby."
        },
        {
          "scid": "thag2.16:6.1",
          "pli": "Yo ve avidvā upadhiṃ karoti,",
          "en": "When an ignorant person builds up attachments,"
        },
        {
          "scid": "thag2.16:6.2",
          "pli": "Punappunaṃ dukkhamupeti mando;",
          "en": "that idiot returns to suffering again and again."
        },
        {
          "scid": "thag2.16:6.3",
          "pli": "Tasmā pajānaṃ upadhiṃ na kayirā,",
          "en": "So let one who understands not build up attachments:"
        },
        {
          "scid": "thag2.16:6.4",
          "pli": "Māhaṃ puna bhinnasiro sayissan”ti.",
          "en": "may I never again lie with a broken skull!"
        },
        {
          "scid": "thag2.16:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.16:7.2",
          "pli": "Mahākāḷo thero ….",
          "en": ""
        }
      ],
