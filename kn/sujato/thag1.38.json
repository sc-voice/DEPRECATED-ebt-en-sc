        {
          "scid": "thag1.38:4.1",
          "pli": "1.38. Gavampatittheragāthā",
          "en": "1.38. Gavampati"
        },
        {
          "scid": "thag1.38:5.1",
          "pli": "“Yo iddhiyā sarabhuṃ aṭṭhapesi,",
          "en": "His psychic power made the river Sarabhu stand still;"
        },
        {
          "scid": "thag1.38:5.2",
          "pli": "So gavampati asito anejo;",
          "en": "Gavampati is unbound and unperturbed."
        },
        {
          "scid": "thag1.38:5.3",
          "pli": "Taṃ sabbasaṅgātigataṃ mahāmuniṃ,",
          "en": "The gods bow to that great sage, who has gone beyond all clinging,"
        },
        {
          "scid": "thag1.38:5.4",
          "pli": "Devā namassanti bhavassa pāragun”ti.",
          "en": "and gone beyond rebirth."
        },
        {
          "scid": "thag1.38:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.38:6.2",
          "pli": "Gavampatitthero ….",
          "en": ""
        }
      ],
