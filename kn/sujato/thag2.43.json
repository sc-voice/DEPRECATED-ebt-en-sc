      "segments": [
        {
          "scid": "thag2.43:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.43:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.43:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag2.43:4.1",
          "pli": "2.43. Brahmālittheragāthā",
          "en": "2.43. Brahmāli"
        },
        {
          "scid": "thag2.43:5.1",
          "pli": "“Kassindriyāni samathaṅgatāni,",
          "en": "Whose faculties have become serene,"
        },
        {
          "scid": "thag2.43:5.2",
          "pli": "Assā yathā sārathinā sudantā;",
          "en": "like horses tamed by a charioteer?"
        },
        {
          "scid": "thag2.43:5.3",
          "pli": "Pahīnamānassa anāsavassa,",
          "en": "Who has abandoned conceit and defilements,"
        },
        {
          "scid": "thag2.43:5.4",
          "pli": "Devāpi kassa pihayanti tādinoti.",
          "en": "becoming such that even the gods envy them?"
        },
        {
          "scid": "thag2.43:6.1",
          "pli": "Mayhindriyāni samathaṅgatāni,",
          "en": "My faculties have become serene,"
        },
        {
          "scid": "thag2.43:6.2",
          "pli": "Assā yathā sārathinā sudantā;",
          "en": "like horses tamed by a charioteer."
        },
        {
          "scid": "thag2.43:6.3",
          "pli": "Pahīnamānassa anāsavassa,",
          "en": "I have abandoned conceit and defilements,"
        },
        {
          "scid": "thag2.43:6.4",
          "pli": "Devāpi mayhaṃ pihayanti tādino”ti.",
          "en": "becoming such that even the gods envy me."
        },
        {
          "scid": "thag2.43:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.43:7.2",
          "pli": "Brahmāli thero ….",
          "en": ""
        }
      ],
