    {
      "segments": [
        {
          "scid": "thig5.6:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.6:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.6:3.1",
          "pli": "6 Mittākāḷītherīgāthā",
          "en": "5.6. Mittākāḷī"
        },
        {
          "scid": "thig5.6:4.1",
          "pli": "“Saddhāya pabbajitvāna,",
          "en": "Having gone forth out of faith"
        },
        {
          "scid": "thig5.6:4.2",
          "pli": "agārasmānagāriyaṃ;",
          "en": "from the lay life to homelessness,"
        },
        {
          "scid": "thig5.6:4.3",
          "pli": "Vicariṃhaṃ tena tena,",
          "en": "I wandered here and there,"
        },
        {
          "scid": "thig5.6:4.4",
          "pli": "lābhasakkāraussukā.",
          "en": "jealous of possessions and honors."
        },
        {
          "scid": "thig5.6:5.1",
          "pli": "Riñcitvā paramaṃ atthaṃ,",
          "en": "Neglecting the highest goal,"
        },
        {
          "scid": "thig5.6:5.2",
          "pli": "hīnamatthaṃ asevihaṃ;",
          "en": "I pursued the lowest."
        },
        {
          "scid": "thig5.6:5.3",
          "pli": "Kilesānaṃ vasaṃ gantvā,",
          "en": "Under the sway of corruptions,"
        },
        {
          "scid": "thig5.6:5.4",
          "pli": "sāmaññatthaṃ na bujjhihaṃ.",
          "en": "I never knew the goal of the ascetic life."
        },
        {
          "scid": "thig5.6:6.1",
          "pli": "Tassā me ahu saṃvego,",
          "en": "I was struck with a sense of urgency"
        },
        {
          "scid": "thig5.6:6.2",
          "pli": "nisinnāya vihārake;",
          "en": "as I was sitting in my hut:"
        },
        {
          "scid": "thig5.6:6.3",
          "pli": "Ummaggapaṭipannāmhi,",
          "en": "“I’m walking the wrong path,"
        },
        {
          "scid": "thig5.6:6.4",
          "pli": "taṇhāya vasamāgatā.",
          "en": "under the sway of craving."
        },
        {
          "scid": "thig5.6:7.1",
          "pli": "Appakaṃ jīvitaṃ mayhaṃ,",
          "en": "My life is short,"
        },
        {
          "scid": "thig5.6:7.2",
          "pli": "jarā byādhi ca maddati;",
          "en": "trampled by old age and sickness."
        },
        {
          "scid": "thig5.6:7.3",
          "pli": "Purāyaṃ bhijjati kāyo,",
          "en": "Before this body breaks apart,"
        },
        {
          "scid": "thig5.6:7.4",
          "pli": "na me kālo pamajjituṃ.",
          "en": "there is no time for me to be careless.”"
        },
        {
          "scid": "thig5.6:8.1",
          "pli": "Yathābhūtamavekkhantī,",
          "en": "I examined in line with reality"
        },
        {
          "scid": "thig5.6:8.2",
          "pli": "khandhānaṃ udayabbayaṃ;",
          "en": "the rise and fall of the aggregates."
        },
        {
          "scid": "thig5.6:8.3",
          "pli": "Vimuttacittā uṭṭhāsiṃ,",
          "en": "I stood up with mind liberated,"
        },
        {
          "scid": "thig5.6:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "having fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig5.6:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.6:9.2",
          "pli": "Mittā kāḷī therī ….",
          "en": ""
        }
      ],
