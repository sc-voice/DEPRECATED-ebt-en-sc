  "sections": [
    {
      "segments": [
        {
          "scid": "thig6.5:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig6.5:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thig6.5:3.1",
          "pli": "5. Anopamātherīgāthā",
          "en": "6.5. Anopamā"
        },
        {
          "scid": "thig6.5:4.1",
          "pli": "“Ucce kule ahaṃ jātā,",
          "en": "I was born into an eminent family,"
        },
        {
          "scid": "thig6.5:4.2",
          "pli": "bahuvitte mahaddhane;",
          "en": "affluent and wealthy,"
        },
        {
          "scid": "thig6.5:4.3",
          "pli": "Vaṇṇarūpena sampannā,",
          "en": "endowed with a beautiful complexion and figure;"
        },
        {
          "scid": "thig6.5:4.4",
          "pli": "dhītā majjhassa atrajā.",
          "en": "Majjha’s true-born daughter."
        },
        {
          "scid": "thig6.5:5.1",
          "pli": "Patthitā rājaputtehi,",
          "en": "I was sought by princes,"
        },
        {
          "scid": "thig6.5:5.2",
          "pli": "seṭṭhiputtehi gijjhitā;",
          "en": "coveted by sons of the wealthy."
        },
        {
          "scid": "thig6.5:5.3",
          "pli": "Pitu me pesayī dūtaṃ,",
          "en": "One sent a messenger to my father:"
        },
        {
          "scid": "thig6.5:5.4",
          "pli": "detha mayhaṃ anopamaṃ.",
          "en": "“Give me Anopamā!"
        },
        {
          "scid": "thig6.5:6.1",
          "pli": "Yattakaṃ tulitā esā,",
          "en": "However much your daughter"
        },
        {
          "scid": "thig6.5:6.2",
          "pli": "tuyhaṃ dhītā anopamā;",
          "en": "Anopamā weighs,"
        },
        {
          "scid": "thig6.5:6.3",
          "pli": "Tato aṭṭhaguṇaṃ dassaṃ,",
          "en": "I'll give you eight times that"
        },
        {
          "scid": "thig6.5:6.4",
          "pli": "hiraññaṃ ratanāni ca.",
          "en": "in gold and gems.”"
        },
        {
          "scid": "thig6.5:7.1",
          "pli": "Sāhaṃ disvāna sambuddhaṃ,",
          "en": "When I saw the Awakened One,"
        },
        {
          "scid": "thig6.5:7.2",
          "pli": "lokajeṭṭhaṃ anuttaraṃ;",
          "en": "the world’s Elder, unsurpassed,"
        },
        {
          "scid": "thig6.5:7.3",
          "pli": "Tassa pādāni vanditvā,",
          "en": "I paid homage at his feet,"
        },
        {
          "scid": "thig6.5:7.4",
          "pli": "ekamantaṃ upāvisiṃ.",
          "en": "then sat down to one side."
        },
        {
          "scid": "thig6.5:8.1",
          "pli": "So me dhammamadesesi,",
          "en": "Out of compassion,"
        },
        {
          "scid": "thig6.5:8.2",
          "pli": "anukampāya gotamo;",
          "en": "Gotama taught me the Dhamma."
        },
        {
          "scid": "thig6.5:8.3",
          "pli": "Nisinnā āsane tasmiṃ,",
          "en": "While sitting in that seat,"
        },
        {
          "scid": "thig6.5:8.4",
          "pli": "phusayiṃ tatiyaṃ phalaṃ.",
          "en": "I realized the third fruit."
        },
        {
          "scid": "thig6.5:9.1",
          "pli": "Tato kesāni chetvāna,",
          "en": "Then, having cut off my hair,"
        },
        {
          "scid": "thig6.5:9.2",
          "pli": "pabbajiṃ anagāriyaṃ;",
          "en": "I went forth to homelessness."
        },
        {
          "scid": "thig6.5:9.3",
          "pli": "Ajja me sattamī ratti,",
          "en": "This is the seventh day"
        },
        {
          "scid": "thig6.5:9.4",
          "pli": "yato taṇhā visositā”ti.",
          "en": "since my craving dried up."
        },
        {
          "scid": "thig6.5:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig6.5:10.2",
          "pli": "Anopamā therī ….",
          "en": ""
        }
      ],
