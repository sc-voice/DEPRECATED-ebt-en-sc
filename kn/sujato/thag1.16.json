        },
        {
          "scid": "thag1.16:4.1",
          "pli": "1.16 Belaṭṭhasīsattheragāthā",
          "en": "1.16. Belaṭṭhasīsa"
        },
        {
          "scid": "thag1.16:5.1",
          "pli": "“Yathāpi bhaddo ājañño,",
          "en": "Just as a fine thoroughbred"
        },
        {
          "scid": "thag1.16:5.2",
          "pli": "naṅgalāvattanī sikhī;",
          "en": "proceeds with ease,"
        },
        {
          "scid": "thag1.16:5.3",
          "pli": "Gacchati appakasirena,",
          "en": "tail and mane flying in the wind;"
        },
        {
          "scid": "thag1.16:5.4",
          "pli": "evaṃ rattindivā mama;",
          "en": "so my days and nights"
        },
        {
          "scid": "thag1.16:5.5",
          "pli": "Gacchanti appakasirena,",
          "en": "proceed with ease,"
        },
        {
          "scid": "thag1.16:5.6",
          "pli": "sukhe laddhe nirāmise”ti.",
          "en": "full of spiritual joy."
        },
        {
          "scid": "thag1.16:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.16:6.2",
          "pli": "Belaṭṭhasīso thero ….",
          "en": ""
        }
      ],
