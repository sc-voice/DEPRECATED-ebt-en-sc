          "scid": "thag1.39:4.1",
          "pli": "1.39. Tissattheragāthā",
          "en": "1.39. Tissa (1st)"
        },
        {
          "scid": "thag1.39:5.1",
          "pli": "“Sattiyā viya omaṭṭho,",
          "en": "Like they’re struck by a sword,"
        },
        {
          "scid": "thag1.39:5.2",
          "pli": "ḍayhamānova matthake;",
          "en": "like their head was on fire,"
        },
        {
          "scid": "thag1.39:5.3",
          "pli": "Kāmarāgappahānāya,",
          "en": "a mendicant should go forth mindfully"
        },
        {
          "scid": "thag1.39:5.4",
          "pli": "sato bhikkhu paribbaje”ti.",
          "en": "to give up sensual desire."
        },
        {
          "scid": "thag1.39:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.39:6.2",
          "pli": "Tisso thero ….",
          "en": ""
        }
      ],
