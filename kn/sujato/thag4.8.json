      "segments": [
        {
          "scid": "thag4.8:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.8:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.8:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.8:4.1",
          "pli": "4.8. Rāhulattheragāthā",
          "en": "4.8. Rāhula"
        },
        {
          "scid": "thag4.8:5.1",
          "pli": "“Ubhayeneva sampanno,",
          "en": "I am known as “Fortunate Rāhula”,"
        },
        {
          "scid": "thag4.8:5.2",
          "pli": "rāhulabhaddoti maṃ vidū;",
          "en": "because I’m accomplished in both ways:"
        },
        {
          "scid": "thag4.8:5.3",
          "pli": "Yañcamhi putto buddhassa,",
          "en": "I am the son of the Buddha,"
        },
        {
          "scid": "thag4.8:5.4",
          "pli": "yañca dhammesu cakkhumā.",
          "en": "and I have the vision of the teachings."
        },
        {
          "scid": "thag4.8:6.1",
          "pli": "Yañca me āsavā khīṇā,",
          "en": "Since my defilements have ended,"
        },
        {
          "scid": "thag4.8:6.2",
          "pli": "yañca natthi punabbhavo;",
          "en": "since there are no more future lives—"
        },
        {
          "scid": "thag4.8:6.3",
          "pli": "Arahā dakkhiṇeyyomhi,",
          "en": "I’m perfected, worthy of offerings,"
        },
        {
          "scid": "thag4.8:6.4",
          "pli": "tevijjo amataddaso.",
          "en": "master of the three knowledges, seer of the deathless."
        },
        {
          "scid": "thag4.8:7.1",
          "pli": "Kāmandhā jālapacchannā,",
          "en": "Blinded by sensual pleasures, trapped in a net,"
        },
        {
          "scid": "thag4.8:7.2",
          "pli": "taṇhāchādanachāditā;",
          "en": "they are smothered over by craving;"
        },
        {
          "scid": "thag4.8:7.3",
          "pli": "Pamattabandhunā baddhā,",
          "en": "bound by the Kinsman of the Negligent,"
        },
        {
          "scid": "thag4.8:7.4",
          "pli": "macchāva kumināmukhe.",
          "en": "like a fish caught in a funnel-net trap."
        },
        {
          "scid": "thag4.8:8.1",
          "pli": "Taṃ kāmaṃ ahamujjhitvā,",
          "en": "Having thrown off those sensual pleasures,"
        },
        {
          "scid": "thag4.8:8.2",
          "pli": "chetvā mārassa bandhanaṃ;",
          "en": "having cut Māra’s bond,"
        },
        {
          "scid": "thag4.8:8.3",
          "pli": "Samūlaṃ taṇhamabbuyha,",
          "en": "and having plucked out craving, root and all:"
        },
        {
          "scid": "thag4.8:8.4",
          "pli": "sītibhūtosmi nibbuto”ti.",
          "en": "I’m cooled, extinguished."
        },
        {
          "scid": "thag4.8:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.8:9.2",
          "pli": "Rāhulo thero ….",
          "en": ""
        }
      ],
