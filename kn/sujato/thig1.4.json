          "scid": "thig1.4:3.1",
          "pli": "4. Tissātherīgāthā",
          "en": "1.4. Tissā"
        },
        {
          "scid": "thig1.4:4.1",
          "pli": "“Tisse sikkhassu sikkhāya,",
          "en": "Tissā, train in the trainings—"
        },
        {
          "scid": "thig1.4:4.2",
          "pli": "mā taṃ yogā upaccaguṃ;",
          "en": "don’t let the practice pass you by."
        },
        {
          "scid": "thig1.4:4.3",
          "pli": "Sabbayogavisaṃyuttā,",
          "en": "Detached from all attachments,"
        },
        {
          "scid": "thig1.4:4.4",
          "pli": "cara loke anāsavā”ti.",
          "en": "live in the world free of defilements."
        },
        {
          "scid": "thig1.4:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.4:5.2",
          "pli": "Tissā therī ….",
          "en": ""
        }
