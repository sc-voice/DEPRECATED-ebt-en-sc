      "segments": [
        {
          "scid": "thig7.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig7.1:2.1",
          "pli": "Sattakanipāta",
          "en": "The Book of the Sevens"
        },
        {
          "scid": "thig7.1:3.1",
          "pli": "1. Uttarātherīgāthā",
          "en": "7.1. Uttarā (2nd)"
        },
        {
          "scid": "thig7.1:4.1",
          "pli": "“Musalāni gahetvāna,",
          "en": "“Taking a pestle,"
        },
        {
          "scid": "thig7.1:4.2",
          "pli": "dhaññaṃ koṭṭenti māṇavā;",
          "en": "young men pound corn."
        },
        {
          "scid": "thig7.1:4.3",
          "pli": "Puttadārāni posentā,",
          "en": "Supporting partners and children,"
        },
        {
          "scid": "thig7.1:4.4",
          "pli": "dhanaṃ vindanti māṇavā.",
          "en": "young men acquire wealth."
        },
        {
          "scid": "thig7.1:5.1",
          "pli": "Ghaṭetha buddhasāsane,",
          "en": "Work at the Buddha’s bidding,"
        },
        {
          "scid": "thig7.1:5.2",
          "pli": "yaṃ katvā nānutappati;",
          "en": "after which you’ll not regret."
        },
        {
          "scid": "thig7.1:5.3",
          "pli": "Khippaṃ pādāni dhovitvā,",
          "en": "Having quickly washed your feet,"
        },
        {
          "scid": "thig7.1:5.4",
          "pli": "ekamantaṃ nisīdatha.",
          "en": "sit in a discreet place to meditate."
        },
        {
          "scid": "thig7.1:6.1",
          "pli": "Cittaṃ upaṭṭhapetvāna,",
          "en": "Establish the mind,"
        },
        {
          "scid": "thig7.1:6.2",
          "pli": "ekaggaṃ susamāhitaṃ;",
          "en": "unified and serene."
        },
        {
          "scid": "thig7.1:6.3",
          "pli": "Paccavekkhatha saṅkhāre,",
          "en": "Examine conditions"
        },
        {
          "scid": "thig7.1:6.4",
          "pli": "parato no ca attato”.",
          "en": "as other, not as self.”"
        },
        {
          "scid": "thig7.1:7.1",
          "pli": "“Tassāhaṃ vacanaṃ sutvā,",
          "en": "“After hearing her words,"
        },
        {
          "scid": "thig7.1:7.2",
          "pli": "paṭācārānusāsaniṃ;",
          "en": "the instructions of Paṭācārā,"
        },
        {
          "scid": "thig7.1:7.3",
          "pli": "Pāde pakkhālayitvāna,",
          "en": "I washed my feet"
        },
        {
          "scid": "thig7.1:7.4",
          "pli": "ekamante upāvisiṃ.",
          "en": "and retired to a discreet place."
        },
        {
          "scid": "thig7.1:8.1",
          "pli": "Rattiyā purime yāme,",
          "en": "In the first watch of the night,"
        },
        {
          "scid": "thig7.1:8.2",
          "pli": "pubbajātimanussariṃ;",
          "en": "I recollected my past lives."
        },
        {
          "scid": "thig7.1:8.3",
          "pli": "Rattiyā majjhime yāme,",
          "en": "In the middle watch of the night,"
        },
        {
          "scid": "thig7.1:8.4",
          "pli": "dibbacakkhuṃ visodhayiṃ.",
          "en": "I purified my clairvoyance."
        },
        {
          "scid": "thig7.1:9.1",
          "pli": "Rattiyā pacchime yāme,",
          "en": "In the last watch of the night,"
        },
        {
          "scid": "thig7.1:9.2",
          "pli": "tamokhandhaṃ padālayiṃ;",
          "en": "I shattered the mass of darkness."
        },
        {
          "scid": "thig7.1:9.3",
          "pli": "Tevijjā atha vuṭṭhāsiṃ,",
          "en": "I rose up master of the three knowledges:"
        },
        {
          "scid": "thig7.1:9.4",
          "pli": "katā te anusāsanī.",
          "en": "your bidding has been done."
        },
        {
          "scid": "thig7.1:10.1",
          "pli": "Sakkaṃva devā tidasā,",
          "en": "I shall abide honoring you"
        },
        {
          "scid": "thig7.1:10.2",
          "pli": "saṅgāme aparājitaṃ;",
          "en": "as the thirty gods honor Sakka,"
        },
        {
          "scid": "thig7.1:10.3",
          "pli": "Purakkhatvā vihassāmi,",
          "en": "undefeated in battle."
        },
        {
          "scid": "thig7.1:10.4",
          "pli": "tevijjāmhi anāsavā”.",
          "en": "Master of the three knowledges, I am free of defilements.”"
        },
        {
          "scid": "thig7.1:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig7.1:11.2",
          "pli": "Uttarā therī ….",
          "en": ""
        }
      ],
