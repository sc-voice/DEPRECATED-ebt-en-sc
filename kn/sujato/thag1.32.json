          "scid": "thag1.32:4.1",
          "pli": "1.32. Suppiyattheragāthā",
          "en": "1.32. Suppiya"
        },
        {
          "scid": "thag1.32:5.1",
          "pli": "“Ajaraṃ jīramānena,",
          "en": "I’ll swap old age for the unaging,"
        },
        {
          "scid": "thag1.32:5.2",
          "pli": "tappamānena nibbutiṃ;",
          "en": "burning for extinguishment—"
        },
        {
          "scid": "thag1.32:5.3",
          "pli": "Nimiyaṃ paramaṃ santiṃ,",
          "en": "the ultimate peace,"
        },
        {
          "scid": "thag1.32:5.4",
          "pli": "yogakkhemaṃ anuttaran”ti.",
          "en": "the supreme sanctuary."
        },
        {
          "scid": "thag1.32:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.32:6.2",
          "pli": "Suppiyo thero ….",
          "en": ""
        }
