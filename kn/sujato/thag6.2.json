      "segments": [
        {
          "scid": "thag6.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.2:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.2:4.1",
          "pli": "6.2. Tekicchakārittheragāthā",
          "en": "6.2. Tekicchakāri"
        },
        {
          "scid": "thag6.2:5.1",
          "pli": "“Atihitā vīhi,",
          "en": "“The rice has been harvested"
        },
        {
          "scid": "thag6.2:5.2",
          "pli": "khalagatā sālī;",
          "en": "and gathered on the threshing-floor—"
        },
        {
          "scid": "thag6.2:5.3",
          "pli": "Na ca labhe piṇḍaṃ,",
          "en": "but I don’t get any alms-food!"
        },
        {
          "scid": "thag6.2:5.4",
          "pli": "kathamahaṃ kassaṃ”.",
          "en": "How will I get by?”"
        },
        {
          "scid": "thag6.2:6.1",
          "pli": "“Buddhamappameyyaṃ anussara pasanno,",
          "en": "“In faith, recollect the immeasurable Buddha!"
        },
        {
          "scid": "thag6.2:6.2",
          "pli": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
          "en": "Your body soaked with rapture, you’ll always be full of joy."
        },
        {
          "scid": "thag6.2:7.1",
          "pli": "Dhammamappameyyaṃ anussara pasanno,",
          "en": "In faith, recollect the immeasurable teaching!"
        },
        {
          "scid": "thag6.2:7.2",
          "pli": "Pītiyā phuṭasarīro hohisi satatamudaggo.",
          "en": "Your body soaked with rapture, you’ll always be full of joy."
        },
        {
          "scid": "thag6.2:8.1",
          "pli": "Saṃghamappameyyaṃ anussara pasanno,",
          "en": "In faith, recollect the immeasurable Saṅgha!"
        },
        {
          "scid": "thag6.2:8.2",
          "pli": "Pītiyā phuṭasarīro hohisi satatamudaggo”.",
          "en": "Your body soaked with rapture, you’ll always be full of joy.”"
        },
        {
          "scid": "thag6.2:9.1",
          "pli": "“Abbhokāse viharasi,",
          "en": "“You stay in the open,"
        },
        {
          "scid": "thag6.2:9.2",
          "pli": "Sītā hemantikā imā ratyo;",
          "en": "though these winter nights are cold."
        },
        {
          "scid": "thag6.2:9.3",
          "pli": "Mā sītena pareto vihaññittho,",
          "en": "Don’t perish, overcome with cold;"
        },
        {
          "scid": "thag6.2:9.4",
          "pli": "Pavisa tvaṃ vihāraṃ phusitaggaḷaṃ”.",
          "en": "enter your dwelling, with latch shut fast.”"
        },
        {
          "scid": "thag6.2:10.1",
          "pli": "“Phusissaṃ catasso appamaññāyo,",
          "en": "“I’ll realize the four immeasurable states,"
        },
        {
          "scid": "thag6.2:10.2",
          "pli": "Tāhi ca sukhito viharissaṃ;",
          "en": "and meditate happily in them."
        },
        {
          "scid": "thag6.2:10.3",
          "pli": "Nāhaṃ sītena vihaññissaṃ,",
          "en": "I won’t perish, overcome with cold;"
        },
        {
          "scid": "thag6.2:10.4",
          "pli": "Aniñjito viharanto”ti.",
          "en": "I’ll dwell unperturbed.”"
        },
        {
          "scid": "thag6.2:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.2:11.2",
          "pli": "Tekicchakārī thero ….",
          "en": ""
        }
      ],
