  "sections": [
    {
      "segments": [
        {
          "scid": "thag10.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag10.4:2.1",
          "pli": "Dasakanipāta",
          "en": "The Book of the Tens"
        },
        {
          "scid": "thag10.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag10.4:4.1",
          "pli": "10.4. Cūḷapanthakattheragāthā",
          "en": "10.4. Cūḷapanthaka"
        },
        {
          "scid": "thag10.4:5.1",
          "pli": "“Dandhā mayhaṃ gatī āsi,",
          "en": "My progress was slow,"
        },
        {
          "scid": "thag10.4:5.2",
          "pli": "paribhūto pure ahaṃ;",
          "en": "I was despised in the past."
        },
        {
          "scid": "thag10.4:5.3",
          "pli": "Bhātā ca maṃ paṇāmesi,",
          "en": "Even my brother turned me away,"
        },
        {
          "scid": "thag10.4:5.4",
          "pli": "‘gaccha dāni tuvaṃ gharaṃ’.",
          "en": "saying, “Go home now.”"
        },
        {
          "scid": "thag10.4:6.1",
          "pli": "Sohaṃ paṇāmito santo,",
          "en": "Turned away at the gate"
        },
        {
          "scid": "thag10.4:6.2",
          "pli": "saṃghārāmassa koṭṭhake;",
          "en": "of the Saṅgha’s monastery,"
        },
        {
          "scid": "thag10.4:6.3",
          "pli": "Dummano tattha aṭṭhāsiṃ,",
          "en": "I stood there sadly,"
        },
        {
          "scid": "thag10.4:6.4",
          "pli": "sāsanasmiṃ apekkhavā.",
          "en": "longing for the dispensation."
        },
        {
          "scid": "thag10.4:7.1",
          "pli": "Bhagavā tattha āgacchi,",
          "en": "Then the Buddha came"
        },
        {
          "scid": "thag10.4:7.2",
          "pli": "sīsaṃ mayhaṃ parāmasi;",
          "en": "and touched my head."
        },
        {
          "scid": "thag10.4:7.3",
          "pli": "Bāhāya maṃ gahetvāna,",
          "en": "Taking me by the arm,"
        },
        {
          "scid": "thag10.4:7.4",
          "pli": "saṃghārāmaṃ pavesayi.",
          "en": "he brought me into the Saṅgha’s monastery."
        },
        {
          "scid": "thag10.4:8.1",
          "pli": "Anukampāya me satthā,",
          "en": "The Teacher, out of compassion,"
        },
        {
          "scid": "thag10.4:8.2",
          "pli": "pādāsi pādapuñchaniṃ;",
          "en": "gave me a foot-wiping cloth, saying:"
        },
        {
          "scid": "thag10.4:8.3",
          "pli": "‘Etaṃ suddhaṃ adhiṭṭhehi,",
          "en": "“Focus your awareness"
        },
        {
          "scid": "thag10.4:8.4",
          "pli": "ekamantaṃ svadhiṭṭhitaṃ’.",
          "en": "exclusively on this clean cloth.”"
        },
        {
          "scid": "thag10.4:9.1",
          "pli": "Tassāhaṃ vacanaṃ sutvā,",
          "en": "After hearing his words,"
        },
        {
          "scid": "thag10.4:9.2",
          "pli": "vihāsiṃ sāsane rato;",
          "en": "I happily did his bidding."
        },
        {
          "scid": "thag10.4:9.3",
          "pli": "Samādhiṃ paṭipādesiṃ,",
          "en": "I practiced meditative immersion"
        },
        {
          "scid": "thag10.4:9.4",
          "pli": "uttamatthassa pattiyā.",
          "en": "for the attainment of the highest goal."
        },
        {
          "scid": "thag10.4:10.1",
          "pli": "Pubbenivāsaṃ jānāmi,",
          "en": "I know my past lives,"
        },
        {
          "scid": "thag10.4:10.2",
          "pli": "dibbacakkhu visodhitaṃ;",
          "en": "my clairvoyance is clarified;"
        },
        {
          "scid": "thag10.4:10.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges,"
        },
        {
          "scid": "thag10.4:10.4",
          "pli": "kataṃ buddhassa sāsanaṃ.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag10.4:11.1",
          "pli": "Sahassakkhattumattānaṃ,",
          "en": "I, Panthaka, created a thousand"
        },
        {
          "scid": "thag10.4:11.2",
          "pli": "nimminitvāna panthako;",
          "en": "images of myself,"
        },
        {
          "scid": "thag10.4:11.3",
          "pli": "Nisīdambavane ramme,",
          "en": "and sat in the delightful mango grove"
        },
        {
          "scid": "thag10.4:11.4",
          "pli": "yāva kālappavedanā.",
          "en": "until the time for the meal offering was announced."
        },
        {
          "scid": "thag10.4:12.1",
          "pli": "Tato me satthā pāhesi,",
          "en": "Then the teacher sent to me"
        },
        {
          "scid": "thag10.4:12.2",
          "pli": "dūtaṃ kālappavedakaṃ;",
          "en": "a messenger to announce the time."
        },
        {
          "scid": "thag10.4:12.3",
          "pli": "Paveditamhi kālamhi,",
          "en": "When the time was announced,"
        },
        {
          "scid": "thag10.4:12.4",
          "pli": "vehāsādupasaṅkamiṃ.",
          "en": "I flew to him through the air."
        },
        {
          "scid": "thag10.4:13.1",
          "pli": "Vanditvā satthuno pāde,",
          "en": "I paid homage at the teacher’s feet,"
        },
        {
          "scid": "thag10.4:13.2",
          "pli": "ekamantaṃ nisīdahaṃ;",
          "en": "and sat to one side."
        },
        {
          "scid": "thag10.4:13.3",
          "pli": "Nisinnaṃ maṃ viditvāna,",
          "en": "When he knew I was seated,"
        },
        {
          "scid": "thag10.4:13.4",
          "pli": "atha satthā paṭiggahi.",
          "en": "the teacher received the offering."
        },
        {
          "scid": "thag10.4:14.1",
          "pli": "Āyāgo sabbalokassa,",
          "en": "Recipient of gifts from the whole world,"
        },
        {
          "scid": "thag10.4:14.2",
          "pli": "āhutīnaṃ paṭiggaho;",
          "en": "receiver of sacrifices,"
        },
        {
          "scid": "thag10.4:14.3",
          "pli": "Puññakkhettaṃ manussānaṃ,",
          "en": "field of merit for humanity,"
        },
        {
          "scid": "thag10.4:14.4",
          "pli": "paṭiggaṇhittha dakkhiṇan”ti.",
          "en": "he received the religious donation."
        },
        {
          "scid": "thag10.4:15.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag10.4:15.2",
          "pli": "Cūḷapanthako thero ….",
          "en": ""
        }
      ],
