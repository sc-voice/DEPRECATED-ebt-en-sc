          "scid": "thag1.47:4.1",
          "pli": "1.47. Ujjayattheragāthā",
          "en": "1.47. Ujjaya"
        },
        {
          "scid": "thag1.47:5.1",
          "pli": "“Namo te buddha vīratthu,",
          "en": "Homage to you, O Buddha, O hero,"
        },
        {
          "scid": "thag1.47:5.2",
          "pli": "vippamuttosi sabbadhi;",
          "en": "freed in every way!"
        },
        {
          "scid": "thag1.47:5.3",
          "pli": "Tuyhāpadāne viharaṃ,",
          "en": "Meditating in the fruits of your practice,"
        },
        {
          "scid": "thag1.47:5.4",
          "pli": "viharāmi anāsavo”ti.",
          "en": "I live without defilements."
        },
        {
          "scid": "thag1.47:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.47:6.2",
          "pli": "Ujjayo thero ….",
          "en": ""
        }
