      "segments": [
        {
          "scid": "thag1.30:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.30:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.30:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag1.30:4.1",
          "pli": "1.30. Uttiyattheragāthā",
          "en": "1.30. Uttiya (1st)"
        },
        {
          "scid": "thag1.30:5.1",
          "pli": "“Ābādhe me samuppanne,",
          "en": "When I was ill in the past,"
        },
        {
          "scid": "thag1.30:5.2",
          "pli": "sati me udapajjatha;",
          "en": "mindfulness arose in me."
        },
        {
          "scid": "thag1.30:5.3",
          "pli": "Ābādho me samuppanno,",
          "en": "Now I am ill once more—"
        },
        {
          "scid": "thag1.30:5.4",
          "pli": "kālo me nappamajjitun”ti.",
          "en": "it’s time for me to be heedful."
        },
        {
          "scid": "thag1.30:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.30:6.2",
          "pli": "Uttiyo thero ….",
          "en": ""
        },
        {
          "scid": "thag1.30:6.3",
          "pli": "Vaggo tatiyo.",
          "en": ""
        },
        {
          "scid": "thag1.30:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.30:8.1",
          "pli": "Nigrodho cittako thero,",
          "en": ""
        },
        {
          "scid": "thag1.30:8.2",
          "pli": "gosālathero sugandho;",
          "en": ""
        },
        {
          "scid": "thag1.30:8.3",
          "pli": "Nandiyo abhayo thero,",
          "en": ""
        },
        {
          "scid": "thag1.30:8.4",
          "pli": "thero lomasakaṅgiyo;",
          "en": ""
        },
        {
          "scid": "thag1.30:8.5",
          "pli": "Jambugāmikaputto ca,",
          "en": ""
        },
        {
          "scid": "thag1.30:8.6",
          "pli": "hārito uttiyo isīti.",
          "en": ""
        }
      ],
