          "scid": "thag1.88:4.1",
          "pli": "1.88. Ajjunattheragāthā",
          "en": "1.88. Ajjuna"
        },
        {
          "scid": "thag1.88:5.1",
          "pli": "“Asakkhiṃ vata attānaṃ,",
          "en": "I was able to lift myself up"
        },
        {
          "scid": "thag1.88:5.2",
          "pli": "uddhātuṃ udakā thalaṃ;",
          "en": "from the water to the shore."
        },
        {
          "scid": "thag1.88:5.3",
          "pli": "Vuyhamāno mahogheva,",
          "en": "While being swept away by the great flood,"
        },
        {
          "scid": "thag1.88:5.4",
          "pli": "saccāni paṭivijjhahan”ti.",
          "en": "I penetrated the truths."
        },
        {
          "scid": "thag1.88:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.88:6.2",
          "pli": "Ajjuno thero ….",
          "en": ""
        }
