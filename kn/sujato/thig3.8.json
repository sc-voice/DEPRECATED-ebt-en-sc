      "segments": [
        {
          "scid": "thig3.8:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.8:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.8:3.1",
          "pli": "8. Somātherīgāthā",
          "en": "3.8. Somā"
        },
        {
          "scid": "thig3.8:4.1",
          "pli": "“Yaṃ taṃ isīhi pattabbaṃ,",
          "en": "“That state’s very challenging;"
        },
        {
          "scid": "thig3.8:4.2",
          "pli": "ṭhānaṃ durabhisambhavaṃ;",
          "en": "it’s for the sages to attain."
        },
        {
          "scid": "thig3.8:4.3",
          "pli": "Na taṃ dvaṅgulapaññāya,",
          "en": "It’s not possible for a woman,"
        },
        {
          "scid": "thig3.8:4.4",
          "pli": "sakkā pappotumitthiyā”.",
          "en": "with her two-fingered wisdom.”"
        },
        {
          "scid": "thig3.8:5.1",
          "pli": "“Itthibhāvo no kiṃ kayirā,",
          "en": "“What difference does womanhood make"
        },
        {
          "scid": "thig3.8:5.2",
          "pli": "cittamhi susamāhite;",
          "en": "when the mind is serene,"
        },
        {
          "scid": "thig3.8:5.3",
          "pli": "Ñāṇamhi vattamānamhi,",
          "en": "and knowledge is present"
        },
        {
          "scid": "thig3.8:5.4",
          "pli": "sammā dhammaṃ vipassato.",
          "en": "as you rightly discern the Dhamma."
        },
        {
          "scid": "thig3.8:6.1",
          "pli": "Sabbattha vihatā nandī,",
          "en": "Relishing is destroyed in every respect,"
        },
        {
          "scid": "thig3.8:6.2",
          "pli": "Tamokhandho padālito;",
          "en": "and the mass of darkness is shattered."
        },
        {
          "scid": "thig3.8:6.3",
          "pli": "Evaṃ jānāhi pāpima,",
          "en": "So know this, Wicked One:"
        },
        {
          "scid": "thig3.8:6.4",
          "pli": "Nihato tvamasi antakā”ti.",
          "en": "you’re beaten, terminator!”"
        },
        {
          "scid": "thig3.8:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.8:7.2",
          "pli": "Somā therī ….",
          "en": ""
        },
        {
          "scid": "thig3.8:8.1",
          "pli": "Tikanipāto niṭṭhito.",
          "en": "The Book of the Threes is finished."
        }
      ],
