      "segments": [
        {
          "scid": "thig8.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig8.1:2.1",
          "pli": "Aṭṭhakanipāta",
          "en": "The Book of the Eights"
        },
        {
          "scid": "thig8.1:3.1",
          "pli": "1. Sīsūpacālātherīgāthā",
          "en": "8.1. Sīsūpacālā"
        },
        {
          "scid": "thig8.1:4.1",
          "pli": "“Bhikkhunī sīlasampannā,",
          "en": "“A nun accomplished in ethics,"
        },
        {
          "scid": "thig8.1:4.2",
          "pli": "indriyesu susaṃvutā;",
          "en": "her sense faculties well-restrained,"
        },
        {
          "scid": "thig8.1:4.3",
          "pli": "Adhigacche padaṃ santaṃ,",
          "en": "would realize the peaceful state,"
        },
        {
          "scid": "thig8.1:4.4",
          "pli": "asecanakamojavaṃ”.",
          "en": "so irresistible, delicious and nutritious.”"
        },
        {
          "scid": "thig8.1:5.1",
          "pli": "“Tāvatiṃsā ca yāmā ca,",
          "en": "“There are the Gods of the Thirty-Three, and those of Yama;"
        },
        {
          "scid": "thig8.1:5.2",
          "pli": "tusitā cāpi devatā;",
          "en": "also the Joyful Deities,"
        },
        {
          "scid": "thig8.1:5.3",
          "pli": "Nimmānaratino devā,",
          "en": "the Gods Who Love to Create,"
        },
        {
          "scid": "thig8.1:5.4",
          "pli": "ye devā vasavattino;",
          "en": "and the Gods Who Control the Creations of Others."
        },
        {
          "scid": "thig8.1:5.5",
          "pli": "Tattha cittaṃ paṇīdhehi,",
          "en": "Set your heart on such places,"
        },
        {
          "scid": "thig8.1:5.6",
          "pli": "yattha te vusitaṃ pure”.",
          "en": "where you used to live.”"
        },
        {
          "scid": "thig8.1:6.1",
          "pli": "“Tāvatiṃsā ca yāmā ca,",
          "en": "“The Gods of the Thirty-Three, and those of Yama;"
        },
        {
          "scid": "thig8.1:6.2",
          "pli": "tusitā cāpi devatā;",
          "en": "also the Joyful Deities,"
        },
        {
          "scid": "thig8.1:6.3",
          "pli": "Nimmānaratino devā,",
          "en": "the Gods Who Love to Create,"
        },
        {
          "scid": "thig8.1:6.4",
          "pli": "ye devā vasavattino.",
          "en": "and the Gods Who Control the Creations of Others—"
        },
        {
          "scid": "thig8.1:7.1",
          "pli": "Kālaṃ kālaṃ bhavābhavaṃ,",
          "en": "time after time, life after life,"
        },
        {
          "scid": "thig8.1:7.2",
          "pli": "sakkāyasmiṃ purakkhatā;",
          "en": "they make identity their priority."
        },
        {
          "scid": "thig8.1:7.3",
          "pli": "Avītivattā sakkāyaṃ,",
          "en": "They haven’t transcended identity,"
        },
        {
          "scid": "thig8.1:7.4",
          "pli": "jātimaraṇasārino.",
          "en": "those who transmigrate through birth and death."
        },
        {
          "scid": "thig8.1:8.1",
          "pli": "Sabbo ādīpito loko,",
          "en": "All the world is on fire,"
        },
        {
          "scid": "thig8.1:8.2",
          "pli": "sabbo loko padīpito;",
          "en": "all the world is alight,"
        },
        {
          "scid": "thig8.1:8.3",
          "pli": "Sabbo pajjalito loko,",
          "en": "all the world is ablaze,"
        },
        {
          "scid": "thig8.1:8.4",
          "pli": "sabbo loko pakampito.",
          "en": "all the world is rocking."
        },
        {
          "scid": "thig8.1:9.1",
          "pli": "Akampiyaṃ atuliyaṃ,",
          "en": "The Buddha taught me the Dhamma,"
        },
        {
          "scid": "thig8.1:9.2",
          "pli": "aputhujjanasevitaṃ;",
          "en": "unshakable, incomparable,"
        },
        {
          "scid": "thig8.1:9.3",
          "pli": "Buddho dhammamadesesi,",
          "en": "not frequented by ordinary people;"
        },
        {
          "scid": "thig8.1:9.4",
          "pli": "tattha me nirato mano.",
          "en": "my mind adores that place."
        },
        {
          "scid": "thig8.1:10.1",
          "pli": "Tassāhaṃ vacanaṃ sutvā,",
          "en": "After hearing his words,"
        },
        {
          "scid": "thig8.1:10.2",
          "pli": "vihariṃ sāsane ratā;",
          "en": "I happily did his bidding."
        },
        {
          "scid": "thig8.1:10.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges,"
        },
        {
          "scid": "thig8.1:10.4",
          "pli": "kataṃ buddhassa sāsanaṃ.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig8.1:11.1",
          "pli": "Sabbattha vihatā nandī,",
          "en": "Relishing is destroyed in every respect,"
        },
        {
          "scid": "thig8.1:11.2",
          "pli": "tamokhandho padālito;",
          "en": "and the mass of darkness is shattered."
        },
        {
          "scid": "thig8.1:11.3",
          "pli": "Evaṃ jānāhi pāpima,",
          "en": "So know this, Wicked One:"
        },
        {
          "scid": "thig8.1:11.4",
          "pli": "nihato tvamasi antaka”.",
          "en": "you’re beaten, terminator!”"
        },
        {
          "scid": "thig8.1:12.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig8.1:12.2",
          "pli": "Sīsūpacālā therī ….",
          "en": ""
        },
        {
          "scid": "thig8.1:13.1",
          "pli": "Aṭṭhakanipāto niṭṭhito.",
          "en": "The Book of the Eights is finished."
        }
      ],
