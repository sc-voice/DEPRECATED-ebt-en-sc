      "segments": [
        {
          "scid": "thig5.7:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.7:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.7:3.1",
          "pli": "7. Sakulātherīgāthā",
          "en": "5.7. Sakulā"
        },
        {
          "scid": "thig5.7:4.1",
          "pli": "“Agārasmiṃ vasantīhaṃ,",
          "en": "While staying at home"
        },
        {
          "scid": "thig5.7:4.2",
          "pli": "dhammaṃ sutvāna bhikkhuno;",
          "en": "I heard the teaching from a mendicant."
        },
        {
          "scid": "thig5.7:4.3",
          "pli": "Addasaṃ virajaṃ dhammaṃ,",
          "en": "I saw the stainless Dhamma,"
        },
        {
          "scid": "thig5.7:4.4",
          "pli": "nibbānaṃ padamaccutaṃ.",
          "en": "extinguishment, the imperishable state."
        },
        {
          "scid": "thig5.7:5.1",
          "pli": "Sāhaṃ puttaṃ dhītarañca,",
          "en": "Leaving behind my son and my daughter,"
        },
        {
          "scid": "thig5.7:5.2",
          "pli": "dhanadhaññañca chaḍḍiya;",
          "en": "my riches and my grain,"
        },
        {
          "scid": "thig5.7:5.3",
          "pli": "Kese chedāpayitvāna,",
          "en": "I had my hair cut off,"
        },
        {
          "scid": "thig5.7:5.4",
          "pli": "pabbajiṃ anagāriyaṃ.",
          "en": "and went forth to homelessness."
        },
        {
          "scid": "thig5.7:6.1",
          "pli": "Sikkhamānā ahaṃ santī,",
          "en": "As a trainee nun,"
        },
        {
          "scid": "thig5.7:6.2",
          "pli": "bhāventī maggamañjasaṃ;",
          "en": "I developed the direct path."
        },
        {
          "scid": "thig5.7:6.3",
          "pli": "Pahāsiṃ rāgadosañca,",
          "en": "I gave up greed and hate,"
        },
        {
          "scid": "thig5.7:6.4",
          "pli": "tadekaṭṭhe ca āsave.",
          "en": "along with associated defilements."
        },
        {
          "scid": "thig5.7:7.1",
          "pli": "Bhikkhunī upasampajja,",
          "en": "When I was fully ordained as a nun,"
        },
        {
          "scid": "thig5.7:7.2",
          "pli": "pubbajātimanussariṃ;",
          "en": "I recollected my past lives,"
        },
        {
          "scid": "thig5.7:7.3",
          "pli": "Dibbacakkhu visodhitaṃ,",
          "en": "and purified my clairvoyance,"
        },
        {
          "scid": "thig5.7:7.4",
          "pli": "vimalaṃ sādhubhāvitaṃ.",
          "en": "immaculate and fully developed."
        },
        {
          "scid": "thig5.7:8.1",
          "pli": "Saṅkhāre parato disvā,",
          "en": "Conditions are born of causes, crumbling;"
        },
        {
          "scid": "thig5.7:8.2",
          "pli": "hetujāte palokite;",
          "en": "having seen them as other,"
        },
        {
          "scid": "thig5.7:8.3",
          "pli": "Pahāsiṃ āsave sabbe,",
          "en": "I gave up all defilements,"
        },
        {
          "scid": "thig5.7:8.4",
          "pli": "sītibhūtāmhi nibbutā”ti.",
          "en": "I’m cooled and quenched."
        },
        {
          "scid": "thig5.7:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.7:9.2",
          "pli": "Sakulā therī ….",
          "en": ""
        }
      ],
