      "segments": [
        {
          "scid": "thig5.2:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.2:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.2:3.1",
          "pli": "2. Vimalātherīgāthā",
          "en": "5.2. Vimalā, the Former Courtesan"
        },
        {
          "scid": "thig5.2:4.1",
          "pli": "“Mattā vaṇṇena rūpena,",
          "en": "Intoxicated by my appearance,"
        },
        {
          "scid": "thig5.2:4.2",
          "pli": "sobhaggena yasena ca;",
          "en": "my figure, my beauty, my fame,"
        },
        {
          "scid": "thig5.2:4.3",
          "pli": "Yobbanena cupatthaddhā,",
          "en": "and owing to my youth,"
        },
        {
          "scid": "thig5.2:4.4",
          "pli": "aññāsamatimaññihaṃ.",
          "en": "I despised other women."
        },
        {
          "scid": "thig5.2:5.1",
          "pli": "Vibhūsetvā imaṃ kāyaṃ,",
          "en": "I adorned this body,"
        },
        {
          "scid": "thig5.2:5.2",
          "pli": "sucittaṃ bālalāpanaṃ;",
          "en": "so fancy, cooed over by fools,"
        },
        {
          "scid": "thig5.2:5.3",
          "pli": "Aṭṭhāsiṃ vesidvāramhi,",
          "en": "and stood at the brothel door,"
        },
        {
          "scid": "thig5.2:5.4",
          "pli": "luddo pāsamivoḍḍiya.",
          "en": "like a hunter laying a snare."
        },
        {
          "scid": "thig5.2:6.1",
          "pli": "Piḷandhanaṃ vidaṃsentī,",
          "en": "I stripped for them,"
        },
        {
          "scid": "thig5.2:6.2",
          "pli": "guyhaṃ pakāsikaṃ bahuṃ;",
          "en": "revealing my many hidden treasures."
        },
        {
          "scid": "thig5.2:6.3",
          "pli": "Akāsiṃ vividhaṃ māyaṃ,",
          "en": "Creating an intricate illusion,"
        },
        {
          "scid": "thig5.2:6.4",
          "pli": "ujjagghantī bahuṃ janaṃ.",
          "en": "I laughed, teasing those men."
        },
        {
          "scid": "thig5.2:7.1",
          "pli": "Sājja piṇḍaṃ caritvāna,",
          "en": "Today, having wandered for alms,"
        },
        {
          "scid": "thig5.2:7.2",
          "pli": "muṇḍā saṅghāṭipārutā;",
          "en": "my head shaven, wearing the outer robe,"
        },
        {
          "scid": "thig5.2:7.3",
          "pli": "Nisinnā rukkhamūlamhi,",
          "en": "I sat at the root of a tree to meditate;"
        },
        {
          "scid": "thig5.2:7.4",
          "pli": "avitakkassa lābhinī.",
          "en": "I've gained freedom from thought."
        },
        {
          "scid": "thig5.2:8.1",
          "pli": "Sabbe yogā samucchinnā,",
          "en": "All bonds are cut off,"
        },
        {
          "scid": "thig5.2:8.2",
          "pli": "ye dibbā ye ca mānusā;",
          "en": "both human and divine."
        },
        {
          "scid": "thig5.2:8.3",
          "pli": "Khepetvā āsave sabbe,",
          "en": "Having wiped out all defilements,"
        },
        {
          "scid": "thig5.2:8.4",
          "pli": "sītibhūtāmhi nibbutā”ti.",
          "en": "I have become cooled and quenched."
        },
        {
          "scid": "thig5.2:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.2:9.2",
          "pli": "Vimalā purāṇagaṇikā therī ….",
          "en": ""
        }
      ],
