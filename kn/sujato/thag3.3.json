      "segments": [
        {
          "scid": "thag3.3:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.3:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.3:4.1",
          "pli": "3.3 Bākulattheragāthā",
          "en": "3.3. Bākula"
        },
        {
          "scid": "thag3.3:5.1",
          "pli": "“Yo pubbe karaṇīyāni,",
          "en": "Whoever wishes to do afterwards"
        },
        {
          "scid": "thag3.3:5.2",
          "pli": "pacchā so kātumicchati;",
          "en": "what they should have done before"
        },
        {
          "scid": "thag3.3:5.3",
          "pli": "Sukhā so dhaṃsate ṭhānā,",
          "en": "has lost the causes for happiness,"
        },
        {
          "scid": "thag3.3:5.4",
          "pli": "pacchā ca manutappati.",
          "en": "and afterwards they’re tormented by regrets."
        },
        {
          "scid": "thag3.3:6.1",
          "pli": "Yañhi kayirā tañhi vade,",
          "en": "You should only say what you would do;"
        },
        {
          "scid": "thag3.3:6.2",
          "pli": "yaṃ na kayirā na taṃ vade;",
          "en": "you shouldn’t say what you wouldn’t do."
        },
        {
          "scid": "thag3.3:6.3",
          "pli": "Akarontaṃ bhāsamānaṃ,",
          "en": "The wise will recognize"
        },
        {
          "scid": "thag3.3:6.4",
          "pli": "parijānanti paṇḍitā.",
          "en": "one who talks without doing."
        },
        {
          "scid": "thag3.3:7.1",
          "pli": "Susukhaṃ vata nibbānaṃ,",
          "en": "Oh! Extinguishment is so very blissful,"
        },
        {
          "scid": "thag3.3:7.2",
          "pli": "sammāsambuddhadesitaṃ;",
          "en": "as taught by the fully awakened Buddha:"
        },
        {
          "scid": "thag3.3:7.3",
          "pli": "Asokaṃ virajaṃ khemaṃ,",
          "en": "sorrowless, stainless, secure,"
        },
        {
          "scid": "thag3.3:7.4",
          "pli": "yattha dukkhaṃ nirujjhatī”ti.",
          "en": "where suffering all ceases."
        },
        {
          "scid": "thag3.3:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.3:8.2",
          "pli": "Bākulo thero ….",
          "en": ""
        }
      ],
