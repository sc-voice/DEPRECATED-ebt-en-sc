      "segments": [
        {
          "scid": "thag2.24:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.24:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.24:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.24:4.1",
          "pli": "2.24. Valliyattheragāthā",
          "en": "2.24. Valliya (3rd)"
        },
        {
          "scid": "thag2.24:5.1",
          "pli": "“Yaṃ kiccaṃ daḷhavīriyena,",
          "en": "The duty of one whose energy is strong;"
        },
        {
          "scid": "thag2.24:5.2",
          "pli": "yaṃ kiccaṃ boddhumicchatā;",
          "en": "the duty of one who longs to wake up:"
        },
        {
          "scid": "thag2.24:5.3",
          "pli": "Karissaṃ nāvarajjhissaṃ,",
          "en": "that I’ll do, I won’t fail—"
        },
        {
          "scid": "thag2.24:5.4",
          "pli": "passa vīriyaṃ parakkamaṃ.",
          "en": "see my energy and vigor!"
        },
        {
          "scid": "thag2.24:6.1",
          "pli": "Tvañca me maggamakkhāhi,",
          "en": "Teach me the path,"
        },
        {
          "scid": "thag2.24:6.2",
          "pli": "añjasaṃ amatogadhaṃ;",
          "en": "the direct route that culminates in the deathless."
        },
        {
          "scid": "thag2.24:6.3",
          "pli": "Ahaṃ monena monissaṃ,",
          "en": "I’ll know it with wisdom,"
        },
        {
          "scid": "thag2.24:6.4",
          "pli": "gaṅgāsotova sāgaran”ti.",
          "en": "as the Ganges knows the ocean."
        },
        {
          "scid": "thag2.24:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.24:7.2",
          "pli": "Valliyo thero ….",
          "en": ""
        }
      ],
