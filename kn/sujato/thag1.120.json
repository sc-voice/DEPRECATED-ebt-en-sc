      "segments": [
        {
          "scid": "thag1.120:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.120:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.120:3.1",
          "pli": "Dvādasamavagga",
          "en": "Chapter Twelve"
        },
        {
          "scid": "thag1.120:4.1",
          "pli": "1.120. Isidattattheragāthā",
          "en": "1.120. Isidatta"
        },
        {
          "scid": "thag1.120:5.1",
          "pli": "“Pañcakkhandhā pariññātā,",
          "en": "The five aggregates are fully understood,"
        },
        {
          "scid": "thag1.120:5.2",
          "pli": "tiṭṭhanti chinnamūlakā;",
          "en": "they remain, but their root is cut."
        },
        {
          "scid": "thag1.120:5.3",
          "pli": "Dukkhakkhayo anuppatto,",
          "en": "I have reached the end of suffering"
        },
        {
          "scid": "thag1.120:5.4",
          "pli": "patto me āsavakkhayo”ti.",
          "en": "and attained the ending of defilements."
        },
        {
          "scid": "thag1.120:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.120:6.2",
          "pli": "Isidatto thero ….",
          "en": ""
        },
        {
          "scid": "thag1.120:6.3",
          "pli": "Vaggo dvādasamo.",
          "en": ""
        },
        {
          "scid": "thag1.120:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.120:8.1",
          "pli": "Jento ca vacchagotto ca,",
          "en": ""
        },
        {
          "scid": "thag1.120:8.2",
          "pli": "vaccho ca vanasavhayo;",
          "en": ""
        },
        {
          "scid": "thag1.120:8.3",
          "pli": "Adhimutto mahānāmo,",
          "en": ""
        },
        {
          "scid": "thag1.120:8.4",
          "pli": "pārāpariyo yasopi ca;",
          "en": ""
        },
        {
          "scid": "thag1.120:8.5",
          "pli": "Kimilo vajjiputto ca,",
          "en": ""
        },
        {
          "scid": "thag1.120:8.6",
          "pli": "isidatto mahāyasoti.",
          "en": ""
        },
        {
          "scid": "thag1.120:9.1",
          "pli": "Ekakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag1.120:10.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.120:11.1",
          "pli": "Vīsuttarasataṃ therā,",
          "en": ""
        },
        {
          "scid": "thag1.120:11.2",
          "pli": "katakiccā anāsavā;",
          "en": ""
        },
        {
          "scid": "thag1.120:11.3",
          "pli": "Ekakeva nipātamhi,",
          "en": ""
        },
        {
          "scid": "thag1.120:11.4",
          "pli": "susaṅgītā mahesibhīti.",
          "en": ""
        }
      ],
