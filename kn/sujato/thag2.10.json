      "segments": [
        {
          "scid": "thag2.10:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.10:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.10:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.10:4.1",
          "pli": "2.10. Vasabhattheragāthā",
          "en": "2.10. Vasabha"
        },
        {
          "scid": "thag2.10:5.1",
          "pli": "“Pubbe hanati attānaṃ,",
          "en": "First one kills oneself,"
        },
        {
          "scid": "thag2.10:5.2",
          "pli": "pacchā hanati so pare;",
          "en": "then one kills others."
        },
        {
          "scid": "thag2.10:5.3",
          "pli": "Suhataṃ hanti attānaṃ,",
          "en": "One kills oneself, really dead,"
        },
        {
          "scid": "thag2.10:5.4",
          "pli": "vītaṃseneva pakkhimā.",
          "en": "like one who kills birds using a dead bird as a decoy."
        },
        {
          "scid": "thag2.10:6.1",
          "pli": "Na brāhmaṇo bahivaṇṇo,",
          "en": "A holy man’s color is not on the outside;"
        },
        {
          "scid": "thag2.10:6.2",
          "pli": "anto vaṇṇo hi brāhmaṇo;",
          "en": "a holy man is colored on the inside."
        },
        {
          "scid": "thag2.10:6.3",
          "pli": "Yasmiṃ pāpāni kammāni,",
          "en": "Whoever harbors bad deeds"
        },
        {
          "scid": "thag2.10:6.4",
          "pli": "sa ve kaṇho sujampatī”ti.",
          "en": "is truly a dark one, Sujampati."
        },
        {
          "scid": "thag2.10:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.10:7.2",
          "pli": "Vasabho thero ….",
          "en": ""
        },
        {
          "scid": "thag2.10:7.3",
          "pli": "Vaggo paṭhamo.",
          "en": ""
        },
        {
          "scid": "thag2.10:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.10:9.1",
          "pli": "Uttaro ceva piṇḍolo,",
          "en": ""
        },
        {
          "scid": "thag2.10:9.2",
          "pli": "valliyo tīriyo isi;",
          "en": ""
        },
        {
          "scid": "thag2.10:9.3",
          "pli": "Ajino ca meḷajino,",
          "en": ""
        },
        {
          "scid": "thag2.10:9.4",
          "pli": "rādho surādho gotamo;",
          "en": ""
        },
        {
          "scid": "thag2.10:9.5",
          "pli": "Vasabhena ime honti,",
          "en": ""
        },
        {
          "scid": "thag2.10:9.6",
          "pli": "dasa therā mahiddhikāti.",
          "en": ""
        }
      ],
