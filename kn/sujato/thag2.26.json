        {
          "scid": "thag2.26:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.26:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.26:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.26:4.1",
          "pli": "2.26. Puṇṇamāsattheragāthā",
          "en": "2.26. Puṇṇamāsa (2nd)"
        },
        {
          "scid": "thag2.26:5.1",
          "pli": "“Pañca nīvaraṇe hitvā,",
          "en": "I gave up the five hindrances"
        },
        {
          "scid": "thag2.26:5.2",
          "pli": "yogakkhemassa pattiyā;",
          "en": "for the sake of finding sanctuary."
        },
        {
          "scid": "thag2.26:5.3",
          "pli": "Dhammādāsaṃ gahetvāna,",
          "en": "I took Dhamma as a mirror"
        },
        {
          "scid": "thag2.26:5.4",
          "pli": "ñāṇadassanamattano.",
          "en": "for knowing and seeing myself."
        },
        {
          "scid": "thag2.26:6.1",
          "pli": "Paccavekkhiṃ imaṃ kāyaṃ,",
          "en": "I examined this body,"
        },
        {
          "scid": "thag2.26:6.2",
          "pli": "sabbaṃ santarabāhiraṃ;",
          "en": "all of it, inside and out."
        },
        {
          "scid": "thag2.26:6.3",
          "pli": "Ajjhattañca bahiddhā ca,",
          "en": "Internally and externally"
        },
        {
          "scid": "thag2.26:6.4",
          "pli": "tuccho kāyo adissathā”ti.",
          "en": "my body appeared hollow."
        },
        {
          "scid": "thag2.26:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.26:7.2",
          "pli": "Puṇṇamāso thero ….",
          "en": ""
        }
      ],
