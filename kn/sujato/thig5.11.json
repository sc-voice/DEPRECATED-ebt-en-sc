      "segments": [
        {
          "scid": "thig5.11:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.11:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.11:3.1",
          "pli": "11. Tiṃsamattātherīgāthā",
          "en": "5.11. Thirty Nuns"
        },
        {
          "scid": "thig5.11:4.1",
          "pli": "“Musalāni gahetvāna,",
          "en": "“Taking a pestle,"
        },
        {
          "scid": "thig5.11:4.2",
          "pli": "dhaññaṃ koṭṭenti māṇavā;",
          "en": "young men pound corn."
        },
        {
          "scid": "thig5.11:4.3",
          "pli": "Puttadārāni posentā,",
          "en": "Supporting partners and children,"
        },
        {
          "scid": "thig5.11:4.4",
          "pli": "dhanaṃ vindanti māṇavā.",
          "en": "young men acquire wealth."
        },
        {
          "scid": "thig5.11:5.1",
          "pli": "Karotha buddhasāsanaṃ,",
          "en": "Do the Buddha’s bidding,"
        },
        {
          "scid": "thig5.11:5.2",
          "pli": "yaṃ katvā nānutappati;",
          "en": "after which you’ll not regret."
        },
        {
          "scid": "thig5.11:5.3",
          "pli": "Khippaṃ pādāni dhovitvā,",
          "en": "Having quickly washed your feet,"
        },
        {
          "scid": "thig5.11:5.4",
          "pli": "ekamante nisīdatha;",
          "en": "sit in a discreet place to meditate."
        },
        {
          "scid": "thig5.11:5.5",
          "pli": "Cetosamathamanuyuttā,",
          "en": "Devoted to serenity of heart,"
        },
        {
          "scid": "thig5.11:5.6",
          "pli": "karotha buddhasāsanaṃ”.",
          "en": "do the Buddha’s bidding.”"
        },
        {
          "scid": "thig5.11:6.1",
          "pli": "Tassā tā vacanaṃ sutvā,",
          "en": "After hearing her words,"
        },
        {
          "scid": "thig5.11:6.2",
          "pli": "paṭācārāya sāsanaṃ;",
          "en": "the instructions of Paṭācārā,"
        },
        {
          "scid": "thig5.11:6.3",
          "pli": "Pāde pakkhālayitvāna,",
          "en": "they washed their feet"
        },
        {
          "scid": "thig5.11:6.4",
          "pli": "ekamantaṃ upāvisuṃ;",
          "en": "and retired to a discreet place."
        },
        {
          "scid": "thig5.11:6.5",
          "pli": "Cetosamathamanuyuttā,",
          "en": "Devoted to serenity of heart,"
        },
        {
          "scid": "thig5.11:6.6",
          "pli": "akaṃsu buddhasāsanaṃ.",
          "en": "they did the Buddha’s bidding."
        },
        {
          "scid": "thig5.11:7.1",
          "pli": "Rattiyā purime yāme,",
          "en": "In the first watch of the night,"
        },
        {
          "scid": "thig5.11:7.2",
          "pli": "pubbajātimanussaruṃ;",
          "en": "they recollected their past lives."
        },
        {
          "scid": "thig5.11:7.3",
          "pli": "Rattiyā majjhime yāme,",
          "en": "In the middle watch of the night,"
        },
        {
          "scid": "thig5.11:7.4",
          "pli": "dibbacakkhuṃ visodhayuṃ;",
          "en": "they purified their clairvoyance."
        },
        {
          "scid": "thig5.11:7.5",
          "pli": "Rattiyā pacchime yāme,",
          "en": "In the last watch of the night,"
        },
        {
          "scid": "thig5.11:7.6",
          "pli": "tamokhandhaṃ padālayuṃ.",
          "en": "they shattered the mass of darkness."
        },
        {
          "scid": "thig5.11:8.1",
          "pli": "Uṭṭhāya pāde vandiṃsu,",
          "en": "They rose and paid homage at her feet:"
        },
        {
          "scid": "thig5.11:8.2",
          "pli": "“katā te anusāsanī;",
          "en": "“We have done your bidding;"
        },
        {
          "scid": "thig5.11:8.3",
          "pli": "Indaṃva devā tidasā,",
          "en": "we shall abide honoring you,"
        },
        {
          "scid": "thig5.11:8.4",
          "pli": "saṅgāme aparājitaṃ;",
          "en": "as the thirty gods honor Indra,"
        },
        {
          "scid": "thig5.11:8.5",
          "pli": "Purakkhatvā vihassāma,",
          "en": "undefeated in battle."
        },
        {
          "scid": "thig5.11:8.6",
          "pli": "tevijjāmha anāsavā”ti.",
          "en": "Masters of the three knowledges, we are free of defilements.”"
        },
        {
          "scid": "thig5.11:9.1",
          "pli": "Itthaṃ sudaṃ tiṃsamattā therī bhikkhuniyo paṭācārāya santike aññaṃ byākariṃsūti.",
          "en": "It was thus that thirty senior nuns declared their enlightenment in the presence of Paṭācārā."
        }
      ],
