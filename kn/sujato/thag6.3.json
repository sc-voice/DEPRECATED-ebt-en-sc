  "sections": [
    {
      "segments": [
        {
          "scid": "thag6.3:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.3:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.3:4.1",
          "pli": "6.3. Mahānāgattheragāthā",
          "en": "6.3. Mahānāga"
        },
        {
          "scid": "thag6.3:5.1",
          "pli": "“Yassa sabrahmacārīsu,",
          "en": "Whoever has no respect"
        },
        {
          "scid": "thag6.3:5.2",
          "pli": "gāravo nūpalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:5.3",
          "pli": "Parihāyati saddhammā,",
          "en": "falls away from the true teaching,"
        },
        {
          "scid": "thag6.3:5.4",
          "pli": "maccho appodake yathā.",
          "en": "like a fish in too little water."
        },
        {
          "scid": "thag6.3:6.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever has no respect"
        },
        {
          "scid": "thag6.3:6.2",
          "pli": "gāravo nūpalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:6.3",
          "pli": "Na virūhati saddhamme,",
          "en": "doesn’t thrive in the true teaching,"
        },
        {
          "scid": "thag6.3:6.4",
          "pli": "khette bījaṃva pūtikaṃ.",
          "en": "like a rotten seed in a field."
        },
        {
          "scid": "thag6.3:7.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever has no respect"
        },
        {
          "scid": "thag6.3:7.2",
          "pli": "gāravo nūpalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:7.3",
          "pli": "Ārakā hoti nibbānā,",
          "en": "is far from quenching,"
        },
        {
          "scid": "thag6.3:7.4",
          "pli": "dhammarājassa sāsane.",
          "en": "in the teaching of the Dhamma king."
        },
        {
          "scid": "thag6.3:8.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever does have respect"
        },
        {
          "scid": "thag6.3:8.2",
          "pli": "gāravo upalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:8.3",
          "pli": "Na vihāyati saddhammā,",
          "en": "doesn’t fall away from the true teaching,"
        },
        {
          "scid": "thag6.3:8.4",
          "pli": "maccho bavhodake yathā.",
          "en": "like a fish in plenty of water."
        },
        {
          "scid": "thag6.3:9.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever does have respect"
        },
        {
          "scid": "thag6.3:9.2",
          "pli": "gāravo upalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:9.3",
          "pli": "So virūhati saddhamme,",
          "en": "thrives in the true teaching,"
        },
        {
          "scid": "thag6.3:9.4",
          "pli": "khette bījaṃva bhaddakaṃ.",
          "en": "like a quality seed in a field."
        },
        {
          "scid": "thag6.3:10.1",
          "pli": "Yassa sabrahmacārīsu,",
          "en": "Whoever does have respect"
        },
        {
          "scid": "thag6.3:10.2",
          "pli": "gāravo upalabbhati;",
          "en": "for their spiritual companions"
        },
        {
          "scid": "thag6.3:10.3",
          "pli": "Santike hoti nibbānaṃ,",
          "en": "is close to quenching"
        },
        {
          "scid": "thag6.3:10.4",
          "pli": "dhammarājassa sāsane”ti.",
          "en": "in the teaching of the Dhamma king."
        },
        {
          "scid": "thag6.3:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.3:11.2",
          "pli": "Mahānāgo thero ….",
          "en": ""
        }
      ],
