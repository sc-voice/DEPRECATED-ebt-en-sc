  "sections": [
    {
      "segments": [
        {
          "scid": "thag10.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag10.2:2.1",
          "pli": "Dasakanipāta",
          "en": "The Book of the Tens"
        },
        {
          "scid": "thag10.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag10.2:4.1",
          "pli": "10.2. Ekavihāriyattheragāthā",
          "en": "10.2. Ekavihāriya"
        },
        {
          "scid": "thag10.2:5.1",
          "pli": "“Purato pacchato vāpi,",
          "en": "If no-one else is found"
        },
        {
          "scid": "thag10.2:5.2",
          "pli": "aparo ce na vijjati;",
          "en": "in front or behind,"
        },
        {
          "scid": "thag10.2:5.3",
          "pli": "Atīva phāsu bhavati,",
          "en": "it’s extremely pleasant"
        },
        {
          "scid": "thag10.2:5.4",
          "pli": "ekassa vasato vane.",
          "en": "to be dwelling alone in a forest grove."
        },
        {
          "scid": "thag10.2:6.1",
          "pli": "Handa eko gamissāmi,",
          "en": "Come now, I’ll go alone"
        },
        {
          "scid": "thag10.2:6.2",
          "pli": "araññaṃ buddhavaṇṇitaṃ;",
          "en": "to the wilderness praised by the Buddha."
        },
        {
          "scid": "thag10.2:6.3",
          "pli": "Phāsu ekavihārissa,",
          "en": "It’s pleasant for a mendicant"
        },
        {
          "scid": "thag10.2:6.4",
          "pli": "pahitattassa bhikkhuno.",
          "en": "to be dwelling alone and resolute."
        },
        {
          "scid": "thag10.2:7.1",
          "pli": "Yogi-pītikaraṃ rammaṃ,",
          "en": "Alone and self-disciplined,"
        },
        {
          "scid": "thag10.2:7.2",
          "pli": "mattakuñjarasevitaṃ;",
          "en": "I’ll quickly enter the delightful forest,"
        },
        {
          "scid": "thag10.2:7.3",
          "pli": "Eko attavasī khippaṃ,",
          "en": "which gives joy to meditators,"
        },
        {
          "scid": "thag10.2:7.4",
          "pli": "pavisissāmi kānanaṃ.",
          "en": "and is frequented by rutting elephants."
        },
        {
          "scid": "thag10.2:8.1",
          "pli": "Supupphite sītavane,",
          "en": "In Sītavana, so full of flowers,"
        },
        {
          "scid": "thag10.2:8.2",
          "pli": "sītale girikandare;",
          "en": "in a cool mountain cave,"
        },
        {
          "scid": "thag10.2:8.3",
          "pli": "Gattāni parisiñcitvā,",
          "en": "I’ll bathe my limbs"
        },
        {
          "scid": "thag10.2:8.4",
          "pli": "caṅkamissāmi ekako.",
          "en": "and walk meditation alone."
        },
        {
          "scid": "thag10.2:9.1",
          "pli": "Ekākiyo adutiyo,",
          "en": "When will I dwell alone,"
        },
        {
          "scid": "thag10.2:9.2",
          "pli": "ramaṇīye mahāvane;",
          "en": "without a companion,"
        },
        {
          "scid": "thag10.2:9.3",
          "pli": "Kadāhaṃ viharissāmi,",
          "en": "in the great wood, so delightful,"
        },
        {
          "scid": "thag10.2:9.4",
          "pli": "katakicco anāsavo.",
          "en": "my task complete, free of defilements?"
        },
        {
          "scid": "thag10.2:10.1",
          "pli": "Evaṃ me kattukāmassa,",
          "en": "This is what I want to do:"
        },
        {
          "scid": "thag10.2:10.2",
          "pli": "adhippāyo samijjhatu;",
          "en": "may my wish succeed!"
        },
        {
          "scid": "thag10.2:10.3",
          "pli": "Sādhayissāmahaṃyeva,",
          "en": "I’ll make it happen myself,"
        },
        {
          "scid": "thag10.2:10.4",
          "pli": "nāñño aññassa kārako.",
          "en": "for no-one can do another’s duty."
        },
        {
          "scid": "thag10.2:11.1",
          "pli": "Esa bandhāmi sannāhaṃ,",
          "en": "Fastening my armor,"
        },
        {
          "scid": "thag10.2:11.2",
          "pli": "pavisissāmi kānanaṃ;",
          "en": "I’ll enter the forest."
        },
        {
          "scid": "thag10.2:11.3",
          "pli": "Na tato nikkhamissāmi,",
          "en": "I won’t leave"
        },
        {
          "scid": "thag10.2:11.4",
          "pli": "appatto āsavakkhayaṃ.",
          "en": "without attaining the end of defilements."
        },
        {
          "scid": "thag10.2:12.1",
          "pli": "Mālute upavāyante,",
          "en": "As the cool breeze blows"
        },
        {
          "scid": "thag10.2:12.2",
          "pli": "sīte surabhigandhike;",
          "en": "with fragrant scent,"
        },
        {
          "scid": "thag10.2:12.3",
          "pli": "Avijjaṃ dālayissāmi,",
          "en": "I’ll split ignorance apart,"
        },
        {
          "scid": "thag10.2:12.4",
          "pli": "nisinno nagamuddhani.",
          "en": "sitting on the mountain-peak."
        },
        {
          "scid": "thag10.2:13.1",
          "pli": "Vane kusumasañchanne,",
          "en": "In a forest grove covered with blossoms,"
        },
        {
          "scid": "thag10.2:13.2",
          "pli": "pabbhāre nūna sītale;",
          "en": "in a cave so very cool,"
        },
        {
          "scid": "thag10.2:13.3",
          "pli": "Vimuttisukhena sukhito,",
          "en": "I take pleasure in Giribbaja,"
        },
        {
          "scid": "thag10.2:13.4",
          "pli": "ramissāmi giribbaje.",
          "en": "happy with the happiness of freedom."
        },
        {
          "scid": "thag10.2:14.1",
          "pli": "Sohaṃ paripuṇṇasaṅkappo,",
          "en": "I’ve got all I wished for"
        },
        {
          "scid": "thag10.2:14.2",
          "pli": "cando pannaraso yathā;",
          "en": "like the moon on the fifteenth day."
        },
        {
          "scid": "thag10.2:14.3",
          "pli": "Sabbāsavaparikkhīṇo,",
          "en": "With the utter ending of all defilements,"
        },
        {
          "scid": "thag10.2:14.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag10.2:15.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag10.2:15.2",
          "pli": "Ekavihāriyo thero ….",
          "en": ""
        }
      ],
