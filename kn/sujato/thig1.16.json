        {
          "scid": "thig1.16:3.1",
          "pli": "16 Vuḍḍhapabbajitasumanātherīgāthā",
          "en": "1.16. Sumanā, Who Went Forth Late in Life"
        },
        {
          "scid": "thig1.16:4.1",
          "pli": "“Sukhaṃ tvaṃ vuḍḍhike sehi,",
          "en": "Sleep softly, old lady,"
        },
        {
          "scid": "thig1.16:4.2",
          "pli": "katvā coḷena pārutā;",
          "en": "wrapped in the cloth you sewed yourself;"
        },
        {
          "scid": "thig1.16:4.3",
          "pli": "Upasanto hi te rāgo,",
          "en": "for your desire has been quelled,"
        },
        {
          "scid": "thig1.16:4.4",
          "pli": "sītibhūtāsi nibbutā”ti.",
          "en": "you’re cooled and quenched."
        },
        {
          "scid": "thig1.16:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.16:5.2",
          "pli": "Sumanā vuḍḍhapabbajitā therī ….",
          "en": ""
        }
      ],
