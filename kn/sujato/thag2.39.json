        {
          "scid": "thag2.39:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.39:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.39:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.39:4.1",
          "pli": "2.39. Usabhattheragāthā",
          "en": "2.39. Usabha (2nd)"
        },
        {
          "scid": "thag2.39:5.1",
          "pli": "“Ambapallavasaṅkāsaṃ,",
          "en": "Arranging a robe over my shoulder,"
        },
        {
          "scid": "thag2.39:5.2",
          "pli": "aṃse katvāna cīvaraṃ;",
          "en": "the color of young mango sprouts,"
        },
        {
          "scid": "thag2.39:5.3",
          "pli": "Nisinno hatthigīvāyaṃ,",
          "en": "I entered the village for alms"
        },
        {
          "scid": "thag2.39:5.4",
          "pli": "gāmaṃ piṇḍāya pāvisiṃ.",
          "en": "sitting on an elephant’s neck!"
        },
        {
          "scid": "thag2.39:6.1",
          "pli": "Hatthikkhandhato oruyha,",
          "en": "But when I dismounted from the elephant,"
        },
        {
          "scid": "thag2.39:6.2",
          "pli": "saṃvegaṃ alabhiṃ tadā;",
          "en": "I was struck with a sense of urgency."
        },
        {
          "scid": "thag2.39:6.3",
          "pli": "Sohaṃ ditto tadā santo,",
          "en": "I burned with shame, but then I found peace,"
        },
        {
          "scid": "thag2.39:6.4",
          "pli": "patto me āsavakkhayo”ti.",
          "en": "and attained the ending of defilements."
        },
        {
          "scid": "thag2.39:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.39:7.2",
          "pli": "Usabho thero ….",
          "en": ""
        }
      ],
