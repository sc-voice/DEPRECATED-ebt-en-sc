        {
          "scid": "thag1.52:4.1",
          "pli": "1.52. Subāhuttheragāthā",
          "en": "1.52. Subāhu"
        },
        {
          "scid": "thag1.52:5.1",
          "pli": "“Vassati devo yathā sugītaṃ,",
          "en": "The sky rains down, like a beautiful song."
        },
        {
          "scid": "thag1.52:5.2",
          "pli": "Channā me kuṭikā sukhā nivātā;",
          "en": "My little hut is ro­ofed and pleasant, sheltered from the wind."
        },
        {
          "scid": "thag1.52:5.3",
          "pli": "Cittaṃ susamāhitañca kāye,",
          "en": "My mind is immersed in my body:"
        },
        {
          "scid": "thag1.52:5.4",
          "pli": "Atha ce patthayasi pavassa devā”ti.",
          "en": "so rain, sky, as you please. "
        },
        {
          "scid": "thag1.52:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.52:6.2",
          "pli": "Subāhutthero ….",
          "en": ""
        }
      ],
