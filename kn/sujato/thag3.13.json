      "segments": [
        {
          "scid": "thag3.13:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.13:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.13:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.13:4.1",
          "pli": "3.13. Abhibhūtattheragāthā",
          "en": "3.13. Abhibhūta"
        },
        {
          "scid": "thag3.13:5.1",
          "pli": "“Suṇātha ñātayo sabbe,",
          "en": "Listen up, all my relatives,"
        },
        {
          "scid": "thag3.13:5.2",
          "pli": "yāvantettha samāgatā;",
          "en": "those who have gathered here:"
        },
        {
          "scid": "thag3.13:5.3",
          "pli": "Dhammaṃ vo desayissāmi,",
          "en": "I’ll teach you Dhamma!"
        },
        {
          "scid": "thag3.13:5.4",
          "pli": "dukkhā jāti punappunaṃ.",
          "en": "Painful is birth again and again."
        },
        {
          "scid": "thag3.13:6.1",
          "pli": "Ārambhatha nikkamatha,",
          "en": "Rouse yourselves, try harder!"
        },
        {
          "scid": "thag3.13:6.2",
          "pli": "Yuñjatha buddhasāsane;",
          "en": "Devote yourselves to the instructions of the Buddha!"
        },
        {
          "scid": "thag3.13:6.3",
          "pli": "Dhunātha maccuno senaṃ,",
          "en": "Crush the army of death,"
        },
        {
          "scid": "thag3.13:6.4",
          "pli": "Naḷāgāraṃva kuñjaro.",
          "en": "as an elephant a hut of reeds."
        },
        {
          "scid": "thag3.13:7.1",
          "pli": "Yo imasmiṃ dhammavinaye,",
          "en": "Anyone who meditates diligently"
        },
        {
          "scid": "thag3.13:7.2",
          "pli": "appamatto vihassati;",
          "en": "in this teaching and training,"
        },
        {
          "scid": "thag3.13:7.3",
          "pli": "Pahāya jātisaṃsāraṃ,",
          "en": "giving up transmigration,"
        },
        {
          "scid": "thag3.13:7.4",
          "pli": "dukkhassantaṃ karissatī”ti.",
          "en": "will make an end to suffering."
        },
        {
          "scid": "thag3.13:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.13:8.2",
          "pli": "Abhibhūto thero ….",
          "en": ""
        }
      ],
