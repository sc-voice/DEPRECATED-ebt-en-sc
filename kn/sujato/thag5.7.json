      "segments": [
        {
          "scid": "thag5.7:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.7:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.7:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.7:4.1",
          "pli": "5.7. Gayākassapattheragāthā",
          "en": "5.7. Gayākassapa"
        },
        {
          "scid": "thag5.7:5.1",
          "pli": "“Pāto majjhanhikaṃ sāyaṃ,",
          "en": "Three times a day—"
        },
        {
          "scid": "thag5.7:5.2",
          "pli": "tikkhattuṃ divasassahaṃ;",
          "en": "morning, midday, and evening—"
        },
        {
          "scid": "thag5.7:5.3",
          "pli": "Otariṃ udakaṃ sohaṃ,",
          "en": "I plunged into the water at Gayā"
        },
        {
          "scid": "thag5.7:5.4",
          "pli": "gayāya gayaphagguyā.",
          "en": "for the Gayā spring festival."
        },
        {
          "scid": "thag5.7:6.1",
          "pli": "‘Yaṃ mayā pakataṃ pāpaṃ,",
          "en": "“Whatever bad things I’ve done"
        },
        {
          "scid": "thag5.7:6.2",
          "pli": "pubbe aññāsu jātisu;",
          "en": "in previous lives,"
        },
        {
          "scid": "thag5.7:6.3",
          "pli": "Taṃ dānīdha pavāhemi’,",
          "en": "I’ll now wash away right here”—"
        },
        {
          "scid": "thag5.7:6.4",
          "pli": "evaṃdiṭṭhi pure ahuṃ.",
          "en": "such was the view I used to hold."
        },
        {
          "scid": "thag5.7:7.1",
          "pli": "Sutvā subhāsitaṃ vācaṃ,",
          "en": "Having heard the wonderful words,"
        },
        {
          "scid": "thag5.7:7.2",
          "pli": "dhammatthasahitaṃ padaṃ;",
          "en": "a passage meaningful and principled,"
        },
        {
          "scid": "thag5.7:7.3",
          "pli": "Tathaṃ yāthāvakaṃ atthaṃ,",
          "en": "I properly reflected"
        },
        {
          "scid": "thag5.7:7.4",
          "pli": "yoniso paccavekkhisaṃ.",
          "en": "on the true, essential goal."
        },
        {
          "scid": "thag5.7:8.1",
          "pli": "Ninhātasabbapāpomhi,",
          "en": "I’ve washed away all bad things;"
        },
        {
          "scid": "thag5.7:8.2",
          "pli": "nimmalo payato suci;",
          "en": "I’m stainless, clean, pristine;"
        },
        {
          "scid": "thag5.7:8.3",
          "pli": "Suddho suddhassa dāyādo,",
          "en": "the pure heir of the pure one,"
        },
        {
          "scid": "thag5.7:8.4",
          "pli": "putto buddhassa oraso.",
          "en": "a true-born child of the Buddha."
        },
        {
          "scid": "thag5.7:9.1",
          "pli": "Ogayhaṭṭhaṅgikaṃ sotaṃ,",
          "en": "When I plunged into the eightfold stream,"
        },
        {
          "scid": "thag5.7:9.2",
          "pli": "sabbapāpaṃ pavāhayiṃ;",
          "en": "all bad things were washed away."
        },
        {
          "scid": "thag5.7:9.3",
          "pli": "Tisso vijjā ajjhagamiṃ,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag5.7:9.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag5.7:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.7:10.2",
          "pli": "Gayākassapo thero ….",
          "en": ""
        }
      ],
