      "segments": [
        {
          "scid": "thag2.36:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.36:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.36:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.36:4.1",
          "pli": "2.36 Nitakattheragāthā",
          "en": "2.36. Nitaka"
        },
        {
          "scid": "thag2.36:5.1",
          "pli": "“Kassa selūpamaṃ cittaṃ,",
          "en": "Whose mind is like a rock,"
        },
        {
          "scid": "thag2.36:5.2",
          "pli": "ṭhitaṃ nānupakampati;",
          "en": "steady, never trembling—"
        },
        {
          "scid": "thag2.36:5.3",
          "pli": "Virattaṃ rajanīyesu,",
          "en": "free of desire for desirable things,"
        },
        {
          "scid": "thag2.36:5.4",
          "pli": "kuppanīye na kuppati;",
          "en": "not getting annoyed when things are annoying?"
        },
        {
          "scid": "thag2.36:5.5",
          "pli": "Yassevaṃ bhāvitaṃ cittaṃ,",
          "en": "From where will suffering strike one"
        },
        {
          "scid": "thag2.36:5.6",
          "pli": "kuto taṃ dukkhamessati.",
          "en": "whose mind is developed like this?"
        },
        {
          "scid": "thag2.36:6.1",
          "pli": "Mama selūpamaṃ cittaṃ,",
          "en": "My mind is like a rock,"
        },
        {
          "scid": "thag2.36:6.2",
          "pli": "ṭhitaṃ nānupakampati;",
          "en": "steady, never trembling—"
        },
        {
          "scid": "thag2.36:6.3",
          "pli": "Virattaṃ rajanīyesu,",
          "en": "free of desire for desirable things,"
        },
        {
          "scid": "thag2.36:6.4",
          "pli": "kuppanīye na kuppati;",
          "en": "not getting annoyed when things are annoying."
        },
        {
          "scid": "thag2.36:6.5",
          "pli": "Mamevaṃ bhāvitaṃ cittaṃ,",
          "en": "From where will suffering strike me"
        },
        {
          "scid": "thag2.36:6.6",
          "pli": "kuto maṃ dukkhamessatī”ti.",
          "en": "whose mind is developed like this?"
        },
        {
          "scid": "thag2.36:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.36:7.2",
          "pli": "Nitako thero ….",
          "en": ""
        }
