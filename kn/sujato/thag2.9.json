      "segments": [
        {
          "scid": "thag2.9:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.9:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.9:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.9:4.1",
          "pli": "2.9. Gotamattheragāthā",
          "en": "2.9. Gotama (1st)"
        },
        {
          "scid": "thag2.9:5.1",
          "pli": "“Sukhaṃ supanti munayo,",
          "en": "Sages sleep happily"
        },
        {
          "scid": "thag2.9:5.2",
          "pli": "ye itthīsu na bajjhare;",
          "en": "when they’re not bound to women."
        },
        {
          "scid": "thag2.9:5.3",
          "pli": "Sadā ve rakkhitabbāsu,",
          "en": "For the truth is hard to find among them"
        },
        {
          "scid": "thag2.9:5.4",
          "pli": "yāsu saccaṃ sudullabhaṃ.",
          "en": "and one must always be guarded."
        },
        {
          "scid": "thag2.9:6.1",
          "pli": "Vadhaṃ carimha te kāma,",
          "en": "Sensual pleasure, you’ve been slain!"
        },
        {
          "scid": "thag2.9:6.2",
          "pli": "anaṇā dāni te mayaṃ;",
          "en": "We’re not in your debt any more."
        },
        {
          "scid": "thag2.9:6.3",
          "pli": "Gacchāma dāni nibbānaṃ,",
          "en": "Now we go to quenching,"
        },
        {
          "scid": "thag2.9:6.4",
          "pli": "yattha gantvā na socatī”ti.",
          "en": "where there is no sorrow."
        },
        {
          "scid": "thag2.9:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.9:7.2",
          "pli": "Gotamo thero ….",
          "en": ""
        }
      ],
