  "sections": [
    {
      "segments": [
        {
          "scid": "thag3.16:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.16:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.16:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.16:4.1",
          "pli": "3.16. Vimalattheragāthā",
          "en": "3.16. Vimala (2nd)"
        },
        {
          "scid": "thag3.16:5.1",
          "pli": "“Pāpamitte vivajjetvā,",
          "en": "Shunning bad friends,"
        },
        {
          "scid": "thag3.16:5.2",
          "pli": "bhajeyyuttamapuggalaṃ;",
          "en": "associate with the best of people."
        },
        {
          "scid": "thag3.16:5.3",
          "pli": "Ovāde cassa tiṭṭheyya,",
          "en": "Stick to the advice he gave you,"
        },
        {
          "scid": "thag3.16:5.4",
          "pli": "patthento acalaṃ sukhaṃ.",
          "en": "aspiring to unshakable happiness."
        },
        {
          "scid": "thag3.16:6.1",
          "pli": "Parittaṃ dārumāruyha,",
          "en": "If you’re lost in the middle of a great sea,"
        },
        {
          "scid": "thag3.16:6.2",
          "pli": "yathā sīde mahaṇṇave;",
          "en": "and you clamber up on a little log, you’ll sink."
        },
        {
          "scid": "thag3.16:6.3",
          "pli": "Evaṃ kusītamāgamma,",
          "en": "So too, a person who lives well"
        },
        {
          "scid": "thag3.16:6.4",
          "pli": "sādhujīvīpi sīdati;",
          "en": "sinks by relying on a lazy person."
        },
        {
          "scid": "thag3.16:6.5",
          "pli": "Tasmā taṃ parivajjeyya,",
          "en": "Hence you should avoid such"
        },
        {
          "scid": "thag3.16:6.6",
          "pli": "kusītaṃ hīnavīriyaṃ.",
          "en": "a lazy person who lacks energy."
        },
        {
          "scid": "thag3.16:7.1",
          "pli": "Pavivittehi ariyehi,",
          "en": "Dwell with the noble ones"
        },
        {
          "scid": "thag3.16:7.2",
          "pli": "pahitattehi jhāyibhi;",
          "en": "who are secluded and determined"
        },
        {
          "scid": "thag3.16:7.3",
          "pli": "Niccaṃ āraddhavīriyehi,",
          "en": "and always energetic;"
        },
        {
          "scid": "thag3.16:7.4",
          "pli": "paṇḍitehi sahāvase”ti.",
          "en": "the astute who practice absorption."
        },
        {
          "scid": "thag3.16:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.16:8.2",
          "pli": "Vimalo thero ….",
          "en": ""
        },
        {
          "scid": "thag3.16:9.1",
          "pli": "Tikanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag3.16:10.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag3.16:11.1",
          "pli": "Aṅgaṇiko bhāradvājo,",
          "en": ""
        },
        {
          "scid": "thag3.16:11.2",
          "pli": "paccayo bākulo isi;",
          "en": ""
        },
        {
          "scid": "thag3.16:11.3",
          "pli": "Dhaniyo mātaṅgaputto,",
          "en": ""
        },
        {
          "scid": "thag3.16:11.4",
          "pli": "sobhito vāraṇo isi.",
          "en": ""
        },
        {
          "scid": "thag3.16:12.1",
          "pli": "Vassiko ca yasojo ca,",
          "en": ""
        },
        {
          "scid": "thag3.16:12.2",
          "pli": "sāṭimattiyupāli ca;",
          "en": ""
        },
        {
          "scid": "thag3.16:12.3",
          "pli": "Uttarapālo abhibhūto,",
          "en": ""
        },
        {
          "scid": "thag3.16:12.4",
          "pli": "gotamo hāritopi ca.",
          "en": ""
        },
        {
          "scid": "thag3.16:13.1",
          "pli": "Thero tikanipātamhi,",
          "en": ""
        },
        {
          "scid": "thag3.16:13.2",
          "pli": "nibbāne vimalo kato;",
          "en": ""
        },
        {
          "scid": "thag3.16:13.3",
          "pli": "Aṭṭhatālīsa gāthāyo,",
          "en": ""
        },
        {
          "scid": "thag3.16:13.4",
          "pli": "therā soḷasa kittitāti.",
          "en": ""
        }
      ],
