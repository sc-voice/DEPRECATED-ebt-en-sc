          "scid": "thag1.49:4.1",
          "pli": "1.49. Rāmaṇeyyakattheragāthā",
          "en": "1.49. Rāmaṇeyyaka"
        },
        {
          "scid": "thag1.49:5.1",
          "pli": "“Cihacihābhinadite,",
          "en": "Even with all the sounds,"
        },
        {
          "scid": "thag1.49:5.2",
          "pli": "sippikābhirutehi ca;",
          "en": "the chirping and cheeping of the birds,"
        },
        {
          "scid": "thag1.49:5.3",
          "pli": "Na me taṃ phandati cittaṃ,",
          "en": "my mind doesn’t waver,"
        },
        {
          "scid": "thag1.49:5.4",
          "pli": "ekattanirataṃ hi me”ti.",
          "en": "for I’m devoted to oneness."
        },
        {
          "scid": "thag1.49:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.49:6.2",
          "pli": "Rāmaṇeyyako thero ….",
          "en": ""
        }
