        },
        {
          "scid": "thag1.37:4.1",
          "pli": "1.37. Kumāputtasahāyakattheragāthā",
          "en": "1.37. Kumāputtasahāyaka"
        },
        {
          "scid": "thag1.37:5.1",
          "pli": "“Nānājanapadaṃ yanti,",
          "en": "Some travel to different countries,"
        },
        {
          "scid": "thag1.37:5.2",
          "pli": "Vicarantā asaññatā;",
          "en": "wandering undisciplined."
        },
        {
          "scid": "thag1.37:5.3",
          "pli": "Samādhiñca virādhenti,",
          "en": "If they lose their meditation,"
        },
        {
          "scid": "thag1.37:5.4",
          "pli": "Kiṃsu raṭṭhacariyā karissati;",
          "en": "what will such rotten conduct achieve?"
        },
        {
          "scid": "thag1.37:5.5",
          "pli": "Tasmā vineyya sārambhaṃ,",
          "en": "So you should dispel pride,"
        },
        {
          "scid": "thag1.37:5.6",
          "pli": "Jhāyeyya apurakkhato”ti.",
          "en": "practicing absorption undistracted."
        },
        {
          "scid": "thag1.37:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.37:6.2",
          "pli": "Kumāputtattherassa sahāyako thero ….",
          "en": ""
        }
      ],
