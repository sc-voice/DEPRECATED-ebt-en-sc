      "segments": [
        {
          "scid": "thig2.9:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.9:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.9:3.1",
          "pli": "9. Abhayātherīgāthā",
          "en": "2.9. Abhayā"
        },
        {
          "scid": "thig2.9:4.1",
          "pli": "“Abhaye bhiduro kāyo,",
          "en": "Abhayā, the body is fragile,"
        },
        {
          "scid": "thig2.9:4.2",
          "pli": "yattha satā puthujjanā;",
          "en": "yet ordinary people are attached to it."
        },
        {
          "scid": "thig2.9:4.3",
          "pli": "Nikkhipissāmimaṃ dehaṃ,",
          "en": "I'll lay down the body,"
        },
        {
          "scid": "thig2.9:4.4",
          "pli": "sampajānā satīmatī.",
          "en": "aware and mindful."
        },
        {
          "scid": "thig2.9:5.1",
          "pli": "Bahūhi dukkhadhammehi,",
          "en": "Though subject to so many painful things,"
        },
        {
          "scid": "thig2.9:5.2",
          "pli": "appamādaratāya me;",
          "en": "I have, through my love of diligence,"
        },
        {
          "scid": "thig2.9:5.3",
          "pli": "Taṇhakkhayo anuppatto,",
          "en": "reached the ending of craving,"
        },
        {
          "scid": "thig2.9:5.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig2.9:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.9:6.2",
          "pli": "Abhayā therī ….",
          "en": ""
        }
      ],
