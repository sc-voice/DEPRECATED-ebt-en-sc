          "scid": "thag1.59:4.1",
          "pli": "1.59. Kosalavihārittheragāthā",
          "en": "1.59. Kosalavihārin"
        },
        {
          "scid": "thag1.59:5.1",
          "pli": "“Saddhāyāhaṃ pabbajito,",
          "en": "I went forth out of faith"
        },
        {
          "scid": "thag1.59:5.2",
          "pli": "araññe me kuṭikā katā;",
          "en": "and built a little hut in the wilderness."
        },
        {
          "scid": "thag1.59:5.3",
          "pli": "Appamatto ca ātāpī,",
          "en": "I’m heedful, ardent,"
        },
        {
          "scid": "thag1.59:5.4",
          "pli": "sampajāno patissato”ti.",
          "en": "aware, and mindful."
        },
        {
          "scid": "thag1.59:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.59:6.2",
          "pli": "Kosalavihāritthero ….",
          "en": ""
        }
      ],
