      "segments": [
        {
          "scid": "thag2.49:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.49:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.49:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag2.49:4.1",
          "pli": "2.49. Sandhitattheragāthā",
          "en": "2.49. Sandhita"
        },
        {
          "scid": "thag2.49:5.1",
          "pli": "“Assatthe haritobhāse,",
          "en": "Beneath the Bodhi Tree,"
        },
        {
          "scid": "thag2.49:5.2",
          "pli": "saṃvirūḷhamhi pādape;",
          "en": "bright green and growing,"
        },
        {
          "scid": "thag2.49:5.3",
          "pli": "Ekaṃ buddhagataṃ saññaṃ,",
          "en": "being mindful, my perception"
        },
        {
          "scid": "thag2.49:5.4",
          "pli": "alabhitthaṃ patissato.",
          "en": "became one with the Buddha."
        },
        {
          "scid": "thag2.49:6.1",
          "pli": "Ekatiṃse ito kappe,",
          "en": "It’s been thirty one eons"
        },
        {
          "scid": "thag2.49:6.2",
          "pli": "yaṃ saññamalabhiṃ tadā;",
          "en": "since I gained that perception;"
        },
        {
          "scid": "thag2.49:6.3",
          "pli": "Tassā saññāya vāhasā,",
          "en": "and it’s due to that perception"
        },
        {
          "scid": "thag2.49:6.4",
          "pli": "patto me āsavakkhayo”ti.",
          "en": "that I’ve attained the ending of defilements."
        },
        {
          "scid": "thag2.49:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.49:7.2",
          "pli": "Sandhito thero ….",
          "en": ""
        },
        {
          "scid": "thag2.49:7.3",
          "pli": "Vaggo pañcamo.",
          "en": ""
        },
        {
          "scid": "thag2.49:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.49:9.1",
          "pli": "Kumārakassapo thero,",
          "en": ""
        },
        {
          "scid": "thag2.49:9.2",
          "pli": "dhammapālo ca brahmāli;",
          "en": ""
        },
        {
          "scid": "thag2.49:9.3",
          "pli": "Mogharājā visākho ca,",
          "en": ""
        },
        {
          "scid": "thag2.49:9.4",
          "pli": "cūḷako ca anūpamo;",
          "en": ""
        },
        {
          "scid": "thag2.49:9.5",
          "pli": "Vajjito sandhito thero,",
          "en": ""
        },
        {
          "scid": "thag2.49:9.6",
          "pli": "kilesarajavāhanoti.",
          "en": ""
        },
        {
          "scid": "thag2.49:10.1",
          "pli": "Dukanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag2.49:11.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.49:12.1",
          "pli": "Gāthādukanipātamhi,",
          "en": ""
        },
        {
          "scid": "thag2.49:12.2",
          "pli": "navuti ceva aṭṭha ca;",
          "en": ""
        },
        {
          "scid": "thag2.49:12.3",
          "pli": "Therā ekūnapaññāsaṃ,",
          "en": ""
        },
        {
          "scid": "thag2.49:12.4",
          "pli": "bhāsitā nayakovidāti.",
          "en": ""
        }
      ],
