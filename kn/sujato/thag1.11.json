          "pli": "1.11. Cūḷavacchattheragāthā",
          "en": "1.11. Cūḷavaccha"
        },
        {
          "scid": "thag1.11:5.1",
          "pli": "“Pāmojjabahulo bhikkhu,",
          "en": "A monk full of joy"
        },
        {
          "scid": "thag1.11:5.2",
          "pli": "dhamme buddhappavedite;",
          "en": "in the teaching proclaimed by the Buddha"
        },
        {
          "scid": "thag1.11:5.3",
          "pli": "Adhigacche padaṃ santaṃ,",
          "en": "would realize the peaceful state,"
        },
        {
          "scid": "thag1.11:5.4",
          "pli": "saṅkhārūpasamaṃ sukhan”ti.",
          "en": "the blissful stilling of conditions."
        },
        {
          "scid": "thag1.11:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.11:6.2",
          "pli": "Cūḷavaccho thero ….",
          "en": ""
        }
