      "segments": [
        {
          "scid": "thag2.18:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.18:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.18:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag2.18:4.1",
          "pli": "2.18 Kimilattheragāthā",
          "en": "2.18. Kimbila (2nd)"
        },
        {
          "scid": "thag2.18:5.1",
          "pli": "“Pācīnavaṃsadāyamhi,",
          "en": "In Pācīnavaṃsa grove"
        },
        {
          "scid": "thag2.18:5.2",
          "pli": "sakyaputtā sahāyakā;",
          "en": "the companions of the Sakyans,"
        },
        {
          "scid": "thag2.18:5.3",
          "pli": "Pahāyānappake bhoge,",
          "en": "having given up great wealth,"
        },
        {
          "scid": "thag2.18:5.4",
          "pli": "uñchāpattāgate ratā.",
          "en": "are happy with the scraps in their bowls."
        },
        {
          "scid": "thag2.18:6.1",
          "pli": "Āraddhavīriyā pahitattā,",
          "en": "Energetic, resolute,"
        },
        {
          "scid": "thag2.18:6.2",
          "pli": "Niccaṃ daḷhaparakkamā;",
          "en": "always staunchly vigorous;"
        },
        {
          "scid": "thag2.18:6.3",
          "pli": "Ramanti dhammaratiyā,",
          "en": "having given up mundane delights,"
        },
        {
          "scid": "thag2.18:6.4",
          "pli": "Hitvāna lokiyaṃ ratin”ti.",
          "en": "they enjoy the delights of the Dhamma."
        },
        {
          "scid": "thag2.18:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.18:7.2",
          "pli": "Kimilo thero ….",
          "en": ""
        }
      ],
