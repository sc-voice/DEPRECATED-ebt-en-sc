        {
          "scid": "thag1.101:4.1",
          "pli": "1.101. Belaṭṭhānikattheragāthā",
          "en": "1.101. Belaṭṭhānika"
        },
        {
          "scid": "thag1.101:5.1",
          "pli": "“Hitvā gihittaṃ anavositatto,",
          "en": "He’s given up the household life, but he has no purpose."
        },
        {
          "scid": "thag1.101:5.2",
          "pli": "Mukhanaṅgalī odariko kusīto;",
          "en": "Living for his belly, lazy, he uses his snout as a plow,"
        },
        {
          "scid": "thag1.101:5.3",
          "pli": "Mahāvarāhova nivāpapuṭṭho,",
          "en": "like a great hog stuffed with grain."
        },
        {
          "scid": "thag1.101:5.4",
          "pli": "Punappunaṃ gabbhamupeti mando”ti.",
          "en": "That idiot is reborn again and again."
        },
        {
          "scid": "thag1.101:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.101:6.2",
          "pli": "Belaṭṭhāniko thero ….",
          "en": ""
        }
      ],
