          "scid": "thag1.85:4.1",
          "pli": "1.85. Sunāgattheragāthā",
          "en": "1.85. Sunāga"
        },
        {
          "scid": "thag1.85:5.1",
          "pli": "“Cittanimittassa kovido,",
          "en": "Skilled in the patterns of the mind,"
        },
        {
          "scid": "thag1.85:5.2",
          "pli": "Pavivekarasaṃ vijāniya;",
          "en": "understanding the sweetness of seclusion,"
        },
        {
          "scid": "thag1.85:5.3",
          "pli": "Jhāyaṃ nipako patissato,",
          "en": "practicing absorption, alert, mindful:"
        },
        {
          "scid": "thag1.85:5.4",
          "pli": "Adhigaccheyya sukhaṃ nirāmisan”ti.",
          "en": "such a person would realize spiritual happiness."
        },
        {
          "scid": "thag1.85:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.85:6.2",
          "pli": "Sunāgo thero ….",
          "en": ""
        }
