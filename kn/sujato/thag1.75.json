        {
          "scid": "thag1.75:4.1",
          "pli": "1.75. Susāradattheragāthā",
          "en": "1.75. Susārada"
        },
        {
          "scid": "thag1.75:5.1",
          "pli": "“Sādhu suvihitāna dassanaṃ,",
          "en": "Good is the sight of those who’ve practiced well:"
        },
        {
          "scid": "thag1.75:5.2",
          "pli": "Kaṅkhā chijjati buddhi vaḍḍhati;",
          "en": "doubt is cut off and intelligence grows—"
        },
        {
          "scid": "thag1.75:5.3",
          "pli": "Bālampi karonti paṇḍitaṃ,",
          "en": "even a fool grows wise!"
        },
        {
          "scid": "thag1.75:5.4",
          "pli": "Tasmā sādhu sataṃ samāgamo”ti.",
          "en": "That’s why it’s good to meet good people."
        },
        {
          "scid": "thag1.75:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.75:6.2",
          "pli": "Susārado thero ….",
          "en": ""
        }
      ],
