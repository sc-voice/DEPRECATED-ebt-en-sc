      "segments": [
        {
          "scid": "thag2.23:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.23:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.23:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.23:4.1",
          "pli": "2.23. Sobhitattheragāthā",
          "en": "2.23. Sobhita"
        },
        {
          "scid": "thag2.23:5.1",
          "pli": "“Satimā paññavā bhikkhu,",
          "en": "As a monk, mindful and wise,"
        },
        {
          "scid": "thag2.23:5.2",
          "pli": "āraddhabalavīriyo;",
          "en": "empowered and full of energy,"
        },
        {
          "scid": "thag2.23:5.3",
          "pli": "Pañca kappasatānāhaṃ,",
          "en": "I recollected five hundred eons"
        },
        {
          "scid": "thag2.23:5.4",
          "pli": "ekarattiṃ anussariṃ.",
          "en": "in a single night."
        },
        {
          "scid": "thag2.23:6.1",
          "pli": "Cattāro satipaṭṭhāne,",
          "en": "Developing the four kinds of mindfulness meditation,"
        },
        {
          "scid": "thag2.23:6.2",
          "pli": "satta aṭṭha ca bhāvayaṃ;",
          "en": "the seven factors of awakening and the eightfold path,"
        },
        {
          "scid": "thag2.23:6.3",
          "pli": "Pañca kappasatānāhaṃ,",
          "en": "I recollected five hundred eons"
        },
        {
          "scid": "thag2.23:6.4",
          "pli": "ekarattiṃ anussarin”ti.",
          "en": "in a single night."
        },
        {
          "scid": "thag2.23:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.23:7.2",
          "pli": "Sobhito thero ….",
          "en": ""
        }
      ],
