        {
          "scid": "thag1.78:4.1",
          "pli": "1.78. Meṇḍasirattheragāthā",
          "en": "1.78. Meṇḍasira"
        },
        {
          "scid": "thag1.78:5.1",
          "pli": "“Anekajātisaṃsāraṃ,",
          "en": "Transmigrating through countless rebirths,"
        },
        {
          "scid": "thag1.78:5.2",
          "pli": "sandhāvissaṃ anibbisaṃ;",
          "en": "I’ve journeyed without reward."
        },
        {
          "scid": "thag1.78:5.3",
          "pli": "Tassa me dukkhajātassa,",
          "en": "I’ve suffered, but now"
        },
        {
          "scid": "thag1.78:5.4",
          "pli": "dukkhakkhandho aparaddho”ti.",
          "en": "the mass of suffering has fallen away."
        },
        {
          "scid": "thag1.78:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.78:6.2",
          "pli": "Meṇḍasiro thero ….",
          "en": ""
        }
      ],
