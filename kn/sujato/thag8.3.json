  "sections": [
    {
      "segments": [
        {
          "scid": "thag8.3:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag8.3:2.1",
          "pli": "Aṭṭhakanipāta",
          "en": "The Book of the Eights"
        },
        {
          "scid": "thag8.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag8.3:4.1",
          "pli": "8.3. Mahāpanthakattheragāthā",
          "en": "8.3. Mahāpanthaka"
        },
        {
          "scid": "thag8.3:5.1",
          "pli": "“Yadā paṭhamamaddakkhiṃ,",
          "en": "When I first saw the Teacher"
        },
        {
          "scid": "thag8.3:5.2",
          "pli": "satthāramakutobhayaṃ;",
          "en": "who fears nothing from any quarter,"
        },
        {
          "scid": "thag8.3:5.3",
          "pli": "Tato me ahu saṃvego,",
          "en": "I was struck with a sense of urgency,"
        },
        {
          "scid": "thag8.3:5.4",
          "pli": "passitvā purisuttamaṃ.",
          "en": "seeing the supreme among men."
        },
        {
          "scid": "thag8.3:6.1",
          "pli": "Siriṃ hatthehi pādehi,",
          "en": "Anyone who, having found such a Teacher,"
        },
        {
          "scid": "thag8.3:6.2",
          "pli": "yo paṇāmeyya āgataṃ;",
          "en": "would lose them again,"
        },
        {
          "scid": "thag8.3:6.3",
          "pli": "Etādisaṃ so satthāraṃ,",
          "en": "is like someone who, when Lucky Luck comes to them,"
        },
        {
          "scid": "thag8.3:6.4",
          "pli": "ārādhetvā virādhaye.",
          "en": "would drive her away with their hands and feet."
        },
        {
          "scid": "thag8.3:7.1",
          "pli": "Tadāhaṃ puttadārañca,",
          "en": "Then I left behind my children and wives,"
        },
        {
          "scid": "thag8.3:7.2",
          "pli": "dhanadhaññañca chaḍḍayiṃ;",
          "en": "my riches and my grain;"
        },
        {
          "scid": "thag8.3:7.3",
          "pli": "Kesamassūni chedetvā,",
          "en": "I had my hair and beard cut off,"
        },
        {
          "scid": "thag8.3:7.4",
          "pli": "pabbajiṃ anagāriyaṃ.",
          "en": "and went forth to homelessness."
        },
        {
          "scid": "thag8.3:8.1",
          "pli": "Sikkhāsājīvasampanno,",
          "en": "Endowed with the monastic training and livelihood,"
        },
        {
          "scid": "thag8.3:8.2",
          "pli": "indriyesu susaṃvuto;",
          "en": "my sense faculties well-restrained,"
        },
        {
          "scid": "thag8.3:8.3",
          "pli": "Namassamāno sambuddhaṃ,",
          "en": "paying homage to the Buddha,"
        },
        {
          "scid": "thag8.3:8.4",
          "pli": "vihāsiṃ aparājito.",
          "en": "I meditated undefeated."
        },
        {
          "scid": "thag8.3:9.1",
          "pli": "Tato me paṇidhī āsi,",
          "en": "Then a wish occurred to me,"
        },
        {
          "scid": "thag8.3:9.2",
          "pli": "cetaso abhipatthito;",
          "en": "my heart’s truest wish:"
        },
        {
          "scid": "thag8.3:9.3",
          "pli": "Na nisīde muhuttampi,",
          "en": "I wouldn’t sit down, not even for a moment,"
        },
        {
          "scid": "thag8.3:9.4",
          "pli": "taṇhāsalle anūhate.",
          "en": "until the dart of craving was drawn out."
        },
        {
          "scid": "thag8.3:10.1",
          "pli": "Tassa mevaṃ viharato,",
          "en": "As I meditate like this,"
        },
        {
          "scid": "thag8.3:10.2",
          "pli": "passa vīriyaparakkamaṃ;",
          "en": "see my energy and vigor!"
        },
        {
          "scid": "thag8.3:10.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges,"
        },
        {
          "scid": "thag8.3:10.4",
          "pli": "kataṃ buddhassa sāsanaṃ.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag8.3:11.1",
          "pli": "Pubbenivāsaṃ jānāmi,",
          "en": "I know my past lives,"
        },
        {
          "scid": "thag8.3:11.2",
          "pli": "dibbacakkhu visodhitaṃ;",
          "en": "my clairvoyance is clarified;"
        },
        {
          "scid": "thag8.3:11.3",
          "pli": "Arahā dakkhiṇeyyomhi,",
          "en": "I’m perfected, worthy of offerings,"
        },
        {
          "scid": "thag8.3:11.4",
          "pli": "vippamutto nirūpadhi.",
          "en": "liberated, without attachments."
        },
        {
          "scid": "thag8.3:12.1",
          "pli": "Tato ratyā vivasāne,",
          "en": "Then, at the end of the night,"
        },
        {
          "scid": "thag8.3:12.2",
          "pli": "sūriyuggamanaṃ pati;",
          "en": "as the rising of the sun drew near,"
        },
        {
          "scid": "thag8.3:12.3",
          "pli": "Sabbaṃ taṇhaṃ visosetvā,",
          "en": "all craving was dried up,"
        },
        {
          "scid": "thag8.3:12.4",
          "pli": "pallaṅkena upāvisin”ti.",
          "en": "so I sat down cross-legged."
        },
        {
          "scid": "thag8.3:13.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag8.3:13.2",
          "pli": "Mahāpanthako thero ….",
          "en": ""
        },
        {
          "scid": "thag8.3:14.1",
          "pli": "Aṭṭhakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag8.3:15.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag8.3:16.1",
          "pli": "Mahākaccāyano thero,",
          "en": ""
        },
        {
          "scid": "thag8.3:16.2",
          "pli": "sirimitto mahāpanthako;",
          "en": ""
        },
        {
          "scid": "thag8.3:16.3",
          "pli": "Ete aṭṭhanipātamhi,",
          "en": ""
        },
        {
          "scid": "thag8.3:16.4",
          "pli": "gāthāyo catuvīsatīti.",
          "en": ""
        }
      ],
