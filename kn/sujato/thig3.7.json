      "segments": [
        {
          "scid": "thig3.7:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.7:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.7:3.1",
          "pli": "7. Selātherīgāthā",
          "en": "3.7. Selā"
        },
        {
          "scid": "thig3.7:4.1",
          "pli": "“Natthi nissaraṇaṃ loke,",
          "en": "“There’s no escape in the world,"
        },
        {
          "scid": "thig3.7:4.2",
          "pli": "kiṃ vivekena kāhasi;",
          "en": "so what will seclusion do for you?"
        },
        {
          "scid": "thig3.7:4.3",
          "pli": "Bhuñjāhi kāmaratiyo,",
          "en": "Enjoy the delights of sensual pleasure;"
        },
        {
          "scid": "thig3.7:4.4",
          "pli": "māhu pacchānutāpinī”.",
          "en": "don’t regret it later.”"
        },
        {
          "scid": "thig3.7:5.1",
          "pli": "“Sattisūlūpamā kāmā,",
          "en": "“Sensual pleasures are like swords and stakes"
        },
        {
          "scid": "thig3.7:5.2",
          "pli": "khandhāsaṃ adhikuṭṭanā;",
          "en": "the aggregates are their chopping block."
        },
        {
          "scid": "thig3.7:5.3",
          "pli": "Yaṃ tvaṃ ‘kāmaratiṃ’ brūsi,",
          "en": "What you call sensual delight"
        },
        {
          "scid": "thig3.7:5.4",
          "pli": "‘aratī’ dāni sā mama.",
          "en": "is now no delight for me."
        },
        {
          "scid": "thig3.7:6.1",
          "pli": "Sabbattha vihatā nandī,",
          "en": "Relishing is destroyed in every respect,"
        },
        {
          "scid": "thig3.7:6.2",
          "pli": "Tamokhandho padālito;",
          "en": "and the mass of darkness is shattered."
        },
        {
          "scid": "thig3.7:6.3",
          "pli": "Evaṃ jānāhi pāpima,",
          "en": "So know this, Wicked One:"
        },
        {
          "scid": "thig3.7:6.4",
          "pli": "Nihato tvamasi antakā”ti.",
          "en": "you’re beaten, terminator!”"
        },
        {
          "scid": "thig3.7:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.7:7.2",
          "pli": "Selā therī ….",
          "en": ""
        }
      ],
