        {
          "scid": "thag2.6:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.6:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.6:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.6:4.1",
          "pli": "2.6 Meḷajinattheragāthā",
          "en": "2.6. Meḷajina"
        },
        {
          "scid": "thag2.6:5.1",
          "pli": "“Yadāhaṃ dhammamassosiṃ,",
          "en": "When I heard the Teacher"
        },
        {
          "scid": "thag2.6:5.2",
          "pli": "bhāsamānassa satthuno;",
          "en": "speaking Dhamma,"
        },
        {
          "scid": "thag2.6:5.3",
          "pli": "Na kaṅkhamabhijānāmi,",
          "en": "I wasn’t aware of any doubt"
        },
        {
          "scid": "thag2.6:5.4",
          "pli": "sabbaññūaparājite.",
          "en": "in the all-knowing, unconquered one,"
        },
        {
          "scid": "thag2.6:6.1",
          "pli": "Satthavāhe mahāvīre,",
          "en": "the caravan leader, the great hero,"
        },
        {
          "scid": "thag2.6:6.2",
          "pli": "sārathīnaṃ varuttame;",
          "en": "the most excellent of charioteers."
        },
        {
          "scid": "thag2.6:6.3",
          "pli": "Magge paṭipadāyaṃ vā,",
          "en": "I have no doubt"
        },
        {
          "scid": "thag2.6:6.4",
          "pli": "kaṅkhā mayhaṃ na vijjatī”ti.",
          "en": "in the path or practice."
        },
        {
          "scid": "thag2.6:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.6:7.2",
          "pli": "Meḷajino thero ….",
          "en": ""
        }
      ],
