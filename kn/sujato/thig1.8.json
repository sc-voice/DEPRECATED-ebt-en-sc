          "scid": "thig1.8:3.1",
          "pli": "8. Mittātherīgāthā",
          "en": "1.8. Mittā (1st)"
        },
        {
          "scid": "thig1.8:4.1",
          "pli": "“Saddhāya pabbajitvāna,",
          "en": "Having gone forth out of faith,"
        },
        {
          "scid": "thig1.8:4.2",
          "pli": "mitte mittaratā bhava;",
          "en": "appreciate your spiritual friends, Mittā."
        },
        {
          "scid": "thig1.8:4.3",
          "pli": "Bhāvehi kusale dhamme,",
          "en": "Develop skillful qualities"
        },
        {
          "scid": "thig1.8:4.4",
          "pli": "yogakkhemassa pattiyā”ti.",
          "en": "for the sake of finding sanctuary."
        },
        {
          "scid": "thig1.8:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.8:5.2",
          "pli": "Mittā therī ….",
          "en": ""
        }
