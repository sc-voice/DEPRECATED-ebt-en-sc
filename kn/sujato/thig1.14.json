        },
        {
          "scid": "thig1.14:3.1",
          "pli": "14. Sumanātherīgāthā",
          "en": "1.14. Sumanā"
        },
        {
          "scid": "thig1.14:4.1",
          "pli": "“Dhātuyo dukkhato disvā,",
          "en": "Having seen the elements as suffering,"
        },
        {
          "scid": "thig1.14:4.2",
          "pli": "mā jātiṃ punarāgami;",
          "en": "don’t get reborn again."
        },
        {
          "scid": "thig1.14:4.3",
          "pli": "Bhave chandaṃ virājetvā,",
          "en": "When you’ve discarded desire for rebirth,"
        },
        {
          "scid": "thig1.14:4.4",
          "pli": "upasantā carissasī”ti.",
          "en": "you will live at peace."
        },
        {
          "scid": "thig1.14:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.14:5.2",
          "pli": "Sumanā therī ….",
          "en": ""
        }
      ],
