      "segments": [
        {
          "scid": "thag4.9:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.9:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.9:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.9:4.1",
          "pli": "4.9. Candanattheragāthā",
          "en": "4.9. Candana"
        },
        {
          "scid": "thag4.9:5.1",
          "pli": "“Jātarūpena sañchannā,",
          "en": "Covered over with gold,"
        },
        {
          "scid": "thag4.9:5.2",
          "pli": "dāsīgaṇapurakkhatā;",
          "en": "surrounded by all her maids,"
        },
        {
          "scid": "thag4.9:5.3",
          "pli": "Aṅkena puttamādāya,",
          "en": "with my son upon her hip,"
        },
        {
          "scid": "thag4.9:5.4",
          "pli": "bhariyā maṃ upāgami.",
          "en": "my wife came to me."
        },
        {
          "scid": "thag4.9:6.1",
          "pli": "Tañca disvāna āyantiṃ,",
          "en": "I saw her coming,"
        },
        {
          "scid": "thag4.9:6.2",
          "pli": "sakaputtassa mātaraṃ;",
          "en": "the mother of my son,"
        },
        {
          "scid": "thag4.9:6.3",
          "pli": "Alaṅkataṃ suvasanaṃ,",
          "en": "adorned with jewelry and all dressed up,"
        },
        {
          "scid": "thag4.9:6.4",
          "pli": "maccupāsaṃva oḍḍitaṃ.",
          "en": "like a snare of death laid down."
        },
        {
          "scid": "thag4.9:7.1",
          "pli": "Tato me manasīkāro,",
          "en": "Then the realization"
        },
        {
          "scid": "thag4.9:7.2",
          "pli": "yoniso udapajjatha;",
          "en": "came upon me—"
        },
        {
          "scid": "thag4.9:7.3",
          "pli": "Ādīnavo pāturahu,",
          "en": "the danger became clear,"
        },
        {
          "scid": "thag4.9:7.4",
          "pli": "nibbidā samatiṭṭhatha.",
          "en": "and I was firmly disillusioned."
        },
        {
          "scid": "thag4.9:8.1",
          "pli": "Tato cittaṃ vimucci me,",
          "en": "Then my mind was freed—"
        },
        {
          "scid": "thag4.9:8.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "see the excellence of the teaching!"
        },
        {
          "scid": "thag4.9:8.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag4.9:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag4.9:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.9:9.2",
          "pli": "Candano thero ….",
          "en": ""
        }
      ],
