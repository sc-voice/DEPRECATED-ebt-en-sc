      "segments": [
        {
          "scid": "thag3.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.2:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.2:4.1",
          "pli": "3.2. Paccayattheragāthā",
          "en": "3.2. Paccaya"
        },
        {
          "scid": "thag3.2:5.1",
          "pli": "“Pañcāhāhaṃ pabbajito,",
          "en": "I went forth five days ago,"
        },
        {
          "scid": "thag3.2:5.2",
          "pli": "sekho appattamānaso;",
          "en": "a trainee, my heart’s desire unfulfilled."
        },
        {
          "scid": "thag3.2:5.3",
          "pli": "Vihāraṃ me paviṭṭhassa,",
          "en": "I entered my dwelling"
        },
        {
          "scid": "thag3.2:5.4",
          "pli": "cetaso paṇidhī ahu.",
          "en": "and resolved in my heart:"
        },
        {
          "scid": "thag3.2:6.1",
          "pli": "Nāsissaṃ na pivissāmi,",
          "en": "I won’t eat; I won’t drink;"
        },
        {
          "scid": "thag3.2:6.2",
          "pli": "vihārato na nikkhame;",
          "en": "I won’t leave my dwelling;"
        },
        {
          "scid": "thag3.2:6.3",
          "pli": "Napi passaṃ nipātessaṃ,",
          "en": "nor will I lie down on my side—"
        },
        {
          "scid": "thag3.2:6.4",
          "pli": "taṇhāsalle anūhate.",
          "en": "not until the dart of craving is pulled out."
        },
        {
          "scid": "thag3.2:7.1",
          "pli": "Tassa mevaṃ viharato,",
          "en": "See my energy and vigor"
        },
        {
          "scid": "thag3.2:7.2",
          "pli": "passa vīriyaparakkamaṃ;",
          "en": "as I meditate like this!"
        },
        {
          "scid": "thag3.2:7.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag3.2:7.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag3.2:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.2:8.2",
          "pli": "Paccayo thero ….",
          "en": ""
        }
      ],
