        {
          "scid": "thig1.15:3.1",
          "pli": "15. Uttarātherīgāthā",
          "en": "1.15. Uttarā (1st)"
        },
        {
          "scid": "thig1.15:4.1",
          "pli": "“Kāyena saṃvutā āsiṃ,",
          "en": "I was restrained"
        },
        {
          "scid": "thig1.15:4.2",
          "pli": "vācāya uda cetasā;",
          "en": "in body, speech, and mind."
        },
        {
          "scid": "thig1.15:4.3",
          "pli": "Samūlaṃ taṇhamabbuyha,",
          "en": "Having plucked out craving root and all,"
        },
        {
          "scid": "thig1.15:4.4",
          "pli": "sītibhūtāmhi nibbutā”ti.",
          "en": "I’m cooled and quenched."
        },
        {
          "scid": "thig1.15:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.15:5.2",
          "pli": "Uttarā therī ….",
          "en": ""
        }
      ],
