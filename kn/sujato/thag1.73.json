        {
          "scid": "thag1.73:4.1",
          "pli": "1.73. Māṇavattheragāthā",
          "en": "1.73. Māṇava"
        },
        {
          "scid": "thag1.73:5.1",
          "pli": "“Jiṇṇañca disvā dukhitañca byādhitaṃ,",
          "en": "Seeing an old person, and one suffering from disease,"
        },
        {
          "scid": "thag1.73:5.2",
          "pli": "Matañca disvā gatamāyusaṅkhayaṃ;",
          "en": "and a corpse come to the end of life,"
        },
        {
          "scid": "thag1.73:5.3",
          "pli": "Tato ahaṃ nikkhamitūna pabbajiṃ,",
          "en": "I went forth, becoming a wanderer,"
        },
        {
          "scid": "thag1.73:5.4",
          "pli": "Pahāya kāmāni manoramānī”ti.",
          "en": "and giving up the pleasures of the senses."
        },
        {
          "scid": "thag1.73:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.73:6.2",
          "pli": "Māṇavo thero ….",
          "en": ""
        }
      ],
