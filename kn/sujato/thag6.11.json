      "segments": [
        {
          "scid": "thag6.11:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.11:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.11:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.11:4.1",
          "pli": "6.11. Nhātakamunittheragāthā",
          "en": "6.11. Nhātakamuni"
        },
        {
          "scid": "thag6.11:5.1",
          "pli": "“Vātarogābhinīto tvaṃ,",
          "en": "“Struck by a wind ailment"
        },
        {
          "scid": "thag6.11:5.2",
          "pli": "viharaṃ kānane vane;",
          "en": "while dwelling in a forest grove,"
        },
        {
          "scid": "thag6.11:5.3",
          "pli": "Paviddhagocare lūkhe,",
          "en": "you’ve entered a tough place for gathering alms—"
        },
        {
          "scid": "thag6.11:5.4",
          "pli": "kathaṃ bhikkhu karissasi”.",
          "en": "how will you get by, monk?”"
        },
        {
          "scid": "thag6.11:6.1",
          "pli": "“Pītisukhena vipulena,",
          "en": "“Pervading this bag of bones"
        },
        {
          "scid": "thag6.11:6.2",
          "pli": "pharitvāna samussayaṃ;",
          "en": "with abundant rapture and happiness,"
        },
        {
          "scid": "thag6.11:6.3",
          "pli": "Lūkhampi abhisambhonto,",
          "en": "putting up with what’s tough,"
        },
        {
          "scid": "thag6.11:6.4",
          "pli": "viharissāmi kānane.",
          "en": "I’ll dwell in the forest."
        },
        {
          "scid": "thag6.11:7.1",
          "pli": "Bhāvento satta bojjhaṅge,",
          "en": "Developing the seven awakening factors,"
        },
        {
          "scid": "thag6.11:7.2",
          "pli": "indriyāni balāni ca;",
          "en": "the faculties and the powers,"
        },
        {
          "scid": "thag6.11:7.3",
          "pli": "Jhānasokhummasampanno,",
          "en": "endowed with subtle absorptions,"
        },
        {
          "scid": "thag6.11:7.4",
          "pli": "viharissaṃ anāsavo.",
          "en": "I’ll dwell without defilements."
        },
        {
          "scid": "thag6.11:8.1",
          "pli": "Vippamuttaṃ kilesehi,",
          "en": "Freed from corruptions,"
        },
        {
          "scid": "thag6.11:8.2",
          "pli": "suddhacittaṃ anāvilaṃ;",
          "en": "my pure mind is unclouded."
        },
        {
          "scid": "thag6.11:8.3",
          "pli": "Abhiṇhaṃ paccavekkhanto,",
          "en": "Frequently reviewing this,"
        },
        {
          "scid": "thag6.11:8.4",
          "pli": "viharissaṃ anāsavo.",
          "en": "I’ll meditate without defilements."
        },
        {
          "scid": "thag6.11:9.1",
          "pli": "Ajjhattañca bahiddhā ca,",
          "en": "Those defilements that were found in me,"
        },
        {
          "scid": "thag6.11:9.2",
          "pli": "ye me vijjiṃsu āsavā;",
          "en": "internally and externally,"
        },
        {
          "scid": "thag6.11:9.3",
          "pli": "Sabbe asesā ucchinnā,",
          "en": "are all cut off without remainder,"
        },
        {
          "scid": "thag6.11:9.4",
          "pli": "na ca uppajjare puna.",
          "en": "and will not arise again."
        },
        {
          "scid": "thag6.11:10.1",
          "pli": "Pañcakkhandhā pariññātā,",
          "en": "The five aggregates are fully understood,"
        },
        {
          "scid": "thag6.11:10.2",
          "pli": "tiṭṭhanti chinnamūlakā;",
          "en": "they remain, but their root is cut."
        },
        {
          "scid": "thag6.11:10.3",
          "pli": "Dukkhakkhayo anuppatto,",
          "en": "I have reached the ending of suffering,"
        },
        {
          "scid": "thag6.11:10.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives.”"
        },
        {
          "scid": "thag6.11:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.11:11.2",
          "pli": "Nhātakamunitthero ….",
          "en": ""
        }
      ],
