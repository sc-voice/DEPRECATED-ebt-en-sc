      "segments": [
        {
          "scid": "thag4.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.2:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.2:4.1",
          "pli": "4.2. Bhaguttheragāthā",
          "en": "4.2. Bhagu"
        },
        {
          "scid": "thag4.2:5.1",
          "pli": "“Ahaṃ middhena pakato,",
          "en": "Overwhelmed by drowsiness,"
        },
        {
          "scid": "thag4.2:5.2",
          "pli": "vihārā upanikkhamiṃ;",
          "en": "I left my dwelling."
        },
        {
          "scid": "thag4.2:5.3",
          "pli": "Caṅkamaṃ abhiruhanto,",
          "en": "Stepping up to the path for walking meditation,"
        },
        {
          "scid": "thag4.2:5.4",
          "pli": "tattheva papatiṃ chamā.",
          "en": "I fell to the ground right there."
        },
        {
          "scid": "thag4.2:6.1",
          "pli": "Gattāni parimajjitvā,",
          "en": "I rubbed my limbs, and again"
        },
        {
          "scid": "thag4.2:6.2",
          "pli": "punapāruyha caṅkamaṃ;",
          "en": "I stepped up on the path for walking meditation."
        },
        {
          "scid": "thag4.2:6.3",
          "pli": "Caṅkame caṅkamiṃ sohaṃ,",
          "en": "I walked meditation up and down the path,"
        },
        {
          "scid": "thag4.2:6.4",
          "pli": "ajjhattaṃ susamāhito.",
          "en": "serene inside myself."
        },
        {
          "scid": "thag4.2:7.1",
          "pli": "Tato me manasīkāro,",
          "en": "Then the realization"
        },
        {
          "scid": "thag4.2:7.2",
          "pli": "yoniso udapajjatha;",
          "en": "came upon me—"
        },
        {
          "scid": "thag4.2:7.3",
          "pli": "Ādīnavo pāturahu,",
          "en": "the danger became clear,"
        },
        {
          "scid": "thag4.2:7.4",
          "pli": "nibbidā samatiṭṭhatha.",
          "en": "and I grew firmly disillusioned."
        },
        {
          "scid": "thag4.2:8.1",
          "pli": "Tato cittaṃ vimucci me,",
          "en": "Then my mind was freed—"
        },
        {
          "scid": "thag4.2:8.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "see the excellence of the teaching!"
        },
        {
          "scid": "thag4.2:8.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges,"
        },
        {
          "scid": "thag4.2:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag4.2:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.2:9.2",
          "pli": "Bhagutthero ….",
          "en": ""
        }
      ],
