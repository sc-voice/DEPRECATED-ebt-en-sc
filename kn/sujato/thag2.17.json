      "segments": [
        {
          "scid": "thag2.17:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.17:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.17:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag2.17:4.1",
          "pli": "2.17. Tissattheragāthā",
          "en": "2.17. Tissa (3rd)"
        },
        {
          "scid": "thag2.17:5.1",
          "pli": "“Bahū sapatte labhati,",
          "en": "A shaven one wrapped in the outer robe"
        },
        {
          "scid": "thag2.17:5.2",
          "pli": "muṇḍo saṅghāṭipāruto;",
          "en": "gets many enemies"
        },
        {
          "scid": "thag2.17:5.3",
          "pli": "Lābhī annassa pānassa,",
          "en": "when they receive food and drink,"
        },
        {
          "scid": "thag2.17:5.4",
          "pli": "vatthassa sayanassa ca.",
          "en": "clothes and lodgings."
        },
        {
          "scid": "thag2.17:6.1",
          "pli": "Etamādīnavaṃ ñatvā,",
          "en": "Knowing this danger,"
        },
        {
          "scid": "thag2.17:6.2",
          "pli": "sakkāresu mahabbhayaṃ;",
          "en": "this great fear in honors,"
        },
        {
          "scid": "thag2.17:6.3",
          "pli": "Appalābho anavassuto,",
          "en": "a mendicant should go forth mindfully,"
        },
        {
          "scid": "thag2.17:6.4",
          "pli": "sato bhikkhu paribbaje”ti.",
          "en": "with few possessions, not full of desire."
        },
        {
          "scid": "thag2.17:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.17:7.2",
          "pli": "Tisso thero ….",
          "en": ""
        }
      ],
