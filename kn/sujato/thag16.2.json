  "sections": [
    {
      "segments": [
        {
          "scid": "thag16.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag16.2:2.1",
          "pli": "Vīsatinipāta",
          "en": "The Book of the Twenties"
        },
        {
          "scid": "thag16.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag16.2:4.1",
          "pli": "16.2 Pārāpariyattheragāthā",
          "en": "16.2. Pārāpariya (2nd)"
        },
        {
          "scid": "thag16.2:5.1",
          "pli": "“Samaṇassa ahu cintā,",
          "en": "This thought came to the ascetic,"
        },
        {
          "scid": "thag16.2:5.2",
          "pli": "pārāpariyassa bhikkhuno;",
          "en": "the monk Pārāpariya,"
        },
        {
          "scid": "thag16.2:5.3",
          "pli": "Ekakassa nisinnassa,",
          "en": "as he was seated alone"
        },
        {
          "scid": "thag16.2:5.4",
          "pli": "pavivittassa jhāyino.",
          "en": "meditating in seclusion:"
        },
        {
          "scid": "thag16.2:6.1",
          "pli": "Kimānupubbaṃ puriso,",
          "en": "“Following what system,"
        },
        {
          "scid": "thag16.2:6.2",
          "pli": "kiṃ vataṃ kiṃ samācāraṃ;",
          "en": "what observance, what conduct,"
        },
        {
          "scid": "thag16.2:6.3",
          "pli": "Attano kiccakārīssa,",
          "en": "may I do what I need to do for myself,"
        },
        {
          "scid": "thag16.2:6.4",
          "pli": "na ca kañci viheṭhaye.",
          "en": "without harming anyone else?"
        },
        {
          "scid": "thag16.2:7.1",
          "pli": "Indriyāni manussānaṃ,",
          "en": "The faculties of human beings"
        },
        {
          "scid": "thag16.2:7.2",
          "pli": "hitāya ahitāya ca;",
          "en": "can lead to both welfare and harm."
        },
        {
          "scid": "thag16.2:7.3",
          "pli": "Arakkhitāni ahitāya,",
          "en": "Unguarded they lead to harm;"
        },
        {
          "scid": "thag16.2:7.4",
          "pli": "rakkhitāni hitāya ca.",
          "en": "guarded they lead to welfare."
        },
        {
          "scid": "thag16.2:8.1",
          "pli": "Indriyāneva sārakkhaṃ,",
          "en": "By protecting the faculties,"
        },
        {
          "scid": "thag16.2:8.2",
          "pli": "indriyāni ca gopayaṃ;",
          "en": "taking care of the faculties,"
        },
        {
          "scid": "thag16.2:8.3",
          "pli": "Attano kiccakārīssa,",
          "en": "I can do what I need to do for myself"
        },
        {
          "scid": "thag16.2:8.4",
          "pli": "na ca kañci viheṭhaye.",
          "en": "without harming anyone else."
        },
        {
          "scid": "thag16.2:9.1",
          "pli": "Cakkhundriyañce rūpesu,",
          "en": "If your eye wanders"
        },
        {
          "scid": "thag16.2:9.2",
          "pli": "gacchantaṃ anivārayaṃ;",
          "en": "among sights without check,"
        },
        {
          "scid": "thag16.2:9.3",
          "pli": "Anādīnavadassāvī,",
          "en": "not seeing the danger,"
        },
        {
          "scid": "thag16.2:9.4",
          "pli": "so dukkhā na hi muccati.",
          "en": "you’re not freed from suffering."
        },
        {
          "scid": "thag16.2:10.1",
          "pli": "Sotindriyañce saddesu,",
          "en": "If your ear wanders"
        },
        {
          "scid": "thag16.2:10.2",
          "pli": "gacchantaṃ anivārayaṃ;",
          "en": "among sounds without check,"
        },
        {
          "scid": "thag16.2:10.3",
          "pli": "Anādīnavadassāvī,",
          "en": "not seeing the danger,"
        },
        {
          "scid": "thag16.2:10.4",
          "pli": "so dukkhā na hi muccati.",
          "en": "you’re not freed from suffering."
        },
        {
          "scid": "thag16.2:11.1",
          "pli": "Anissaraṇadassāvī,",
          "en": "If, not seeing the escape,"
        },
        {
          "scid": "thag16.2:11.2",
          "pli": "gandhe ce paṭisevati;",
          "en": "you indulge in a smell,"
        },
        {
          "scid": "thag16.2:11.3",
          "pli": "Na so muccati dukkhamhā,",
          "en": "you’re not freed from suffering,"
        },
        {
          "scid": "thag16.2:11.4",
          "pli": "gandhesu adhimucchito.",
          "en": "being besotted by smells."
        },
        {
          "scid": "thag16.2:12.1",
          "pli": "Ambilaṃ madhuraggañca,",
          "en": "Recollecting the sour,"
        },
        {
          "scid": "thag16.2:12.2",
          "pli": "tittakaggamanussaraṃ;",
          "en": "the sweet and the bitter,"
        },
        {
          "scid": "thag16.2:12.3",
          "pli": "Rasataṇhāya gadhito,",
          "en": "captivated by craving for taste,"
        },
        {
          "scid": "thag16.2:12.4",
          "pli": "hadayaṃ nāvabujjhati.",
          "en": "you don’t understand the heart."
        },
        {
          "scid": "thag16.2:13.1",
          "pli": "Subhānyappaṭikūlāni,",
          "en": "Recollecting lovely"
        },
        {
          "scid": "thag16.2:13.2",
          "pli": "phoṭṭhabbāni anussaraṃ;",
          "en": "and pleasurable touches,"
        },
        {
          "scid": "thag16.2:13.3",
          "pli": "Ratto rāgādhikaraṇaṃ,",
          "en": "full of desire, you experience"
        },
        {
          "scid": "thag16.2:13.4",
          "pli": "vividhaṃ vindate dukhaṃ.",
          "en": "many kinds of suffering because of lust."
        },
        {
          "scid": "thag16.2:14.1",
          "pli": "Manaṃ cetehi dhammehi,",
          "en": "Unable to protect"
        },
        {
          "scid": "thag16.2:14.2",
          "pli": "yo na sakkoti rakkhituṃ;",
          "en": "the mind from such thoughts,"
        },
        {
          "scid": "thag16.2:14.3",
          "pli": "Tato naṃ dukkhamanveti,",
          "en": "suffering follows them"
        },
        {
          "scid": "thag16.2:14.4",
          "pli": "sabbehetehi pañcahi.",
          "en": "because of all five."
        },
        {
          "scid": "thag16.2:15.1",
          "pli": "Pubbalohitasampuṇṇaṃ,",
          "en": "This body is full of pus and blood,"
        },
        {
          "scid": "thag16.2:15.2",
          "pli": "bahussa kuṇapassa ca;",
          "en": "it’s home to many carcasses;"
        },
        {
          "scid": "thag16.2:15.3",
          "pli": "Naravīrakataṃ vagguṃ,",
          "en": "but cunning people decorate it"
        },
        {
          "scid": "thag16.2:15.4",
          "pli": "samuggamiva cittitaṃ.",
          "en": "like a lovely painted casket."
        },
        {
          "scid": "thag16.2:16.1",
          "pli": "Kaṭukaṃ madhurassādaṃ,",
          "en": "You don’t understand that"
        },
        {
          "scid": "thag16.2:16.2",
          "pli": "piyanibandhanaṃ dukhaṃ;",
          "en": "the sweetness of honey turns bitter,"
        },
        {
          "scid": "thag16.2:16.3",
          "pli": "Khuraṃva madhunā littaṃ,",
          "en": "and the bonds to those we love cause pain,"
        },
        {
          "scid": "thag16.2:16.4",
          "pli": "ullihaṃ nāvabujjhati.",
          "en": "like a razor’s edge smeared with honey."
        },
        {
          "scid": "thag16.2:17.1",
          "pli": "Itthirūpe itthisare,",
          "en": "Full of lust for the sight of a woman,"
        },
        {
          "scid": "thag16.2:17.2",
          "pli": "phoṭṭhabbepi ca itthiyā;",
          "en": "for the voice and the smells of a woman,"
        },
        {
          "scid": "thag16.2:17.3",
          "pli": "Itthigandhesu sāratto,",
          "en": "for a woman’s touch,"
        },
        {
          "scid": "thag16.2:17.4",
          "pli": "vividhaṃ vindate dukhaṃ.",
          "en": "you experience many kinds of suffering."
        },
        {
          "scid": "thag16.2:18.1",
          "pli": "Itthisotāni sabbāni,",
          "en": "All of a woman’s streams"
        },
        {
          "scid": "thag16.2:18.2",
          "pli": "sandanti pañca pañcasu;",
          "en": "flow from five to five."
        },
        {
          "scid": "thag16.2:18.3",
          "pli": "Tesamāvaraṇaṃ kātuṃ,",
          "en": "Whoever, being energetic,"
        },
        {
          "scid": "thag16.2:18.4",
          "pli": "yo sakkoti vīriyavā.",
          "en": "is able to curb these,"
        },
        {
          "scid": "thag16.2:19.1",
          "pli": "So atthavā so dhammaṭṭho,",
          "en": "purposeful and firm in Dhamma,"
        },
        {
          "scid": "thag16.2:19.2",
          "pli": "so dakkho so vicakkhaṇo;",
          "en": "is clever and clear-seeing."
        },
        {
          "scid": "thag16.2:19.3",
          "pli": "Kareyya ramamānopi,",
          "en": "Though he might enjoy himself,"
        },
        {
          "scid": "thag16.2:19.4",
          "pli": "kiccaṃ dhammatthasaṃhitaṃ.",
          "en": "his duty is connected with the teaching and its goal."
        },
        {
          "scid": "thag16.2:20.1",
          "pli": "Atho sīdati saññuttaṃ,",
          "en": "One who’s diligent and discerning,"
        },
        {
          "scid": "thag16.2:20.2",
          "pli": "vajje kiccaṃ niratthakaṃ;",
          "en": "thinking, “This ought not be done”,"
        },
        {
          "scid": "thag16.2:20.3",
          "pli": "‘Na taṃ kiccan’ti maññitvā,",
          "en": "would avoid a useless task"
        },
        {
          "scid": "thag16.2:20.4",
          "pli": "appamatto vicakkhaṇo.",
          "en": "that’s doomed to failure."
        },
        {
          "scid": "thag16.2:21.1",
          "pli": "Yañca atthena saññuttaṃ,",
          "en": "Whatever is meaningful,"
        },
        {
          "scid": "thag16.2:21.2",
          "pli": "yā ca dhammagatā rati;",
          "en": "and whatever happiness is principled,"
        },
        {
          "scid": "thag16.2:21.3",
          "pli": "Taṃ samādāya vattetha,",
          "en": "let one undertake and follow that:"
        },
        {
          "scid": "thag16.2:21.4",
          "pli": "sā hi ve uttamā rati.",
          "en": "this is the best happiness."
        },
        {
          "scid": "thag16.2:22.1",
          "pli": "Uccāvacehupāyehi,",
          "en": "They want to get hold of what belongs to others"
        },
        {
          "scid": "thag16.2:22.2",
          "pli": "Paresamabhijigīsati;",
          "en": "by any means, fair or foul."
        },
        {
          "scid": "thag16.2:22.3",
          "pli": "Hantvā vadhitvā atha socayitvā,",
          "en": "They kill, injure, and torment,"
        },
        {
          "scid": "thag16.2:22.4",
          "pli": "Ālopati sāhasā yo paresaṃ.",
          "en": "violently plundering what belongs to others."
        },
        {
          "scid": "thag16.2:23.1",
          "pli": "Tacchanto āṇiyā āṇiṃ,",
          "en": "Just as a strong person when building"
        },
        {
          "scid": "thag16.2:23.2",
          "pli": "nihanti balavā yathā;",
          "en": "knocks out a peg with a peg,"
        },
        {
          "scid": "thag16.2:23.3",
          "pli": "Indriyānindriyeheva,",
          "en": "so the skillful person"
        },
        {
          "scid": "thag16.2:23.4",
          "pli": "nihanti kusalo tathā.",
          "en": "knocks out the faculties with the faculties."
        },
        {
          "scid": "thag16.2:24.1",
          "pli": "Saddhaṃ vīriyaṃ samādhiñca,",
          "en": "Developing faith, energy, immersion,"
        },
        {
          "scid": "thag16.2:24.2",
          "pli": "satipaññañca bhāvayaṃ;",
          "en": "mindfulness, and wisdom;"
        },
        {
          "scid": "thag16.2:24.3",
          "pli": "Pañca pañcahi hantvāna,",
          "en": "destroying the five with the five,"
        },
        {
          "scid": "thag16.2:24.4",
          "pli": "anīgho yāti brāhmaṇo.",
          "en": "the brahmin lives without worry."
        },
        {
          "scid": "thag16.2:25.1",
          "pli": "So atthavā so dhammaṭṭho,",
          "en": "Purposeful and firm in Dhamma,"
        },
        {
          "scid": "thag16.2:25.2",
          "pli": "katvā vākyānusāsaniṃ;",
          "en": "having fulfilled in every respect"
        },
        {
          "scid": "thag16.2:25.3",
          "pli": "Sabbena sabbaṃ buddhassa,",
          "en": "the instructions spoken by the Buddha,"
        },
        {
          "scid": "thag16.2:25.4",
          "pli": "so naro sukhamedhatī”ti.",
          "en": "that person prospers in happiness.”"
        },
        {
          "scid": "thag16.2:26.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag16.2:26.2",
          "pli": "Pārāpariyo thero ….",
          "en": ""
        }
      ],
