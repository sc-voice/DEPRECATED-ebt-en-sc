  "sections": [
    {
      "segments": [
        {
          "scid": "thag11.1:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag11.1:2.1",
          "pli": "Ekādasakanipāta",
          "en": "The Book of the Elevens"
        },
        {
          "scid": "thag11.1:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag11.1:4.1",
          "pli": "11.1. Saṅkiccattheragāthā",
          "en": "11.1. Saṅkicca"
        },
        {
          "scid": "thag11.1:5.1",
          "pli": "“Kiṃ tavattho vane tāta,",
          "en": "“What good does it do you to be in the grove, my dear?"
        },
        {
          "scid": "thag11.1:5.2",
          "pli": "ujjuhānova pāvuse;",
          "en": "You’re like a little bird in the rain!"
        },
        {
          "scid": "thag11.1:5.3",
          "pli": "Verambhā ramaṇīyā te,",
          "en": "The city of Verambhā is nice for you—"
        },
        {
          "scid": "thag11.1:5.4",
          "pli": "paviveko hi jhāyinaṃ”.",
          "en": "seclusion is for meditators.”"
        },
        {
          "scid": "thag11.1:6.1",
          "pli": "“Yathā abbhāni verambho,",
          "en": "“Just as the wind in Verambhā"
        },
        {
          "scid": "thag11.1:6.2",
          "pli": "vāto nudati pāvuse;",
          "en": "scatters the clouds as they pour down,"
        },
        {
          "scid": "thag11.1:6.3",
          "pli": "Saññā me abhikiranti,",
          "en": "so the city scatters"
        },
        {
          "scid": "thag11.1:6.4",
          "pli": "vivekapaṭisaññutā.",
          "en": "my perception of seclusion.”"
        },
        {
          "scid": "thag11.1:7.1",
          "pli": "Apaṇḍaro aṇḍasambhavo,",
          "en": "“It’s all black and born of an egg—"
        },
        {
          "scid": "thag11.1:7.2",
          "pli": "Sīvathikāya niketacāriko;",
          "en": "the crow that lives in the charnel ground"
        },
        {
          "scid": "thag11.1:7.3",
          "pli": "Uppādayateva me satiṃ,",
          "en": "rouses my mindfulness,"
        },
        {
          "scid": "thag11.1:7.4",
          "pli": "Sandehasmiṃ virāganissitaṃ.",
          "en": "based on dispassion for the body."
        },
        {
          "scid": "thag11.1:8.1",
          "pli": "Yañca aññe na rakkhanti,",
          "en": "Not protected by others,"
        },
        {
          "scid": "thag11.1:8.2",
          "pli": "yo ca aññe na rakkhati;",
          "en": "nor protecting others:"
        },
        {
          "scid": "thag11.1:8.3",
          "pli": "Sa ve bhikkhu sukhaṃ seti,",
          "en": "such a monk sleeps happily,"
        },
        {
          "scid": "thag11.1:8.4",
          "pli": "kāmesu anapekkhavā.",
          "en": "without concern for sensual pleasures."
        },
        {
          "scid": "thag11.1:9.1",
          "pli": "Acchodikā puthusilā,",
          "en": "The water’s clear and the rocks are broad,"
        },
        {
          "scid": "thag11.1:9.2",
          "pli": "gonaṅgulamigāyutā;",
          "en": "monkeys and deer are all around;"
        },
        {
          "scid": "thag11.1:9.3",
          "pli": "Ambusevālasañchannā,",
          "en": "festooned with dewy moss,"
        },
        {
          "scid": "thag11.1:9.4",
          "pli": "te selā ramayanti maṃ.",
          "en": "these rocky crags delight me!"
        },
        {
          "scid": "thag11.1:10.1",
          "pli": "Vasitaṃ me araññesu,",
          "en": "I’ve stayed in the wilderness,"
        },
        {
          "scid": "thag11.1:10.2",
          "pli": "kandarāsu guhāsu ca;",
          "en": "in caves and caverns"
        },
        {
          "scid": "thag11.1:10.3",
          "pli": "Senāsanesu pantesu,",
          "en": "and remote lodgings"
        },
        {
          "scid": "thag11.1:10.4",
          "pli": "vāḷamiganisevite.",
          "en": "frequented by beasts of prey."
        },
        {
          "scid": "thag11.1:11.1",
          "pli": "‘Ime haññantu vajjhantu,",
          "en": "‘May these beings be killed!"
        },
        {
          "scid": "thag11.1:11.2",
          "pli": "dukkhaṃ pappontu pāṇino’;",
          "en": "May they be slaughtered! May they suffer!’—"
        },
        {
          "scid": "thag11.1:11.3",
          "pli": "Saṅkappaṃ nābhijānāmi,",
          "en": "I’m not aware of having any such"
        },
        {
          "scid": "thag11.1:11.4",
          "pli": "anariyaṃ dosasaṃhitaṃ.",
          "en": "ignoble, hateful intentions."
        },
        {
          "scid": "thag11.1:12.1",
          "pli": "Pariciṇṇo mayā satthā,",
          "en": "I’ve served the teacher"
        },
        {
          "scid": "thag11.1:12.2",
          "pli": "kataṃ buddhassa sāsanaṃ;",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag11.1:12.3",
          "pli": "Ohito garuko bhāro,",
          "en": "The heavy burden is laid down,"
        },
        {
          "scid": "thag11.1:12.4",
          "pli": "bhavanetti samūhatā.",
          "en": "the attachment to rebirth is eradicated."
        },
        {
          "scid": "thag11.1:13.1",
          "pli": "Yassa catthāya pabbajito,",
          "en": "I’ve attained the goal"
        },
        {
          "scid": "thag11.1:13.2",
          "pli": "agārasmānagāriyaṃ;",
          "en": "for the sake of which I went forth"
        },
        {
          "scid": "thag11.1:13.3",
          "pli": "So me attho anuppatto,",
          "en": "from the lay life to homelessness—"
        },
        {
          "scid": "thag11.1:13.4",
          "pli": "sabbasaṃyojanakkhayo.",
          "en": "the ending of all fetters."
        },
        {
          "scid": "thag11.1:14.1",
          "pli": "Nābhinandāmi maraṇaṃ,",
          "en": "I don’t long for death;"
        },
        {
          "scid": "thag11.1:14.2",
          "pli": "nābhinandāmi jīvitaṃ;",
          "en": "I don’t long for life;"
        },
        {
          "scid": "thag11.1:14.3",
          "pli": "Kālañca paṭikaṅkhāmi,",
          "en": "I await my time,"
        },
        {
          "scid": "thag11.1:14.4",
          "pli": "nibbisaṃ bhatako yathā.",
          "en": "like a worker waiting for their wages."
        },
        {
          "scid": "thag11.1:15.1",
          "pli": "Nābhinandāmi maraṇaṃ,",
          "en": "I don’t long for death;"
        },
        {
          "scid": "thag11.1:15.2",
          "pli": "nābhinandāmi jīvitaṃ;",
          "en": "I don’t long for life;"
        },
        {
          "scid": "thag11.1:15.3",
          "pli": "Kālañca paṭikaṅkhāmi,",
          "en": "I await my time,"
        },
        {
          "scid": "thag11.1:15.4",
          "pli": "sampajāno patissato”ti.",
          "en": "aware and mindful.”"
        },
        {
          "scid": "thag11.1:16.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag11.1:16.2",
          "pli": "Saṅkicco thero ….",
          "en": ""
        },
        {
          "scid": "thag11.1:17.1",
          "pli": "Ekādasakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag11.1:18.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag11.1:19.1",
          "pli": "Saṅkiccathero ekova,",
          "en": ""
        },
        {
          "scid": "thag11.1:19.2",
          "pli": "katakicco anāsavo;",
          "en": ""
        },
        {
          "scid": "thag11.1:19.3",
          "pli": "Ekādasanipātamhi,",
          "en": ""
        },
        {
          "scid": "thag11.1:19.4",
          "pli": "gāthā ekādaseva cāti.",
          "en": ""
        }
      ],
