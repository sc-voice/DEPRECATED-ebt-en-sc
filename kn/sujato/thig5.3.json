      "segments": [
        {
          "scid": "thig5.3:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.3:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.3:3.1",
          "pli": "3. Sīhātherīgāthā",
          "en": "5.3. Sīhā"
        },
        {
          "scid": "thig5.3:4.1",
          "pli": "“Ayoniso manasikārā,",
          "en": "Due to improper attention,"
        },
        {
          "scid": "thig5.3:4.2",
          "pli": "kāmarāgena aṭṭitā;",
          "en": "I was racked by desire for pleasures of the senses."
        },
        {
          "scid": "thig5.3:4.3",
          "pli": "Ahosiṃ uddhatā pubbe,",
          "en": "I was restless in the past,"
        },
        {
          "scid": "thig5.3:4.4",
          "pli": "citte avasavattinī.",
          "en": "lacking control over my mind."
        },
        {
          "scid": "thig5.3:5.1",
          "pli": "Pariyuṭṭhitā klesehi,",
          "en": "Overcome by corruptions,"
        },
        {
          "scid": "thig5.3:5.2",
          "pli": "subhasaññānuvattinī;",
          "en": "pursuing perceptions of the beautiful,"
        },
        {
          "scid": "thig5.3:5.3",
          "pli": "Samaṃ cittassa na labhiṃ,",
          "en": "I gained no peace of mind."
        },
        {
          "scid": "thig5.3:5.4",
          "pli": "rāgacittavasānugā.",
          "en": "Under the sway of lustful thoughts,"
        },
        {
          "scid": "thig5.3:6.1",
          "pli": "Kisā paṇḍu vivaṇṇā ca,",
          "en": "thin, pale, and wan,"
        },
        {
          "scid": "thig5.3:6.2",
          "pli": "satta vassāni cārihaṃ;",
          "en": "for seven years I wandered,"
        },
        {
          "scid": "thig5.3:6.3",
          "pli": "Nāhaṃ divā vā rattiṃ vā,",
          "en": "full of pain,"
        },
        {
          "scid": "thig5.3:6.4",
          "pli": "sukhaṃ vindiṃ sudukkhitā.",
          "en": "finding no happiness by day or night."
        },
        {
          "scid": "thig5.3:7.1",
          "pli": "Tato rajjuṃ gahetvāna,",
          "en": "Taking a rope"
        },
        {
          "scid": "thig5.3:7.2",
          "pli": "pāvisiṃ vanamantaraṃ;",
          "en": "I entered deep into the forest, thinking:"
        },
        {
          "scid": "thig5.3:7.3",
          "pli": "Varaṃ me idha ubbandhaṃ,",
          "en": "“It’s better that I hang myself"
        },
        {
          "scid": "thig5.3:7.4",
          "pli": "yañca hīnaṃ punācare.",
          "en": "than I return to a lesser life.”"
        },
        {
          "scid": "thig5.3:8.1",
          "pli": "Daḷhapāsaṃ karitvāna,",
          "en": "I made a strong noose"
        },
        {
          "scid": "thig5.3:8.2",
          "pli": "rukkhasākhāya bandhiya;",
          "en": "and tied it to the branch of a tree."
        },
        {
          "scid": "thig5.3:8.3",
          "pli": "Pakkhipiṃ pāsaṃ gīvāyaṃ,",
          "en": "Casting it round my neck,"
        },
        {
          "scid": "thig5.3:8.4",
          "pli": "atha cittaṃ vimucci me”ti.",
          "en": "my mind was freed."
        },
        {
          "scid": "thig5.3:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.3:9.2",
          "pli": "Sīhā therī ….",
          "en": ""
        }
      ],
