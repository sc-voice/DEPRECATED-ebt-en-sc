      "segments": [
        {
          "scid": "thag3.8:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.8:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.8:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.8:4.1",
          "pli": "3.8 Vassikattheragāthā",
          "en": "3.8. Vassika"
        },
        {
          "scid": "thag3.8:5.1",
          "pli": "“Ekopi saddho medhāvī,",
          "en": "I was the only one in my family"
        },
        {
          "scid": "thag3.8:5.2",
          "pli": "assaddhānīdha ñātinaṃ;",
          "en": "who had faith and wisdom."
        },
        {
          "scid": "thag3.8:5.3",
          "pli": "Dhammaṭṭho sīlasampanno,",
          "en": "It’s good for my relatives that I’m"
        },
        {
          "scid": "thag3.8:5.4",
          "pli": "hoti atthāya bandhunaṃ.",
          "en": "firm in Dhamma, and my conduct is virtuous."
        },
        {
          "scid": "thag3.8:6.1",
          "pli": "Niggayha anukampāya,",
          "en": "I rebuked my family out of compassion,"
        },
        {
          "scid": "thag3.8:6.2",
          "pli": "coditā ñātayo mayā;",
          "en": "telling them off out of love"
        },
        {
          "scid": "thag3.8:6.3",
          "pli": "Ñātibandhavapemena,",
          "en": "for my family and relatives."
        },
        {
          "scid": "thag3.8:6.4",
          "pli": "kāraṃ katvāna bhikkhusu.",
          "en": "They performed a service for the monks"
        },
        {
          "scid": "thag3.8:7.1",
          "pli": "Te abbhatītā kālaṅkatā,",
          "en": "and then they passed away,"
        },
        {
          "scid": "thag3.8:7.2",
          "pli": "pattā te tidivaṃ sukhaṃ;",
          "en": "finding happiness in the heaven of the Thirty-three."
        },
        {
          "scid": "thag3.8:7.3",
          "pli": "Bhātaro mayhaṃ mātā ca,",
          "en": "There, my brothers and mother"
        },
        {
          "scid": "thag3.8:7.4",
          "pli": "modanti kāmakāmino”ti.",
          "en": "enjoy all the pleasures they desire."
        },
        {
          "scid": "thag3.8:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.8:8.2",
          "pli": "Vassiko thero ….",
          "en": ""
        }
      ],
