          "scid": "thag1.84:4.1",
          "pli": "1.84. Nītattheragāthā",
          "en": "1.84. Nīta"
        },
        {
          "scid": "thag1.84:5.1",
          "pli": "“Sabbarattiṃ supitvāna,",
          "en": "Sleeping all night,"
        },
        {
          "scid": "thag1.84:5.2",
          "pli": "divā saṅgaṇike rato;",
          "en": "happily socializing by day,"
        },
        {
          "scid": "thag1.84:5.3",
          "pli": "Kudāssu nāma dummedho,",
          "en": "when will the fool"
        },
        {
          "scid": "thag1.84:5.4",
          "pli": "dukkhassantaṃ karissatī”ti.",
          "en": "make an end of suffering?"
        },
        {
          "scid": "thag1.84:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.84:6.2",
          "pli": "Nīto thero ….",
          "en": ""
