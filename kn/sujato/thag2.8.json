      "segments": [
        {
          "scid": "thag2.8:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.8:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.8:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.8:4.1",
          "pli": "2.8. Surādhattheragāthā",
          "en": "2.8. Surādha"
        },
        {
          "scid": "thag2.8:5.1",
          "pli": "“Khīṇā hi mayhaṃ jāti,",
          "en": "Rebirth is ended for me;"
        },
        {
          "scid": "thag2.8:5.2",
          "pli": "vusitaṃ jinasāsanaṃ;",
          "en": "the victor’s instruction is fulfilled;"
        },
        {
          "scid": "thag2.8:5.3",
          "pli": "Pahīno jālasaṅkhāto,",
          "en": "what they call a “net” is given up;"
        },
        {
          "scid": "thag2.8:5.4",
          "pli": "bhavanetti samūhatā.",
          "en": "the attachment to rebirth is eradicated."
        },
        {
          "scid": "thag2.8:6.1",
          "pli": "Yassatthāya pabbajito,",
          "en": "I’ve reached the goal"
        },
        {
          "scid": "thag2.8:6.2",
          "pli": "agārasmānagāriyaṃ;",
          "en": "for the sake of which I went forth"
        },
        {
          "scid": "thag2.8:6.3",
          "pli": "So me attho anuppatto,",
          "en": "from the lay life to homelessness:"
        },
        {
          "scid": "thag2.8:6.4",
          "pli": "sabbasaṃyojanakkhayo”ti.",
          "en": "the ending of all fetters."
        },
        {
          "scid": "thag2.8:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.8:7.2",
          "pli": "Surādho thero ….",
          "en": ""
        }
      ],
