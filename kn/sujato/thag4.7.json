      "segments": [
        {
          "scid": "thag4.7:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.7:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.7:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.7:4.1",
          "pli": "4.7. Sambhūtattheragāthā",
          "en": "4.7. Sambhūta"
        },
        {
          "scid": "thag4.7:5.1",
          "pli": "“Yo dandhakāle tarati,",
          "en": "Hurrying when it’s time to dawdle;"
        },
        {
          "scid": "thag4.7:5.2",
          "pli": "taraṇīye ca dandhaye;",
          "en": "dawdling when it’s time to hurry;"
        },
        {
          "scid": "thag4.7:5.3",
          "pli": "Ayoni saṃvidhānena,",
          "en": "being so disorganized"
        },
        {
          "scid": "thag4.7:5.4",
          "pli": "bālo dukkhaṃ nigacchati.",
          "en": "a fool falls into suffering."
        },
        {
          "scid": "thag4.7:6.1",
          "pli": "Tassatthā parihāyanti,",
          "en": "Their good fortune wastes away"
        },
        {
          "scid": "thag4.7:6.2",
          "pli": "kāḷapakkheva candimā;",
          "en": "like the moon in the waning fortnight."
        },
        {
          "scid": "thag4.7:6.3",
          "pli": "Āyasakyañca pappoti,",
          "en": "They become disgraced"
        },
        {
          "scid": "thag4.7:6.4",
          "pli": "mittehi ca virujjhati.",
          "en": "and alienated from their friends."
        },
        {
          "scid": "thag4.7:7.1",
          "pli": "Yo dandhakāle dandheti,",
          "en": "Dawdling when it’s time to dawdle;"
        },
        {
          "scid": "thag4.7:7.2",
          "pli": "taraṇīye ca tāraye;",
          "en": "hurrying when it’s time to hurry;"
        },
        {
          "scid": "thag4.7:7.3",
          "pli": "Yoniso saṃvidhānena,",
          "en": "being so well organized,"
        },
        {
          "scid": "thag4.7:7.4",
          "pli": "sukhaṃ pappoti paṇḍito.",
          "en": "an astute person comes into happiness."
        },
        {
          "scid": "thag4.7:8.1",
          "pli": "Tassatthā paripūrenti,",
          "en": "Their good fortune flourishes"
        },
        {
          "scid": "thag4.7:8.2",
          "pli": "sukkapakkheva candimā;",
          "en": "like the moon in the waxing fortnight."
        },
        {
          "scid": "thag4.7:8.3",
          "pli": "Yaso kittiñca pappoti,",
          "en": "They become famous and respected,"
        },
        {
          "scid": "thag4.7:8.4",
          "pli": "mittehi na virujjhatī”ti.",
          "en": "not alienated from their friends."
        },
        {
          "scid": "thag4.7:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.7:9.2",
          "pli": "Sambhūto thero ….",
          "en": ""
        }
      ],
