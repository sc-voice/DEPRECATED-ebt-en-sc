          "scid": "thag1.76:4.1",
          "pli": "1.76. Piyañjahattheragāthā",
          "en": "1.76. Piyañjaha"
        },
        {
          "scid": "thag1.76:5.1",
          "pli": "“Uppatantesu nipate,",
          "en": "Settle down when others spring up;"
        },
        {
          "scid": "thag1.76:5.2",
          "pli": "nipatantesu uppate;",
          "en": "spring up when others settle down."
        },
        {
          "scid": "thag1.76:5.3",
          "pli": "Vase avasamānesu,",
          "en": "Remain when others have departed;"
        },
        {
          "scid": "thag1.76:5.4",
          "pli": "ramamānesu no rame”ti.",
          "en": "don’t delight when others delight."
        },
        {
          "scid": "thag1.76:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.76:6.2",
          "pli": "Piyañjaho thero ….",
          "en": ""
        }
      ],
