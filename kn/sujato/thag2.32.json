      "segments": [
        {
          "scid": "thag2.32:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.32:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.32:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.32:4.1",
          "pli": "2.32 Sivakattheragāthā",
          "en": "2.32. Sivaka"
        },
        {
          "scid": "thag2.32:5.1",
          "pli": "“Aniccāni gahakāni,",
          "en": "Houses are impermanent—"
        },
        {
          "scid": "thag2.32:5.2",
          "pli": "tattha tattha punappunaṃ;",
          "en": "on and on, life after life."
        },
        {
          "scid": "thag2.32:5.3",
          "pli": "Gahakāraṃ gavesanto,",
          "en": "I’ve been searching for the house-builder—"
        },
        {
          "scid": "thag2.32:5.4",
          "pli": "dukkhā jāti punappunaṃ.",
          "en": "painful is birth again and again."
        },
        {
          "scid": "thag2.32:6.1",
          "pli": "Gahakāraka diṭṭhosi,",
          "en": "I’ve seen you, house-builder!"
        },
        {
          "scid": "thag2.32:6.2",
          "pli": "puna gehaṃ na kāhasi;",
          "en": "You won’t build a house again."
        },
        {
          "scid": "thag2.32:6.3",
          "pli": "Sabbā te phāsukā bhaggā,",
          "en": "All your rafters are broken,"
        },
        {
          "scid": "thag2.32:6.4",
          "pli": "thūṇikā ca vidālitā;",
          "en": "your ridgepole is shattered."
        },
        {
          "scid": "thag2.32:6.5",
          "pli": "Vimariyādikataṃ cittaṃ,",
          "en": "My mind is released from limits:"
        },
        {
          "scid": "thag2.32:6.6",
          "pli": "idheva vidhamissatī”ti.",
          "en": "in this very life it will dissipate."
        },
        {
          "scid": "thag2.32:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.32:7.2",
          "pli": "Sivako thero ….",
          "en": ""
        }
      ],
