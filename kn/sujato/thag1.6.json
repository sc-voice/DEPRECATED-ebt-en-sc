        },
        {
          "scid": "thag1.6:4.1",
          "pli": "1.6. Sītavaniyattheragāthā",
          "en": "1.6. Sītavaniya"
        },
        {
          "scid": "thag1.6:5.1",
          "pli": "“Yo sītavanaṃ upagā bhikkhu,",
          "en": "The monk who went to Sītavana is solitary,"
        },
        {
          "scid": "thag1.6:5.2",
          "pli": "Eko santusito samāhitatto;",
          "en": "content and serene,"
        },
        {
          "scid": "thag1.6:5.3",
          "pli": "Vijitāvī apetalomahaṃso,",
          "en": "victorious, with goosebumps vanished,"
        },
        {
          "scid": "thag1.6:5.4",
          "pli": "Rakkhaṃ kāyagatāsatiṃ dhitimā”ti.",
          "en": "guarding mindfulness of the body, resolute."
        },
        {
          "scid": "thag1.6:6.1",
          "pli": "Itthaṃ sudaṃ āyasmā sītavaniyo thero gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior venerable Sītavaniya."
        }
      ],
