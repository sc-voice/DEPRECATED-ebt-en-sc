      "segments": [
        {
          "scid": "thig6.4:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig6.4:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thig6.4:3.1",
          "pli": "4. Sujātātherīgāthā",
          "en": "6.4. Sujātā"
        },
        {
          "scid": "thig6.4:4.1",
          "pli": "“Alaṅkatā suvasanā,",
          "en": "I was adorned with jewelry and all dressed up,"
        },
        {
          "scid": "thig6.4:4.2",
          "pli": "mālinī candanokkhitā;",
          "en": "with garlands, and sandalwood makeup piled on,"
        },
        {
          "scid": "thig6.4:4.3",
          "pli": "Sabbābharaṇasañchannā,",
          "en": "all covered over with decorations,"
        },
        {
          "scid": "thig6.4:4.4",
          "pli": "dāsīgaṇapurakkhatā.",
          "en": "and surrounded by my maids."
        },
        {
          "scid": "thig6.4:5.1",
          "pli": "Annaṃ pānañca ādāya,",
          "en": "Taking food and drink,"
        },
        {
          "scid": "thig6.4:5.2",
          "pli": "khajjaṃ bhojjaṃ anappakaṃ;",
          "en": "staples and dainties in no small amount,"
        },
        {
          "scid": "thig6.4:5.3",
          "pli": "Gehato nikkhamitvāna,",
          "en": "I left my house"
        },
        {
          "scid": "thig6.4:5.4",
          "pli": "uyyānamabhihārayiṃ.",
          "en": "and betook myself to the park."
        },
        {
          "scid": "thig6.4:6.1",
          "pli": "Tattha ramitvā kīḷitvā,",
          "en": "I enjoyed myself there and played about,"
        },
        {
          "scid": "thig6.4:6.2",
          "pli": "āgacchantī sakaṃ gharaṃ;",
          "en": "and then, returning to my own home,"
        },
        {
          "scid": "thig6.4:6.3",
          "pli": "Vihāraṃ daṭṭhuṃ pāvisiṃ,",
          "en": "I saw a monastic dwelling,"
        },
        {
          "scid": "thig6.4:6.4",
          "pli": "sākete añjanaṃ vanaṃ.",
          "en": "and so I entered the Añjana grove at Sāketa."
        },
        {
          "scid": "thig6.4:7.1",
          "pli": "Disvāna lokapajjotaṃ,",
          "en": "Seeing the light of the world,"
        },
        {
          "scid": "thig6.4:7.2",
          "pli": "vanditvāna upāvisiṃ;",
          "en": "I paid homage and sat down."
        },
        {
          "scid": "thig6.4:7.3",
          "pli": "So me dhammamadesesi,",
          "en": "Out of compassion"
        },
        {
          "scid": "thig6.4:7.4",
          "pli": "anukampāya cakkhumā.",
          "en": "the seer taught me the Dhamma."
        },
        {
          "scid": "thig6.4:8.1",
          "pli": "Sutvā ca kho mahesissa,",
          "en": "When I heard the great hermit,"
        },
        {
          "scid": "thig6.4:8.2",
          "pli": "saccaṃ sampaṭivijjhahaṃ;",
          "en": "I penetrated the truth."
        },
        {
          "scid": "thig6.4:8.3",
          "pli": "Tattheva virajaṃ dhammaṃ,",
          "en": "Right there I encountered the Dhamma,"
        },
        {
          "scid": "thig6.4:8.4",
          "pli": "phusayiṃ amataṃ padaṃ.",
          "en": "the stainless, deathless state."
        },
        {
          "scid": "thig6.4:9.1",
          "pli": "Tato viññātasaddhammā,",
          "en": "Then, having understood the true teaching,"
        },
        {
          "scid": "thig6.4:9.2",
          "pli": "pabbajiṃ anagāriyaṃ;",
          "en": "I went forth to homelessness."
        },
        {
          "scid": "thig6.4:9.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges;"
        },
        {
          "scid": "thig6.4:9.4",
          "pli": "amoghaṃ buddhasāsanan”ti.",
          "en": "the Buddha’s bidding was not in vain."
        },
        {
          "scid": "thig6.4:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig6.4:10.2",
          "pli": "Sujātā therī ….",
          "en": ""
        }
      ],
