  "sections": [
    {
      "segments": [
        {
          "scid": "thag6.14:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.14:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.14:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.14:4.1",
          "pli": "6.14. Sabbakāmittheragāthā",
          "en": "6.14. Sabbakāmi"
        },
        {
          "scid": "thag6.14:5.1",
          "pli": "“Dvipādakoyaṃ asuci,",
          "en": "This two-legged body is dirty and stinking,"
        },
        {
          "scid": "thag6.14:5.2",
          "pli": "duggandho parihīrati;",
          "en": "full of different carcasses,"
        },
        {
          "scid": "thag6.14:5.3",
          "pli": "Nānākuṇapaparipūro,",
          "en": "and oozing all over the place—"
        },
        {
          "scid": "thag6.14:5.4",
          "pli": "vissavanto tato tato.",
          "en": "but still it is cherished!"
        },
        {
          "scid": "thag6.14:6.1",
          "pli": "Migaṃ nilīnaṃ kūṭena,",
          "en": "Like a lurking deer by a trick,"
        },
        {
          "scid": "thag6.14:6.2",
          "pli": "baḷiseneva ambujaṃ;",
          "en": "like a fish by a hook,"
        },
        {
          "scid": "thag6.14:6.3",
          "pli": "Vānaraṃ viya lepena,",
          "en": "like a monkey by tar—"
        },
        {
          "scid": "thag6.14:6.4",
          "pli": "bādhayanti puthujjanaṃ.",
          "en": "they trap an ordinary person."
        },
        {
          "scid": "thag6.14:7.1",
          "pli": "Rūpā saddā rasā gandhā,",
          "en": "Sights, sounds, tastes, smells,"
        },
        {
          "scid": "thag6.14:7.2",
          "pli": "phoṭṭhabbā ca manoramā;",
          "en": "and touches so delightful:"
        },
        {
          "scid": "thag6.14:7.3",
          "pli": "Pañca kāmaguṇā ete,",
          "en": "these five kinds of sensual stimulation"
        },
        {
          "scid": "thag6.14:7.4",
          "pli": "itthirūpasmi dissare.",
          "en": "are seen in a woman’s body."
        },
        {
          "scid": "thag6.14:8.1",
          "pli": "Ye etā upasevanti,",
          "en": "Those ordinary people, their minds full of lust,"
        },
        {
          "scid": "thag6.14:8.2",
          "pli": "rattacittā puthujjanā;",
          "en": "who pursue those women:"
        },
        {
          "scid": "thag6.14:8.3",
          "pli": "Vaḍḍhenti kaṭasiṃ ghoraṃ,",
          "en": "they swell the horrors of the charnel ground,"
        },
        {
          "scid": "thag6.14:8.4",
          "pli": "ācinanti punabbhavaṃ.",
          "en": "piling up future lives."
        },
        {
          "scid": "thag6.14:9.1",
          "pli": "Yo cetā parivajjeti,",
          "en": "The one who avoids them,"
        },
        {
          "scid": "thag6.14:9.2",
          "pli": "sappasseva padā siro;",
          "en": "like a snake’s head with a foot,"
        },
        {
          "scid": "thag6.14:9.3",
          "pli": "Somaṃ visattikaṃ loke,",
          "en": "mindful, he transcends"
        },
        {
          "scid": "thag6.14:9.4",
          "pli": "sato samativattati.",
          "en": "attachment to the world."
        },
        {
          "scid": "thag6.14:10.1",
          "pli": "Kāmesvādīnavaṃ disvā,",
          "en": "Seeing the danger in sensual pleasures,"
        },
        {
          "scid": "thag6.14:10.2",
          "pli": "nekkhammaṃ daṭṭhu khemato;",
          "en": "seeing renunciation as a sanctuary,"
        },
        {
          "scid": "thag6.14:10.3",
          "pli": "Nissaṭo sabbakāmehi,",
          "en": "I’ve escaped all sensual pleasures,"
        },
        {
          "scid": "thag6.14:10.4",
          "pli": "patto me āsavakkhayo”ti.",
          "en": "and attained the ending of defilements."
        },
        {
          "scid": "thag6.14:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.14:11.2",
          "pli": "Sabbakāmitthero ….",
          "en": ""
        },
        {
          "scid": "thag6.14:12.1",
          "pli": "Chakkanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag6.14:13.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag6.14:14.1",
          "pli": "Uruveḷakassapo ca,",
          "en": ""
        },
        {
          "scid": "thag6.14:14.2",
          "pli": "thero tekicchakāri ca;",
          "en": ""
        },
        {
          "scid": "thag6.14:14.3",
          "pli": "Mahānāgo ca kullo ca,",
          "en": ""
        },
        {
          "scid": "thag6.14:14.4",
          "pli": "mālukyo sappadāsako;",
          "en": ""
        },
        {
          "scid": "thag6.14:14.5",
          "pli": "Kātiyāno migajālo,",
          "en": ""
        },
        {
          "scid": "thag6.14:14.6",
          "pli": "jento sumanasavhayo;",
          "en": ""
        },
        {
          "scid": "thag6.14:14.7",
          "pli": "Nhātamuni brahmadatto,",
          "en": ""
        },
        {
          "scid": "thag6.14:14.8",
          "pli": "sirimaṇḍo sabbakāmī ca;",
          "en": ""
        },
        {
          "scid": "thag6.14:14.9",
          "pli": "Gāthāyo caturāsīti,",
          "en": ""
        },
        {
          "scid": "thag6.14:14.10",
          "pli": "therā cettha catuddasāti.",
          "en": ""
        }
      ],
