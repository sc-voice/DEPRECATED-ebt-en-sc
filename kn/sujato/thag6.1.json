      "segments": [
        {
          "scid": "thag6.1:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.1:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.1:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.1:4.1",
          "pli": "6.1 Uruveḷakassapattheragāthā",
          "en": "6.1. Uruveḷakassapa"
        },
        {
          "scid": "thag6.1:5.1",
          "pli": "“Disvāna pāṭihīrāni,",
          "en": "Seeing the demonstrations"
        },
        {
          "scid": "thag6.1:5.2",
          "pli": "gotamassa yasassino;",
          "en": "of the renowned Gotama"
        },
        {
          "scid": "thag6.1:5.3",
          "pli": "Na tāvāhaṃ paṇipatiṃ,",
          "en": "was not enough for me to bow to him—"
        },
        {
          "scid": "thag6.1:5.4",
          "pli": "issāmānena vañcito.",
          "en": "I was blinded by jealousy and conceit."
        },
        {
          "scid": "thag6.1:6.1",
          "pli": "Mama saṅkappamaññāya,",
          "en": "Knowing my thoughts,"
        },
        {
          "scid": "thag6.1:6.2",
          "pli": "codesi narasārathi;",
          "en": "the trainer of men scolded me."
        },
        {
          "scid": "thag6.1:6.3",
          "pli": "Tato me āsi saṃvego,",
          "en": "I was struck with a sense of urgency,"
        },
        {
          "scid": "thag6.1:6.4",
          "pli": "abbhuto lomahaṃsano.",
          "en": "so astonishing and hair-raising!"
        },
        {
          "scid": "thag6.1:7.1",
          "pli": "Pubbe jaṭilabhūtassa,",
          "en": "Rejecting the petty powers"
        },
        {
          "scid": "thag6.1:7.2",
          "pli": "yā me siddhi parittikā;",
          "en": "I had before as a matted-hair ascetic,"
        },
        {
          "scid": "thag6.1:7.3",
          "pli": "Tāhaṃ tadā nirākatvā,",
          "en": "I then went forth"
        },
        {
          "scid": "thag6.1:7.4",
          "pli": "pabbajiṃ jinasāsane.",
          "en": "in the victor’s instruction."
        },
        {
          "scid": "thag6.1:8.1",
          "pli": "Pubbe yaññena santuṭṭho,",
          "en": "I used to be content with sacrifice,"
        },
        {
          "scid": "thag6.1:8.2",
          "pli": "kāmadhātupurakkhato;",
          "en": "the realm of sensual pleasures was my priority."
        },
        {
          "scid": "thag6.1:8.3",
          "pli": "Pacchā rāgañca dosañca,",
          "en": "But later I eradicated desire,"
        },
        {
          "scid": "thag6.1:8.4",
          "pli": "mohañcāpi samūhaniṃ.",
          "en": "and hatred and also delusion."
        },
        {
          "scid": "thag6.1:9.1",
          "pli": "Pubbenivāsaṃ jānāmi,",
          "en": "I know my past lives;"
        },
        {
          "scid": "thag6.1:9.2",
          "pli": "dibbacakkhu visodhitaṃ;",
          "en": "my clairvoyance is clarified;"
        },
        {
          "scid": "thag6.1:9.3",
          "pli": "Iddhimā paracittaññū,",
          "en": "I have psychic powers, and know the minds of others;"
        },
        {
          "scid": "thag6.1:9.4",
          "pli": "dibbasotañca pāpuṇiṃ.",
          "en": "I have attained clairaudience."
        },
        {
          "scid": "thag6.1:10.1",
          "pli": "Yassa catthāya pabbajito,",
          "en": "I’ve attained the goal"
        },
        {
          "scid": "thag6.1:10.2",
          "pli": "agārasmānagāriyaṃ;",
          "en": "for the sake of which I went forth"
        },
        {
          "scid": "thag6.1:10.3",
          "pli": "So me attho anuppatto,",
          "en": "from the lay life to homelessness—"
        },
        {
          "scid": "thag6.1:10.4",
          "pli": "sabbasaṃyojanakkhayo”ti.",
          "en": "the ending of all fetters."
        },
        {
          "scid": "thag6.1:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.1:11.2",
          "pli": "Uruveḷakassapo thero ….",
          "en": ""
        }
      ],
