      "segments": [
        {
          "scid": "thag3.11:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.11:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.11:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.11:4.1",
          "pli": "3.11. Upālittheragāthā",
          "en": "3.11. Upāli"
        },
        {
          "scid": "thag3.11:5.1",
          "pli": "“Saddhāya abhinikkhamma,",
          "en": "One newly gone forth,"
        },
        {
          "scid": "thag3.11:5.2",
          "pli": "navapabbajito navo;",
          "en": "who has left their home out of faith,"
        },
        {
          "scid": "thag3.11:5.3",
          "pli": "Mitte bhajeyya kalyāṇe,",
          "en": "should associate with spiritual friends,"
        },
        {
          "scid": "thag3.11:5.4",
          "pli": "suddhājīve atandite.",
          "en": "who are tireless and pure of livelihood."
        },
        {
          "scid": "thag3.11:6.1",
          "pli": "Saddhāya abhinikkhamma,",
          "en": "One newly gone forth,"
        },
        {
          "scid": "thag3.11:6.2",
          "pli": "navapabbajito navo;",
          "en": "who has left their home out of faith,"
        },
        {
          "scid": "thag3.11:6.3",
          "pli": "Saṃghasmiṃ viharaṃ bhikkhu,",
          "en": "a mendicant staying in the Saṅgha,"
        },
        {
          "scid": "thag3.11:6.4",
          "pli": "sikkhetha vinayaṃ budho.",
          "en": "being wise, would train in monastic discipline."
        },
        {
          "scid": "thag3.11:7.1",
          "pli": "Saddhāya abhinikkhamma,",
          "en": "One newly gone forth,"
        },
        {
          "scid": "thag3.11:7.2",
          "pli": "navapabbajito navo;",
          "en": "who has left their home out of faith,"
        },
        {
          "scid": "thag3.11:7.3",
          "pli": "Kappākappesu kusalo,",
          "en": "skilled in what is appropriate and what is not,"
        },
        {
          "scid": "thag3.11:7.4",
          "pli": "careyya apurakkhato”ti.",
          "en": "would wander undistracted."
        },
        {
          "scid": "thag3.11:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.11:8.2",
          "pli": "Upālitthero ….",
          "en": ""
        }
