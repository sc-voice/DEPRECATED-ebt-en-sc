        },
        {
          "scid": "thag2.3:4.1",
          "pli": "2.3. Valliyattheragāthā",
          "en": "2.3. Valliya (2nd)"
        },
        {
          "scid": "thag2.3:5.1",
          "pli": "“Makkaṭo pañcadvārāyaṃ,",
          "en": "A monkey went up to the little hut"
        },
        {
          "scid": "thag2.3:5.2",
          "pli": "kuṭikāyaṃ pasakkiya;",
          "en": "with five doors."
        },
        {
          "scid": "thag2.3:5.3",
          "pli": "Dvārena anupariyeti,",
          "en": "He circles around, knocking"
        },
        {
          "scid": "thag2.3:5.4",
          "pli": "ghaṭṭayanto muhuṃ muhuṃ.",
          "en": "on each door, again and again."
        },
        {
          "scid": "thag2.3:6.1",
          "pli": "Tiṭṭha makkaṭa mā dhāvi,",
          "en": "Stand still monkey, don’t run!"
        },
        {
          "scid": "thag2.3:6.2",
          "pli": "na hi te taṃ yathā pure;",
          "en": "Things are different now;"
        },
        {
          "scid": "thag2.3:6.3",
          "pli": "Niggahītosi paññāya,",
          "en": "you’ve been caught by wisdom—"
        },
        {
          "scid": "thag2.3:6.4",
          "pli": "neva dūraṃ gamissatī”ti.",
          "en": "you won’t go far."
        },
        {
          "scid": "thag2.3:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.3:7.2",
          "pli": "Valliyo thero ….",
          "en": ""
        }
      ],
