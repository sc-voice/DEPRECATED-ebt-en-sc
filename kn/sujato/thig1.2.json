        {
          "scid": "thig1.2:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig1.2:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thig1.2:3.1",
          "pli": "2. Muttātherīgāthā",
          "en": "1.2. Muttā (1st)"
        },
        {
          "scid": "thig1.2:4.1",
          "pli": "“Mutte muccassu yogehi,",
          "en": "Muttā, be released from your bonds,"
        },
        {
          "scid": "thig1.2:4.2",
          "pli": "cando rāhuggahā iva;",
          "en": "like the moon released from Rāhu’s grip, the eclipse."
        },
        {
          "scid": "thig1.2:4.3",
          "pli": "Vippamuttena cittena,",
          "en": "When your mind is released,"
        },
        {
          "scid": "thig1.2:4.4",
          "pli": "anaṇā bhuñja piṇḍakan”ti.",
          "en": "enjoy your alms free of debt."
        },
        {
          "scid": "thig1.2:5.1",
          "pli": "Itthaṃ sudaṃ bhagavā muttaṃ sikkhamānaṃ imāya gāthāya abhiṇhaṃ ovadatīti.",
          "en": "It was thus that the Buddha regularly advised the trainee nun Muttā with these verses."
        }
      ],
