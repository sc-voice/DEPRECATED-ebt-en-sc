      "segments": [
        {
          "scid": "thag6.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.4:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.4:4.1",
          "pli": "6.4. Kullattheragāthā",
          "en": "6.4. Kulla"
        },
        {
          "scid": "thag6.4:5.1",
          "pli": "“Kullo sivathikaṃ gantvā,",
          "en": "I, Kulla, went to a charnel ground"
        },
        {
          "scid": "thag6.4:5.2",
          "pli": "addasa itthimujjhitaṃ;",
          "en": "and saw a woman’s body abandoned there,"
        },
        {
          "scid": "thag6.4:5.3",
          "pli": "Apaviddhaṃ susānasmiṃ,",
          "en": "discarded in a cemetery,"
        },
        {
          "scid": "thag6.4:5.4",
          "pli": "khajjantiṃ kimihī phuṭaṃ.",
          "en": "full of worms that devoured."
        },
        {
          "scid": "thag6.4:6.1",
          "pli": "Āturaṃ asuciṃ pūtiṃ,",
          "en": "“See this bag of bones, Kulla—"
        },
        {
          "scid": "thag6.4:6.2",
          "pli": "passa kulla samussayaṃ;",
          "en": "diseased, filthy, rotten,"
        },
        {
          "scid": "thag6.4:6.3",
          "pli": "Uggharantaṃ paggharantaṃ,",
          "en": "oozing and trickling,"
        },
        {
          "scid": "thag6.4:6.4",
          "pli": "bālānaṃ abhinanditaṃ.",
          "en": "a fool’s delight.”"
        },
        {
          "scid": "thag6.4:7.1",
          "pli": "Dhammādāsaṃ gahetvāna,",
          "en": "Taking the teaching as a mirror"
        },
        {
          "scid": "thag6.4:7.2",
          "pli": "ñāṇadassanapattiyā;",
          "en": "for realizing knowledge and vision,"
        },
        {
          "scid": "thag6.4:7.3",
          "pli": "Paccavekkhiṃ imaṃ kāyaṃ,",
          "en": "I examined this body,"
        },
        {
          "scid": "thag6.4:7.4",
          "pli": "tucchaṃ santarabāhiraṃ.",
          "en": "hollow, inside and out."
        },
        {
          "scid": "thag6.4:8.1",
          "pli": "Yathā idaṃ tathā etaṃ,",
          "en": "As this is, so is that;"
        },
        {
          "scid": "thag6.4:8.2",
          "pli": "yathā etaṃ tathā idaṃ;",
          "en": "as that is, so is this."
        },
        {
          "scid": "thag6.4:8.3",
          "pli": "Yathā adho tathā uddhaṃ,",
          "en": "As below, so above;"
        },
        {
          "scid": "thag6.4:8.4",
          "pli": "yathā uddhaṃ tathā adho.",
          "en": "as above, so below."
        },
        {
          "scid": "thag6.4:9.1",
          "pli": "Yathā divā tathā rattiṃ,",
          "en": "As by day, so by night;"
        },
        {
          "scid": "thag6.4:9.2",
          "pli": "yathā rattiṃ tathā divā;",
          "en": "as by night, so by day."
        },
        {
          "scid": "thag6.4:9.3",
          "pli": "Yathā pure tathā pacchā,",
          "en": "As before, so after;"
        },
        {
          "scid": "thag6.4:9.4",
          "pli": "yathā pacchā tathā pure.",
          "en": "as after, so before."
        },
        {
          "scid": "thag6.4:10.1",
          "pli": "Pañcaṅgikena turiyena,",
          "en": "Even the music of a five-piece band"
        },
        {
          "scid": "thag6.4:10.2",
          "pli": "Na ratī hoti tādisī;",
          "en": "can never give such pleasure"
        },
        {
          "scid": "thag6.4:10.3",
          "pli": "Yathā ekaggacittassa,",
          "en": "as when, with unified mind,"
        },
        {
          "scid": "thag6.4:10.4",
          "pli": "Sammā dhammaṃ vipassato”ti.",
          "en": "you rightly discern the Dhamma."
        },
        {
          "scid": "thag6.4:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.4:11.2",
          "pli": "Kullo thero ….",
          "en": ""
        }
      ],
