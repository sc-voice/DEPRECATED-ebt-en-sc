  "sections": [
    {
      "segments": [
        {
          "scid": "thag10.5:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag10.5:2.1",
          "pli": "Dasakanipāta",
          "en": "The Book of the Tens"
        },
        {
          "scid": "thag10.5:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag10.5:4.1",
          "pli": "10.5. Kappattheragāthā",
          "en": "10.5. Kappa"
        },
        {
          "scid": "thag10.5:5.1",
          "pli": "“Nānākulamalasampuṇṇo,",
          "en": "Filled with different kinds of dirt,"
        },
        {
          "scid": "thag10.5:5.2",
          "pli": "mahāukkārasambhavo;",
          "en": "a great producer of dung,"
        },
        {
          "scid": "thag10.5:5.3",
          "pli": "Candanikaṃva paripakkaṃ,",
          "en": "like a stagnant cesspool,"
        },
        {
          "scid": "thag10.5:5.4",
          "pli": "mahāgaṇḍo mahāvaṇo.",
          "en": "a huge boil, a bad wound,"
        },
        {
          "scid": "thag10.5:6.1",
          "pli": "Pubbaruhirasampuṇṇo,",
          "en": "full of pus and blood,"
        },
        {
          "scid": "thag10.5:6.2",
          "pli": "gūthakūpena gāḷhito;",
          "en": "sunk in a toilet-pit,"
        },
        {
          "scid": "thag10.5:6.3",
          "pli": "Āpopaggharaṇo kāyo,",
          "en": "trickling with fluids,"
        },
        {
          "scid": "thag10.5:6.4",
          "pli": "sadā sandati pūtikaṃ.",
          "en": "this rotting body always oozes."
        },
        {
          "scid": "thag10.5:7.1",
          "pli": "Saṭṭhikaṇḍarasambandho,",
          "en": "Bound by sixty tendons,"
        },
        {
          "scid": "thag10.5:7.2",
          "pli": "maṃsalepanalepito;",
          "en": "coated with a fleshy coating,"
        },
        {
          "scid": "thag10.5:7.3",
          "pli": "Cammakañcukasannaddho,",
          "en": "clothed in a jacket of skin,"
        },
        {
          "scid": "thag10.5:7.4",
          "pli": "pūtikāyo niratthako.",
          "en": "this rotting body is worthless."
        },
        {
          "scid": "thag10.5:8.1",
          "pli": "Aṭṭhisaṅghātaghaṭito,",
          "en": "Held together by a skeleton of bones,"
        },
        {
          "scid": "thag10.5:8.2",
          "pli": "nhārusuttanibandhano;",
          "en": "and bound by sinews;"
        },
        {
          "scid": "thag10.5:8.3",
          "pli": "Nekesaṃ saṅgatībhāvā,",
          "en": "it assumes postures"
        },
        {
          "scid": "thag10.5:8.4",
          "pli": "kappeti iriyāpathaṃ.",
          "en": "due to a complex of many things."
        },
        {
          "scid": "thag10.5:9.1",
          "pli": "Dhuvappayāto maraṇāya,",
          "en": "We set out in the certainty of death,"
        },
        {
          "scid": "thag10.5:9.2",
          "pli": "maccurājassa santike;",
          "en": "in the presence of the King of Death;"
        },
        {
          "scid": "thag10.5:9.3",
          "pli": "Idheva chaḍḍayitvāna,",
          "en": "and having discarded the body right here,"
        },
        {
          "scid": "thag10.5:9.4",
          "pli": "yenakāmaṅgamo naro.",
          "en": "a person goes where he likes."
        },
        {
          "scid": "thag10.5:10.1",
          "pli": "Avijjāya nivuto kāyo,",
          "en": "Enveloped by ignorance,"
        },
        {
          "scid": "thag10.5:10.2",
          "pli": "catuganthena ganthito;",
          "en": "tied by the four ties,"
        },
        {
          "scid": "thag10.5:10.3",
          "pli": "Oghasaṃsīdano kāyo,",
          "en": "this body is sinking in the flood,"
        },
        {
          "scid": "thag10.5:10.4",
          "pli": "anusayajālamotthato.",
          "en": "caught in the net of the underlying tendencies."
        },
        {
          "scid": "thag10.5:11.1",
          "pli": "Pañcanīvaraṇe yutto,",
          "en": "Yoked to the five hindrances,"
        },
        {
          "scid": "thag10.5:11.2",
          "pli": "vitakkena samappito;",
          "en": "afflicted by thought,"
        },
        {
          "scid": "thag10.5:11.3",
          "pli": "Taṇhāmūlenānugato,",
          "en": "stuck to the root of craving,"
        },
        {
          "scid": "thag10.5:11.4",
          "pli": "mohacchādanachādito.",
          "en": "hidden by delusion:"
        },
        {
          "scid": "thag10.5:12.1",
          "pli": "Evāyaṃ vattate kāyo,",
          "en": "that is how the body goes on,"
        },
        {
          "scid": "thag10.5:12.2",
          "pli": "kammayantena yantito;",
          "en": "propelled by the mechanism of deeds."
        },
        {
          "scid": "thag10.5:12.3",
          "pli": "Sampatti ca vipatyantā,",
          "en": "But existence ends in perishing;"
        },
        {
          "scid": "thag10.5:12.4",
          "pli": "nānābhāvo vipajjati.",
          "en": "separated, the body perishes."
        },
        {
          "scid": "thag10.5:13.1",
          "pli": "Yemaṃ kāyaṃ mamāyanti,",
          "en": "Those blind, ordinary people"
        },
        {
          "scid": "thag10.5:13.2",
          "pli": "andhabālā puthujjanā;",
          "en": "who think of this body as theirs,"
        },
        {
          "scid": "thag10.5:13.3",
          "pli": "Vaḍḍhenti kaṭasiṃ ghoraṃ,",
          "en": "swell the horrors of the charnel ground,"
        },
        {
          "scid": "thag10.5:13.4",
          "pli": "ādiyanti punabbhavaṃ.",
          "en": "taking hold of future lives."
        },
        {
          "scid": "thag10.5:14.1",
          "pli": "Yemaṃ kāyaṃ vivajjenti,",
          "en": "Those who shun this body,"
        },
        {
          "scid": "thag10.5:14.2",
          "pli": "Gūthalittaṃva pannagaṃ;",
          "en": "like a snake smeared with dung,"
        },
        {
          "scid": "thag10.5:14.3",
          "pli": "Bhavamūlaṃ vamitvāna,",
          "en": "expel the root of rebirth,"
        },
        {
          "scid": "thag10.5:14.4",
          "pli": "Parinibbissantināsavā”ti.",
          "en": "and realize quenching free of defilements."
        },
        {
          "scid": "thag10.5:15.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag10.5:15.2",
          "pli": "Kappo thero ….",
          "en": ""
        }
      ],
