      "segments": [
        {
          "scid": "thag4.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.4:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.4:4.1",
          "pli": "4.4. Nandakattheragāthā",
          "en": "4.4. Nandaka (2nd)"
        },
        {
          "scid": "thag4.4:5.1",
          "pli": "“Dhiratthu pūre duggandhe,",
          "en": "Damn you mortal frame, you stink!"
        },
        {
          "scid": "thag4.4:5.2",
          "pli": "mārapakkhe avassute;",
          "en": "You’re on Māra’s side, you ooze!"
        },
        {
          "scid": "thag4.4:5.3",
          "pli": "Navasotāni te kāye,",
          "en": "O body, you have nine streams"
        },
        {
          "scid": "thag4.4:5.4",
          "pli": "yāni sandanti sabbadā.",
          "en": "that are flowing all the time."
        },
        {
          "scid": "thag4.4:6.1",
          "pli": "Mā purāṇaṃ amaññittho,",
          "en": "Don’t think much of mortal frames;"
        },
        {
          "scid": "thag4.4:6.2",
          "pli": "māsādesi tathāgate;",
          "en": "don’t disparage the Realized Ones."
        },
        {
          "scid": "thag4.4:6.3",
          "pli": "Saggepi te na rajjanti,",
          "en": "They’re not even aroused by heaven,"
        },
        {
          "scid": "thag4.4:6.4",
          "pli": "kimaṅgaṃ pana mānuse.",
          "en": "let alone by humans."
        },
        {
          "scid": "thag4.4:7.1",
          "pli": "Ye ca kho bālā dummedhā,",
          "en": "But those who are stupid fools,"
        },
        {
          "scid": "thag4.4:7.2",
          "pli": "dummantī mohapārutā;",
          "en": "with bad advisors, shrouded in delusion,"
        },
        {
          "scid": "thag4.4:7.3",
          "pli": "Tādisā tattha rajjanti,",
          "en": "that kind of person is aroused by bodies,"
        },
        {
          "scid": "thag4.4:7.4",
          "pli": "mārakhittamhi bandhane.",
          "en": "when Māra has laid down the snare."
        },
        {
          "scid": "thag4.4:8.1",
          "pli": "Yesaṃ rāgo ca doso ca,",
          "en": "Those whose greed, hate, and ignorance"
        },
        {
          "scid": "thag4.4:8.2",
          "pli": "avijjā ca virājitā;",
          "en": "has faded away;"
        },
        {
          "scid": "thag4.4:8.3",
          "pli": "Tādī tattha na rajjanti,",
          "en": "such people are not aroused by bodies,"
        },
        {
          "scid": "thag4.4:8.4",
          "pli": "chinnasuttā abandhanā”ti.",
          "en": "they’ve cut the strings, they’re no longer bound."
        },
        {
          "scid": "thag4.4:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.4:9.2",
          "pli": "Nandako thero ….",
          "en": ""
        }
      ],
