      "segments": [
        {
          "scid": "thig1.18:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig1.18:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thig1.18:3.1",
          "pli": "18. Saṃghātherīgāthā",
          "en": "1.18. Saṃghā"
        },
        {
          "scid": "thig1.18:4.1",
          "pli": "“Hitvā ghare pabbajitvā,",
          "en": "Having given up my home, my child, my cattle,"
        },
        {
          "scid": "thig1.18:4.2",
          "pli": "hitvā puttaṃ pasuṃ piyaṃ;",
          "en": "and all that I love, I went forth."
        },
        {
          "scid": "thig1.18:4.3",
          "pli": "Hitvā rāgañca dosañca,",
          "en": "Having given up desire and hate,"
        },
        {
          "scid": "thig1.18:4.4",
          "pli": "avijjañca virājiya;",
          "en": "having dispelled ignorance,"
        },
        {
          "scid": "thig1.18:4.5",
          "pli": "Samūlaṃ taṇhamabbuyha,",
          "en": "and having plucked out craving, root and all,"
        },
        {
          "scid": "thig1.18:4.6",
          "pli": "upasantāmhi nibbutā”ti.",
          "en": "I’m quenched and at peace."
        },
        {
          "scid": "thig1.18:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.18:5.2",
          "pli": "Saṃghā therī ….",
          "en": ""
        },
        {
          "scid": "thig1.18:6.1",
          "pli": "Ekakanipāto niṭṭhito.",
          "en": "The Book of the Ones is finished."
        }
      ],
