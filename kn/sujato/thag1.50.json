      "segments": [
        {
          "scid": "thag1.50:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.50:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.50:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag1.50:4.1",
          "pli": "1.50. Vimalattheragāthā",
          "en": "1.50. Vimala (1st)"
        },
        {
          "scid": "thag1.50:5.1",
          "pli": "“Dharaṇī ca siñcati vāti,",
          "en": "The rain falls and the wind blows on mother earth,"
        },
        {
          "scid": "thag1.50:5.2",
          "pli": "Māluto vijjutā carati nabhe;",
          "en": "while lightning flashes across the sky!"
        },
        {
          "scid": "thag1.50:5.3",
          "pli": "Upasamanti vitakkā,",
          "en": "But my thoughts are stilled,"
        },
        {
          "scid": "thag1.50:5.4",
          "pli": "Cittaṃ susamāhitaṃ mamā”ti.",
          "en": "my mind is serene."
        },
        {
          "scid": "thag1.50:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.50:6.2",
          "pli": "Vimalo thero ….",
          "en": ""
        },
        {
          "scid": "thag1.50:6.3",
          "pli": "Vaggo pañcamo.",
          "en": ""
        },
        {
          "scid": "thag1.50:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.50:8.1",
          "pli": "Sirīvaḍḍho revato thero,",
          "en": ""
        },
        {
          "scid": "thag1.50:8.2",
          "pli": "sumaṅgalo sānusavhayo;",
          "en": ""
        },
        {
          "scid": "thag1.50:8.3",
          "pli": "Ramaṇīyavihārī ca,",
          "en": ""
        },
        {
          "scid": "thag1.50:8.4",
          "pli": "samiddhiujjayasañjayā;",
          "en": ""
        },
        {
          "scid": "thag1.50:8.5",
          "pli": "Rāmaṇeyyo ca so thero,",
          "en": ""
        },
        {
          "scid": "thag1.50:8.6",
          "pli": "vimalo ca raṇañjahoti.",
          "en": ""
        }
      ],
