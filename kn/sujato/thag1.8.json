        },
        {
          "scid": "thag1.8:4.1",
          "pli": "1.8. Vīrattheragāthā",
          "en": "1.8. Vīra"
        },
        {
          "scid": "thag1.8:5.1",
          "pli": "“Yo duddamiyo damena danto,",
          "en": "Once hard to tame, now tamed himself;"
        },
        {
          "scid": "thag1.8:5.2",
          "pli": "Vīro santusito vitiṇṇakaṅkho;",
          "en": "a hero, content, with doubt overcome;"
        },
        {
          "scid": "thag1.8:5.3",
          "pli": "Vijitāvī apetalomahaṃso,",
          "en": "victorious, with goosebumps vanished,"
        },
        {
          "scid": "thag1.8:5.4",
          "pli": "Vīro so parinibbuto ṭhitatto”ti.",
          "en": "Vīra is steadfast, and has become extinguished."
        },
        {
          "scid": "thag1.8:6.1",
          "pli": "Itthaṃ sudaṃ āyasmā vīro thero gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior venerable Vīra."
        }
      ],
