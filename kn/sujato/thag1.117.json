        {
          "scid": "thag1.117:4.1",
          "pli": "1.117. Yasattheragāthā",
          "en": "1.117. Yasa"
        },
        {
          "scid": "thag1.117:5.1",
          "pli": "“Suvilitto suvasano,",
          "en": "I’m well-anointed and well-dressed,"
        },
        {
          "scid": "thag1.117:5.2",
          "pli": "sabbābharaṇabhūsito;",
          "en": "adorned with all my jewellery."
        },
        {
          "scid": "thag1.117:5.3",
          "pli": "Tisso vijjā ajjhagamiṃ,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag1.117:5.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag1.117:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.117:6.2",
          "pli": "Yaso thero ….",
          "en": ""
        }
