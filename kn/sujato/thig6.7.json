  "sections": [
    {
      "segments": [
        {
          "scid": "thig6.7:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig6.7:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thig6.7:3.1",
          "pli": "7. Guttātherīgāthā",
          "en": "6.7. Guttā"
        },
        {
          "scid": "thig6.7:4.1",
          "pli": "“Gutte yadatthaṃ pabbajjā,",
          "en": "Guttā, you have given up your child,"
        },
        {
          "scid": "thig6.7:4.2",
          "pli": "hitvā puttaṃ vasuṃ piyaṃ;",
          "en": "your wealth, and all that you love."
        },
        {
          "scid": "thig6.7:4.3",
          "pli": "Tameva anubrūhehi,",
          "en": "Foster the goal for which you went forth;"
        },
        {
          "scid": "thig6.7:4.4",
          "pli": "mā cittassa vasaṃ gami.",
          "en": "do not fall under the mind’s control."
        },
        {
          "scid": "thig6.7:5.1",
          "pli": "Cittena vañcitā sattā,",
          "en": "Beings deceived by the mind,"
        },
        {
          "scid": "thig6.7:5.2",
          "pli": "mārassa visaye ratā;",
          "en": "playing in Māra’s domain,"
        },
        {
          "scid": "thig6.7:5.3",
          "pli": "Anekajātisaṃsāraṃ,",
          "en": "ignorant, they journey on,"
        },
        {
          "scid": "thig6.7:5.4",
          "pli": "sandhāvanti aviddasū.",
          "en": "transmigrating through countless rebirths."
        },
        {
          "scid": "thig6.7:6.1",
          "pli": "Kāmacchandañca byāpādaṃ,",
          "en": "Sensual desire and ill will,"
        },
        {
          "scid": "thig6.7:6.2",
          "pli": "sakkāyadiṭṭhimeva ca;",
          "en": "and identity view;"
        },
        {
          "scid": "thig6.7:6.3",
          "pli": "Sīlabbataparāmāsaṃ,",
          "en": "misapprehension of precepts and observances,"
        },
        {
          "scid": "thig6.7:6.4",
          "pli": "vicikicchañca pañcamaṃ.",
          "en": "and doubt as the fifth."
        },
        {
          "scid": "thig6.7:7.1",
          "pli": "Saṃyojanāni etāni,",
          "en": "O nun, when you have given up"
        },
        {
          "scid": "thig6.7:7.2",
          "pli": "pajahitvāna bhikkhunī;",
          "en": "these lower fetters,"
        },
        {
          "scid": "thig6.7:7.3",
          "pli": "Orambhāgamanīyāni,",
          "en": "you won’t come back"
        },
        {
          "scid": "thig6.7:7.4",
          "pli": "nayidaṃ punarehisi.",
          "en": "to this world again."
        },
        {
          "scid": "thig6.7:8.1",
          "pli": "Rāgaṃ mānaṃ avijjañca,",
          "en": "And when you’re rid of greed,"
        },
        {
          "scid": "thig6.7:8.2",
          "pli": "uddhaccañca vivajjiya;",
          "en": "conceit, ignorance, and restlessness,"
        },
        {
          "scid": "thig6.7:8.3",
          "pli": "Saṃyojanāni chetvāna,",
          "en": "having cut the fetters,"
        },
        {
          "scid": "thig6.7:8.4",
          "pli": "dukkhassantaṃ karissasi.",
          "en": "you’ll make an end to suffering."
        },
        {
          "scid": "thig6.7:9.1",
          "pli": "Khepetvā jātisaṃsāraṃ,",
          "en": "Having wiped out transmigration,"
        },
        {
          "scid": "thig6.7:9.2",
          "pli": "pariññāya punabbhavaṃ;",
          "en": "and fully understood rebirth,"
        },
        {
          "scid": "thig6.7:9.3",
          "pli": "Diṭṭheva dhamme nicchātā,",
          "en": "hungerless in this very life,"
        },
        {
          "scid": "thig6.7:9.4",
          "pli": "upasantā carissatī”ti.",
          "en": "you will live at peace."
        },
        {
          "scid": "thig6.7:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig6.7:10.2",
          "pli": "Guttā therī ….",
          "en": ""
        }
      ],
