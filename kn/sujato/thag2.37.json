        {
          "scid": "thag2.37:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.37:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.37:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.37:4.1",
          "pli": "2.37 Soṇapoṭiriyattheragāthā",
          "en": "2.37. Soṇapoṭiriya"
        },
        {
          "scid": "thag2.37:5.1",
          "pli": "“Na tāva supituṃ hoti,",
          "en": "Night, with her garland of stars,"
        },
        {
          "scid": "thag2.37:5.2",
          "pli": "ratti nakkhattamālinī;",
          "en": "is not only for sleeping."
        },
        {
          "scid": "thag2.37:5.3",
          "pli": "Paṭijaggitumevesā,",
          "en": "For those who know,"
        },
        {
          "scid": "thag2.37:5.4",
          "pli": "ratti hoti vijānatā”.",
          "en": "this night is really for waking."
        },
        {
          "scid": "thag2.37:6.1",
          "pli": "“Hatthikkhandhāvapatitaṃ,",
          "en": "Were I to fall from the back of an elephant,"
        },
        {
          "scid": "thag2.37:6.2",
          "pli": "kuñjaro ce anukkame;",
          "en": "trampled by the tuskers that follow,"
        },
        {
          "scid": "thag2.37:6.3",
          "pli": "Saṅgāme me mataṃ seyyo,",
          "en": "better for me to die in battle,"
        },
        {
          "scid": "thag2.37:6.4",
          "pli": "yañce jīve parājito”ti.",
          "en": "than to live on in defeat."
        },
        {
          "scid": "thag2.37:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.37:7.2",
          "pli": "Soṇo poṭiriyo thero ….",
          "en": ""
        }
      ],
