          "scid": "thag1.94:4.1",
          "pli": "1.94. Mettajittheragāthā",
          "en": "1.94. Mettaji"
        },
        {
          "scid": "thag1.94:5.1",
          "pli": "“Namo hi tassa bhagavato,",
          "en": "Homage to that Blessed One,"
        },
        {
          "scid": "thag1.94:5.2",
          "pli": "sakyaputtassa sirīmato;",
          "en": "the glorious Sakyan!"
        },
        {
          "scid": "thag1.94:5.3",
          "pli": "Tenāyaṃ aggappattena,",
          "en": "Having reached the best,"
        },
        {
          "scid": "thag1.94:5.4",
          "pli": "aggadhammo sudesito”ti.",
          "en": "he beautifully taught the best teaching."
        },
        {
          "scid": "thag1.94:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.94:6.2",
          "pli": "Mettaji thero ….",
          "en": ""
        }
