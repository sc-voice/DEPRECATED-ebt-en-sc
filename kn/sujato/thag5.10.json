  "sections": [
    {
      "segments": [
        {
          "scid": "thag5.10:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.10:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.10:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.10:4.1",
          "pli": "5.10. Yasadattattheragāthā",
          "en": "5.10. Yasadatta"
        },
        {
          "scid": "thag5.10:5.1",
          "pli": "“Upārambhacitto dummedho,",
          "en": "With fault-finding mind, the dullard"
        },
        {
          "scid": "thag5.10:5.2",
          "pli": "suṇāti jinasāsanaṃ;",
          "en": "listens to the victor’s instruction."
        },
        {
          "scid": "thag5.10:5.3",
          "pli": "Ārakā hoti saddhammā,",
          "en": "They’re as far from the true teaching"
        },
        {
          "scid": "thag5.10:5.4",
          "pli": "nabhaso pathavī yathā.",
          "en": "as the earth is from the sky."
        },
        {
          "scid": "thag5.10:6.1",
          "pli": "Upārambhacitto dummedho,",
          "en": "With fault-finding mind, the dullard"
        },
        {
          "scid": "thag5.10:6.2",
          "pli": "suṇāti jinasāsanaṃ;",
          "en": "listens to the victor’s instruction."
        },
        {
          "scid": "thag5.10:6.3",
          "pli": "Parihāyati saddhammā,",
          "en": "They fall away from the true teaching,"
        },
        {
          "scid": "thag5.10:6.4",
          "pli": "kāḷapakkheva candimā.",
          "en": "like the moon in the waning fortnight."
        },
        {
          "scid": "thag5.10:7.1",
          "pli": "Upārambhacitto dummedho,",
          "en": "With fault-finding mind, the dullard"
        },
        {
          "scid": "thag5.10:7.2",
          "pli": "suṇāti jinasāsanaṃ;",
          "en": "listens to the victor’s instruction."
        },
        {
          "scid": "thag5.10:7.3",
          "pli": "Parisussati saddhamme,",
          "en": "They wither away in the true teaching,"
        },
        {
          "scid": "thag5.10:7.4",
          "pli": "maccho appodake yathā.",
          "en": "like a fish in too little water."
        },
        {
          "scid": "thag5.10:8.1",
          "pli": "Upārambhacitto dummedho,",
          "en": "With fault-finding mind, the dullard"
        },
        {
          "scid": "thag5.10:8.2",
          "pli": "suṇāti jinasāsanaṃ;",
          "en": "listens to the victor’s instruction."
        },
        {
          "scid": "thag5.10:8.3",
          "pli": "Na virūhati saddhamme,",
          "en": "They don’t thrive in the true teaching,"
        },
        {
          "scid": "thag5.10:8.4",
          "pli": "khette bījaṃva pūtikaṃ.",
          "en": "like a rotten seed in a field."
        },
        {
          "scid": "thag5.10:9.1",
          "pli": "Yo ca tuṭṭhena cittena,",
          "en": "But one with contented mind"
        },
        {
          "scid": "thag5.10:9.2",
          "pli": "suṇāti jinasāsanaṃ;",
          "en": "who listens to the victor’s instruction—"
        },
        {
          "scid": "thag5.10:9.3",
          "pli": "Khepetvā āsave sabbe,",
          "en": "having wiped out all defilements;"
        },
        {
          "scid": "thag5.10:9.4",
          "pli": "sacchikatvā akuppataṃ;",
          "en": "having witnessed the unshakable;"
        },
        {
          "scid": "thag5.10:9.5",
          "pli": "Pappuyya paramaṃ santiṃ,",
          "en": "having arrived at ultimate peace—"
        },
        {
          "scid": "thag5.10:9.6",
          "pli": "parinibbātināsavo”ti.",
          "en": "they are quenched without defilements."
        },
        {
          "scid": "thag5.10:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.10:10.2",
          "pli": "Yasadatto thero ….",
          "en": ""
        }
      ],
