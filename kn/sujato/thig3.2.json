      "segments": [
        {
          "scid": "thig3.2:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.2:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.2:3.1",
          "pli": "2. Uttamātherīgāthā",
          "en": "3.2. Uttamā"
        },
        {
          "scid": "thig3.2:4.1",
          "pli": "“Catukkhattuṃ pañcakkhattuṃ,",
          "en": "Four or five times"
        },
        {
          "scid": "thig3.2:4.2",
          "pli": "vihārā upanikkhamiṃ;",
          "en": "I left my dwelling."
        },
        {
          "scid": "thig3.2:4.3",
          "pli": "Aladdhā cetaso santiṃ,",
          "en": "I had failed to find peace of heart,"
        },
        {
          "scid": "thig3.2:4.4",
          "pli": "citte avasavattinī.",
          "en": "or any control over my mind."
        },
        {
          "scid": "thig3.2:5.1",
          "pli": "Sā bhikkhuniṃ upagacchiṃ,",
          "en": "I approached a nun"
        },
        {
          "scid": "thig3.2:5.2",
          "pli": "yā me saddhāyikā ahu;",
          "en": "in whom I had faith."
        },
        {
          "scid": "thig3.2:5.3",
          "pli": "Sā me dhammamadesesi,",
          "en": "She taught me the Dhamma:"
        },
        {
          "scid": "thig3.2:5.4",
          "pli": "khandhāyatanadhātuyo.",
          "en": "the aggregates, sense fields, and elements."
        },
        {
          "scid": "thig3.2:6.1",
          "pli": "Tassā dhammaṃ suṇitvāna,",
          "en": "When I had heard her teaching,"
        },
        {
          "scid": "thig3.2:6.2",
          "pli": "Yathā maṃ anusāsi sā;",
          "en": "in accordance with her instructions,"
        },
        {
          "scid": "thig3.2:6.3",
          "pli": "Sattāhaṃ ekapallaṅkena,",
          "en": "I sat for seven days in the same posture,"
        },
        {
          "scid": "thig3.2:6.4",
          "pli": "Nisīdiṃ pītisukhasamappitā;",
          "en": "given over to rapture and bliss."
        },
        {
          "scid": "thig3.2:6.5",
          "pli": "Aṭṭhamiyā pāde pasāresiṃ,",
          "en": "On the eighth day I stretched out my feet,"
        },
        {
          "scid": "thig3.2:6.6",
          "pli": "Tamokhandhaṃ padāliyā”ti.",
          "en": "having shattered the mass of darkness."
        },
        {
          "scid": "thig3.2:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.2:7.2",
          "pli": "Uttamā therī ….",
          "en": ""
        }
      ],
