        {
          "scid": "thag2.30:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.30:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.30:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.30:4.1",
          "pli": "2.30. Kaṇhadinnattheragāthā",
          "en": "2.30. Kaṇhadinna"
        },
        {
          "scid": "thag2.30:5.1",
          "pli": "“Upāsitā sappurisā,",
          "en": "I regularly sat close by good people"
        },
        {
          "scid": "thag2.30:5.2",
          "pli": "sutā dhammā abhiṇhaso;",
          "en": "and learnt the teaching."
        },
        {
          "scid": "thag2.30:5.3",
          "pli": "Sutvāna paṭipajjissaṃ,",
          "en": "What I learned, I practiced,"
        },
        {
          "scid": "thag2.30:5.4",
          "pli": "añjasaṃ amatogadhaṃ.",
          "en": "the direct route that culminates in the deathless."
        },
        {
          "scid": "thag2.30:6.1",
          "pli": "Bhavarāgahatassa me sato,",
          "en": "I’ve slain the desire to be reborn,"
        },
        {
          "scid": "thag2.30:6.2",
          "pli": "Bhavarāgo puna me na vijjati;",
          "en": "it won’t be found in me again."
        },
        {
          "scid": "thag2.30:6.3",
          "pli": "Na cāhu na ca me bhavissati,",
          "en": "It was not, and it won’t be in me,"
        },
        {
          "scid": "thag2.30:6.4",
          "pli": "Na ca me etarahi vijjatī”ti.",
          "en": "and it isn’t found in me now."
        },
        {
          "scid": "thag2.30:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.30:7.2",
          "pli": "Kaṇhadinno thero ….",
          "en": ""
        },
        {
          "scid": "thag2.30:7.3",
          "pli": "Vaggo tatiyo.",
          "en": ""
        },
        {
          "scid": "thag2.30:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag2.30:9.1",
          "pli": "Uttaro bhaddajitthero,",
          "en": ""
        },
        {
          "scid": "thag2.30:9.2",
          "pli": "sobhito valliyo isi;",
          "en": ""
        },
        {
          "scid": "thag2.30:9.3",
          "pli": "Vītasoko ca yo thero,",
          "en": ""
        },
        {
          "scid": "thag2.30:9.4",
          "pli": "puṇṇamāso ca nandako;",
          "en": ""
        },
        {
          "scid": "thag2.30:9.5",
          "pli": "Bharato bhāradvājo ca,",
          "en": ""
        },
        {
          "scid": "thag2.30:9.6",
          "pli": "kaṇhadinno mahāmunīti.",
          "en": ""
        }
      ],
