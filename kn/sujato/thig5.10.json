      "segments": [
        {
          "scid": "thig5.10:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.10:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.10:3.1",
          "pli": "10. Paṭācārātherīgāthā",
          "en": "5.10. Paṭācārā"
        },
        {
          "scid": "thig5.10:4.1",
          "pli": "“Naṅgalehi kasaṃ khettaṃ,",
          "en": "Plowing the fields,"
        },
        {
          "scid": "thig5.10:4.2",
          "pli": "bījāni pavapaṃ chamā;",
          "en": "sowing seeds in the ground,"
        },
        {
          "scid": "thig5.10:4.3",
          "pli": "Puttadārāni posentā,",
          "en": "supporting partners and children,"
        },
        {
          "scid": "thig5.10:4.4",
          "pli": "dhanaṃ vindanti māṇavā.",
          "en": "young men acquire wealth."
        },
        {
          "scid": "thig5.10:5.1",
          "pli": "Kimahaṃ sīlasampannā,",
          "en": "I am accomplished in ethics,"
        },
        {
          "scid": "thig5.10:5.2",
          "pli": "satthusāsanakārikā;",
          "en": "and I do the Teacher’s bidding,"
        },
        {
          "scid": "thig5.10:5.3",
          "pli": "Nibbānaṃ nādhigacchāmi,",
          "en": "being neither lazy nor restless—"
        },
        {
          "scid": "thig5.10:5.4",
          "pli": "akusītā anuddhatā.",
          "en": "why then do I not achieve quenching?"
        },
        {
          "scid": "thig5.10:6.1",
          "pli": "Pāde pakkhālayitvāna,",
          "en": "Having washed my feet,"
        },
        {
          "scid": "thig5.10:6.2",
          "pli": "udakesu karomahaṃ;",
          "en": "I took note of the water,"
        },
        {
          "scid": "thig5.10:6.3",
          "pli": "Pādodakañca disvāna,",
          "en": "seeing the foot-washing water"
        },
        {
          "scid": "thig5.10:6.4",
          "pli": "thalato ninnamāgataṃ.",
          "en": "flowing from high ground to low."
        },
        {
          "scid": "thig5.10:7.1",
          "pli": "Tato cittaṃ samādhesiṃ,",
          "en": "My mind became serene,"
        },
        {
          "scid": "thig5.10:7.2",
          "pli": "assaṃ bhadraṃvajāniyaṃ;",
          "en": "like a fine thoroughbred steed."
        },
        {
          "scid": "thig5.10:7.3",
          "pli": "Tato dīpaṃ gahetvāna,",
          "en": "Then, taking a lamp,"
        },
        {
          "scid": "thig5.10:7.4",
          "pli": "vihāraṃ pāvisiṃ ahaṃ;",
          "en": "I entered my dwelling,"
        },
        {
          "scid": "thig5.10:7.5",
          "pli": "Seyyaṃ olokayitvāna,",
          "en": "inspected the bed,"
        },
        {
          "scid": "thig5.10:7.6",
          "pli": "mañcakamhi upāvisiṃ.",
          "en": "and sat on my cot."
        },
        {
          "scid": "thig5.10:8.1",
          "pli": "Tato sūciṃ gahetvāna,",
          "en": "Then, grabbing the pin,"
        },
        {
          "scid": "thig5.10:8.2",
          "pli": "vaṭṭiṃ okassayāmahaṃ;",
          "en": "I drew out the wick."
        },
        {
          "scid": "thig5.10:8.3",
          "pli": "Padīpasseva nibbānaṃ,",
          "en": "The liberation of my heart"
        },
        {
          "scid": "thig5.10:8.4",
          "pli": "vimokkho ahu cetaso”ti.",
          "en": "was like the quenching of the lamp."
        },
        {
          "scid": "thig5.10:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.10:9.2",
          "pli": "Paṭācārā therī ….",
          "en": ""
        }
      ],
