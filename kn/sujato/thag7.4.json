  "sections": [
    {
      "segments": [
        {
          "scid": "thag7.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag7.4:2.1",
          "pli": "Sattakanipāta",
          "en": "The Book of the Sevens"
        },
        {
          "scid": "thag7.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag7.4:4.1",
          "pli": "7.4. Sopākattheragāthā",
          "en": "7.4. Sopāka (2nd)"
        },
        {
          "scid": "thag7.4:5.1",
          "pli": "“Disvā pāsādachāyāyaṃ,",
          "en": "I saw the supreme person"
        },
        {
          "scid": "thag7.4:5.2",
          "pli": "caṅkamantaṃ naruttamaṃ;",
          "en": "walking meditation in the shade of the terrace,"
        },
        {
          "scid": "thag7.4:5.3",
          "pli": "Tattha naṃ upasaṅkamma,",
          "en": "so I approached,"
        },
        {
          "scid": "thag7.4:5.4",
          "pli": "vandissaṃ purisuttamaṃ.",
          "en": "and bowed to the supreme among men."
        },
        {
          "scid": "thag7.4:6.1",
          "pli": "Ekaṃsaṃ cīvaraṃ katvā,",
          "en": "Arranging my robe over one shoulder"
        },
        {
          "scid": "thag7.4:6.2",
          "pli": "saṃharitvāna pāṇayo;",
          "en": "and clasping my hands together,"
        },
        {
          "scid": "thag7.4:6.3",
          "pli": "Anucaṅkamissaṃ virajaṃ,",
          "en": "I walked meditation alongside that stainless one,"
        },
        {
          "scid": "thag7.4:6.4",
          "pli": "sabbasattānamuttamaṃ.",
          "en": "supreme among all beings."
        },
        {
          "scid": "thag7.4:7.1",
          "pli": "Tato pañhe apucchi maṃ,",
          "en": "The wise one, expert in questions,"
        },
        {
          "scid": "thag7.4:7.2",
          "pli": "pañhānaṃ kovido vidū;",
          "en": "questioned me."
        },
        {
          "scid": "thag7.4:7.3",
          "pli": "Acchambhī ca abhīto ca,",
          "en": "Brave and fearless,"
        },
        {
          "scid": "thag7.4:7.4",
          "pli": "byākāsiṃ satthuno ahaṃ.",
          "en": "I answered the teacher."
        },
        {
          "scid": "thag7.4:8.1",
          "pli": "Vissajjitesu pañhesu,",
          "en": "When all his questions were answered,"
        },
        {
          "scid": "thag7.4:8.2",
          "pli": "anumodi tathāgato;",
          "en": "the Realized One congratulated me."
        },
        {
          "scid": "thag7.4:8.3",
          "pli": "Bhikkhusaṃghaṃ viloketvā,",
          "en": "Looking around the mendicant Saṅgha,"
        },
        {
          "scid": "thag7.4:8.4",
          "pli": "imamatthaṃ abhāsatha.",
          "en": "he said the following:"
        },
        {
          "scid": "thag7.4:9.1",
          "pli": "‘Lābhā aṅgānaṃ magadhānaṃ,",
          "en": "“It is a blessing for the people of Aṅga and Magadha"
        },
        {
          "scid": "thag7.4:9.2",
          "pli": "Yesāyaṃ paribhuñjati;",
          "en": "that this person enjoys their"
        },
        {
          "scid": "thag7.4:9.3",
          "pli": "Cīvaraṃ piṇḍapātañca,",
          "en": "robe and almsfood,"
        },
        {
          "scid": "thag7.4:9.4",
          "pli": "Paccayaṃ sayanāsanaṃ;",
          "en": "requisites and lodgings,"
        },
        {
          "scid": "thag7.4:9.5",
          "pli": "Paccuṭṭhānañca sāmīciṃ,",
          "en": "their respect and service—"
        },
        {
          "scid": "thag7.4:9.6",
          "pli": "Tesaṃ lābhāti cābravi.",
          "en": "it’s a blessing for them,” he declared."
        },
        {
          "scid": "thag7.4:10.1",
          "pli": "Ajjatagge maṃ sopāka,",
          "en": "“Sopāka, from this day on"
        },
        {
          "scid": "thag7.4:10.2",
          "pli": "dassanāyopasaṅkama;",
          "en": "you are invited to come and see me."
        },
        {
          "scid": "thag7.4:10.3",
          "pli": "Esā ceva te sopāka,",
          "en": "And Sopāka, let this"
        },
        {
          "scid": "thag7.4:10.4",
          "pli": "bhavatu upasampadā’.",
          "en": "be your ordination.”"
        },
        {
          "scid": "thag7.4:11.1",
          "pli": "Jātiyā sattavassohaṃ,",
          "en": "At seven years old"
        },
        {
          "scid": "thag7.4:11.2",
          "pli": "laddhāna upasampadaṃ;",
          "en": "I received ordination."
        },
        {
          "scid": "thag7.4:11.3",
          "pli": "Dhāremi antimaṃ dehaṃ,",
          "en": "I bear my final body—"
        },
        {
          "scid": "thag7.4:11.4",
          "pli": "aho dhammasudhammatā”ti.",
          "en": "oh, the excellence of the teaching!"
        },
        {
          "scid": "thag7.4:12.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag7.4:12.2",
          "pli": "Sopāko thero ….",
          "en": ""
        }
      ],
