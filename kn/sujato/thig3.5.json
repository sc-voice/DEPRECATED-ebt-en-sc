      "segments": [
        {
          "scid": "thig3.5:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.5:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.5:3.1",
          "pli": "5. Ubbiritherīgāthā",
          "en": "3.5. Ubbirī"
        },
        {
          "scid": "thig3.5:4.1",
          "pli": "“Amma jīvāti vanamhi kandasi,",
          "en": "“You cry ‘Please be living!’ in the forest."
        },
        {
          "scid": "thig3.5:4.2",
          "pli": "Attānaṃ adhigaccha ubbiri;",
          "en": "Ubbirī, get a hold of yourself!"
        },
        {
          "scid": "thig3.5:4.3",
          "pli": "Cullāsītisahassāni,",
          "en": "Eighty-four thousand people,"
        },
        {
          "scid": "thig3.5:4.4",
          "pli": "Sabbā jīvasanāmikā;",
          "en": "all named ‘living being’,"
        },
        {
          "scid": "thig3.5:4.5",
          "pli": "Etamhāḷāhane daḍḍhā,",
          "en": "have been burnt in this funeral ground:"
        },
        {
          "scid": "thig3.5:4.6",
          "pli": "Tāsaṃ kamanusocasi”.",
          "en": "which one do you grieve for?”"
        },
        {
          "scid": "thig3.5:5.1",
          "pli": "“Abbahī vata me sallaṃ,",
          "en": "“Oh! For you have plucked the dart from me,"
        },
        {
          "scid": "thig3.5:5.2",
          "pli": "duddasaṃ hadayassitaṃ;",
          "en": "so hard to see, hidden in the heart."
        },
        {
          "scid": "thig3.5:5.3",
          "pli": "Yaṃ me sokaparetāya,",
          "en": "You’ve swept away the grief for my daughter"
        },
        {
          "scid": "thig3.5:5.4",
          "pli": "dhītusokaṃ byapānudi.",
          "en": "in which I once was mired."
        },
        {
          "scid": "thig3.5:6.1",
          "pli": "Sājja abbūḷhasallāhaṃ,",
          "en": "Today I’ve plucked the dart,"
        },
        {
          "scid": "thig3.5:6.2",
          "pli": "Nicchātā parinibbutā;",
          "en": "I’m hungerless, extinguished."
        },
        {
          "scid": "thig3.5:6.3",
          "pli": "Buddhaṃ dhammañca saṃghañca,",
          "en": "I go for refuge to that sage, the Buddha,"
        },
        {
          "scid": "thig3.5:6.4",
          "pli": "Upemi saraṇaṃ munin”ti.",
          "en": "to his teaching, and to the Sangha.”"
        },
        {
          "scid": "thig3.5:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.5:7.2",
          "pli": "Ubbirī therī ….",
          "en": ""
        }
      ],
