        {
          "scid": "thag1.72:4.1",
          "pli": "1.72. Ātumattheragāthā",
          "en": "1.72. Ātuma"
        },
        {
          "scid": "thag1.72:5.1",
          "pli": "“Yathā kaḷīro susu vaḍḍhitaggo,",
          "en": "A young bamboo is hard to extract"
        },
        {
          "scid": "thag1.72:5.2",
          "pli": "Dunnikkhamo hoti pasākhajāto;",
          "en": "when the point is grown and become all woody."
        },
        {
          "scid": "thag1.72:5.3",
          "pli": "Evaṃ ahaṃ bhariyāyānitāya,",
          "en": "That’s how I feel with the wife who was arranged for me."
        },
        {
          "scid": "thag1.72:5.4",
          "pli": "Anumaññaṃ maṃ pabbajitomhi dānī”ti.",
          "en": "Give me permission—now I’ve gone forth."
        },
        {
          "scid": "thag1.72:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.72:6.2",
          "pli": "Ātumo thero ….",
          "en": ""
        }
      ],
