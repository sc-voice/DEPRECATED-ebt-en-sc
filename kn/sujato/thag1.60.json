      "segments": [
        {
          "scid": "thag1.60:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.60:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.60:3.1",
          "pli": "Chaṭṭhavagga",
          "en": "Chapter Six"
        },
        {
          "scid": "thag1.60:4.1",
          "pli": "1.60. Sīvalittheragāthā",
          "en": "1.60. Sīvali"
        },
        {
          "scid": "thag1.60:5.1",
          "pli": "“Te me ijjhiṃsu saṅkappā,",
          "en": "My wishes—the purpose I had"
        },
        {
          "scid": "thag1.60:5.2",
          "pli": "yadattho pāvisiṃ kuṭiṃ;",
          "en": "for entering this hut—came true."
        },
        {
          "scid": "thag1.60:5.3",
          "pli": "Vijjāvimuttiṃ paccesaṃ,",
          "en": "Abandoning the tendency to conceit,"
        },
        {
          "scid": "thag1.60:5.4",
          "pli": "mānānusayamujjahan”ti.",
          "en": "I’ll realize knowledge and liberation."
        },
        {
          "scid": "thag1.60:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.60:6.2",
          "pli": "Sīvalitthero ….",
          "en": ""
        },
        {
          "scid": "thag1.60:6.3",
          "pli": "Vaggo chaṭṭho.",
          "en": ""
        },
        {
          "scid": "thag1.60:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.60:8.1",
          "pli": "Godhiko ca subāhu ca,",
          "en": ""
        },
        {
          "scid": "thag1.60:8.2",
          "pli": "valliyo uttiyo isi;",
          "en": ""
        },
        {
          "scid": "thag1.60:8.3",
          "pli": "Añjanavaniyo thero,",
          "en": ""
        },
        {
          "scid": "thag1.60:8.4",
          "pli": "duve kuṭivihārino;",
          "en": ""
        },
        {
          "scid": "thag1.60:8.5",
          "pli": "Ramaṇīyakuṭiko ca,",
          "en": ""
        },
        {
          "scid": "thag1.60:8.6",
          "pli": "kosalavhayasīvalīti.",
          "en": ""
        }
      ],
