        {
          "scid": "thag1.44:4.1",
          "pli": "1.44. Sānuttheragāthā",
          "en": "1.44. Sānu"
        },
        {
          "scid": "thag1.44:5.1",
          "pli": "“Mataṃ vā amma rodanti,",
          "en": "Mum, they weep for the dead,"
        },
        {
          "scid": "thag1.44:5.2",
          "pli": "Yo vā jīvaṃ na dissati;",
          "en": "or for one who’s alive but has disappeared."
        },
        {
          "scid": "thag1.44:5.3",
          "pli": "Jīvantaṃ maṃ amma passantī,",
          "en": "I’m alive and you can see me,"
        },
        {
          "scid": "thag1.44:5.4",
          "pli": "Kasmā maṃ amma rodasī”ti.",
          "en": "so mum, why do you weep for me?"
        },
        {
          "scid": "thag1.44:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.44:6.2",
          "pli": "Sānutthero ….",
          "en": ""
        }
      ],
