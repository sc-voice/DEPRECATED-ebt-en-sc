          "scid": "thag1.64:4.1",
          "pli": "1.64. Vimalakoṇḍaññattheragāthā",
          "en": "1.64. Vimalakoṇḍañña"
        },
        {
          "scid": "thag1.64:5.1",
          "pli": "“Dumavhayāya uppanno,",
          "en": "I arose from the one named after a tree;"
        },
        {
          "scid": "thag1.64:5.2",
          "pli": "jāto paṇḍaraketunā;",
          "en": "I was born of the one whose banner shines."
        },
        {
          "scid": "thag1.64:5.3",
          "pli": "Ketuhā ketunāyeva,",
          "en": "The banner killer has destroyed the great banner,"
        },
        {
          "scid": "thag1.64:5.4",
          "pli": "mahāketuṃ padhaṃsayī”ti.",
          "en": "by means of the banner itself."
        },
        {
          "scid": "thag1.64:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.64:6.2",
          "pli": "Vimalakoṇḍañño thero ….",
          "en": ""
        }
