          "scid": "thag1.74:4.1",
          "pli": "1.74. Suyāmanattheragāthā",
          "en": "1.74. Suyāmana"
        },
        {
          "scid": "thag1.74:5.1",
          "pli": "“Kāmacchando ca byāpādo,",
          "en": "Sensual desire, ill will,"
        },
        {
          "scid": "thag1.74:5.2",
          "pli": "Thinamiddhañca bhikkhuno;",
          "en": "dullness and drowsiness,"
        },
        {
          "scid": "thag1.74:5.3",
          "pli": "Uddhaccaṃ vicikicchā ca,",
          "en": "restlessness, and doubt"
        },
        {
          "scid": "thag1.74:5.4",
          "pli": "Sabbasova na vijjatī”ti.",
          "en": "are not found in a monk at all."
        },
        {
          "scid": "thag1.74:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.74:6.2",
          "pli": "Suyāmano thero ….",
          "en": ""
