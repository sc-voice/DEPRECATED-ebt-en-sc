      "segments": [
        {
          "scid": "thag4.11:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.11:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.11:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.11:4.1",
          "pli": "4.11. Sappakattheragāthā",
          "en": "4.11. Sappaka"
        },
        {
          "scid": "thag4.11:5.1",
          "pli": "“Yadā balākā sucipaṇḍaracchadā,",
          "en": "When the crane with its beautiful white wings,"
        },
        {
          "scid": "thag4.11:5.2",
          "pli": "Kāḷassa meghassa bhayena tajjitā;",
          "en": "startled by fear of the dark thundercloud,"
        },
        {
          "scid": "thag4.11:5.3",
          "pli": "Palehiti ālayamālayesinī,",
          "en": "flees, seeking shelter—"
        },
        {
          "scid": "thag4.11:5.4",
          "pli": "Tadā nadī ajakaraṇī rameti maṃ.",
          "en": "then the River Ajakaraṇī delights me."
        },
        {
          "scid": "thag4.11:6.1",
          "pli": "Yadā balākā suvisuddhapaṇḍarā,",
          "en": "When the crane, so pure and white,"
        },
        {
          "scid": "thag4.11:6.2",
          "pli": "Kāḷassa meghassa bhayena tajjitā;",
          "en": "startled by fear of the dark thundercloud,"
        },
        {
          "scid": "thag4.11:6.3",
          "pli": "Pariyesati leṇamaleṇadassinī,",
          "en": "seeks a cave to shelter in, but can’t see one—"
        },
        {
          "scid": "thag4.11:6.4",
          "pli": "Tadā nadī ajakaraṇī rameti maṃ.",
          "en": "then the River Ajakaraṇī delights me."
        },
        {
          "scid": "thag4.11:7.1",
          "pli": "Kaṃ nu tattha na ramenti,",
          "en": "Who wouldn’t be delighted"
        },
        {
          "scid": "thag4.11:7.2",
          "pli": "jambuyo ubhato tahiṃ;",
          "en": "by the rose-apple trees"
        },
        {
          "scid": "thag4.11:7.3",
          "pli": "Sobhenti āpagākūlaṃ,",
          "en": "that adorn both banks of the river,"
        },
        {
          "scid": "thag4.11:7.4",
          "pli": "mama leṇassa pacchato.",
          "en": "there, behind my cave?"
        },
        {
          "scid": "thag4.11:8.1",
          "pli": "Tāmatamadasaṃghasuppahīnā,",
          "en": "Rid of snakes, that death-mad swarm,"
        },
        {
          "scid": "thag4.11:8.2",
          "pli": "Bhekā mandavatī panādayanti;",
          "en": "the lazy frogs croak:"
        },
        {
          "scid": "thag4.11:8.3",
          "pli": "‘Nājja girinadīhi vippavāsasamayo,",
          "en": "“Today isn’t the time to stray from mountain streams;"
        },
        {
          "scid": "thag4.11:8.4",
          "pli": "Khemā ajakaraṇī sivā surammā’”ti.",
          "en": "Ajakaraṇī is safe, pleasant, and delightful.”"
        },
        {
          "scid": "thag4.11:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.11:9.2",
          "pli": "Sappako thero ….",
          "en": ""
        }
      ],
