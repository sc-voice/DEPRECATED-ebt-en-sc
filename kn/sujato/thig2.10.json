      "segments": [
        {
          "scid": "thig2.10:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.10:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.10:3.1",
          "pli": "10. Sāmātherīgāthā",
          "en": "2.10. Sāmā"
        },
        {
          "scid": "thig2.10:4.1",
          "pli": "“Catukkhattuṃ pañcakkhattuṃ,",
          "en": "Four or five times"
        },
        {
          "scid": "thig2.10:4.2",
          "pli": "vihārā upanikkhamiṃ;",
          "en": "I left my dwelling."
        },
        {
          "scid": "thig2.10:4.3",
          "pli": "Aladdhā cetaso santiṃ,",
          "en": "I had failed to find peace of heart,"
        },
        {
          "scid": "thig2.10:4.4",
          "pli": "citte avasavattinī;",
          "en": "or any control over my mind."
        },
        {
          "scid": "thig2.10:4.5",
          "pli": "Tassā me aṭṭhamī ratti,",
          "en": "Now it is the eighth night"
        },
        {
          "scid": "thig2.10:4.6",
          "pli": "yato taṇhā samūhatā.",
          "en": "since craving was eradicated."
        },
        {
          "scid": "thig2.10:5.1",
          "pli": "Bahūhi dukkhadhammehi,",
          "en": "Though subject to so many painful things,"
        },
        {
          "scid": "thig2.10:5.2",
          "pli": "appamādaratāya me;",
          "en": "I have, through my love of diligence,"
        },
        {
          "scid": "thig2.10:5.3",
          "pli": "Taṇhakkhayo anuppatto,",
          "en": "reached the ending of craving,"
        },
        {
          "scid": "thig2.10:5.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig2.10:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.10:6.2",
          "pli": "Sāmā therī ….",
          "en": ""
        },
        {
          "scid": "thig2.10:7.1",
          "pli": "Dukanipāto niṭṭhito.",
          "en": "The Book of the Twos is finished."
        }
      ],
