        {
          "scid": "thag1.5:4.1",
          "pli": "1.5. Dabbattheragāthā",
          "en": "1.5. Dabba"
        },
        {
          "scid": "thag1.5:5.1",
          "pli": "“Yo duddamiyo damena danto,",
          "en": "Once hard to tame, now tamed himself;"
        },
        {
          "scid": "thag1.5:5.2",
          "pli": "Dabbo santusito vitiṇṇakaṅkho;",
          "en": "clever, content, with doubt overcome;"
        },
        {
          "scid": "thag1.5:5.3",
          "pli": "Vijitāvī apetabheravo hi,",
          "en": "victorious since his fears have vanished:"
        },
        {
          "scid": "thag1.5:5.4",
          "pli": "Dabbo so parinibbuto ṭhitatto”ti.",
          "en": "Dabba is steadfast, and has become extinguished."
        },
        {
          "scid": "thag1.5:6.1",
          "pli": "Itthaṃ sudaṃ āyasmā dabbo thero gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior venerable Dabba."
        }
      ],
