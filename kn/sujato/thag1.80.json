      "segments": [
        {
          "scid": "thag1.80:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.80:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.80:3.1",
          "pli": "Aṭṭhamavagga",
          "en": "Chapter Eight"
        },
        {
          "scid": "thag1.80:4.1",
          "pli": "1.80. Uggattheragāthā",
          "en": "1.80. Ugga"
        },
        {
          "scid": "thag1.80:5.1",
          "pli": "“Yaṃ mayā pakataṃ kammaṃ,",
          "en": "Whatever actions I have performed,"
        },
        {
          "scid": "thag1.80:5.2",
          "pli": "appaṃ vā yadi vā bahuṃ;",
          "en": "whether trivial or important,"
        },
        {
          "scid": "thag1.80:5.3",
          "pli": "Sabbametaṃ parikkhīṇaṃ,",
          "en": "are all completely exhausted:"
        },
        {
          "scid": "thag1.80:5.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag1.80:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.80:6.2",
          "pli": "Uggo thero ….",
          "en": ""
        },
        {
          "scid": "thag1.80:6.3",
          "pli": "Vaggo aṭṭhamo.",
          "en": ""
        },
        {
          "scid": "thag1.80:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.80:8.1",
          "pli": "Vacchapālo ca yo thero,",
          "en": ""
        },
        {
          "scid": "thag1.80:8.2",
          "pli": "ātumo māṇavo isi;",
          "en": ""
        },
        {
          "scid": "thag1.80:8.3",
          "pli": "Suyāmano susārado,",
          "en": ""
        },
        {
          "scid": "thag1.80:8.4",
          "pli": "thero yo ca piyañjaho;",
          "en": ""
        },
        {
          "scid": "thag1.80:8.5",
          "pli": "Ārohaputto meṇḍasiro,",
          "en": ""
        },
        {
          "scid": "thag1.80:8.6",
          "pli": "rakkhito uggasavhayoti.",
          "en": ""
        }
      ],
