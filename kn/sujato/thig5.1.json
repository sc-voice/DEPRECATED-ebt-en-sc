      "segments": [
        {
          "scid": "thig5.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.1:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.1:3.1",
          "pli": "1. Aññataratherīgāthā",
          "en": "5.1. An Unnamed Nun (2nd)"
        },
        {
          "scid": "thig5.1:4.1",
          "pli": "“Paṇṇavīsativassāni,",
          "en": "In the twenty-five years"
        },
        {
          "scid": "thig5.1:4.2",
          "pli": "yato pabbajitā ahaṃ;",
          "en": "since I went forth"
        },
        {
          "scid": "thig5.1:4.3",
          "pli": "Nāccharāsaṅghātamattampi,",
          "en": "I have not found peace of mind,"
        },
        {
          "scid": "thig5.1:4.4",
          "pli": "cittassūpasamajjhagaṃ.",
          "en": "even for as long as a finger-snap."
        },
        {
          "scid": "thig5.1:5.1",
          "pli": "Aladdhā cetaso santiṃ,",
          "en": "Failing to find peace of heart,"
        },
        {
          "scid": "thig5.1:5.2",
          "pli": "kāmarāgenavassutā;",
          "en": "corrupted by sensual desire,"
        },
        {
          "scid": "thig5.1:5.3",
          "pli": "Bāhā paggayha kandantī,",
          "en": "I cried with flailing arms"
        },
        {
          "scid": "thig5.1:5.4",
          "pli": "vihāraṃ pāvisiṃ ahaṃ.",
          "en": "as I entered a dwelling."
        },
        {
          "scid": "thig5.1:6.1",
          "pli": "Sā bhikkhuniṃ upāgacchiṃ,",
          "en": "I approached a nun"
        },
        {
          "scid": "thig5.1:6.2",
          "pli": "yā me saddhāyikā ahu;",
          "en": "in whom I had faith."
        },
        {
          "scid": "thig5.1:6.3",
          "pli": "Sā me dhammamadesesi,",
          "en": "She taught me the Dhamma:"
        },
        {
          "scid": "thig5.1:6.4",
          "pli": "khandhāyatanadhātuyo.",
          "en": "the aggregates, sense fields, and elements."
        },
        {
          "scid": "thig5.1:7.1",
          "pli": "Tassā dhammaṃ suṇitvāna,",
          "en": "When I heard her teaching,"
        },
        {
          "scid": "thig5.1:7.2",
          "pli": "ekamante upāvisiṃ;",
          "en": "I retired to a discreet place."
        },
        {
          "scid": "thig5.1:7.3",
          "pli": "Pubbenivāsaṃ jānāmi,",
          "en": "I know my past lives;"
        },
        {
          "scid": "thig5.1:7.4",
          "pli": "dibbacakkhu visodhitaṃ.",
          "en": "my clairvoyance is purified;"
        },
        {
          "scid": "thig5.1:8.1",
          "pli": "Cetopariccañāṇañca,",
          "en": "I comprehend the minds of others;"
        },
        {
          "scid": "thig5.1:8.2",
          "pli": "sotadhātu visodhitā;",
          "en": "my clairaudience is purified;"
        },
        {
          "scid": "thig5.1:8.3",
          "pli": "Iddhīpi me sacchikatā,",
          "en": "I've realized the psychic powers,"
        },
        {
          "scid": "thig5.1:8.4",
          "pli": "patto me āsavakkhayo;",
          "en": "and attained the ending of defilements."
        },
        {
          "scid": "thig5.1:8.5",
          "pli": "Chaḷabhiññā sacchikatā,",
          "en": "I have realized the six kinds of direct knowledge,"
        },
        {
          "scid": "thig5.1:8.6",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig5.1:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.1:9.2",
          "pli": "Aññatarā therī ….",
          "en": ""
        }
      ],
