      "segments": [
        {
          "scid": "thig5.5:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.5:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.5:3.1",
          "pli": "5. Nanduttarātherīgāthā",
          "en": "5.5. Nanduttarā"
        },
        {
          "scid": "thig5.5:4.1",
          "pli": "“Aggiṃ candañca sūriyañca,",
          "en": "In the past I worshiped the sacred flame,"
        },
        {
          "scid": "thig5.5:4.2",
          "pli": "devatā ca namassihaṃ;",
          "en": "the moon, the sun, and the gods."
        },
        {
          "scid": "thig5.5:4.3",
          "pli": "Nadītitthāni gantvāna,",
          "en": "Having gone to a river ford,"
        },
        {
          "scid": "thig5.5:4.4",
          "pli": "udakaṃ oruhāmihaṃ.",
          "en": "I plunged into the water."
        },
        {
          "scid": "thig5.5:5.1",
          "pli": "Bahūvatasamādānā,",
          "en": "Undertaking many vows,"
        },
        {
          "scid": "thig5.5:5.2",
          "pli": "aḍḍhaṃ sīsassa olikhiṃ;",
          "en": "I shaved half my head."
        },
        {
          "scid": "thig5.5:5.3",
          "pli": "Chamāya seyyaṃ kappemi,",
          "en": "Preparing a bed on the ground,"
        },
        {
          "scid": "thig5.5:5.4",
          "pli": "rattiṃ bhattaṃ na bhuñjahaṃ.",
          "en": "I ate no food at night."
        },
        {
          "scid": "thig5.5:6.1",
          "pli": "Vibhūsāmaṇḍanaratā,",
          "en": "I loved my ornaments and decorations;"
        },
        {
          "scid": "thig5.5:6.2",
          "pli": "nhāpanucchādanehi ca;",
          "en": "and with baths and oil-massages,"
        },
        {
          "scid": "thig5.5:6.3",
          "pli": "Upakāsiṃ imaṃ kāyaṃ,",
          "en": "I pandered to this body,"
        },
        {
          "scid": "thig5.5:6.4",
          "pli": "kāmarāgena aṭṭitā.",
          "en": "racked by desire for pleasures of the senses."
        },
        {
          "scid": "thig5.5:7.1",
          "pli": "Tato saddhaṃ labhitvāna,",
          "en": "But then I gained faith,"
        },
        {
          "scid": "thig5.5:7.2",
          "pli": "pabbajiṃ anagāriyaṃ;",
          "en": "and went forth to homelessness."
        },
        {
          "scid": "thig5.5:7.3",
          "pli": "Disvā kāyaṃ yathābhūtaṃ,",
          "en": "Truly seeing the body,"
        },
        {
          "scid": "thig5.5:7.4",
          "pli": "kāmarāgo samūhato.",
          "en": "desire for sensual pleasure is eradicated."
        },
        {
          "scid": "thig5.5:8.1",
          "pli": "Sabbe bhavā samucchinnā,",
          "en": "All rebirths are cut off,"
        },
        {
          "scid": "thig5.5:8.2",
          "pli": "icchā ca patthanāpi ca;",
          "en": "wishes and aspirations too."
        },
        {
          "scid": "thig5.5:8.3",
          "pli": "Sabbayogavisaṃyuttā,",
          "en": "Detached from all attachments,"
        },
        {
          "scid": "thig5.5:8.4",
          "pli": "santiṃ pāpuṇi cetaso”ti.",
          "en": "I've attained peace of heart."
        },
        {
          "scid": "thig5.5:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.5:9.2",
          "pli": "Nanduttarā therī ….",
          "en": ""
        }
      ],
