      "segments": [
        {
          "scid": "thig6.8:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig6.8:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thig6.8:3.1",
          "pli": "8. Vijayātherīgāthā",
          "en": "6.8. Vijayā"
        },
        {
          "scid": "thig6.8:4.1",
          "pli": "“Catukkhattuṃ pañcakkhattuṃ,",
          "en": "Four or five times"
        },
        {
          "scid": "thig6.8:4.2",
          "pli": "vihārā upanikkhamiṃ;",
          "en": "I left my dwelling;"
        },
        {
          "scid": "thig6.8:4.3",
          "pli": "Aladdhā cetaso santiṃ,",
          "en": "I had failed to find peace of heart,"
        },
        {
          "scid": "thig6.8:4.4",
          "pli": "citte avasavattinī.",
          "en": "or any control over my mind."
        },
        {
          "scid": "thig6.8:5.1",
          "pli": "Bhikkhuniṃ upasaṅkamma,",
          "en": "I approached a nun"
        },
        {
          "scid": "thig6.8:5.2",
          "pli": "sakkaccaṃ paripucchahaṃ;",
          "en": "and politely questioned her."
        },
        {
          "scid": "thig6.8:5.3",
          "pli": "Sā me dhammamadesesi,",
          "en": "She taught me the Dhamma:"
        },
        {
          "scid": "thig6.8:5.4",
          "pli": "dhātuāyatanāni ca.",
          "en": "the elements and sense fields,"
        },
        {
          "scid": "thig6.8:6.1",
          "pli": "Cattāri ariyasaccāni,",
          "en": "the four noble truths,"
        },
        {
          "scid": "thig6.8:6.2",
          "pli": "indriyāni balāni ca;",
          "en": "the faculties and the powers,"
        },
        {
          "scid": "thig6.8:6.3",
          "pli": "Bojjhaṅgaṭṭhaṅgikaṃ maggaṃ,",
          "en": "the awakening factors, and the eightfold path"
        },
        {
          "scid": "thig6.8:6.4",
          "pli": "uttamatthassa pattiyā.",
          "en": "for the attainment of the highest goal."
        },
        {
          "scid": "thig6.8:7.1",
          "pli": "Tassāhaṃ vacanaṃ sutvā,",
          "en": "After hearing her words,"
        },
        {
          "scid": "thig6.8:7.2",
          "pli": "karontī anusāsaniṃ;",
          "en": "I did her bidding."
        },
        {
          "scid": "thig6.8:7.3",
          "pli": "Rattiyā purime yāme,",
          "en": "In the first watch of the night,"
        },
        {
          "scid": "thig6.8:7.4",
          "pli": "pubbajātimanussariṃ.",
          "en": "I recollected my past lives."
        },
        {
          "scid": "thig6.8:8.1",
          "pli": "Rattiyā majjhime yāme,",
          "en": "In the middle watch of the night,"
        },
        {
          "scid": "thig6.8:8.2",
          "pli": "dibbacakkhuṃ visodhayiṃ;",
          "en": "I purified my clairvoyance."
        },
        {
          "scid": "thig6.8:8.3",
          "pli": "Rattiyā pacchime yāme,",
          "en": "In the last watch of the night,"
        },
        {
          "scid": "thig6.8:8.4",
          "pli": "tamokhandhaṃ padālayiṃ.",
          "en": "I shattered the mass of darkness."
        },
        {
          "scid": "thig6.8:9.1",
          "pli": "Pītisukhena ca kāyaṃ,",
          "en": "I then meditated pervading my body"
        },
        {
          "scid": "thig6.8:9.2",
          "pli": "Pharitvā vihariṃ tadā;",
          "en": "with rapture and bliss."
        },
        {
          "scid": "thig6.8:9.3",
          "pli": "Sattamiyā pāde pasāresiṃ,",
          "en": "On the seventh day I stretched out my feet,"
        },
        {
          "scid": "thig6.8:9.4",
          "pli": "Tamokhandhaṃ padāliyā”ti.",
          "en": "having shattered the mass of darkness."
        },
        {
          "scid": "thig6.8:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig6.8:10.2",
          "pli": "Vijayā therī ….",
          "en": ""
        },
        {
          "scid": "thig6.8:11.1",
          "pli": "Chakkanipāto niṭṭhito.",
          "en": "The Book of the Sixes is finished."
        }
      ],
