  "sections": [
    {
      "segments": [
        {
          "scid": "thag6.10:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag6.10:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thag6.10:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag6.10:4.1",
          "pli": "6.10. Sumanattheragāthā",
          "en": "6.10. Sumana (2nd)"
        },
        {
          "scid": "thag6.10:5.1",
          "pli": "“Yadā navo pabbajito,",
          "en": "I was only seven years old"
        },
        {
          "scid": "thag6.10:5.2",
          "pli": "jātiyā sattavassiko;",
          "en": "and had just gone forth"
        },
        {
          "scid": "thag6.10:5.3",
          "pli": "Iddhiyā abhibhotvāna,",
          "en": "when I overcame the mighty serpent king"
        },
        {
          "scid": "thag6.10:5.4",
          "pli": "pannagindaṃ mahiddhikaṃ.",
          "en": "with my psychic powers."
        },
        {
          "scid": "thag6.10:6.1",
          "pli": "Upajjhāyassa udakaṃ,",
          "en": "I brought water for my mentor"
        },
        {
          "scid": "thag6.10:6.2",
          "pli": "anotattā mahāsarā;",
          "en": "from the great lake Anotatta."
        },
        {
          "scid": "thag6.10:6.3",
          "pli": "Āharāmi tato disvā,",
          "en": "When he saw me,"
        },
        {
          "scid": "thag6.10:6.4",
          "pli": "maṃ satthā etadabravi”.",
          "en": "my teacher declared:"
        },
        {
          "scid": "thag6.10:7.1",
          "pli": "“Sāriputta imaṃ passa,",
          "en": "“Sāriputta, see this"
        },
        {
          "scid": "thag6.10:7.2",
          "pli": "āgacchantaṃ kumārakaṃ;",
          "en": "young boy coming,"
        },
        {
          "scid": "thag6.10:7.3",
          "pli": "Udakakumbhamādāya,",
          "en": "carrying a water pot,"
        },
        {
          "scid": "thag6.10:7.4",
          "pli": "ajjhattaṃ susamāhitaṃ.",
          "en": "serene inside himself."
        },
        {
          "scid": "thag6.10:8.1",
          "pli": "Pāsādikena vattena,",
          "en": "His conduct inspires confidence,"
        },
        {
          "scid": "thag6.10:8.2",
          "pli": "kalyāṇairiyāpatho;",
          "en": "he is of lovely deportment:"
        },
        {
          "scid": "thag6.10:8.3",
          "pli": "Sāmaṇeronuruddhassa,",
          "en": "he is Anuruddha’s novice,"
        },
        {
          "scid": "thag6.10:8.4",
          "pli": "iddhiyā ca visārado.",
          "en": "assured in psychic powers."
        },
        {
          "scid": "thag6.10:9.1",
          "pli": "Ājānīyena ājañño,",
          "en": "Made a thoroughbred by a thoroughbred,"
        },
        {
          "scid": "thag6.10:9.2",
          "pli": "sādhunā sādhukārito;",
          "en": "made good by the good,"
        },
        {
          "scid": "thag6.10:9.3",
          "pli": "Vinīto anuruddhena,",
          "en": "educated and trained by Anuruddha,"
        },
        {
          "scid": "thag6.10:9.4",
          "pli": "katakiccena sikkhito.",
          "en": "who has completed his task."
        },
        {
          "scid": "thag6.10:10.1",
          "pli": "So patvā paramaṃ santiṃ,",
          "en": "Having attained ultimate peace"
        },
        {
          "scid": "thag6.10:10.2",
          "pli": "sacchikatvā akuppataṃ;",
          "en": "and witnessed the unshakable,"
        },
        {
          "scid": "thag6.10:10.3",
          "pli": "Sāmaṇero sa sumano,",
          "en": "that novice Sumana has the wish:"
        },
        {
          "scid": "thag6.10:10.4",
          "pli": "mā maṃ jaññāti icchatī”ti.",
          "en": "‘May no-one find me out!’”"
        },
        {
          "scid": "thag6.10:11.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag6.10:11.2",
          "pli": "Sumano thero ….",
          "en": ""
        }
      ],
