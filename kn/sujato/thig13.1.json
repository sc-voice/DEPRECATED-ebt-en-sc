  "sections": [
    {
      "segments": [
        {
          "scid": "thig13.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig13.1:2.1",
          "pli": "Vīsatinipāta",
          "en": "The Book of the Twenties"
        },
        {
          "scid": "thig13.1:3.1",
          "pli": "1. Ambapālītherīgāthā",
          "en": "13.1. Ambapālī"
        },
        {
          "scid": "thig13.1:4.1",
          "pli": "“Kāḷakā bhamaravaṇṇasādisā,",
          "en": "My hair was as black as bees,"
        },
        {
          "scid": "thig13.1:4.2",
          "pli": "Vellitaggā mama muddhajā ahuṃ;",
          "en": "graced with curly tips;"
        },
        {
          "scid": "thig13.1:4.3",
          "pli": "Te jarāya sāṇavākasādisā,",
          "en": "now old, it has become like hemp bark—"
        },
        {
          "scid": "thig13.1:4.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:5.1",
          "pli": "Vāsitova surabhī karaṇḍako,",
          "en": "Crowned with flowers,"
        },
        {
          "scid": "thig13.1:5.2",
          "pli": "Pupphapūra mama uttamaṅgajo;",
          "en": "my head was as fragrant as a perfume box;"
        },
        {
          "scid": "thig13.1:5.3",
          "pli": "Taṃ jarāyatha salomagandhikaṃ,",
          "en": "now old, it smells like dog fur—"
        },
        {
          "scid": "thig13.1:5.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:6.1",
          "pli": "Kānanaṃva sahitaṃ suropitaṃ,",
          "en": "My hair was as thick as a well-planted forest,"
        },
        {
          "scid": "thig13.1:6.2",
          "pli": "Kocchasūcivicitaggasobhitaṃ;",
          "en": "it shone, parted with brush and pins;"
        },
        {
          "scid": "thig13.1:6.3",
          "pli": "Taṃ jarāya viralaṃ tahiṃ tahiṃ,",
          "en": "now old, it’s patchy and sparse—"
        },
        {
          "scid": "thig13.1:6.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:7.1",
          "pli": "Kaṇhakhandhakasuvaṇṇamaṇḍitaṃ,",
          "en": "With plaits of black and ribbons of gold,"
        },
        {
          "scid": "thig13.1:7.2",
          "pli": "Sobhate suveṇīhilaṅkataṃ;",
          "en": "it was so pretty, adorned with braids;"
        },
        {
          "scid": "thig13.1:7.3",
          "pli": "Taṃ jarāya khalitaṃ siraṃ kataṃ,",
          "en": "now old, my head’s gone bald—"
        },
        {
          "scid": "thig13.1:7.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:8.1",
          "pli": "Cittakārasukatāva lekhikā,",
          "en": "My eyebrows used to look so nice,"
        },
        {
          "scid": "thig13.1:8.2",
          "pli": "Sobhare su bhamukā pure mama;",
          "en": "like crescents painted by an artist;"
        },
        {
          "scid": "thig13.1:8.3",
          "pli": "Tā jarāya valibhippalambitā,",
          "en": "now old, they droop with wrinkles—"
        },
        {
          "scid": "thig13.1:8.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:9.1",
          "pli": "Bhassarā surucirā yathā maṇī,",
          "en": "My eyes shone brilliant as gems,"
        },
        {
          "scid": "thig13.1:9.2",
          "pli": "Nettahesumabhinīlamāyatā;",
          "en": "wide and deepest blue;"
        },
        {
          "scid": "thig13.1:9.3",
          "pli": "Te jarāyabhihatā na sobhare,",
          "en": "ruined by age, they shine no more—"
        },
        {
          "scid": "thig13.1:9.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:10.1",
          "pli": "Saṇhatuṅgasadisī ca nāsikā,",
          "en": "My nose was like a perfect peak,"
        },
        {
          "scid": "thig13.1:10.2",
          "pli": "Sobhate su abhiyobbanaṃ pati;",
          "en": "lovely in my bloom of youth;"
        },
        {
          "scid": "thig13.1:10.3",
          "pli": "Sā jarāya upakūlitā viya,",
          "en": "now old, it’s shriveled like a pepper;"
        },
        {
          "scid": "thig13.1:10.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:11.1",
          "pli": "Kaṅkaṇaṃva sukataṃ suniṭṭhitaṃ,",
          "en": "My ear-lobes were so pretty,"
        },
        {
          "scid": "thig13.1:11.2",
          "pli": "Sobhare su mama kaṇṇapāḷiyo;",
          "en": "like lovingly crafted bracelets;"
        },
        {
          "scid": "thig13.1:11.3",
          "pli": "Tā jarāya valibhippalambitā,",
          "en": "now old, they droop with wrinkles—"
        },
        {
          "scid": "thig13.1:11.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:12.1",
          "pli": "Pattalīmakulavaṇṇasādisā,",
          "en": "My teeth used to be so pretty,"
        },
        {
          "scid": "thig13.1:12.2",
          "pli": "Sobhare su dantā pure mama;",
          "en": "bright as a jasmine flower;"
        },
        {
          "scid": "thig13.1:12.3",
          "pli": "Te jarāya khaṇḍitā cāsitā,",
          "en": "now old, they’re broken and yellow—"
        },
        {
          "scid": "thig13.1:12.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:13.1",
          "pli": "Kānanamhi vanasaṇḍacārinī,",
          "en": "My singing was sweet as a cuckoo"
        },
        {
          "scid": "thig13.1:13.2",
          "pli": "Kokilāva madhuraṃ nikūjihaṃ;",
          "en": "wandering in the forest groves;"
        },
        {
          "scid": "thig13.1:13.3",
          "pli": "Taṃ jarāya khalitaṃ tahiṃ tahiṃ,",
          "en": "now old, it’s patchy and croaking—"
        },
        {
          "scid": "thig13.1:13.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:14.1",
          "pli": "Saṇhakamburiva suppamajjitā,",
          "en": "My neck used to be so pretty,"
        },
        {
          "scid": "thig13.1:14.2",
          "pli": "Sobhate su gīvā pure mama;",
          "en": "like a polished shell of conch;"
        },
        {
          "scid": "thig13.1:14.3",
          "pli": "Sā jarāya bhaggā vināmitā,",
          "en": "now old, it’s bowed and bent—"
        },
        {
          "scid": "thig13.1:14.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:15.1",
          "pli": "Vaṭṭapalighasadisopamā ubho,",
          "en": "My arms used to be so pretty,"
        },
        {
          "scid": "thig13.1:15.2",
          "pli": "Sobhare su bāhā pure mama;",
          "en": "like rounded cross-bars;"
        },
        {
          "scid": "thig13.1:15.3",
          "pli": "Tā jarāya yatha pāṭalibbalitā,",
          "en": "now old, they droop like a trumpet-flower tree—"
        },
        {
          "scid": "thig13.1:15.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:16.1",
          "pli": "Saṇhamuddikasuvaṇṇamaṇḍitā,",
          "en": "My hands used to be so pretty,"
        },
        {
          "scid": "thig13.1:16.2",
          "pli": "Sobhare su hatthā pure mama;",
          "en": "adorned with lovely golden rings;"
        },
        {
          "scid": "thig13.1:16.3",
          "pli": "Te jarāya yathā mūlamūlikā,",
          "en": "now old, they’re like red radishes—"
        },
        {
          "scid": "thig13.1:16.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:17.1",
          "pli": "Pīnavaṭṭasahituggatā ubho,",
          "en": "My breasts used to be so pretty,"
        },
        {
          "scid": "thig13.1:17.2",
          "pli": "Sobhare su thanakā pure mama;",
          "en": "swelling, round, close, and high;"
        },
        {
          "scid": "thig13.1:17.3",
          "pli": "Thevikīva lambanti nodakā,",
          "en": "now they droop like water bags—"
        },
        {
          "scid": "thig13.1:17.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:18.1",
          "pli": "Kañcanassa phalakaṃva sammaṭṭhaṃ,",
          "en": "My body used to be so pretty,"
        },
        {
          "scid": "thig13.1:18.2",
          "pli": "Sobhate su kāyo pure mama;",
          "en": "like a polished slab of gold;"
        },
        {
          "scid": "thig13.1:18.3",
          "pli": "So valīhi sukhumāhi otato,",
          "en": "now it’s covered with fine wrinkles—"
        },
        {
          "scid": "thig13.1:18.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:19.1",
          "pli": "Nāgabhogasadisopamā ubho,",
          "en": "Both my thighs used to be so pretty,"
        },
        {
          "scid": "thig13.1:19.2",
          "pli": "Sobhare su ūrū pure mama;",
          "en": "like an elephant’s trunk;"
        },
        {
          "scid": "thig13.1:19.3",
          "pli": "Te jarāya yathā veḷunāḷiyo,",
          "en": "now old, they’re like bamboo—"
        },
        {
          "scid": "thig13.1:19.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:20.1",
          "pli": "Saṇhanūpurasuvaṇṇamaṇḍitā,",
          "en": "My calves used to be so pretty,"
        },
        {
          "scid": "thig13.1:20.2",
          "pli": "Sobhare su jaṅghā pure mama;",
          "en": "adorned with cute golden anklets;"
        },
        {
          "scid": "thig13.1:20.3",
          "pli": "Tā jarāya tiladaṇḍakāriva,",
          "en": "now old, they’re like sesame sticks—"
        },
        {
          "scid": "thig13.1:20.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:21.1",
          "pli": "Tūlapuṇṇasadisopamā ubho,",
          "en": "Both my feet used to be so pretty,"
        },
        {
          "scid": "thig13.1:21.2",
          "pli": "Sobhare su pādā pure mama;",
          "en": "plump as if with cotton-wool;"
        },
        {
          "scid": "thig13.1:21.3",
          "pli": "Te jarāya phuṭitā valīmatā,",
          "en": "now old, they’re cracked and wrinkly—"
        },
        {
          "scid": "thig13.1:21.4",
          "pli": "Saccavādivacanaṃ anaññathā.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:22.1",
          "pli": "Ediso ahu ayaṃ samussayo,",
          "en": "This bag of bones once was such,"
        },
        {
          "scid": "thig13.1:22.2",
          "pli": "Jajjaro bahudukkhānamālayo;",
          "en": "but now it’s withered, home to so much pain;"
        },
        {
          "scid": "thig13.1:22.3",
          "pli": "Sopalepapatito jarāgharo,",
          "en": "like a house in decay with plaster crumbling—"
        },
        {
          "scid": "thig13.1:22.4",
          "pli": "Saccavādivacanaṃ anaññathā”.",
          "en": "the word of the truthful one is confirmed."
        },
        {
          "scid": "thig13.1:23.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig13.1:23.2",
          "pli": "Ambapālī therī ….",
          "en": ""
        }
      ],
