        {
          "scid": "thag1.12:4.1",
          "pli": "1.12. Mahāvacchattheragāthā",
          "en": "1.12. Mahāvaccha"
        },
        {
          "scid": "thag1.12:5.1",
          "pli": "“Paññābalī sīlavatūpapanno,",
          "en": "Empowered by wisdom, with precepts and observances intact,"
        },
        {
          "scid": "thag1.12:5.2",
          "pli": "Samāhito jhānarato satīmā;",
          "en": "serene, delighting in absorption, mindful,"
        },
        {
          "scid": "thag1.12:5.3",
          "pli": "Yadatthiyaṃ bhojanaṃ bhuñjamāno,",
          "en": "eating just the needed food,"
        },
        {
          "scid": "thag1.12:5.4",
          "pli": "Kaṅkhetha kālaṃ idha vītarāgo”ti.",
          "en": "one should bide one’s time here, free of desire."
        },
        {
          "scid": "thag1.12:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.12:6.2",
          "pli": "Mahāvaccho thero ….",
          "en": ""
        }
      ],
