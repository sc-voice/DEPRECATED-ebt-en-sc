        {
          "scid": "thag1.40:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.40:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.40:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag1.40:4.1",
          "pli": "1.40. Vaḍḍhamānattheragāthā",
          "en": "1.40. Vaḍḍhamāna"
        },
        {
          "scid": "thag1.40:5.1",
          "pli": "“Sattiyā viya omaṭṭho,",
          "en": "Like they’re struck by a sword,"
        },
        {
          "scid": "thag1.40:5.2",
          "pli": "ḍayhamānova matthake;",
          "en": "like their head was on fire,"
        },
        {
          "scid": "thag1.40:5.3",
          "pli": "Bhavarāgappahānāya,",
          "en": "a mendicant should go forth mindfully,"
        },
        {
          "scid": "thag1.40:5.4",
          "pli": "sato bhikkhu paribbaje”ti.",
          "en": "to give up desire for rebirth."
        },
        {
          "scid": "thag1.40:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.40:6.2",
          "pli": "Vaḍḍhamāno thero ….",
          "en": ""
        },
        {
          "scid": "thag1.40:6.3",
          "pli": "Vaggo catuttho.",
          "en": ""
        },
        {
          "scid": "thag1.40:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.40:8.1",
          "pli": "Gahvaratīriyo suppiyo,",
          "en": ""
        },
        {
          "scid": "thag1.40:8.2",
          "pli": "sopāko ceva posiyo;",
          "en": ""
        },
        {
          "scid": "thag1.40:8.3",
          "pli": "Sāmaññakāni kumāputto,",
          "en": ""
        },
        {
          "scid": "thag1.40:8.4",
          "pli": "kumāputtasahāyako;",
          "en": ""
        },
        {
          "scid": "thag1.40:8.5",
          "pli": "Gavampati tissatthero,",
          "en": ""
        },
        {
          "scid": "thag1.40:8.6",
          "pli": "vaḍḍhamāno mahāyasoti.",
          "en": ""
        }
      ],
