  "sections": [
    {
      "segments": [
        {
          "scid": "thag12.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag12.2:2.1",
          "pli": "Dvādasakanipāta",
          "en": "The Book of the Twelves"
        },
        {
          "scid": "thag12.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag12.2:4.1",
          "pli": "12.2. Sunītattheragāthā",
          "en": "12.2. Sunīta"
        },
        {
          "scid": "thag12.2:5.1",
          "pli": "“Nīce kulamhi jātohaṃ,",
          "en": "I was born in a low-class family."
        },
        {
          "scid": "thag12.2:5.2",
          "pli": "daliddo appabhojano;",
          "en": "We were poor, with little to eat."
        },
        {
          "scid": "thag12.2:5.3",
          "pli": "Hīnakammaṃ mamaṃ āsi,",
          "en": "My job was lowly—"
        },
        {
          "scid": "thag12.2:5.4",
          "pli": "ahosiṃ pupphachaḍḍako.",
          "en": "I threw out the old flowers."
        },
        {
          "scid": "thag12.2:6.1",
          "pli": "Jigucchito manussānaṃ,",
          "en": "Shunned by people,"
        },
        {
          "scid": "thag12.2:6.2",
          "pli": "paribhūto ca vambhito;",
          "en": "I was disregarded and held in contempt."
        },
        {
          "scid": "thag12.2:6.3",
          "pli": "Nīcaṃ manaṃ karitvāna,",
          "en": "I humbled my heart"
        },
        {
          "scid": "thag12.2:6.4",
          "pli": "vandissaṃ bahukaṃ janaṃ.",
          "en": "and paid respects to many people."
        },
        {
          "scid": "thag12.2:7.1",
          "pli": "Athaddasāsiṃ sambuddhaṃ,",
          "en": "Then I saw the Buddha"
        },
        {
          "scid": "thag12.2:7.2",
          "pli": "bhikkhusaṃghapurakkhataṃ;",
          "en": "at the fore of the mendicant Saṅgha;"
        },
        {
          "scid": "thag12.2:7.3",
          "pli": "Pavisantaṃ mahāvīraṃ,",
          "en": "the great hero"
        },
        {
          "scid": "thag12.2:7.4",
          "pli": "magadhānaṃ puruttamaṃ.",
          "en": "was entering the capital city of Magadhā."
        },
        {
          "scid": "thag12.2:8.1",
          "pli": "Nikkhipitvāna byābhaṅgiṃ,",
          "en": "I dropped my flail"
        },
        {
          "scid": "thag12.2:8.2",
          "pli": "vandituṃ upasaṅkamiṃ;",
          "en": "and approached to pay homage."
        },
        {
          "scid": "thag12.2:8.3",
          "pli": "Mameva anukampāya,",
          "en": "Out of compassion for me,"
        },
        {
          "scid": "thag12.2:8.4",
          "pli": "aṭṭhāsi purisuttamo.",
          "en": "the supreme man stood still."
        },
        {
          "scid": "thag12.2:9.1",
          "pli": "Vanditvā satthuno pāde,",
          "en": "When I had paid homage at the Teacher’s feet,"
        },
        {
          "scid": "thag12.2:9.2",
          "pli": "ekamantaṃ ṭhito tadā;",
          "en": "I stood to one side"
        },
        {
          "scid": "thag12.2:9.3",
          "pli": "Pabbajjaṃ ahamāyāciṃ,",
          "en": "and asked the supreme being"
        },
        {
          "scid": "thag12.2:9.4",
          "pli": "sabbasattānamuttamaṃ.",
          "en": "for the going-forth."
        },
        {
          "scid": "thag12.2:10.1",
          "pli": "Tato kāruṇiko satthā,",
          "en": "Then the Teacher, being sympathetic,"
        },
        {
          "scid": "thag12.2:10.2",
          "pli": "sabbalokānukampako;",
          "en": "and having compassion for the whole world,"
        },
        {
          "scid": "thag12.2:10.3",
          "pli": "‘Ehi bhikkhū’ti maṃ āha,",
          "en": "said to me, “Come, monk!”"
        },
        {
          "scid": "thag12.2:10.4",
          "pli": "sā me āsūpasampadā.",
          "en": "That was my ordination."
        },
        {
          "scid": "thag12.2:11.1",
          "pli": "Sohaṃ eko araññasmiṃ,",
          "en": "Staying alone in the wilderness,"
        },
        {
          "scid": "thag12.2:11.2",
          "pli": "viharanto atandito;",
          "en": "meditating tirelessly,"
        },
        {
          "scid": "thag12.2:11.3",
          "pli": "Akāsiṃ satthu vacanaṃ,",
          "en": "I have completed what the Teacher taught,"
        },
        {
          "scid": "thag12.2:11.4",
          "pli": "yathā maṃ ovadī jino.",
          "en": "just as the victor advised me."
        },
        {
          "scid": "thag12.2:12.1",
          "pli": "Rattiyā paṭhamaṃ yāmaṃ,",
          "en": "In the first watch of the night,"
        },
        {
          "scid": "thag12.2:12.2",
          "pli": "Pubbajātimanussariṃ;",
          "en": "I recollected my past lives."
        },
        {
          "scid": "thag12.2:12.3",
          "pli": "Rattiyā majjhimaṃ yāmaṃ,",
          "en": "In the middle watch of the night,"
        },
        {
          "scid": "thag12.2:12.4",
          "pli": "Dibbacakkhuṃ visodhayiṃ;",
          "en": "I purified my clairvoyance."
        },
        {
          "scid": "thag12.2:12.5",
          "pli": "Rattiyā pacchime yāme,",
          "en": "In the last watch of the night,"
        },
        {
          "scid": "thag12.2:12.6",
          "pli": "Tamokhandhaṃ padālayiṃ.",
          "en": "I shattered the mass of darkness."
        },
        {
          "scid": "thag12.2:13.1",
          "pli": "Tato ratyā vivasāne,",
          "en": "At the end of the night,"
        },
        {
          "scid": "thag12.2:13.2",
          "pli": "sūriyassuggamanaṃ pati;",
          "en": "as the sunrise drew near,"
        },
        {
          "scid": "thag12.2:13.3",
          "pli": "Indo brahmā ca āgantvā,",
          "en": "Indra and Brahmā came"
        },
        {
          "scid": "thag12.2:13.4",
          "pli": "maṃ namassiṃsu pañjalī.",
          "en": "and revered me with joined hands."
        },
        {
          "scid": "thag12.2:14.1",
          "pli": "‘Namo te purisājañña,",
          "en": "“Homage to you, O thoroughbred!"
        },
        {
          "scid": "thag12.2:14.2",
          "pli": "namo te purisuttama;",
          "en": "Homage to you, supreme among men!"
        },
        {
          "scid": "thag12.2:14.3",
          "pli": "Yassa te āsavā khīṇā,",
          "en": "Since your defilements are ended,"
        },
        {
          "scid": "thag12.2:14.4",
          "pli": "dakkhiṇeyyosi mārisa’.",
          "en": "you, sir, are worthy of a religious donation.”"
        },
        {
          "scid": "thag12.2:15.1",
          "pli": "Tato disvāna maṃ satthā,",
          "en": "When he saw me honored"
        },
        {
          "scid": "thag12.2:15.2",
          "pli": "devasaṅghapurakkhataṃ;",
          "en": "by the assembly of gods,"
        },
        {
          "scid": "thag12.2:15.3",
          "pli": "Sitaṃ pātukaritvāna,",
          "en": "the teacher smiled"
        },
        {
          "scid": "thag12.2:15.4",
          "pli": "imamatthaṃ abhāsatha.",
          "en": "and said the following:"
        },
        {
          "scid": "thag12.2:16.1",
          "pli": "‘Tapena brahmacariyena,",
          "en": "“By austerity and spiritual practice,"
        },
        {
          "scid": "thag12.2:16.2",
          "pli": "saṃyamena damena ca;",
          "en": "by restraint and by taming:"
        },
        {
          "scid": "thag12.2:16.3",
          "pli": "Etena brāhmaṇo hoti,",
          "en": "that’s how to become a brahmin,"
        },
        {
          "scid": "thag12.2:16.4",
          "pli": "etaṃ brāhmaṇamuttaman’”ti.",
          "en": "this is the supreme brahmin.”"
        },
        {
          "scid": "thag12.2:17.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag12.2:17.2",
          "pli": "Sunīto thero ….",
          "en": ""
        },
        {
          "scid": "thag12.2:18.1",
          "pli": "Dvādasakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag12.2:19.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag12.2:20.1",
          "pli": "Sīlavā ca sunīto ca,",
          "en": ""
        },
        {
          "scid": "thag12.2:20.2",
          "pli": "therā dve te mahiddhikā;",
          "en": ""
        },
        {
          "scid": "thag12.2:20.3",
          "pli": "Dvādasamhi nipātamhi,",
          "en": ""
        },
        {
          "scid": "thag12.2:20.4",
          "pli": "gāthāyo catuvīsatīti.",
          "en": ""
        }
      ],
