        {
          "scid": "thig1.3:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig1.3:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thig1.3:3.1",
          "pli": "3. Puṇṇātherīgāthā",
          "en": "3. Puṇṇā"
        },
        {
          "scid": "thig1.3:4.1",
          "pli": "“Puṇṇe pūrassu dhammehi,",
          "en": "Puṇṇā, be filled with good qualities,"
        },
        {
          "scid": "thig1.3:4.2",
          "pli": "Cando pannaraseriva;",
          "en": "like the moon on the fifteenth day."
        },
        {
          "scid": "thig1.3:4.3",
          "pli": "Paripuṇṇāya paññāya,",
          "en": "When your wisdom is full,"
        },
        {
          "scid": "thig1.3:4.4",
          "pli": "Tamokhandhaṃ padālayā”ti.",
          "en": "shatter the mass of darkness."
        },
        {
          "scid": "thig1.3:5.1",
          "pli": "Itthaṃ sudaṃ puṇṇā therī gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior nun Puṇṇā."
        }
      ],
