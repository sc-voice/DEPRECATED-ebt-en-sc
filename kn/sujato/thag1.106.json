          "scid": "thag1.106:4.1",
          "pli": "1.106. Suhemantattheragāthā",
          "en": "1.106. Suhemanta"
        },
        {
          "scid": "thag1.106:5.1",
          "pli": "“Sataliṅgassa atthassa,",
          "en": "Though the meaning has a hundred facets,"
        },
        {
          "scid": "thag1.106:5.2",
          "pli": "satalakkhaṇadhārino;",
          "en": "and bears a hundred characteristics,"
        },
        {
          "scid": "thag1.106:5.3",
          "pli": "Ekaṅgadassī dummedho,",
          "en": "the fool sees only one factor,"
        },
        {
          "scid": "thag1.106:5.4",
          "pli": "satadassī ca paṇḍito”ti.",
          "en": "while the sage sees a hundred."
        },
        {
          "scid": "thag1.106:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.106:6.2",
          "pli": "Suhemanto thero ….",
          "en": ""
        }
