      "segments": [
        {
          "scid": "thag7.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag7.2:2.1",
          "pli": "Sattakanipāta",
          "en": "The Book of the Sevens"
        },
        {
          "scid": "thag7.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag7.2:4.1",
          "pli": "7.2 Lakuṇḍakabhaddiyattheragāthā",
          "en": "7.2. Lakuṇṭaka Bhaddiya"
        },
        {
          "scid": "thag7.2:5.1",
          "pli": "“Pare ambāṭakārāme,",
          "en": "Bhaddiya has plucked out craving, root and all,"
        },
        {
          "scid": "thag7.2:5.2",
          "pli": "vanasaṇḍamhi bhaddiyo;",
          "en": "and in a jungle thicket"
        },
        {
          "scid": "thag7.2:5.3",
          "pli": "Samūlaṃ taṇhamabbuyha,",
          "en": "on the far side of the Wild Mango Monastery,"
        },
        {
          "scid": "thag7.2:5.4",
          "pli": "tattha bhaddova jhāyati.",
          "en": "he practices absorption; he is truly well-favoured."
        },
        {
          "scid": "thag7.2:6.1",
          "pli": "Ramanteke mudiṅgehi,",
          "en": "Some delight in clay drums,"
        },
        {
          "scid": "thag7.2:6.2",
          "pli": "vīṇāhi paṇavehi ca;",
          "en": "in arched harps, and in cymbals."
        },
        {
          "scid": "thag7.2:6.3",
          "pli": "Ahañca rukkhamūlasmiṃ,",
          "en": "But here, at the foot of a tree,"
        },
        {
          "scid": "thag7.2:6.4",
          "pli": "rato buddhassa sāsane.",
          "en": "I delight in the Buddha’s teaching."
        },
        {
          "scid": "thag7.2:7.1",
          "pli": "Buddho ce me varaṃ dajjā,",
          "en": "If the Buddha were to grant me one wish,"
        },
        {
          "scid": "thag7.2:7.2",
          "pli": "so ca labbhetha me varo;",
          "en": "and I were to get what I wished for,"
        },
        {
          "scid": "thag7.2:7.3",
          "pli": "Gaṇhehaṃ sabbalokassa,",
          "en": "I’d choose for the whole world"
        },
        {
          "scid": "thag7.2:7.4",
          "pli": "niccaṃ kāyagataṃ satiṃ.",
          "en": "constant mindfulness of the body."
        },
        {
          "scid": "thag7.2:8.1",
          "pli": "Ye maṃ rūpena pāmiṃsu,",
          "en": "Those who’ve judged me on appearance,"
        },
        {
          "scid": "thag7.2:8.2",
          "pli": "ye ca ghosena anvagū;",
          "en": "and those swayed by my voice,"
        },
        {
          "scid": "thag7.2:8.3",
          "pli": "Chandarāgavasūpetā,",
          "en": "are full of desire and greed;"
        },
        {
          "scid": "thag7.2:8.4",
          "pli": "na maṃ jānanti te janā.",
          "en": "they don’t know me."
        },
        {
          "scid": "thag7.2:9.1",
          "pli": "Ajjhattañca na jānāti,",
          "en": "Not knowing what’s inside,"
        },
        {
          "scid": "thag7.2:9.2",
          "pli": "bahiddhā ca na passati;",
          "en": "nor seeing what’s outside,"
        },
        {
          "scid": "thag7.2:9.3",
          "pli": "Samantāvaraṇo bālo,",
          "en": "the fool shut in on every side,"
        },
        {
          "scid": "thag7.2:9.4",
          "pli": "sa ve ghosena vuyhati.",
          "en": "gets carried away by a voice."
        },
        {
          "scid": "thag7.2:10.1",
          "pli": "Ajjhattañca na jānāti,",
          "en": "Not knowing what’s inside,"
        },
        {
          "scid": "thag7.2:10.2",
          "pli": "bahiddhā ca vipassati;",
          "en": "but seeing what’s outside,"
        },
        {
          "scid": "thag7.2:10.3",
          "pli": "Bahiddhā phaladassāvī,",
          "en": "seeing the fruit outside,"
        },
        {
          "scid": "thag7.2:10.4",
          "pli": "sopi ghosena vuyhati.",
          "en": "they’re also carried away by a voice."
        },
        {
          "scid": "thag7.2:11.1",
          "pli": "Ajjhattañca pajānāti,",
          "en": "Understanding what’s inside,"
        },
        {
          "scid": "thag7.2:11.2",
          "pli": "bahiddhā ca vipassati;",
          "en": "and seeing what’s outside,"
        },
        {
          "scid": "thag7.2:11.3",
          "pli": "Anāvaraṇadassāvī,",
          "en": "seeing without obstacles,"
        },
        {
          "scid": "thag7.2:11.4",
          "pli": "na so ghosena vuyhatī”ti.",
          "en": "they don’t get carried away by a voice."
        },
        {
          "scid": "thag7.2:12.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag7.2:12.2",
          "pli": "Lakuṇḍakabhaddiyo thero ….",
          "en": ""
        }
      ],
