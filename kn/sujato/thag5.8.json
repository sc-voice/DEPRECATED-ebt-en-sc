      "segments": [
        {
          "scid": "thag5.8:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.8:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.8:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.8:4.1",
          "pli": "5.8. Vakkalittheragāthā",
          "en": "5.8. Vakkali"
        },
        {
          "scid": "thag5.8:5.1",
          "pli": "“Vātarogābhinīto tvaṃ,",
          "en": "“Struck by a wind ailment"
        },
        {
          "scid": "thag5.8:5.2",
          "pli": "viharaṃ kānane vane;",
          "en": "while dwelling in a forest grove,"
        },
        {
          "scid": "thag5.8:5.3",
          "pli": "Paviṭṭhagocare lūkhe,",
          "en": "you’ve entered a tough place for gathering alms—"
        },
        {
          "scid": "thag5.8:5.4",
          "pli": "kathaṃ bhikkhu karissasi”.",
          "en": "how will you get by, monk?”"
        },
        {
          "scid": "thag5.8:6.1",
          "pli": "“Pītisukhena vipulena,",
          "en": "“Pervading this bag of bones"
        },
        {
          "scid": "thag5.8:6.2",
          "pli": "pharamāno samussayaṃ;",
          "en": "with abundant rapture and happiness,"
        },
        {
          "scid": "thag5.8:6.3",
          "pli": "Lūkhampi abhisambhonto,",
          "en": "putting up with what’s tough,"
        },
        {
          "scid": "thag5.8:6.4",
          "pli": "viharissāmi kānane.",
          "en": "I’ll dwell in the forest."
        },
        {
          "scid": "thag5.8:7.1",
          "pli": "Bhāvento satipaṭṭhāne,",
          "en": "Developing mindfulness meditation,"
        },
        {
          "scid": "thag5.8:7.2",
          "pli": "indriyāni balāni ca;",
          "en": "the faculties and the powers,"
        },
        {
          "scid": "thag5.8:7.3",
          "pli": "Bojjhaṅgāni ca bhāvento,",
          "en": "developing the factors of awakening,"
        },
        {
          "scid": "thag5.8:7.4",
          "pli": "viharissāmi kānane.",
          "en": "I’ll dwell in the forest."
        },
        {
          "scid": "thag5.8:8.1",
          "pli": "Āraddhavīriye pahitatte,",
          "en": "Having seen those who are energetic, resolute,"
        },
        {
          "scid": "thag5.8:8.2",
          "pli": "Niccaṃ daḷhaparakkame;",
          "en": "always staunchly vigorous,"
        },
        {
          "scid": "thag5.8:8.3",
          "pli": "Samagge sahite disvā,",
          "en": "harmonious and united,"
        },
        {
          "scid": "thag5.8:8.4",
          "pli": "Viharissāmi kānane.",
          "en": "I’ll dwell in the forest."
        },
        {
          "scid": "thag5.8:9.1",
          "pli": "Anussaranto sambuddhaṃ,",
          "en": "Recollecting the Buddha—"
        },
        {
          "scid": "thag5.8:9.2",
          "pli": "aggaṃ dantaṃ samāhitaṃ;",
          "en": "the best, the tamed, the serene—"
        },
        {
          "scid": "thag5.8:9.3",
          "pli": "Atandito rattindivaṃ,",
          "en": "tireless all day and night"
        },
        {
          "scid": "thag5.8:9.4",
          "pli": "viharissāmi kānane”ti.",
          "en": "I’ll dwell in the forest.”"
        },
        {
          "scid": "thag5.8:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.8:10.2",
          "pli": "Vakkalitthero ….",
          "en": ""
        }
      ],
