        },
        {
          "scid": "thag1.23:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.23:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag1.23:4.1",
          "pli": "1.23. Gosālattheragāthā",
          "en": "1.23. Gosāla"
        },
        {
          "scid": "thag1.23:5.1",
          "pli": "“Ahaṃ kho veḷugumbasmiṃ,",
          "en": "I’ll eat honey and milk-rice"
        },
        {
          "scid": "thag1.23:5.2",
          "pli": "bhutvāna madhupāyasaṃ;",
          "en": "in Veḷugumba."
        },
        {
          "scid": "thag1.23:5.3",
          "pli": "Padakkhiṇaṃ sammasanto,",
          "en": "And then, skillfully scrutinizing"
        },
        {
          "scid": "thag1.23:5.4",
          "pli": "khandhānaṃ udayabbayaṃ;",
          "en": "the rise and fall of the aggregates,"
        },
        {
          "scid": "thag1.23:5.5",
          "pli": "Sānuṃ paṭigamissāmi,",
          "en": "I’ll return to my forest hill"
        },
        {
          "scid": "thag1.23:5.6",
          "pli": "vivekamanubrūhayan”ti.",
          "en": "and foster seclusion."
        },
        {
          "scid": "thag1.23:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.23:6.2",
          "pli": "Gosālo thero ….",
          "en": ""
        }
      ],
