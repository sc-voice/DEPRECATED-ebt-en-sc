      "segments": [
        {
          "scid": "thag4.6:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.6:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.6:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.6:4.1",
          "pli": "4.6. Senakattheragāthā",
          "en": "4.6. Senaka"
        },
        {
          "scid": "thag4.6:5.1",
          "pli": "“Svāgataṃ vata me āsi,",
          "en": "It was so welcome for me"
        },
        {
          "scid": "thag4.6:5.2",
          "pli": "gayāyaṃ gayaphagguyā;",
          "en": "during the Gayā spring festival"
        },
        {
          "scid": "thag4.6:5.3",
          "pli": "Yaṃ addasāsiṃ sambuddhaṃ,",
          "en": "to see the Awakened One"
        },
        {
          "scid": "thag4.6:5.4",
          "pli": "desentaṃ dhammamuttamaṃ.",
          "en": "teaching the supreme Dhamma."
        },
        {
          "scid": "thag4.6:6.1",
          "pli": "Mahappabhaṃ gaṇācariyaṃ,",
          "en": "He was glorious, the teacher of a community,"
        },
        {
          "scid": "thag4.6:6.2",
          "pli": "aggapattaṃ vināyakaṃ;",
          "en": "a leader who had realized the highest."
        },
        {
          "scid": "thag4.6:6.3",
          "pli": "Sadevakassa lokassa,",
          "en": "In all the world with its gods,"
        },
        {
          "scid": "thag4.6:6.4",
          "pli": "jinaṃ atuladassanaṃ.",
          "en": "he was the victor of unequaled vision."
        },
        {
          "scid": "thag4.6:7.1",
          "pli": "Mahānāgaṃ mahāvīraṃ,",
          "en": "A great giant, a great hero,"
        },
        {
          "scid": "thag4.6:7.2",
          "pli": "mahājutimanāsavaṃ;",
          "en": "a great light free of defilement."
        },
        {
          "scid": "thag4.6:7.3",
          "pli": "Sabbāsavaparikkhīṇaṃ,",
          "en": "With the utter ending of all defilements,"
        },
        {
          "scid": "thag4.6:7.4",
          "pli": "satthāramakutobhayaṃ.",
          "en": "the teacher fears nothing from any quarter."
        },
        {
          "scid": "thag4.6:8.1",
          "pli": "Cirasaṃkiliṭṭhaṃ vata maṃ,",
          "en": "For a long time, sadly, I was corrupted,"
        },
        {
          "scid": "thag4.6:8.2",
          "pli": "diṭṭhisandānabandhitaṃ;",
          "en": "fettered by the bond of wrong view."
        },
        {
          "scid": "thag4.6:8.3",
          "pli": "Vimocayi so bhagavā,",
          "en": "That Blessed One, Senaka,"
        },
        {
          "scid": "thag4.6:8.4",
          "pli": "sabbaganthehi senakan”ti.",
          "en": "released me from all ties."
        },
        {
          "scid": "thag4.6:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.6:9.2",
          "pli": "Senako thero ….",
          "en": ""
        }
      ],
