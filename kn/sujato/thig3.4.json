      "segments": [
        {
          "scid": "thig3.4:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.4:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.4:3.1",
          "pli": "4. Dantikātherīgāthā",
          "en": "3.4. Dantikā"
        },
        {
          "scid": "thig3.4:4.1",
          "pli": "“Divāvihārā nikkhamma,",
          "en": "Leaving my day’s meditation"
        },
        {
          "scid": "thig3.4:4.2",
          "pli": "gijjhakūṭamhi pabbate;",
          "en": "on Vulture’s Peak Mountain,"
        },
        {
          "scid": "thig3.4:4.3",
          "pli": "Nāgaṃ ogāhamuttiṇṇaṃ,",
          "en": "I saw an elephant on the riverbank"
        },
        {
          "scid": "thig3.4:4.4",
          "pli": "nadītīramhi addasaṃ.",
          "en": "having just come up from his bath."
        },
        {
          "scid": "thig3.4:5.1",
          "pli": "Puriso aṅkusamādāya,",
          "en": "A man, taking a pole with a hook,"
        },
        {
          "scid": "thig3.4:5.2",
          "pli": "‘dehi pādan’ti yācati;",
          "en": "asked the elephant, “Give me your foot.”"
        },
        {
          "scid": "thig3.4:5.3",
          "pli": "Nāgo pasārayī pādaṃ,",
          "en": "The elephant presented his foot,"
        },
        {
          "scid": "thig3.4:5.4",
          "pli": "puriso nāgamāruhi.",
          "en": "and the man mounted him."
        },
        {
          "scid": "thig3.4:6.1",
          "pli": "Disvā adantaṃ damitaṃ,",
          "en": "Seeing a wild beast so tamed,"
        },
        {
          "scid": "thig3.4:6.2",
          "pli": "manussānaṃ vasaṃ gataṃ;",
          "en": "submitting to human control,"
        },
        {
          "scid": "thig3.4:6.3",
          "pli": "Tato cittaṃ samādhesiṃ,",
          "en": "my mind became serene:"
        },
        {
          "scid": "thig3.4:6.4",
          "pli": "khalu tāya vanaṃ gatā”ti.",
          "en": "*that* is why I’ve gone to the forest!"
        },
        {
          "scid": "thig3.4:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.4:7.2",
          "pli": "Dantikā therī ….",
          "en": ""
        }
      ],
