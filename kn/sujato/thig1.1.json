      "segments": [
        {
          "scid": "thig1.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig1.1:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thig1.1:3.1",
          "pli": "1. Aññatarātherīgāthā",
          "en": "1.1. An Unnamed Nun (1st)"
        },
        {
          "scid": "thig1.1:4.1",
          "pli": "Namo tassa Bhagavato Arahato Sammāsambuddhassa.",
          "en": "Homage to that Blessed One, the perfected one, the fully awakened Buddha!"
        },
        {
          "scid": "thig1.1:5.1",
          "pli": "“Sukhaṃ supāhi therike,",
          "en": "Sleep softly, little nun,"
        },
        {
          "scid": "thig1.1:5.2",
          "pli": "Katvā coḷena pārutā;",
          "en": "wrapped in the cloth you sewed yourself;"
        },
        {
          "scid": "thig1.1:5.3",
          "pli": "Upasanto hi te rāgo,",
          "en": "for your desire has been quelled,"
        },
        {
          "scid": "thig1.1:5.4",
          "pli": "Sukkhaḍākaṃ va kumbhiyan”ti.",
          "en": "like vegetables boiled dry in a pot."
        },
        {
          "scid": "thig1.1:6.1",
          "pli": "Itthaṃ sudaṃ aññatarā therī apaññātā bhikkhunī gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by a certain unnamed nun."
        }
      ],
