        {
          "scid": "thag1.79:4.1",
          "pli": "1.79. Rakkhitattheragāthā",
          "en": "1.79. Rakkhita"
        },
        {
          "scid": "thag1.79:5.1",
          "pli": "“Sabbo rāgo pahīno me,",
          "en": "All my lust is given up,"
        },
        {
          "scid": "thag1.79:5.2",
          "pli": "sabbo doso samūhato;",
          "en": "all my hate is eradicated,"
        },
        {
          "scid": "thag1.79:5.3",
          "pli": "Sabbo me vigato moho,",
          "en": "all my delusion is gone:"
        },
        {
          "scid": "thag1.79:5.4",
          "pli": "sītibhūtosmi nibbuto”ti.",
          "en": "I’m cooled, extinguished."
        },
        {
          "scid": "thag1.79:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.79:6.2",
          "pli": "Rakkhito thero ….",
          "en": ""
        }
      ],
