        {
          "scid": "thag1.67:4.1",
          "pli": "1.67. Ekadhammasavanīyattheragāthā",
          "en": "1.67. Ekadhammasavanīya"
        },
        {
          "scid": "thag1.67:5.1",
          "pli": "“Kilesā jhāpitā mayhaṃ,",
          "en": "My defilements have been burnt away by practicing absorption—"
        },
        {
          "scid": "thag1.67:5.2",
          "pli": "bhavā sabbe samūhatā;",
          "en": "rebirth into all states of existence is eradicated,"
        },
        {
          "scid": "thag1.67:5.3",
          "pli": "Vikkhīṇo jātisaṃsāro,",
          "en": "transmigration through births is finished,"
        },
        {
          "scid": "thag1.67:5.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag1.67:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.67:6.2",
          "pli": "Ekadhammasavanīyo thero ….",
          "en": ""
        }
      ],
