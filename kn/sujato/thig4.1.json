      "segments": [
        {
          "scid": "thig4.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig4.1:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thig4.1:3.1",
          "pli": "1. Bhaddākāpilānītherīgāthā",
          "en": "4.1. Bhaddā Kāpilānī"
        },
        {
          "scid": "thig4.1:4.1",
          "pli": "“Putto buddhassa dāyādo,",
          "en": "Kassapa is the son and heir of the Buddha,"
        },
        {
          "scid": "thig4.1:4.2",
          "pli": "kassapo susamāhito;",
          "en": "whose mind is immersed in samādhi."
        },
        {
          "scid": "thig4.1:4.3",
          "pli": "Pubbenivāsaṃ yovedi,",
          "en": "He knows his past lives,"
        },
        {
          "scid": "thig4.1:4.4",
          "pli": "saggāpāyañca passati.",
          "en": "he sees heaven and places of loss,"
        },
        {
          "scid": "thig4.1:5.1",
          "pli": "Atho jātikkhayaṃ patto,",
          "en": "and has attained the end of rebirth:"
        },
        {
          "scid": "thig4.1:5.2",
          "pli": "abhiññāvosito muni;",
          "en": "that sage has perfect insight."
        },
        {
          "scid": "thig4.1:5.3",
          "pli": "Etāhi tīhi vijjāhi,",
          "en": "It’s because of these three knowledges"
        },
        {
          "scid": "thig4.1:5.4",
          "pli": "tevijjo hoti brāhmaṇo.",
          "en": "that the brahmin is a master of the three knowledges."
        },
        {
          "scid": "thig4.1:6.1",
          "pli": "Tatheva bhaddā kāpilānī,",
          "en": "In exactly the same way, Bhaddā Kāpilānī"
        },
        {
          "scid": "thig4.1:6.2",
          "pli": "tevijjā maccuhāyinī;",
          "en": "is master of the three knowledges, destroyer of death."
        },
        {
          "scid": "thig4.1:6.3",
          "pli": "Dhāreti antimaṃ dehaṃ,",
          "en": "She bears her final body,"
        },
        {
          "scid": "thig4.1:6.4",
          "pli": "jetvā māraṃ savāhiniṃ.",
          "en": "having vanquished Māra and his mount."
        },
        {
          "scid": "thig4.1:7.1",
          "pli": "Disvā ādīnavaṃ loke,",
          "en": "Seeing the danger of the world,"
        },
        {
          "scid": "thig4.1:7.2",
          "pli": "ubho pabbajitā mayaṃ;",
          "en": "both of us went forth."
        },
        {
          "scid": "thig4.1:7.3",
          "pli": "Tyamha khīṇāsavā dantā,",
          "en": "Now we are tamed, our defilements have ended;"
        },
        {
          "scid": "thig4.1:7.4",
          "pli": "sītibhūtamha nibbutā”ti.",
          "en": "we’ve become cooled and quenched."
        },
        {
          "scid": "thig4.1:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig4.1:8.2",
          "pli": "Bhaddā kāpilānī therī ….",
          "en": ""
        },
        {
          "scid": "thig4.1:9.1",
          "pli": "Catukkanipāto niṭṭhito.",
          "en": "The Book of the Fours is finished."
        }
      ],
