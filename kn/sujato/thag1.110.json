      "segments": [
        {
          "scid": "thag1.110:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.110:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.110:3.1",
          "pli": "Ekādasamavagga",
          "en": "Chapter Eleven"
        },
        {
          "scid": "thag1.110:4.1",
          "pli": "1.110. Usabhattheragāthā",
          "en": "1.110. Usabha (1st)"
        },
        {
          "scid": "thag1.110:5.1",
          "pli": "“Nagā nagaggesu susaṃvirūḷhā,",
          "en": "The trees on the mountain-tops have grown tall,"
        },
        {
          "scid": "thag1.110:5.2",
          "pli": "Udaggameghena navena sittā;",
          "en": "freshly sprinkled by towering clouds."
        },
        {
          "scid": "thag1.110:5.3",
          "pli": "Vivekakāmassa araññasaññino,",
          "en": "For Usabha, who loves seclusion, and who thinks only of wilderness,"
        },
        {
          "scid": "thag1.110:5.4",
          "pli": "Janeti bhiyyo usabhassa kalyatan”ti.",
          "en": "goodness flourishes more and more."
        },
        {
          "scid": "thag1.110:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.110:6.2",
          "pli": "Usabho thero ….",
          "en": ""
        },
        {
          "scid": "thag1.110:6.3",
          "pli": "Vaggo ekādasamo.",
          "en": ""
        },
        {
          "scid": "thag1.110:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.110:8.1",
          "pli": "Belaṭṭhāniko setuccho,",
          "en": ""
        },
        {
          "scid": "thag1.110:8.2",
          "pli": "Bandhuro khitako isi;",
          "en": ""
        },
        {
          "scid": "thag1.110:8.3",
          "pli": "Malitavambho suhemanto,",
          "en": ""
        },
        {
          "scid": "thag1.110:8.4",
          "pli": "Dhammasavo dhammasavapitā;",
          "en": ""
        },
        {
          "scid": "thag1.110:8.5",
          "pli": "Saṃgharakkhitatthero ca,",
          "en": ""
        },
        {
          "scid": "thag1.110:8.6",
          "pli": "Usabho ca mahāmunīti.",
          "en": ""
        }
      ],
