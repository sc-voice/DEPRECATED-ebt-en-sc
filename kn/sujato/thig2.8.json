        {
          "scid": "thig2.8:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.8:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.8:3.1",
          "pli": "8. Abhayamātutherīgāthā",
          "en": "2.8. Abhaya’s Mother"
        },
        {
          "scid": "thig2.8:4.1",
          "pli": "“Uddhaṃ pādatalā amma,",
          "en": "My dear mother, I examined this body,"
        },
        {
          "scid": "thig2.8:4.2",
          "pli": "adho ve kesamatthakā;",
          "en": "up from the soles of the feet,"
        },
        {
          "scid": "thig2.8:4.3",
          "pli": "Paccavekkhassumaṃ kāyaṃ,",
          "en": "and down from the tips of the hairs,"
        },
        {
          "scid": "thig2.8:4.4",
          "pli": "asuciṃ pūtigandhikaṃ.",
          "en": "so impure and foul-smelling."
        },
        {
          "scid": "thig2.8:5.1",
          "pli": "Evaṃ viharamānāya,",
          "en": "Meditating like this,"
        },
        {
          "scid": "thig2.8:5.2",
          "pli": "sabbo rāgo samūhato;",
          "en": "all my lust is eradicated."
        },
        {
          "scid": "thig2.8:5.3",
          "pli": "Pariḷāho samucchinno,",
          "en": "The fever of passion is cut off,"
        },
        {
          "scid": "thig2.8:5.4",
          "pli": "sītibhūtāmhi nibbutā”ti.",
          "en": "I’m cooled and quenched."
        },
        {
          "scid": "thig2.8:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.8:6.2",
          "pli": "Abhayamātā therī ….",
          "en": ""
        }
      ],
