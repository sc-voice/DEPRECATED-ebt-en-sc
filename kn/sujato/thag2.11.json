        {
          "scid": "thag2.11:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.11:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.11:3.1",
          "pli": "Dutiyavagga",
          "en": "Chapter Two"
        },
        {
          "scid": "thag2.11:4.1",
          "pli": "2.11. Mahācundattheragāthā",
          "en": "2.11. Mahācunda"
        },
        {
          "scid": "thag2.11:5.1",
          "pli": "“Sussūsā sutavaddhanī,",
          "en": "It’s from wishing to learn that learning grows;"
        },
        {
          "scid": "thag2.11:5.2",
          "pli": "sutaṃ paññāya vaddhanaṃ;",
          "en": "when you’re learned, wisdom grows;"
        },
        {
          "scid": "thag2.11:5.3",
          "pli": "Paññāya atthaṃ jānāti,",
          "en": "by wisdom, you know the goal;"
        },
        {
          "scid": "thag2.11:5.4",
          "pli": "ñāto attho sukhāvaho.",
          "en": "knowing the goal brings happiness."
        },
        {
          "scid": "thag2.11:6.1",
          "pli": "Sevetha pantāni senāsanāni,",
          "en": "You should frequent remote lodgings"
        },
        {
          "scid": "thag2.11:6.2",
          "pli": "Careyya saṃyojanavippamokkhaṃ;",
          "en": "and practice to be released from fetters."
        },
        {
          "scid": "thag2.11:6.3",
          "pli": "Sace ratiṃ nādhigaccheyya tattha,",
          "en": "If you don’t find enjoyment there,"
        },
        {
          "scid": "thag2.11:6.4",
          "pli": "Saṃghe vase rakkhitatto satimā”ti.",
          "en": "live in the Saṅgha, self-guarded and mindful."
        },
        {
          "scid": "thag2.11:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.11:7.2",
          "pli": "Mahācundo thero ….",
          "en": ""
        }
      ],
