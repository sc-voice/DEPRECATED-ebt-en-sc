        {
          "scid": "thag1.41:4.1",
          "pli": "1.41. Sirivaḍḍhattheragāthā",
          "en": "1.41. Sirivaḍḍha"
        },
        {
          "scid": "thag1.41:5.1",
          "pli": "“Vivaramanupatanti vijjutā,",
          "en": "Lightning flashes down"
        },
        {
          "scid": "thag1.41:5.2",
          "pli": "Vebhārassa ca paṇḍavassa ca;",
          "en": "on the cleft of Vebhāra and Paṇḍava."
        },
        {
          "scid": "thag1.41:5.3",
          "pli": "Nagavivaragato ca jhāyati,",
          "en": "But in the mountain cleft he is absorbed in jhāna—"
        },
        {
          "scid": "thag1.41:5.4",
          "pli": "Putto appaṭimassa tādino”ti.",
          "en": "the son of the Buddha, inimitable and poised."
        },
        {
          "scid": "thag1.41:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.41:6.2",
          "pli": "Sirivaḍḍho thero ….",
          "en": ""
        }
      ],
