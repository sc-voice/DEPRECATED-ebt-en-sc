  "sections": [
    {
      "segments": [
        {
          "scid": "thag7.5:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag7.5:2.1",
          "pli": "Sattakanipāta",
          "en": "The Book of the Sevens"
        },
        {
          "scid": "thag7.5:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag7.5:4.1",
          "pli": "7.5. Sarabhaṅgattheragāthā",
          "en": "7.5. Sarabhaṅga"
        },
        {
          "scid": "thag7.5:5.1",
          "pli": "“Sare hatthehi bhañjitvā,",
          "en": "I broke the reeds off with my hands,"
        },
        {
          "scid": "thag7.5:5.2",
          "pli": "katvāna kuṭimacchisaṃ;",
          "en": "made a hut, and stayed there."
        },
        {
          "scid": "thag7.5:5.3",
          "pli": "Tena me sarabhaṅgoti,",
          "en": "That’s how I became known"
        },
        {
          "scid": "thag7.5:5.4",
          "pli": "nāmaṃ sammutiyā ahu.",
          "en": "as “Reed-breaker”."
        },
        {
          "scid": "thag7.5:6.1",
          "pli": "Na mayhaṃ kappate ajja,",
          "en": "But now it’s not appropriate"
        },
        {
          "scid": "thag7.5:6.2",
          "pli": "sare hatthehi bhañjituṃ;",
          "en": "for me to break reeds with my hands."
        },
        {
          "scid": "thag7.5:6.3",
          "pli": "Sikkhāpadā no paññattā,",
          "en": "The training rules have been laid down for us"
        },
        {
          "scid": "thag7.5:6.4",
          "pli": "gotamena yasassinā.",
          "en": "by Gotama the renowned."
        },
        {
          "scid": "thag7.5:7.1",
          "pli": "Sakalaṃ samattaṃ rogaṃ,",
          "en": "Previously, I, Sarabhaṅga,"
        },
        {
          "scid": "thag7.5:7.2",
          "pli": "Sarabhaṅgo nāddasaṃ pubbe;",
          "en": "didn’t see the disease in its entirety."
        },
        {
          "scid": "thag7.5:7.3",
          "pli": "Soyaṃ rogo diṭṭho,",
          "en": "But now I have seen the disease,"
        },
        {
          "scid": "thag7.5:7.4",
          "pli": "Vacanakarenātidevassa.",
          "en": "as I’ve practiced what was taught by he who is beyond the gods."
        },
        {
          "scid": "thag7.5:8.1",
          "pli": "Yeneva maggena gato vipassī,",
          "en": "Gotama traveled by that straight road;"
        },
        {
          "scid": "thag7.5:8.2",
          "pli": "Yeneva maggena sikhī ca vessabhū;",
          "en": "the same path traveled by Vipassī,"
        },
        {
          "scid": "thag7.5:8.3",
          "pli": "Kakusandhakoṇāgamano ca kassapo,",
          "en": "by Sikhī, Vessabhū,"
        },
        {
          "scid": "thag7.5:8.4",
          "pli": "Tenañjasena agamāsi gotamo.",
          "en": "Kakusandha, Koṇāgamana, and Kassapa."
        },
        {
          "scid": "thag7.5:9.1",
          "pli": "Vītataṇhā anādānā,",
          "en": "These seven Buddhas have plunged into the ending,"
        },
        {
          "scid": "thag7.5:9.2",
          "pli": "satta buddhā khayogadhā;",
          "en": "free of craving, without grasping,"
        },
        {
          "scid": "thag7.5:9.3",
          "pli": "Yehāyaṃ desito dhammo,",
          "en": "having become Dhamma, poised."
        },
        {
          "scid": "thag7.5:9.4",
          "pli": "dhammabhūtehi tādibhi.",
          "en": "They have taught this Dhamma"
        },
        {
          "scid": "thag7.5:10.1",
          "pli": "Cattāri ariyasaccāni,",
          "en": "out of compassion for living creatures—"
        },
        {
          "scid": "thag7.5:10.2",
          "pli": "anukampāya pāṇinaṃ;",
          "en": "suffering, origin, path,"
        },
        {
          "scid": "thag7.5:10.3",
          "pli": "Dukkhaṃ samudayo maggo,",
          "en": "and cessation, the ending of suffering."
        },
        {
          "scid": "thag7.5:10.4",
          "pli": "nirodho dukkhasaṅkhayo.",
          "en": "In these four noble truths,"
        },
        {
          "scid": "thag7.5:11.1",
          "pli": "Yasmiṃ nivattate dukkhaṃ,",
          "en": "the endless suffering of transmigration"
        },
        {
          "scid": "thag7.5:11.2",
          "pli": "saṃsārasmiṃ anantakaṃ;",
          "en": "finally comes to an end."
        },
        {
          "scid": "thag7.5:11.3",
          "pli": "Bhedā imassa kāyassa,",
          "en": "When the body breaks up,"
        },
        {
          "scid": "thag7.5:11.4",
          "pli": "jīvitassa ca saṅkhayā;",
          "en": "and life comes to an end,"
        },
        {
          "scid": "thag7.5:11.5",
          "pli": "Añño punabbhavo natthi,",
          "en": "there are no future lives;"
        },
        {
          "scid": "thag7.5:11.6",
          "pli": "suvimuttomhi sabbadhī”ti.",
          "en": "I’m well-freed in every way."
        },
        {
          "scid": "thag7.5:12.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag7.5:12.2",
          "pli": "Sarabhaṅgo thero ….",
          "en": ""
        },
        {
          "scid": "thag7.5:13.1",
          "pli": "Sattakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag7.5:14.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag7.5:15.1",
          "pli": "Sundarasamuddo thero,",
          "en": ""
        },
        {
          "scid": "thag7.5:15.2",
          "pli": "thero lakuṇḍabhaddiyo;",
          "en": ""
        },
        {
          "scid": "thag7.5:15.3",
          "pli": "Bhaddo thero ca sopāko,",
          "en": ""
        },
        {
          "scid": "thag7.5:15.4",
          "pli": "sarabhaṅgo mahāisi;",
          "en": ""
        },
        {
          "scid": "thag7.5:15.5",
          "pli": "Sattake pañcakā therā,",
          "en": ""
        },
        {
          "scid": "thag7.5:15.6",
          "pli": "gāthāyo pañcatiṃsatīti.",
          "en": ""
        }
      ],
