        {
          "scid": "thag1.43:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.43:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.43:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag1.43:4.1",
          "pli": "1.43. Sumaṅgalattheragāthā",
          "en": "1.43. Sumaṅgala"
        },
        {
          "scid": "thag1.43:5.1",
          "pli": "“Sumuttiko sumuttiko,",
          "en": "Well freed! Well freed!"
        },
        {
          "scid": "thag1.43:5.2",
          "pli": "Sāhu sumuttikomhi tīhi khujjakehi;",
          "en": "I’m very well freed from three crooked things:"
        },
        {
          "scid": "thag1.43:5.3",
          "pli": "Asitāsu mayā naṅgalāsu mayā,",
          "en": "my sickles, my ploughs,"
        },
        {
          "scid": "thag1.43:5.4",
          "pli": "Khuddakuddālāsu mayā.",
          "en": "and my little hoes."
        },
        {
          "scid": "thag1.43:5.5",
          "pli": "Yadipi idhameva idhameva,",
          "en": "Even if they were here, right here—"
        },
        {
          "scid": "thag1.43:5.6",
          "pli": "Atha vāpi alameva alameva;",
          "en": "I’d be done with them, done!"
        },
        {
          "scid": "thag1.43:5.7",
          "pli": "Jhāya sumaṅgala jhāya sumaṅgala,",
          "en": "Practice absorption Sumaṅgala! Practice absorption Sumaṅgala!"
        },
        {
          "scid": "thag1.43:5.8",
          "pli": "Appamatto vihara sumaṅgalā”ti.",
          "en": "Stay heedful, Sumaṅgala!"
        },
        {
          "scid": "thag1.43:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.43:6.2",
          "pli": "Sumaṅgalo thero ….",
          "en": ""
        }
      ],
