        {
          "scid": "thag1.70:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.70:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.70:3.1",
          "pli": "Sattamavagga",
          "en": "Chapter Seven"
        },
        {
          "scid": "thag1.70:4.1",
          "pli": "1.70. Puṇṇattheragāthā",
          "en": "1.70. Puṇṇa (2nd)"
        },
        {
          "scid": "thag1.70:5.1",
          "pli": "“Sīlameva idha aggaṃ,",
          "en": "Ethical conduct is best in this life,"
        },
        {
          "scid": "thag1.70:5.2",
          "pli": "paññavā pana uttamo;",
          "en": "but one with wisdom is supreme."
        },
        {
          "scid": "thag1.70:5.3",
          "pli": "Manussesu ca devesu,",
          "en": "Someone with both virtue and wisdom"
        },
        {
          "scid": "thag1.70:5.4",
          "pli": "sīlapaññāṇato jayan”ti.",
          "en": "is victorious among men and gods."
        },
        {
          "scid": "thag1.70:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.70:6.2",
          "pli": "Puṇṇo thero ….",
          "en": ""
        },
        {
          "scid": "thag1.70:6.3",
          "pli": "Vaggo sattamo.",
          "en": ""
        },
        {
          "scid": "thag1.70:7.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.70:8.1",
          "pli": "Vappo ca vajjiputto ca,",
          "en": ""
        },
        {
          "scid": "thag1.70:8.2",
          "pli": "pakkho vimalakoṇḍañño;",
          "en": ""
        },
        {
          "scid": "thag1.70:8.3",
          "pli": "Ukkhepakatavaccho ca,",
          "en": ""
        },
        {
          "scid": "thag1.70:8.4",
          "pli": "meghiyo ekadhammiko;",
          "en": ""
        },
        {
          "scid": "thag1.70:8.5",
          "pli": "Ekudāniyachannā ca,",
          "en": ""
        },
        {
          "scid": "thag1.70:8.6",
          "pli": "puṇṇatthero mahabbaloti.",
          "en": ""
        }
      ],
