      "segments": [
        {
          "scid": "thag5.4:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.4:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.4:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.4:4.1",
          "pli": "5.4. Sumanattheragāthā",
          "en": "5.4. Sumana (1st)"
        },
        {
          "scid": "thag5.4:5.1",
          "pli": "“Yaṃ patthayāno dhammesu,",
          "en": "My mentor helped me to learn,"
        },
        {
          "scid": "thag5.4:5.2",
          "pli": "upajjhāyo anuggahi;",
          "en": "hoping I would practice those teachings."
        },
        {
          "scid": "thag5.4:5.3",
          "pli": "Amataṃ abhikaṅkhantaṃ,",
          "en": "Aspiring to the deathless,"
        },
        {
          "scid": "thag5.4:5.4",
          "pli": "kataṃ kattabbakaṃ mayā.",
          "en": "I’ve done what had to be done."
        },
        {
          "scid": "thag5.4:6.1",
          "pli": "Anuppatto sacchikato,",
          "en": "I’ve realized the Dhamma,"
        },
        {
          "scid": "thag5.4:6.2",
          "pli": "sayaṃ dhammo anītiho;",
          "en": "witnessing it for myself, not based on hearsay."
        },
        {
          "scid": "thag5.4:6.3",
          "pli": "Visuddhañāṇo nikkaṅkho,",
          "en": "With purified knowledge, free of doubt,"
        },
        {
          "scid": "thag5.4:6.4",
          "pli": "byākaromi tavantike.",
          "en": "I declare it in your presence."
        },
        {
          "scid": "thag5.4:7.1",
          "pli": "Pubbenivāsaṃ jānāmi,",
          "en": "I know my past lives,"
        },
        {
          "scid": "thag5.4:7.2",
          "pli": "dibbacakkhu visodhitaṃ;",
          "en": "my clairvoyance is purified,"
        },
        {
          "scid": "thag5.4:7.3",
          "pli": "Sadattho me anuppatto,",
          "en": "I’ve realized my own true goal,"
        },
        {
          "scid": "thag5.4:7.4",
          "pli": "kataṃ buddhassa sāsanaṃ.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag5.4:8.1",
          "pli": "Appamattassa me sikkhā,",
          "en": "Being diligent in the training,"
        },
        {
          "scid": "thag5.4:8.2",
          "pli": "sussutā tava sāsane;",
          "en": "I learned your teachings well."
        },
        {
          "scid": "thag5.4:8.3",
          "pli": "Sabbe me āsavā khīṇā,",
          "en": "All my defilements are ended;"
        },
        {
          "scid": "thag5.4:8.4",
          "pli": "natthi dāni punabbhavo.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag5.4:9.1",
          "pli": "Anusāsi maṃ ariyavatā,",
          "en": "You advised me in noble observances;"
        },
        {
          "scid": "thag5.4:9.2",
          "pli": "Anukampi anuggahi;",
          "en": "compassionate, you helped teach me."
        },
        {
          "scid": "thag5.4:9.3",
          "pli": "Amogho tuyhamovādo,",
          "en": "Your instruction was not in vain—"
        },
        {
          "scid": "thag5.4:9.4",
          "pli": "Antevāsimhi sikkhito”ti.",
          "en": "I, your pupil, am fully trained."
        },
        {
          "scid": "thag5.4:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.4:10.2",
          "pli": "Sumano thero ….",
          "en": ""
        }
      ],
