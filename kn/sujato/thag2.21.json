        {
          "scid": "thag2.21:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.21:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.21:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.21:4.1",
          "pli": "2.21. Uttarattheragāthā",
          "en": "2.21. Uttara (2nd)"
        },
        {
          "scid": "thag2.21:5.1",
          "pli": "“Khandhā mayā pariññātā,",
          "en": "I’ve fully understood the aggregates;"
        },
        {
          "scid": "thag2.21:5.2",
          "pli": "taṇhā me susamūhatā;",
          "en": "I’ve eradicated craving;"
        },
        {
          "scid": "thag2.21:5.3",
          "pli": "Bhāvitā mama bojjhaṅgā,",
          "en": "I’ve developed the factors of awakening,"
        },
        {
          "scid": "thag2.21:5.4",
          "pli": "patto me āsavakkhayo.",
          "en": "I’ve attained the ending of defilements."
        },
        {
          "scid": "thag2.21:6.1",
          "pli": "Sohaṃ khandhe pariññāya,",
          "en": "Having fully understood the aggregates,"
        },
        {
          "scid": "thag2.21:6.2",
          "pli": "abbahitvāna jāliniṃ;",
          "en": "having plucked out the weaver of the web,"
        },
        {
          "scid": "thag2.21:6.3",
          "pli": "Bhāvayitvāna bojjhaṅge,",
          "en": "having developed the factors of awakening,"
        },
        {
          "scid": "thag2.21:6.4",
          "pli": "nibbāyissaṃ anāsavo”ti.",
          "en": "I’ll be quenched without defilements."
        },
        {
          "scid": "thag2.21:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.21:7.2",
          "pli": "Uttaro thero ….",
          "en": ""
        }
      ],
