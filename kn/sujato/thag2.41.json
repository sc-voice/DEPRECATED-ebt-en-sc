        {
          "scid": "thag2.41:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.41:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.41:3.1",
          "pli": "Pañcamavagga",
          "en": "Chapter Five"
        },
        {
          "scid": "thag2.41:4.1",
          "pli": "2.41. Kumārakassapattheragāthā",
          "en": "2.41. Kassapa the Prince"
        },
        {
          "scid": "thag2.41:5.1",
          "pli": "“Aho buddhā aho dhammā,",
          "en": "Oh, the Buddhas! Oh, the Dhammas!"
        },
        {
          "scid": "thag2.41:5.2",
          "pli": "aho no satthu sampadā;",
          "en": "Oh, the accomplishments of the Teacher!"
        },
        {
          "scid": "thag2.41:5.3",
          "pli": "Yattha etādisaṃ dhammaṃ,",
          "en": "Here a disciple may realize"
        },
        {
          "scid": "thag2.41:5.4",
          "pli": "sāvako sacchikāhiti.",
          "en": "such a teaching for themselves."
        },
        {
          "scid": "thag2.41:6.1",
          "pli": "Asaṅkheyyesu kappesu,",
          "en": "Through countless eons"
        },
        {
          "scid": "thag2.41:6.2",
          "pli": "sakkāyādhigatā ahū;",
          "en": "they obtained individual identities."
        },
        {
          "scid": "thag2.41:6.3",
          "pli": "Tesamayaṃ pacchimako,",
          "en": "This is their last,"
        },
        {
          "scid": "thag2.41:6.4",
          "pli": "carimoyaṃ samussayo;",
          "en": "their very final body"
        },
        {
          "scid": "thag2.41:6.5",
          "pli": "Jātimaraṇasaṃsāro,",
          "en": "in the transmigration through births and deaths;"
        },
        {
          "scid": "thag2.41:6.6",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag2.41:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.41:7.2",
          "pli": "Kumārakassapo thero ….",
          "en": ""
        }
      ],
