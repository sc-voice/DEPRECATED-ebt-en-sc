          "scid": "thag1.24:4.1",
          "pli": "1.24. Sugandhattheragāthā",
          "en": "1.24. Sugandha"
        },
        {
          "scid": "thag1.24:5.1",
          "pli": "“Anuvassiko pabbajito,",
          "en": "See the excellence of the teaching!"
        },
        {
          "scid": "thag1.24:5.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "Just one rainy season after I went forth,"
        },
        {
          "scid": "thag1.24:5.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I attained the three knowledges"
        },
        {
          "scid": "thag1.24:5.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag1.24:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.24:6.2",
          "pli": "Sugandho thero ….",
          "en": ""
        }
