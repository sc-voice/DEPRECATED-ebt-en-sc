      "segments": [
        {
          "scid": "thag2.22:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.22:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.22:3.1",
          "pli": "Tatiyavagga",
          "en": "Chapter Three"
        },
        {
          "scid": "thag2.22:4.1",
          "pli": "2.22. Bhaddajittheragāthā",
          "en": "2.22. Bhaddaji"
        },
        {
          "scid": "thag2.22:5.1",
          "pli": "“Panādo nāma so rājā,",
          "en": "There was a king named Panāda"
        },
        {
          "scid": "thag2.22:5.2",
          "pli": "yassa yūpo suvaṇṇayo;",
          "en": "who had a sacrificial post all golden."
        },
        {
          "scid": "thag2.22:5.3",
          "pli": "Tiriyaṃ soḷasubbedho,",
          "en": "Its height was sixteen times its width,"
        },
        {
          "scid": "thag2.22:5.4",
          "pli": "ubbhamāhu sahassadhā.",
          "en": "and the top was a thousand-fold."
        },
        {
          "scid": "thag2.22:6.1",
          "pli": "Sahassakaṇḍo satageṇḍu,",
          "en": "It had a thousand panels and a hundred ball-caps,"
        },
        {
          "scid": "thag2.22:6.2",
          "pli": "dhajālu haritāmayo;",
          "en": "all adorned with banners, and made of gold."
        },
        {
          "scid": "thag2.22:6.3",
          "pli": "Anaccuṃ tattha gandhabbā,",
          "en": "There danced the fairies,"
        },
        {
          "scid": "thag2.22:6.4",
          "pli": "chasahassāni sattadhā”ti.",
          "en": "numbering seven times six thousand."
        },
        {
          "scid": "thag2.22:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.22:7.2",
          "pli": "Bhaddajitthero ….",
          "en": ""
        }
      ],
