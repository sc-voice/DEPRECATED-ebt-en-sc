      "segments": [
        {
          "scid": "thig3.3:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.3:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.3:3.1",
          "pli": "3. Aparāuttamātherīgāthā",
          "en": "3.3. Another Uttamā"
        },
        {
          "scid": "thig3.3:4.1",
          "pli": "“Ye ime satta bojjhaṅgā,",
          "en": "Of the seven awakening factors,"
        },
        {
          "scid": "thig3.3:4.2",
          "pli": "maggā nibbānapattiyā;",
          "en": "the path for attaining extinguishment,"
        },
        {
          "scid": "thig3.3:4.3",
          "pli": "Bhāvitā te mayā sabbe,",
          "en": "I have developed them all,"
        },
        {
          "scid": "thig3.3:4.4",
          "pli": "yathā buddhena desitā.",
          "en": "just as the Buddha taught."
        },
        {
          "scid": "thig3.3:5.1",
          "pli": "Suññatassānimittassa,",
          "en": "I attain the meditations on emptiness"
        },
        {
          "scid": "thig3.3:5.2",
          "pli": "lābhinīhaṃ yadicchakaṃ;",
          "en": "and signlessness whenever I want."
        },
        {
          "scid": "thig3.3:5.3",
          "pli": "Orasā dhītā buddhassa,",
          "en": "I am the Buddha’s rightful daughter,"
        },
        {
          "scid": "thig3.3:5.4",
          "pli": "nibbānābhiratā sadā.",
          "en": "always delighting in quenching."
        },
        {
          "scid": "thig3.3:6.1",
          "pli": "Sabbe kāmā samucchinnā,",
          "en": "All sensual pleasures are cut off,"
        },
        {
          "scid": "thig3.3:6.2",
          "pli": "ye dibbā ye ca mānusā;",
          "en": "whether human or divine."
        },
        {
          "scid": "thig3.3:6.3",
          "pli": "Vikkhīṇo jātisaṃsāro,",
          "en": "Transmigration through births is finished,"
        },
        {
          "scid": "thig3.3:6.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thig3.3:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.3:7.2",
          "pli": "Aparā uttamā therī ….",
          "en": ""
        }
      ],
