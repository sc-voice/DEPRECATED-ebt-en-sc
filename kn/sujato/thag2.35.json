      "segments": [
        {
          "scid": "thag2.35:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.35:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.35:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.35:4.1",
          "pli": "2.35. Sambulakaccānattheragāthā",
          "en": "2.35. Sambulakaccāna"
        },
        {
          "scid": "thag2.35:5.1",
          "pli": "“Devo ca vassati, devo ca gaḷagaḷāyati,",
          "en": "The sky rains, the sky thunders down,"
        },
        {
          "scid": "thag2.35:5.2",
          "pli": "Ekako cāhaṃ bherave bile viharāmi;",
          "en": "I’m staying alone in a frightful hole."
        },
        {
          "scid": "thag2.35:5.3",
          "pli": "Tassa mayhaṃ ekakassa bherave bile viharato,",
          "en": "But while I’m staying alone in that frightful hole,"
        },
        {
          "scid": "thag2.35:5.4",
          "pli": "Natthi bhayaṃ vā chambhitattaṃ vā lomahaṃso vā.",
          "en": "I’ve no fear, no dread, no goosebumps."
        },
        {
          "scid": "thag2.35:6.1",
          "pli": "Dhammatā mamesā yassa me,",
          "en": "This is my normal state"
        },
        {
          "scid": "thag2.35:6.2",
          "pli": "Ekakassa bherave bile;",
          "en": "while staying alone in a frightful hole:"
        },
        {
          "scid": "thag2.35:6.3",
          "pli": "Viharato natthi bhayaṃ vā,",
          "en": "I’ve no fear, "
        },
        {
          "scid": "thag2.35:6.4",
          "pli": "Chambhitattaṃ vā lomahaṃso vā”ti.",
          "en": "no dread, no goosebumps."
        },
        {
          "scid": "thag2.35:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.35:7.2",
          "pli": "Sambulakaccāno thero ….",
          "en": ""
        }
      ],
