          "scid": "thag1.97:4.1",
          "pli": "1.97. Tissattheragāthā",
          "en": "1.97. Tissa (2nd)"
        },
        {
          "scid": "thag1.97:5.1",
          "pli": "“Hitvā satapalaṃ kaṃsaṃ,",
          "en": "Giving up a valuable bronze bowl,"
        },
        {
          "scid": "thag1.97:5.2",
          "pli": "Sovaṇṇaṃ satarājikaṃ;",
          "en": "and a precious golden one, too,"
        },
        {
          "scid": "thag1.97:5.3",
          "pli": "Aggahiṃ mattikāpattaṃ,",
          "en": "I took a bowl made of clay:"
        },
        {
          "scid": "thag1.97:5.4",
          "pli": "Idaṃ dutiyābhisecanan”ti.",
          "en": "this is my second initiation."
        },
        {
          "scid": "thag1.97:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.97:6.2",
          "pli": "Tisso thero ….",
          "en": ""
        }
      ],
