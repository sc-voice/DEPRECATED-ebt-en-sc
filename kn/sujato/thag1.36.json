        {
          "scid": "thag1.36:4.1",
          "pli": "1.36. Kumāputtattheragāthā",
          "en": "1.36. Kumāputta"
        },
        {
          "scid": "thag1.36:5.1",
          "pli": "“Sādhu sutaṃ sādhu caritakaṃ,",
          "en": "Learning is good, living well is good,"
        },
        {
          "scid": "thag1.36:5.2",
          "pli": "Sādhu sadā aniketavihāro;",
          "en": "the homeless life is always good."
        },
        {
          "scid": "thag1.36:5.3",
          "pli": "Atthapucchanaṃ padakkhiṇakammaṃ,",
          "en": "Questions on the meaning, actions that are skillful:"
        },
        {
          "scid": "thag1.36:5.4",
          "pli": "Etaṃ sāmaññamakiñcanassā”ti.",
          "en": "this is the ascetic life for one who has nothing."
        },
        {
          "scid": "thag1.36:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.36:6.2",
          "pli": "Kumāputto thero ….",
          "en": ""
        }
      ],
