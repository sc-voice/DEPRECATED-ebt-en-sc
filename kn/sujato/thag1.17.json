        {
          "scid": "thag1.17:4.1",
          "pli": "1.17. Dāsakattheragāthā",
          "en": "1.17. Dāsaka"
        },
        {
          "scid": "thag1.17:5.1",
          "pli": "“Middhī yadā hoti mahagghaso ca,",
          "en": "When someone's a lazybones, a huge glutton,"
        },
        {
          "scid": "thag1.17:5.2",
          "pli": "Niddāyitā samparivattasāyī;",
          "en": "fond of sleep, rolling round the bed"
        },
        {
          "scid": "thag1.17:5.3",
          "pli": "Mahāvarāhova nivāpapuṭṭho,",
          "en": "like a great hog stuffed with grain:"
        },
        {
          "scid": "thag1.17:5.4",
          "pli": "Punappunaṃ gabbhamupeti mando”ti.",
          "en": "that idiot is reborn again and again."
        },
        {
          "scid": "thag1.17:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.17:6.2",
          "pli": "Dāsako thero ….",
          "en": ""
        }
      ],
