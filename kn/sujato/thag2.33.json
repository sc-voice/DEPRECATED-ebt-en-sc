        {
          "scid": "thag2.33:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.33:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.33:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.33:4.1",
          "pli": "2.33 Upavāṇattheragāthā",
          "en": "2.33. Upavāṇa"
        },
        {
          "scid": "thag2.33:5.1",
          "pli": "“Arahaṃ sugato loke,",
          "en": "The perfected one, the Holy One in the world,"
        },
        {
          "scid": "thag2.33:5.2",
          "pli": "vātehābādhiko muni;",
          "en": "the sage is afflicted by winds."
        },
        {
          "scid": "thag2.33:5.3",
          "pli": "Sace uṇhodakaṃ atthi,",
          "en": "If there’s hot water,"
        },
        {
          "scid": "thag2.33:5.4",
          "pli": "munino dehi brāhmaṇa.",
          "en": "give it to the sage, brahmin."
        },
        {
          "scid": "thag2.33:6.1",
          "pli": "Pūjito pūjaneyyānaṃ,",
          "en": "I wish to bring it to the one"
        },
        {
          "scid": "thag2.33:6.2",
          "pli": "sakkareyyāna sakkato;",
          "en": "who is esteemed by the estimable,"
        },
        {
          "scid": "thag2.33:6.3",
          "pli": "Apacitopaceyyānaṃ,",
          "en": "honored by the honorable,"
        },
        {
          "scid": "thag2.33:6.4",
          "pli": "tassa icchāmi hātave”ti.",
          "en": "and venerated by the venerable."
        },
        {
          "scid": "thag2.33:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.33:7.2",
          "pli": "Upavāṇo thero ….",
          "en": ""
        }
      ],
