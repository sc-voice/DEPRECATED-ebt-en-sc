      "segments": [
        {
          "scid": "thig2.6:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.6:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.6:3.1",
          "pli": "6. Mettikātherīgāthā",
          "en": "2.6. Mettikā"
        },
        {
          "scid": "thig2.6:4.1",
          "pli": "“Kiñcāpi khomhi dukkhitā,",
          "en": "Though in pain,"
        },
        {
          "scid": "thig2.6:4.2",
          "pli": "dubbalā gatayobbanā;",
          "en": "feeble, my youth long gone,"
        },
        {
          "scid": "thig2.6:4.3",
          "pli": "Daṇḍamolubbha gacchāmi,",
          "en": "I climb the mountain,"
        },
        {
          "scid": "thig2.6:4.4",
          "pli": "pabbataṃ abhirūhiya.",
          "en": "leaning on a staff."
        },
        {
          "scid": "thig2.6:5.1",
          "pli": "Nikkhipitvāna saṅghāṭiṃ,",
          "en": "Having laid down my outer robe"
        },
        {
          "scid": "thig2.6:5.2",
          "pli": "pattakañca nikujjiya;",
          "en": "and overturned my bowl,"
        },
        {
          "scid": "thig2.6:5.3",
          "pli": "Nisinnā camhi selamhi,",
          "en": "sitting on a rock,"
        },
        {
          "scid": "thig2.6:5.4",
          "pli": "atha cittaṃ vimucci me;",
          "en": "my mind was freed."
        },
        {
          "scid": "thig2.6:5.5",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges,"
        },
        {
          "scid": "thig2.6:5.6",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig2.6:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.6:6.2",
          "pli": "Mettikā therī ….",
          "en": ""
        }
      ],
