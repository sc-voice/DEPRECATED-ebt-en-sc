        {
          "scid": "thag4.1:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.1:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.1:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.1:4.1",
          "pli": "4.1. Nāgasamālattheragāthā",
          "en": "4.1. Nāgasamāla"
        },
        {
          "scid": "thag4.1:5.1",
          "pli": "“Alaṅkatā suvasanā,",
          "en": "Adorned with jewelry and all dressed up,"
        },
        {
          "scid": "thag4.1:5.2",
          "pli": "mālinī candanussadā;",
          "en": "with garlands, and sandalwood makeup piled on,"
        },
        {
          "scid": "thag4.1:5.3",
          "pli": "Majjhe mahāpathe nārī,",
          "en": "along the main street is a lady—"
        },
        {
          "scid": "thag4.1:5.4",
          "pli": "tūriye naccati naṭṭakī.",
          "en": "a dancer dancing as the music plays."
        },
        {
          "scid": "thag4.1:6.1",
          "pli": "Piṇḍikāya paviṭṭhohaṃ,",
          "en": "I entered for alms,"
        },
        {
          "scid": "thag4.1:6.2",
          "pli": "gacchanto naṃ udikkhisaṃ;",
          "en": "and while walking along I glanced at her,"
        },
        {
          "scid": "thag4.1:6.3",
          "pli": "Alaṅkataṃ suvasanaṃ,",
          "en": "adorned with jewelry and all dressed up,"
        },
        {
          "scid": "thag4.1:6.4",
          "pli": "maccupāsaṃva oḍḍitaṃ.",
          "en": "like a snare of death laid down."
        },
        {
          "scid": "thag4.1:7.1",
          "pli": "Tato me manasīkāro,",
          "en": "Then the realization"
        },
        {
          "scid": "thag4.1:7.2",
          "pli": "yoniso udapajjatha;",
          "en": "came upon me—"
        },
        {
          "scid": "thag4.1:7.3",
          "pli": "Ādīnavo pāturahu,",
          "en": "the danger became clear,"
        },
        {
          "scid": "thag4.1:7.4",
          "pli": "nibbidā samatiṭṭhatha.",
          "en": "and I grew firmly disillusioned."
        },
        {
          "scid": "thag4.1:8.1",
          "pli": "Tato cittaṃ vimucci me,",
          "en": "Then my mind was freed—"
        },
        {
          "scid": "thag4.1:8.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "see the excellence of the teaching!"
        },
        {
          "scid": "thag4.1:8.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag4.1:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag4.1:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.1:9.2",
          "pli": "Nāgasamālo thero ….",
          "en": ""
        }
      ],
