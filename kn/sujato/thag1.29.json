          "scid": "thag1.29:4.1",
          "pli": "1.29. Hāritattheragāthā",
          "en": "1.29. Hārita (1st)"
        },
        {
          "scid": "thag1.29:5.1",
          "pli": "“Samunnamayamattānaṃ,",
          "en": "Straighten yourself,"
        },
        {
          "scid": "thag1.29:5.2",
          "pli": "usukārova tejanaṃ;",
          "en": "like a fletcher straightens an arrow."
        },
        {
          "scid": "thag1.29:5.3",
          "pli": "Cittaṃ ujuṃ karitvāna,",
          "en": "When your mind is upright, Hārita,"
        },
        {
          "scid": "thag1.29:5.4",
          "pli": "avijjaṃ bhinda hāritā”ti.",
          "en": "break ignorance to bits!"
        },
        {
          "scid": "thag1.29:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.29:6.2",
          "pli": "Hārito thero ….",
          "en": ""
        }
