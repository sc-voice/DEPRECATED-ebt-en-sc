      "segments": [
        {
          "scid": "thag5.11:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag5.11:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thag5.11:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.11:4.1",
          "pli": "5.11. Soṇakuṭikaṇṇattheragāthā",
          "en": "5.11. Soṇakuṭikaṇṇa"
        },
        {
          "scid": "thag5.11:5.1",
          "pli": "“Upasampadā ca me laddhā,",
          "en": "I’ve received ordination;"
        },
        {
          "scid": "thag5.11:5.2",
          "pli": "vimutto camhi anāsavo;",
          "en": "I am liberated, without defilements;"
        },
        {
          "scid": "thag5.11:5.3",
          "pli": "So ca me bhagavā diṭṭho,",
          "en": "I’ve seen the Blessed One myself,"
        },
        {
          "scid": "thag5.11:5.4",
          "pli": "vihāre ca sahāvasiṃ.",
          "en": "and even stayed together with him."
        },
        {
          "scid": "thag5.11:6.1",
          "pli": "Bahudeva rattiṃ bhagavā,",
          "en": "The Blessed One, the teacher,"
        },
        {
          "scid": "thag5.11:6.2",
          "pli": "abbhokāsetināmayi;",
          "en": "spent much of the night in the open;"
        },
        {
          "scid": "thag5.11:6.3",
          "pli": "Vihārakusalo satthā,",
          "en": "then he, who is so skilled in meditation,"
        },
        {
          "scid": "thag5.11:6.4",
          "pli": "vihāraṃ pāvisī tadā.",
          "en": "entered his dwelling."
        },
        {
          "scid": "thag5.11:7.1",
          "pli": "Santharitvāna saṅghāṭiṃ,",
          "en": "Spreading his outer robe,"
        },
        {
          "scid": "thag5.11:7.2",
          "pli": "seyyaṃ kappesi gotamo;",
          "en": "Gotama made his bed,"
        },
        {
          "scid": "thag5.11:7.3",
          "pli": "Sīho selaguhāyaṃva,",
          "en": "like a lion in a rocky cave,"
        },
        {
          "scid": "thag5.11:7.4",
          "pli": "pahīnabhayabheravo.",
          "en": "with fear and dread given up."
        },
        {
          "scid": "thag5.11:8.1",
          "pli": "Tato kalyāṇavākkaraṇo,",
          "en": "Then, with lovely enunciation,"
        },
        {
          "scid": "thag5.11:8.2",
          "pli": "sammāsambuddhasāvako;",
          "en": "Soṇa, a disciple of the Buddha,"
        },
        {
          "scid": "thag5.11:8.3",
          "pli": "Soṇo abhāsi saddhammaṃ,",
          "en": "recited the true teaching"
        },
        {
          "scid": "thag5.11:8.4",
          "pli": "buddhaseṭṭhassa sammukhā.",
          "en": "before the best of Buddhas."
        },
        {
          "scid": "thag5.11:9.1",
          "pli": "Pañcakkhandhe pariññāya,",
          "en": "When he has completely understood the five aggregates,"
        },
        {
          "scid": "thag5.11:9.2",
          "pli": "Bhāvayitvāna añjasaṃ;",
          "en": "developed the direct route,"
        },
        {
          "scid": "thag5.11:9.3",
          "pli": "Pappuyya paramaṃ santiṃ,",
          "en": "and arrived at ultimate peace,"
        },
        {
          "scid": "thag5.11:9.4",
          "pli": "Parinibbissatyanāsavo”ti.",
          "en": "he will realize quenching without defilements."
        },
        {
          "scid": "thag5.11:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag5.11:10.2",
          "pli": "Soṇo kuṭikaṇṇatthero ….",
          "en": ""
        }
      ],
