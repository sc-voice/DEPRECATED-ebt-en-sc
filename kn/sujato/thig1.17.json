      "segments": [
        {
          "scid": "thig1.17:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig1.17:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thig1.17:3.1",
          "pli": "17. Dhammātherīgāthā",
          "en": "1.17. Dhammā"
        },
        {
          "scid": "thig1.17:4.1",
          "pli": "“Piṇḍapātaṃ caritvāna,",
          "en": "I wandered for alms"
        },
        {
          "scid": "thig1.17:4.2",
          "pli": "daṇḍamolubbha dubbalā;",
          "en": "though feeble, leaning on a staff."
        },
        {
          "scid": "thig1.17:4.3",
          "pli": "Vedhamānehi gattehi,",
          "en": "My limbs wobbled"
        },
        {
          "scid": "thig1.17:4.4",
          "pli": "tattheva nipatiṃ chamā;",
          "en": "and I fell to the ground right there."
        },
        {
          "scid": "thig1.17:4.5",
          "pli": "Disvā ādīnavaṃ kāye,",
          "en": "Seeing the danger of the body,"
        },
        {
          "scid": "thig1.17:4.6",
          "pli": "atha cittaṃ vimucci me”ti.",
          "en": "my mind was freed."
        },
        {
          "scid": "thig1.17:5.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig1.17:5.2",
          "pli": "Dhammā therī ….",
          "en": ""
        }
      ],
