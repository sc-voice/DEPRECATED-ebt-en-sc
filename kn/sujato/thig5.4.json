      "segments": [
        {
          "scid": "thig5.4:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig5.4:2.1",
          "pli": "Pañcakanipāta",
          "en": "The Book of the Fives"
        },
        {
          "scid": "thig5.4:3.1",
          "pli": "4. Sundarīnandātherīgāthā",
          "en": "5.4. Sundarīnandā"
        },
        {
          "scid": "thig5.4:4.1",
          "pli": "“Āturaṃ asuciṃ pūtiṃ,",
          "en": "“Nandā, see this bag of bones as"
        },
        {
          "scid": "thig5.4:4.2",
          "pli": "passa nande samussayaṃ;",
          "en": "diseased, filthy, and rotten."
        },
        {
          "scid": "thig5.4:4.3",
          "pli": "Asubhāya cittaṃ bhāvehi,",
          "en": "With mind unified and serene,"
        },
        {
          "scid": "thig5.4:4.4",
          "pli": "ekaggaṃ susamāhitaṃ.",
          "en": "meditate on the ugly aspects of the body:"
        },
        {
          "scid": "thig5.4:5.1",
          "pli": "Yathā idaṃ tathā etaṃ,",
          "en": "as this is, so is that,"
        },
        {
          "scid": "thig5.4:5.2",
          "pli": "yathā etaṃ tathā idaṃ;",
          "en": "as that is, so is this."
        },
        {
          "scid": "thig5.4:5.3",
          "pli": "Duggandhaṃ pūtikaṃ vāti,",
          "en": "A foul stink wafts from it,"
        },
        {
          "scid": "thig5.4:5.4",
          "pli": "bālānaṃ abhinanditaṃ.",
          "en": "it is the fools’ delight.”"
        },
        {
          "scid": "thig5.4:6.1",
          "pli": "Evametaṃ avekkhantī,",
          "en": "Reviewing my body in such a way,"
        },
        {
          "scid": "thig5.4:6.2",
          "pli": "rattindivamatanditā;",
          "en": "tireless all day and night,"
        },
        {
          "scid": "thig5.4:6.3",
          "pli": "Tato sakāya paññāya,",
          "en": "having broken through"
        },
        {
          "scid": "thig5.4:6.4",
          "pli": "abhinibbijjha dakkhisaṃ”.",
          "en": "with my own wisdom, I saw."
        },
        {
          "scid": "thig5.4:7.1",
          "pli": "“Tassā me appamattāya,",
          "en": "Being diligent,"
        },
        {
          "scid": "thig5.4:7.2",
          "pli": "vicinantiyā yoniso;",
          "en": "properly investigating,"
        },
        {
          "scid": "thig5.4:7.3",
          "pli": "Yathābhūtaṃ ayaṃ kāyo,",
          "en": "I truly saw the body"
        },
        {
          "scid": "thig5.4:7.4",
          "pli": "diṭṭho santarabāhiro.",
          "en": "both inside and out."
        },
        {
          "scid": "thig5.4:8.1",
          "pli": "Atha nibbindahaṃ kāye,",
          "en": "Then, growing disillusioned with my body,"
        },
        {
          "scid": "thig5.4:8.2",
          "pli": "ajjhattañca virajjahaṃ;",
          "en": "I became dispassionate within."
        },
        {
          "scid": "thig5.4:8.3",
          "pli": "Appamattā visaṃyuttā,",
          "en": "Diligent, detached,"
        },
        {
          "scid": "thig5.4:8.4",
          "pli": "upasantāmhi nibbutā”ti.",
          "en": "I’m quenched and at peace."
        },
        {
          "scid": "thig5.4:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig5.4:9.2",
          "pli": "Sundarīnandā therī ….",
          "en": ""
        }
      ],
