        {
          "scid": "thig3.1:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig3.1:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thig3.1:3.1",
          "pli": "1. Aparāsāmātherīgāthā",
          "en": "3.1. Another Sāmā"
        },
        {
          "scid": "thig3.1:4.1",
          "pli": "“Paṇṇavīsativassāni,",
          "en": "In the twenty-five years"
        },
        {
          "scid": "thig3.1:4.2",
          "pli": "yato pabbajitāya me;",
          "en": "since I went forth,"
        },
        {
          "scid": "thig3.1:4.3",
          "pli": "Nābhijānāmi cittassa,",
          "en": "I don’t know that I had ever found"
        },
        {
          "scid": "thig3.1:4.4",
          "pli": "samaṃ laddhaṃ kudācanaṃ.",
          "en": "serenity in my mind."
        },
        {
          "scid": "thig3.1:5.1",
          "pli": "Aladdhā cetaso santiṃ,",
          "en": "I had failed to find peace of heart,"
        },
        {
          "scid": "thig3.1:5.2",
          "pli": "citte avasavattinī;",
          "en": "or any control over my mind."
        },
        {
          "scid": "thig3.1:5.3",
          "pli": "Tato saṃvegamāpādiṃ,",
          "en": "When I remembered the victor’s instructions,"
        },
        {
          "scid": "thig3.1:5.4",
          "pli": "saritvā jinasāsanaṃ.",
          "en": "I was struck with a sense of urgency."
        },
        {
          "scid": "thig3.1:6.1",
          "pli": "Bahūhi dukkhadhammehi,",
          "en": "Though subject to so many painful things,"
        },
        {
          "scid": "thig3.1:6.2",
          "pli": "appamādaratāya me;",
          "en": "I have, through my love of diligence,"
        },
        {
          "scid": "thig3.1:6.3",
          "pli": "Taṇhakkhayo anuppatto,",
          "en": "reached the ending of craving,"
        },
        {
          "scid": "thig3.1:6.4",
          "pli": "kataṃ buddhassa sāsanaṃ;",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thig3.1:6.5",
          "pli": "Ajja me sattamī ratti,",
          "en": "This is the seventh day"
        },
        {
          "scid": "thig3.1:6.6",
          "pli": "yato taṇhā visositā”ti.",
          "en": "since my craving dried up."
        },
        {
          "scid": "thig3.1:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig3.1:7.2",
          "pli": "Aparā sāmā therī ….",
          "en": ""
        }
      ],
