      "segments": [
        {
          "scid": "thag4.5:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag4.5:2.1",
          "pli": "Catukkanipāta",
          "en": "The Book of the Fours"
        },
        {
          "scid": "thag4.5:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag4.5:4.1",
          "pli": "4.5. Jambukattheragāthā",
          "en": "4.5. Jambuka"
        },
        {
          "scid": "thag4.5:5.1",
          "pli": "“Pañcapaññāsavassāni,",
          "en": "For fifty-five years"
        },
        {
          "scid": "thag4.5:5.2",
          "pli": "rajojallamadhārayiṃ;",
          "en": "I wore dust and dirt."
        },
        {
          "scid": "thag4.5:5.3",
          "pli": "Bhuñjanto māsikaṃ bhattaṃ,",
          "en": "Eating one meal a month,"
        },
        {
          "scid": "thag4.5:5.4",
          "pli": "kesamassuṃ alocayiṃ.",
          "en": "I tore out my hair and beard."
        },
        {
          "scid": "thag4.5:6.1",
          "pli": "Ekapādena aṭṭhāsiṃ,",
          "en": "I stood on one foot;"
        },
        {
          "scid": "thag4.5:6.2",
          "pli": "āsanaṃ parivajjayiṃ;",
          "en": "I rejected seats;"
        },
        {
          "scid": "thag4.5:6.3",
          "pli": "Sukkhagūthāni ca khādiṃ,",
          "en": "I ate dried-out dung;"
        },
        {
          "scid": "thag4.5:6.4",
          "pli": "uddesañca na sādiyiṃ.",
          "en": "I didn’t accept food set aside for me."
        },
        {
          "scid": "thag4.5:7.1",
          "pli": "Etādisaṃ karitvāna,",
          "en": "I did many deeds of this kind,"
        },
        {
          "scid": "thag4.5:7.2",
          "pli": "bahuṃ duggatigāminaṃ;",
          "en": "which lead to a bad destination."
        },
        {
          "scid": "thag4.5:7.3",
          "pli": "Vuyhamāno mahoghena,",
          "en": "Swept away by a great flood,"
        },
        {
          "scid": "thag4.5:7.4",
          "pli": "buddhaṃ saraṇamāgamaṃ.",
          "en": "I went to the Buddha for refuge."
        },
        {
          "scid": "thag4.5:8.1",
          "pli": "Saraṇagamanaṃ passa,",
          "en": "See the going for refuge!"
        },
        {
          "scid": "thag4.5:8.2",
          "pli": "passa dhammasudhammataṃ;",
          "en": "See the excellence of the teaching!"
        },
        {
          "scid": "thag4.5:8.3",
          "pli": "Tisso vijjā anuppattā,",
          "en": "I’ve attained the three knowledges"
        },
        {
          "scid": "thag4.5:8.4",
          "pli": "kataṃ buddhassa sāsanan”ti.",
          "en": "and fulfilled the Buddha’s instructions."
        },
        {
          "scid": "thag4.5:9.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag4.5:9.2",
          "pli": "Jambuko thero ….",
          "en": ""
        }
      ],
