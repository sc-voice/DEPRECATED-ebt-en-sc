      "segments": [
        {
          "scid": "thag1.10:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.10:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.10:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag1.10:4.1",
          "pli": "1.10. Puṇṇamāsattheragāthā",
          "en": "1.10. Puṇṇamāsa (1st)"
        },
        {
          "scid": "thag1.10:5.1",
          "pli": "“Vihari apekkhaṃ idha vā huraṃ vā,",
          "en": "A knowledge master, peaceful and restrained,"
        },
        {
          "scid": "thag1.10:5.2",
          "pli": "Yo vedagū samito yatatto;",
          "en": "is rid of concern for this world and the world beyond."
        },
        {
          "scid": "thag1.10:5.3",
          "pli": "Sabbesu dhammesu anūpalitto,",
          "en": "Unsullied in the midst of all things,"
        },
        {
          "scid": "thag1.10:5.4",
          "pli": "Lokassa jaññā udayabbayañcā”ti.",
          "en": "they know the arising and passing of the world."
        },
        {
          "scid": "thag1.10:6.1",
          "pli": "Itthaṃ sudaṃ āyasmā puṇṇamāso thero gāthaṃ abhāsitthāti.",
          "en": "It was thus that this verse was recited by the senior venerable Puṇṇamāsa."
        },
        {
          "scid": "thag1.10:7.1",
          "pli": "Vaggo paṭhamo.",
          "en": ""
        },
        {
          "scid": "thag1.10:8.1",
          "pli": "Tassuddānaṃ",
          "en": ""
        },
        {
          "scid": "thag1.10:9.1",
          "pli": "Subhūti koṭṭhiko thero,",
          "en": ""
        },
        {
          "scid": "thag1.10:9.2",
          "pli": "kaṅkhārevatasammato;",
          "en": ""
        },
        {
          "scid": "thag1.10:9.3",
          "pli": "Mantāṇiputto dabbo ca,",
          "en": ""
        },
        {
          "scid": "thag1.10:9.4",
          "pli": "sītavaniyo ca bhalliyo;",
          "en": ""
        },
        {
          "scid": "thag1.10:9.5",
          "pli": "Vīro pilindavaccho ca,",
          "en": ""
        },
        {
          "scid": "thag1.10:9.6",
          "pli": "puṇṇamāso tamonudoti.",
          "en": ""
        }
      ],
