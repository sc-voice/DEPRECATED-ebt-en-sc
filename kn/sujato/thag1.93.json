        {
          "scid": "thag1.93:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag1.93:2.1",
          "pli": "Ekakanipāta",
          "en": "The Book of the Ones"
        },
        {
          "scid": "thag1.93:3.1",
          "pli": "Dasamavagga",
          "en": "Chapter Ten"
        },
        {
          "scid": "thag1.93:4.1",
          "pli": "1.93. Erakattheragāthā",
          "en": "1.93. Eraka"
        },
        {
          "scid": "thag1.93:5.1",
          "pli": "“Dukkhā kāmā eraka,",
          "en": "Sensual pleasures are suffering, Eraka!"
        },
        {
          "scid": "thag1.93:5.2",
          "pli": "Na sukhā kāmā eraka;",
          "en": "Sensual pleasures aren’t happiness, Eraka!"
        },
        {
          "scid": "thag1.93:5.3",
          "pli": "Yo kāme kāmayati,",
          "en": "One who enjoys sensual pleasures"
        },
        {
          "scid": "thag1.93:5.4",
          "pli": "Dukkhaṃ so kāmayati eraka;",
          "en": "enjoys suffering, Eraka!"
        },
        {
          "scid": "thag1.93:5.5",
          "pli": "Yo kāme na kāmayati,",
          "en": "One who doesn’t enjoy sensual pleasures"
        },
        {
          "scid": "thag1.93:5.6",
          "pli": "Dukkhaṃ so na kāmayati erakā”ti.",
          "en": "doesn’t enjoy suffering, Eraka!"
        },
        {
          "scid": "thag1.93:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.93:6.2",
          "pli": "Erako thero ….",
          "en": ""
        }
      ],
