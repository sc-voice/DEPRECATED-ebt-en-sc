        {
          "scid": "thag3.6:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.6:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.6:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.6:4.1",
          "pli": "3.6. Khujjasobhitattheragāthā",
          "en": "3.6. Khujjasobhita"
        },
        {
          "scid": "thag3.6:5.1",
          "pli": "“Ye cittakathī bahussutā,",
          "en": "“One of those monks who live in Pāṭaliputta—"
        },
        {
          "scid": "thag3.6:5.2",
          "pli": "Samaṇā pāṭaliputtavāsino;",
          "en": "such brilliant speakers, and very learned—"
        },
        {
          "scid": "thag3.6:5.3",
          "pli": "Tesaññataroyamāyuvā,",
          "en": "stands at the door:"
        },
        {
          "scid": "thag3.6:5.4",
          "pli": "Dvāre tiṭṭhati khujjasobhito”.",
          "en": "the old man, Khujjasobhita."
        },
        {
          "scid": "thag3.6:6.1",
          "pli": "“Ye cittakathī bahussutā,",
          "en": "One of those monks who live in Pāṭaliputta—"
        },
        {
          "scid": "thag3.6:6.2",
          "pli": "Samaṇā pāṭaliputtavāsino;",
          "en": "such brilliant speakers, and very learned—"
        },
        {
          "scid": "thag3.6:6.3",
          "pli": "Tesaññataroyamāyuvā,",
          "en": "stands at the door:"
        },
        {
          "scid": "thag3.6:6.4",
          "pli": "Dvāre tiṭṭhati māluterito”.",
          "en": "an old man, trembling in the wind.”"
        },
        {
          "scid": "thag3.6:7.1",
          "pli": "“Suyuddhena suyiṭṭhena,",
          "en": "“By war well fought, by sacrifice well made,"
        },
        {
          "scid": "thag3.6:7.2",
          "pli": "saṅgāmavijayena ca;",
          "en": "by victory in battle;"
        },
        {
          "scid": "thag3.6:7.3",
          "pli": "Brahmacariyānuciṇṇena,",
          "en": "by living the spiritual life:"
        },
        {
          "scid": "thag3.6:7.4",
          "pli": "evāyaṃ sukhamedhatī”ti.",
          "en": "that’s how one prospers in happiness.”"
        },
        {
          "scid": "thag3.6:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.6:8.2",
          "pli": "Khujjasobhito thero ….",
          "en": ""
        }
      ],
