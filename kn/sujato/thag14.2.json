  "sections": [
    {
      "segments": [
        {
          "scid": "thag14.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag14.2:2.1",
          "pli": "Cuddasakanipāta",
          "en": "The Book of the Fourteens"
        },
        {
          "scid": "thag14.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag14.2:4.1",
          "pli": "14.2. Godattattheragāthā",
          "en": "14.2. Godatta"
        },
        {
          "scid": "thag14.2:5.1",
          "pli": "“Yathāpi bhaddo ājañño,",
          "en": "Just as a fine thoroughbred,"
        },
        {
          "scid": "thag14.2:5.2",
          "pli": "dhure yutto dhurassaho;",
          "en": "yoked to a carriage, endures the load."
        },
        {
          "scid": "thag14.2:5.3",
          "pli": "Mathito atibhārena,",
          "en": "Though oppressed by the heavy burden,"
        },
        {
          "scid": "thag14.2:5.4",
          "pli": "saṃyugaṃ nātivattati.",
          "en": "it doesn’t shake off the yoke."
        },
        {
          "scid": "thag14.2:6.1",
          "pli": "Evaṃ paññāya ye tittā,",
          "en": "So too, those who are as full of wisdom"
        },
        {
          "scid": "thag14.2:6.2",
          "pli": "samuddo vārinā yathā;",
          "en": "as the ocean is with water,"
        },
        {
          "scid": "thag14.2:6.3",
          "pli": "Na pare atimaññanti,",
          "en": "don’t look down on others;"
        },
        {
          "scid": "thag14.2:6.4",
          "pli": "ariyadhammova pāṇinaṃ.",
          "en": "this is the noble teaching for living creatures."
        },
        {
          "scid": "thag14.2:7.1",
          "pli": "Kāle kālavasaṃ pattā,",
          "en": "People who fall under the sway of time,"
        },
        {
          "scid": "thag14.2:7.2",
          "pli": "bhavābhavavasaṃ gatā;",
          "en": "the sway of rebirth in this or that state of existence,"
        },
        {
          "scid": "thag14.2:7.3",
          "pli": "Narā dukkhaṃ nigacchanti,",
          "en": "undergo suffering,"
        },
        {
          "scid": "thag14.2:7.4",
          "pli": "tedha socanti māṇavā.",
          "en": "and those young men grieve in this life."
        },
        {
          "scid": "thag14.2:8.1",
          "pli": "Unnatā sukhadhammena,",
          "en": "Elated by things that bring happiness,"
        },
        {
          "scid": "thag14.2:8.2",
          "pli": "dukkhadhammena conatā;",
          "en": "downcast by things that bring suffering:"
        },
        {
          "scid": "thag14.2:8.3",
          "pli": "Dvayena bālā haññanti,",
          "en": "this pair destroys the fool"
        },
        {
          "scid": "thag14.2:8.4",
          "pli": "yathābhūtaṃ adassino.",
          "en": "who doesn’t see things as they are."
        },
        {
          "scid": "thag14.2:9.1",
          "pli": "Ye ca dukkhe sukhasmiñca,",
          "en": "But those who in suffering, and in happiness,"
        },
        {
          "scid": "thag14.2:9.2",
          "pli": "majjhe sibbinimaccagū;",
          "en": "and in the middle have overcome the weaver—"
        },
        {
          "scid": "thag14.2:9.3",
          "pli": "Ṭhitā te indakhīlova,",
          "en": "they stand like a boundary pillar,"
        },
        {
          "scid": "thag14.2:9.4",
          "pli": "na te unnataonatā.",
          "en": "neither elated nor downcast."
        },
        {
          "scid": "thag14.2:10.1",
          "pli": "Na heva lābhe nālābhe,",
          "en": "Not to gain nor loss,"
        },
        {
          "scid": "thag14.2:10.2",
          "pli": "na yase na ca kittiyā;",
          "en": "not to fame nor reputation,"
        },
        {
          "scid": "thag14.2:10.3",
          "pli": "Na nindāyaṃ pasaṃsāya,",
          "en": "not to criticism nor praise,"
        },
        {
          "scid": "thag14.2:10.4",
          "pli": "na te dukkhe sukhamhi ca.",
          "en": "not to suffering nor happiness—"
        },
        {
          "scid": "thag14.2:11.1",
          "pli": "Sabbattha te na limpanti,",
          "en": "the wise cling to nothing,"
        },
        {
          "scid": "thag14.2:11.2",
          "pli": "udabinduva pokkhare;",
          "en": "like a droplet on a lotus-leaf."
        },
        {
          "scid": "thag14.2:11.3",
          "pli": "Sabbattha sukhitā dhīrā,",
          "en": "They are happy everywhere,"
        },
        {
          "scid": "thag14.2:11.4",
          "pli": "sabbattha aparājitā.",
          "en": "and victorious everywhere."
        },
        {
          "scid": "thag14.2:12.1",
          "pli": "Dhammena ca alābho yo,",
          "en": "There’s legitimate loss,"
        },
        {
          "scid": "thag14.2:12.2",
          "pli": "yo ca lābho adhammiko;",
          "en": "and there’s illegitimate gain."
        },
        {
          "scid": "thag14.2:12.3",
          "pli": "Alābho dhammiko seyyo,",
          "en": "Legitimate loss is better"
        },
        {
          "scid": "thag14.2:12.4",
          "pli": "yañce lābho adhammiko.",
          "en": "than illegitimate gain."
        },
        {
          "scid": "thag14.2:13.1",
          "pli": "Yaso ca appabuddhīnaṃ,",
          "en": "There’s the fame of the unintelligent,"
        },
        {
          "scid": "thag14.2:13.2",
          "pli": "viññūnaṃ ayaso ca yo;",
          "en": "and there’s the disrepute of the discerning."
        },
        {
          "scid": "thag14.2:13.3",
          "pli": "Ayasova seyyo viññūnaṃ,",
          "en": "The disrepute of the discerning is better"
        },
        {
          "scid": "thag14.2:13.4",
          "pli": "na yaso appabuddhinaṃ.",
          "en": "than the fame of the unintelligent."
        },
        {
          "scid": "thag14.2:14.1",
          "pli": "Dummedhehi pasaṃsā ca,",
          "en": "There’s praise by fools,"
        },
        {
          "scid": "thag14.2:14.2",
          "pli": "viññūhi garahā ca yā;",
          "en": "and there’s criticism by the discerning."
        },
        {
          "scid": "thag14.2:14.3",
          "pli": "Garahāva seyyo viññūhi,",
          "en": "Criticism by the discerning is better"
        },
        {
          "scid": "thag14.2:14.4",
          "pli": "yañce bālappasaṃsanā.",
          "en": "than praise by fools."
        },
        {
          "scid": "thag14.2:15.1",
          "pli": "Sukhañca kāmamayikaṃ,",
          "en": "There’s the happiness of sensual pleasures,"
        },
        {
          "scid": "thag14.2:15.2",
          "pli": "dukkhañca pavivekiyaṃ;",
          "en": "and there’s the suffering of seclusion."
        },
        {
          "scid": "thag14.2:15.3",
          "pli": "Pavivekadukkhaṃ seyyo,",
          "en": "The suffering of seclusion is better"
        },
        {
          "scid": "thag14.2:15.4",
          "pli": "yañce kāmamayaṃ sukhaṃ.",
          "en": "than the happiness of sensual pleasures."
        },
        {
          "scid": "thag14.2:16.1",
          "pli": "Jīvitañca adhammena,",
          "en": "There’s life without principles,"
        },
        {
          "scid": "thag14.2:16.2",
          "pli": "dhammena maraṇañca yaṃ;",
          "en": "and there’s death with principles."
        },
        {
          "scid": "thag14.2:16.3",
          "pli": "Maraṇaṃ dhammikaṃ seyyo,",
          "en": "Death with principles is better"
        },
        {
          "scid": "thag14.2:16.4",
          "pli": "yañce jīve adhammikaṃ.",
          "en": "than life without principles."
        },
        {
          "scid": "thag14.2:17.1",
          "pli": "Kāmakopappahīnā ye,",
          "en": "Those who’ve given up desire and anger,"
        },
        {
          "scid": "thag14.2:17.2",
          "pli": "santacittā bhavābhave;",
          "en": "their minds at peace regarding rebirth in this or that state,"
        },
        {
          "scid": "thag14.2:17.3",
          "pli": "Caranti loke asitā,",
          "en": "wander in the world unattached,"
        },
        {
          "scid": "thag14.2:17.4",
          "pli": "natthi tesaṃ piyāpiyaṃ.",
          "en": "for them nothing is beloved or unloved."
        },
        {
          "scid": "thag14.2:18.1",
          "pli": "Bhāvayitvāna bojjhaṅge,",
          "en": "Having developed the awakening factors,"
        },
        {
          "scid": "thag14.2:18.2",
          "pli": "indriyāni balāni ca;",
          "en": "the faculties and the powers,"
        },
        {
          "scid": "thag14.2:18.3",
          "pli": "Pappuyya paramaṃ santiṃ,",
          "en": "having arrived at ultimate peace,"
        },
        {
          "scid": "thag14.2:18.4",
          "pli": "parinibbantināsavā”ti.",
          "en": "they are quenched, without defilements."
        },
        {
          "scid": "thag14.2:19.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag14.2:19.2",
          "pli": "Godatto thero ….",
          "en": ""
        },
        {
          "scid": "thag14.2:20.1",
          "pli": "Cuddasakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag14.2:21.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag14.2:22.1",
          "pli": "Revato ceva godatto,",
          "en": ""
        },
        {
          "scid": "thag14.2:22.2",
          "pli": "therā dve te mahiddhikā;",
          "en": ""
        },
        {
          "scid": "thag14.2:22.3",
          "pli": "Cuddasamhi nipātamhi,",
          "en": ""
        },
        {
          "scid": "thag14.2:22.4",
          "pli": "gāthāyo aṭṭhavīsatīti.",
          "en": ""
        }
      ],
