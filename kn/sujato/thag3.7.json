      "segments": [
        {
          "scid": "thag3.7:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag3.7:2.1",
          "pli": "Tikanipāta",
          "en": "The Book of the Threes"
        },
        {
          "scid": "thag3.7:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag3.7:4.1",
          "pli": "3.7. Vāraṇattheragāthā",
          "en": "3.7. Vāraṇa"
        },
        {
          "scid": "thag3.7:5.1",
          "pli": "“Yodha koci manussesu,",
          "en": "Anyone among men"
        },
        {
          "scid": "thag3.7:5.2",
          "pli": "parapāṇāni hiṃsati;",
          "en": "who harms other creatures:"
        },
        {
          "scid": "thag3.7:5.3",
          "pli": "Asmā lokā paramhā ca,",
          "en": "that person will fall"
        },
        {
          "scid": "thag3.7:5.4",
          "pli": "ubhayā dhaṃsate naro.",
          "en": "both from this world and the next."
        },
        {
          "scid": "thag3.7:6.1",
          "pli": "Yo ca mettena cittena,",
          "en": "But someone with a mind of love,"
        },
        {
          "scid": "thag3.7:6.2",
          "pli": "sabbapāṇānukampati;",
          "en": "compassionate for all creatures:"
        },
        {
          "scid": "thag3.7:6.3",
          "pli": "Bahuñhi so pasavati,",
          "en": "a person like that"
        },
        {
          "scid": "thag3.7:6.4",
          "pli": "puññaṃ tādisako naro.",
          "en": "makes much merit."
        },
        {
          "scid": "thag3.7:7.1",
          "pli": "Subhāsitassa sikkhetha,",
          "en": "One should train in following good advice,"
        },
        {
          "scid": "thag3.7:7.2",
          "pli": "samaṇūpāsanassa ca;",
          "en": "in attending closely to ascetics,"
        },
        {
          "scid": "thag3.7:7.3",
          "pli": "Ekāsanassa ca raho,",
          "en": "in sitting alone in hidden places,"
        },
        {
          "scid": "thag3.7:7.4",
          "pli": "cittavūpasamassa cā”ti.",
          "en": "and in calming the mind."
        },
        {
          "scid": "thag3.7:8.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag3.7:8.2",
          "pli": "Vāraṇo thero ….",
          "en": ""
        }
      ],
