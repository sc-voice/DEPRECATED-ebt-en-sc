      "segments": [
        {
          "scid": "thig6.2:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig6.2:2.1",
          "pli": "Chakkanipāta",
          "en": "The Book of the Sixes"
        },
        {
          "scid": "thig6.2:3.1",
          "pli": "2. Vāseṭṭhītherīgāthā",
          "en": "6.2. Vāseṭṭhī"
        },
        {
          "scid": "thig6.2:4.1",
          "pli": "“Puttasokenahaṃ aṭṭā,",
          "en": "Struck down with grief for my son,"
        },
        {
          "scid": "thig6.2:4.2",
          "pli": "khittacittā visaññinī;",
          "en": "deranged, out of my mind,"
        },
        {
          "scid": "thig6.2:4.3",
          "pli": "Naggā pakiṇṇakesī ca,",
          "en": "naked, my hair flying,"
        },
        {
          "scid": "thig6.2:4.4",
          "pli": "tena tena vicārihaṃ.",
          "en": "I wandered here and there."
        },
        {
          "scid": "thig6.2:5.1",
          "pli": "Vīthi saṅkārakūṭesu,",
          "en": "I lived on rubbish heaps,"
        },
        {
          "scid": "thig6.2:5.2",
          "pli": "susāne rathiyāsu ca;",
          "en": "in cemeteries and highways."
        },
        {
          "scid": "thig6.2:5.3",
          "pli": "Acariṃ tīṇi vassāni,",
          "en": "For three years I wandered,"
        },
        {
          "scid": "thig6.2:5.4",
          "pli": "khuppipāsāsamappitā.",
          "en": "stricken by hunger and thirst."
        },
        {
          "scid": "thig6.2:6.1",
          "pli": "Athaddasāsiṃ sugataṃ,",
          "en": "Then I saw the Holy One,"
        },
        {
          "scid": "thig6.2:6.2",
          "pli": "nagaraṃ mithilaṃ pati;",
          "en": "who had gone to the city of Mithilā."
        },
        {
          "scid": "thig6.2:6.3",
          "pli": "Adantānaṃ dametāraṃ,",
          "en": "Tamer of the untamed,"
        },
        {
          "scid": "thig6.2:6.4",
          "pli": "sambuddhamakutobhayaṃ.",
          "en": "the Awakened One fears nothing from any quarter."
        },
        {
          "scid": "thig6.2:7.1",
          "pli": "Sacittaṃ paṭiladdhāna,",
          "en": "Regaining my mind,"
        },
        {
          "scid": "thig6.2:7.2",
          "pli": "vanditvāna upāvisiṃ;",
          "en": "I paid homage and sat down."
        },
        {
          "scid": "thig6.2:7.3",
          "pli": "So me dhammamadesesi,",
          "en": "Out of compassion"
        },
        {
          "scid": "thig6.2:7.4",
          "pli": "anukampāya gotamo.",
          "en": "Gotama taught me the Dhamma."
        },
        {
          "scid": "thig6.2:8.1",
          "pli": "Tassa dhammaṃ suṇitvāna,",
          "en": "After hearing his teaching,"
        },
        {
          "scid": "thig6.2:8.2",
          "pli": "pabbajiṃ anagāriyaṃ;",
          "en": "I went forth to homelessness."
        },
        {
          "scid": "thig6.2:8.3",
          "pli": "Yuñjantī satthuvacane,",
          "en": "Applying myself to the Teacher’s words,"
        },
        {
          "scid": "thig6.2:8.4",
          "pli": "sacchākāsiṃ padaṃ sivaṃ.",
          "en": "I realized the state of grace."
        },
        {
          "scid": "thig6.2:9.1",
          "pli": "Sabbe sokā samucchinnā,",
          "en": "All sorrows are cut off,"
        },
        {
          "scid": "thig6.2:9.2",
          "pli": "pahīnā etadantikā;",
          "en": "given up, they end here."
        },
        {
          "scid": "thig6.2:9.3",
          "pli": "Pariññātā hi me vatthū,",
          "en": "I've fully understood the basis"
        },
        {
          "scid": "thig6.2:9.4",
          "pli": "yato sokāna sambhavo”ti.",
          "en": "from which grief comes to be."
        },
        {
          "scid": "thig6.2:10.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig6.2:10.2",
          "pli": "Vāseṭṭhī therī ….",
          "en": ""
        }
      ],
