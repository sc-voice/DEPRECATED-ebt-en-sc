      "segments": [
        {
          "scid": "thag2.7:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.7:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.7:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag2.7:4.1",
          "pli": "2.7. Rādhattheragāthā",
          "en": "2.7. Rādha"
        },
        {
          "scid": "thag2.7:5.1",
          "pli": "“Yathā agāraṃ ducchannaṃ,",
          "en": "Just as rain seeps into"
        },
        {
          "scid": "thag2.7:5.2",
          "pli": "vuṭṭhī samativijjhati;",
          "en": "a poorly roofed house,"
        },
        {
          "scid": "thag2.7:5.3",
          "pli": "Evaṃ abhāvitaṃ cittaṃ,",
          "en": "lust seeps into"
        },
        {
          "scid": "thag2.7:5.4",
          "pli": "rāgo samativijjhati.",
          "en": "an undeveloped mind."
        },
        {
          "scid": "thag2.7:6.1",
          "pli": "Yathā agāraṃ succhannaṃ,",
          "en": "Just as rain doesn’t seep into"
        },
        {
          "scid": "thag2.7:6.2",
          "pli": "Vuṭṭhī na samativijjhati;",
          "en": "a well roofed house,"
        },
        {
          "scid": "thag2.7:6.3",
          "pli": "Evaṃ subhāvitaṃ cittaṃ,",
          "en": "lust doesn’t seep into"
        },
        {
          "scid": "thag2.7:6.4",
          "pli": "Rāgo na samativijjhatī”ti.",
          "en": "a well-developed mind."
        },
        {
          "scid": "thag2.7:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.7:7.2",
          "pli": "Rādho thero ….",
          "en": ""
        }
      ],
