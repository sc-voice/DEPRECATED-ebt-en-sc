        {
          "scid": "thag1.87:4.1",
          "pli": "1.87. Paviṭṭhattheragāthā",
          "en": "1.87. Paviṭṭha"
        },
        {
          "scid": "thag1.87:5.1",
          "pli": "“Khandhā diṭṭhā yathābhūtaṃ,",
          "en": "The aggregates are seen as they truly are;"
        },
        {
          "scid": "thag1.87:5.2",
          "pli": "bhavā sabbe padālitā;",
          "en": "all rebirths are shattered;"
        },
        {
          "scid": "thag1.87:5.3",
          "pli": "Vikkhīṇo jātisaṃsāro,",
          "en": "transmigration is finished;"
        },
        {
          "scid": "thag1.87:5.4",
          "pli": "natthi dāni punabbhavo”ti.",
          "en": "now there are no more future lives."
        },
        {
          "scid": "thag1.87:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag1.87:6.2",
          "pli": "Paviṭṭho thero ….",
          "en": ""
        }
      ],
