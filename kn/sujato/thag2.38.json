        {
          "scid": "thag2.38:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag2.38:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thag2.38:3.1",
          "pli": "Catutthavagga",
          "en": "Chapter Four"
        },
        {
          "scid": "thag2.38:4.1",
          "pli": "2.38. Nisabhattheragāthā",
          "en": "2.38. Nisabha"
        },
        {
          "scid": "thag2.38:5.1",
          "pli": "“Pañca kāmaguṇe hitvā,",
          "en": "One who has left the home life out of faith,"
        },
        {
          "scid": "thag2.38:5.2",
          "pli": "Piyarūpe manorame;",
          "en": "giving up the five kinds of sensual stimulation,"
        },
        {
          "scid": "thag2.38:5.3",
          "pli": "Saddhāya gharā nikkhamma,",
          "en": "so pleasing and delightful—"
        },
        {
          "scid": "thag2.38:5.4",
          "pli": "Dukkhassantakaro bhave.",
          "en": "let them make an end to suffering!"
        },
        {
          "scid": "thag2.38:6.1",
          "pli": "Nābhinandāmi maraṇaṃ,",
          "en": "I don’t long for death;"
        },
        {
          "scid": "thag2.38:6.2",
          "pli": "nābhinandāmi jīvitaṃ;",
          "en": "I don’t long for life;"
        },
        {
          "scid": "thag2.38:6.3",
          "pli": "Kālañca paṭikaṅkhāmi,",
          "en": "I await my time,"
        },
        {
          "scid": "thag2.38:6.4",
          "pli": "sampajāno patissato”ti.",
          "en": "aware and mindful."
        },
        {
          "scid": "thag2.38:7.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag2.38:7.2",
          "pli": "Nisabho thero ….",
          "en": ""
        }
      ],
