      "segments": [
        {
          "scid": "thig2.3:1.1",
          "pli": "Therīgāthā",
          "en": "Verses of the Senior Nuns"
        },
        {
          "scid": "thig2.3:2.1",
          "pli": "Dukanipāta",
          "en": "The Book of the Twos"
        },
        {
          "scid": "thig2.3:3.1",
          "pli": "3. Sumaṅgalamātātherīgāthā",
          "en": "2.3. Sumaṅgala’s Mother"
        },
        {
          "scid": "thig2.3:4.1",
          "pli": "“Sumuttikā sumuttikā,",
          "en": "I’m well freed, well freed,"
        },
        {
          "scid": "thig2.3:4.2",
          "pli": "Sādhumuttikāmhi musalassa;",
          "en": "so very well freed!"
        },
        {
          "scid": "thig2.3:4.3",
          "pli": "Ahiriko me chattakaṃ vāpi,",
          "en": "My pestle’s shameless wind was wafting;"
        },
        {
          "scid": "thig2.3:4.4",
          "pli": "Ukkhalikā me deḍḍubhaṃ vāti.",
          "en": "my little pot wafted like an eel."
        },
        {
          "scid": "thig2.3:5.1",
          "pli": "Rāgañca ahaṃ dosañca,",
          "en": "Now, as for greed and hate:"
        },
        {
          "scid": "thig2.3:5.2",
          "pli": "Cicciṭi cicciṭīti vihanāmi;",
          "en": "I sear them and sizzle them up."
        },
        {
          "scid": "thig2.3:5.3",
          "pli": "Sā rukkhamūlamupagamma,",
          "en": "Having gone to the root of a tree,"
        },
        {
          "scid": "thig2.3:5.4",
          "pli": "Aho sukhanti sukhato jhāyāmī”ti.",
          "en": "I meditate happily, thinking, “Oh, what bliss!”"
        },
        {
          "scid": "thig2.3:6.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thig2.3:6.2",
          "pli": "Sumaṅgalamātā therī.",
          "en": ""
        }
      ],
