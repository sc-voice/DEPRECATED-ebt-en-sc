          "scid": "thag5.3:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag5.3:4.1",
          "pli": "5.3. Girimānandattheragāthā",
          "en": "5.3. Girimānanda"
        },
        {
          "scid": "thag5.3:5.1",
          "pli": "“Vassati devo yathā sugītaṃ,",
          "en": "The sky rains down, like a beautiful song;"
        },
        {
          "scid": "thag5.3:5.2",
          "pli": "Channā me kuṭikā sukhā nivātā;",
          "en": "my little hut is ro­ofed and pleasant, sheltered from the wind;"
        },
        {
          "scid": "thag5.3:5.3",
          "pli": "Tassaṃ viharāmi vūpasanto,",
          "en": "I meditate there, peaceful:"
        },
        {
          "scid": "thag5.3:5.4",
          "pli": "Atha ce patthayasī pavassa deva.",
          "en": "so rain, sky, as you please."
        },
        {
          "scid": "thag5.3:6.1",
          "pli": "Vassati devo yathā sugītaṃ,",
          "en": "The sky rains down, like a beautiful song;"
