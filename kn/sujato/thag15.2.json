  "sections": [
    {
      "segments": [
        {
          "scid": "thag15.2:1.1",
          "pli": "Theragāthā",
          "en": "Verses of the Senior Monks"
        },
        {
          "scid": "thag15.2:2.1",
          "pli": "Soḷasakanipāta",
          "en": "The Book of the Sixteens"
        },
        {
          "scid": "thag15.2:3.1",
          "pli": "Paṭhamavagga",
          "en": "Chapter One"
        },
        {
          "scid": "thag15.2:4.1",
          "pli": "15.2. Udāyittheragāthā",
          "en": "15.2. Udāyi"
        },
        {
          "scid": "thag15.2:5.1",
          "pli": "“Manussabhūtaṃ sambuddhaṃ,",
          "en": "Awakened as a human being,"
        },
        {
          "scid": "thag15.2:5.2",
          "pli": "Attadantaṃ samāhitaṃ;",
          "en": "self-tamed and serene,"
        },
        {
          "scid": "thag15.2:5.3",
          "pli": "Iriyamānaṃ brahmapathe,",
          "en": "following the spiritual path,"
        },
        {
          "scid": "thag15.2:5.4",
          "pli": "Cittassūpasame rataṃ.",
          "en": "he loves peace of mind."
        },
        {
          "scid": "thag15.2:6.1",
          "pli": "Yaṃ manussā namassanti,",
          "en": "Revered by people,"
        },
        {
          "scid": "thag15.2:6.2",
          "pli": "sabbadhammāna pāraguṃ;",
          "en": "gone beyond all things,"
        },
        {
          "scid": "thag15.2:6.3",
          "pli": "Devāpi taṃ namassanti,",
          "en": "even the gods revere him;"
        },
        {
          "scid": "thag15.2:6.4",
          "pli": "iti me arahato sutaṃ.",
          "en": "so I’ve heard from the perfected one."
        },
        {
          "scid": "thag15.2:7.1",
          "pli": "Sabbasaṃyojanātītaṃ,",
          "en": "He has transcended all fetters,"
        },
        {
          "scid": "thag15.2:7.2",
          "pli": "vanā nibbanamāgataṃ;",
          "en": "and escaped from entanglements."
        },
        {
          "scid": "thag15.2:7.3",
          "pli": "Kāmehi nekkhammarataṃ,",
          "en": "Delighting to renounce sensual pleasures,"
        },
        {
          "scid": "thag15.2:7.4",
          "pli": "muttaṃ selāva kañcanaṃ.",
          "en": "he’s freed like gold from stone."
        },
        {
          "scid": "thag15.2:8.1",
          "pli": "Sa ve accaruci nāgo,",
          "en": "That giant outshines all,"
        },
        {
          "scid": "thag15.2:8.2",
          "pli": "himavāvaññe siluccaye;",
          "en": "like the Himalaya beside other mountains."
        },
        {
          "scid": "thag15.2:8.3",
          "pli": "Sabbesaṃ nāganāmānaṃ,",
          "en": "Of all those named “giant”,"
        },
        {
          "scid": "thag15.2:8.4",
          "pli": "saccanāmo anuttaro.",
          "en": "he is truly named, supreme."
        },
        {
          "scid": "thag15.2:9.1",
          "pli": "Nāgaṃ vo kittayissāmi,",
          "en": "I’ll extol the giant for you,"
        },
        {
          "scid": "thag15.2:9.2",
          "pli": "na hi āguṃ karoti so;",
          "en": "for he does nothing monstrous."
        },
        {
          "scid": "thag15.2:9.3",
          "pli": "Soraccaṃ avihiṃsā ca,",
          "en": "Gentleness and harmlessness"
        },
        {
          "scid": "thag15.2:9.4",
          "pli": "pādā nāgassa te duve.",
          "en": "are two feet of the giant."
        },
        {
          "scid": "thag15.2:10.1",
          "pli": "Sati ca sampajaññañca,",
          "en": "Mindfulness and awareness"
        },
        {
          "scid": "thag15.2:10.2",
          "pli": "caraṇā nāgassa tepare;",
          "en": "are his two other feet."
        },
        {
          "scid": "thag15.2:10.3",
          "pli": "Saddhāhattho mahānāgo,",
          "en": "Faith is the giant’s trunk,"
        },
        {
          "scid": "thag15.2:10.4",
          "pli": "upekkhāsetadantavā.",
          "en": "and equanimity his white tusks."
        },
        {
          "scid": "thag15.2:11.1",
          "pli": "Sati gīvā siro paññā,",
          "en": "Mindfulness is his neck, his head is wisdom—"
        },
        {
          "scid": "thag15.2:11.2",
          "pli": "vīmaṃsā dhammacintanā;",
          "en": "investigation and thinking about principles."
        },
        {
          "scid": "thag15.2:11.3",
          "pli": "Dhammakucchisamāvāso,",
          "en": "His belly is the sacred hearth of the Dhamma,"
        },
        {
          "scid": "thag15.2:11.4",
          "pli": "viveko tassa vāladhi.",
          "en": "and his tail is seclusion."
        },
        {
          "scid": "thag15.2:12.1",
          "pli": "So jhāyī assāsarato,",
          "en": "Practicing absorption, enjoying the breath,"
        },
        {
          "scid": "thag15.2:12.2",
          "pli": "ajjhattaṃ susamāhito;",
          "en": "he is serene within."
        },
        {
          "scid": "thag15.2:12.3",
          "pli": "Gacchaṃ samāhito nāgo,",
          "en": "The giant is serene when walking,"
        },
        {
          "scid": "thag15.2:12.4",
          "pli": "ṭhito nāgo samāhito.",
          "en": "the giant is serene when standing,"
        },
        {
          "scid": "thag15.2:13.1",
          "pli": "Sayaṃ samāhito nāgo,",
          "en": "the giant is serene when lying down,"
        },
        {
          "scid": "thag15.2:13.2",
          "pli": "nisinnopi samāhito;",
          "en": "and when sitting, the giant is serene."
        },
        {
          "scid": "thag15.2:13.3",
          "pli": "Sabbattha saṃvuto nāgo,",
          "en": "The giant is restrained everywhere:"
        },
        {
          "scid": "thag15.2:13.4",
          "pli": "esā nāgassa sampadā.",
          "en": "this is the accomplishment of the giant."
        },
        {
          "scid": "thag15.2:14.1",
          "pli": "Bhuñjati anavajjāni,",
          "en": "He eats blameless things,"
        },
        {
          "scid": "thag15.2:14.2",
          "pli": "sāvajjāni na bhuñjati;",
          "en": "he doesn’t eat blameworthy things."
        },
        {
          "scid": "thag15.2:14.3",
          "pli": "Ghāsamacchādanaṃ laddhā,",
          "en": "When he gets food and clothes,"
        },
        {
          "scid": "thag15.2:14.4",
          "pli": "sannidhiṃ parivajjayaṃ.",
          "en": "he avoids storing them up."
        },
        {
          "scid": "thag15.2:15.1",
          "pli": "Saṃyojanaṃ aṇuṃ thūlaṃ,",
          "en": "Having severed all bonds,"
        },
        {
          "scid": "thag15.2:15.2",
          "pli": "sabbaṃ chetvāna bandhanaṃ;",
          "en": "fetters large and small,"
        },
        {
          "scid": "thag15.2:15.3",
          "pli": "Yena yeneva gacchati,",
          "en": "wherever he goes,"
        },
        {
          "scid": "thag15.2:15.4",
          "pli": "anapekkhova gacchati.",
          "en": "he goes without concern."
        },
        {
          "scid": "thag15.2:16.1",
          "pli": "Yathāpi udake jātaṃ,",
          "en": "A white lotus,"
        },
        {
          "scid": "thag15.2:16.2",
          "pli": "puṇḍarīkaṃ pavaḍḍhati;",
          "en": "fragrant and delightful,"
        },
        {
          "scid": "thag15.2:16.3",
          "pli": "Nopalippati toyena,",
          "en": "sprouts in water and grows there,"
        },
        {
          "scid": "thag15.2:16.4",
          "pli": "sucigandhaṃ manoramaṃ.",
          "en": "but the water doesn’t cling to it."
        },
        {
          "scid": "thag15.2:17.1",
          "pli": "Tatheva ca loke jāto,",
          "en": "Just so the Buddha is born in the world,"
        },
        {
          "scid": "thag15.2:17.2",
          "pli": "buddho loke viharati;",
          "en": "and lives in the world,"
        },
        {
          "scid": "thag15.2:17.3",
          "pli": "Nopalippati lokena,",
          "en": "but the world doesn’t stick to him,"
        },
        {
          "scid": "thag15.2:17.4",
          "pli": "toyena padumaṃ yathā.",
          "en": "as the water does not stick to the lotus."
        },
        {
          "scid": "thag15.2:18.1",
          "pli": "Mahāgini pajjalito,",
          "en": "A great blazing fire"
        },
        {
          "scid": "thag15.2:18.2",
          "pli": "anāhāropasammati;",
          "en": "dies down when the fuel runs out."
        },
        {
          "scid": "thag15.2:18.3",
          "pli": "Aṅgāresu ca santesu,",
          "en": "And when the coals have gone out"
        },
        {
          "scid": "thag15.2:18.4",
          "pli": "nibbutoti pavuccati.",
          "en": "it’s said to be “extinguished”."
        },
        {
          "scid": "thag15.2:19.1",
          "pli": "Atthassāyaṃ viññāpanī,",
          "en": "This simile is taught by the discerning"
        },
        {
          "scid": "thag15.2:19.2",
          "pli": "upamā viññūhi desitā;",
          "en": "to express the meaning clearly."
        },
        {
          "scid": "thag15.2:19.3",
          "pli": "Viññissanti mahānāgā,",
          "en": "Great giants will understand"
        },
        {
          "scid": "thag15.2:19.4",
          "pli": "nāgaṃ nāgena desitaṃ.",
          "en": "what the giant taught the giant."
        },
        {
          "scid": "thag15.2:20.1",
          "pli": "Vītarāgo vītadoso,",
          "en": "Free of greed, free of hate,"
        },
        {
          "scid": "thag15.2:20.2",
          "pli": "Vītamoho anāsavo;",
          "en": "free of delusion, undefiled;"
        },
        {
          "scid": "thag15.2:20.3",
          "pli": "Sarīraṃ vijahaṃ nāgo,",
          "en": "the giant, giving up his body,"
        },
        {
          "scid": "thag15.2:20.4",
          "pli": "Parinibbissatyanāsavo”ti.",
          "en": "will be quenched without defilements."
        },
        {
          "scid": "thag15.2:21.1",
          "pli": "…",
          "en": ""
        },
        {
          "scid": "thag15.2:21.2",
          "pli": "Udāyī thero ….",
          "en": ""
        },
        {
          "scid": "thag15.2:22.1",
          "pli": "Soḷasakanipāto niṭṭhito.",
          "en": ""
        },
        {
          "scid": "thag15.2:23.1",
          "pli": "Tatruddānaṃ",
          "en": ""
        },
        {
          "scid": "thag15.2:24.1",
          "pli": "Koṇḍañño ca udāyī ca,",
          "en": ""
        },
        {
          "scid": "thag15.2:24.2",
          "pli": "therā dve te mahiddhikā;",
          "en": ""
        },
        {
          "scid": "thag15.2:24.3",
          "pli": "Soḷasamhi nipātamhi,",
          "en": ""
        },
        {
          "scid": "thag15.2:24.4",
          "pli": "gāthāyo dve ca tiṃsa cāti.",
          "en": ""
        }
      ],
