    {
      "segments": [
        {
          "scid": "sn14.20:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.20:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.20:1.3",
          "pli": "Anottappino anottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "the imprudent with the imprudent … "
        },
        {
          "scid": "sn14.20:1.4",
          "pli": "appassutā appassutehi saddhiṃ saṃsandanti samenti; ",
          "en": "uneducated … "
        },
        {
          "scid": "sn14.20:1.5",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.20:1.6",
          "pli": "ottappino ottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "prudent... "
        },
        {
          "scid": "sn14.20:1.7",
          "pli": "bahussutā bahussutehi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samenti … pe …. ",
          "en": "educated... wise... "
        },
        {
          "scid": "sn14.20:2.1",
          "pli": "Anottappino anottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "imprudent … "
        },
        {
          "scid": "sn14.20:2.2",
          "pli": "kusītā kusītehi saddhiṃ saṃsandanti samenti; ",
          "en": "lazy … "
        },
        {
          "scid": "sn14.20:2.3",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.20:2.4",
          "pli": "ottappino ottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "prudent... "
        },
        {
          "scid": "sn14.20:2.5",
          "pli": "āraddhavīriyā āraddhavīriyehi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samenti … pe …. (2) ",
          "en": " "
        },
        {
          "scid": "sn14.20:3.1",
          "pli": "Anottappino anottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "imprudent … "
        },
        {
          "scid": "sn14.20:3.2",
          "pli": "muṭṭhassatino muṭṭhassatīhi saddhiṃ saṃsandanti samenti; ",
          "en": "unmindful … "
        },
        {
          "scid": "sn14.20:3.3",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.20:3.4",
          "pli": "ottappino ottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "prudent...” "
        },
        {
          "scid": "sn14.20:3.5",
          "pli": "upaṭṭhitassatino upaṭṭhitassatīhi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samentī”ti … pe …. (3) ",
          "en": " "
        },
        {
          "scid": "sn14.20:3.6",
          "pli": "Dasamaṃ. ",
          "en": ""
        }
      ],
