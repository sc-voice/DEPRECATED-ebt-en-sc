        {
          "scid": "sn26.8:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn26.8:1.2",
          "pli": "“Yo kho, bhikkhave, rūpataṇhāya uppādo ṭhiti … pe … ",
          "en": "“Mendicants, the arising of craving for sights … "
        },
        {
          "scid": "sn26.8:1.3",
          "pli": "jarāmaraṇassa pātubhāvo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.8:1.4",
          "pli": "yo dhammataṇhāya uppādo ṭhiti abhinibbatti pātubhāvo, dukkhasseso uppādo, rogānaṃ ṭhiti, jarāmaraṇassa pātubhāvo. ",
          "en": "craving for thoughts … is the manifestation of old age and death. "
        },
        {
          "scid": "sn26.8:1.5",
          "pli": "Yo ca kho, bhikkhave, rūpataṇhāya nirodho … pe … ",
          "en": "The cessation of craving for sights … "
        },
        {
          "scid": "sn26.8:1.6",
          "pli": "jarāmaraṇassa atthaṅgamo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.8:1.7",
          "pli": "yo dhammataṇhāya nirodho vūpasamo atthaṅgamo, dukkhasseso nirodho, rogānaṃ vūpasamo, jarāmaraṇassa atthaṅgamo”ti. ",
          "en": "craving for thoughts … is the ending of old age and death.” "
        },
        {
          "scid": "sn26.8:1.8",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
