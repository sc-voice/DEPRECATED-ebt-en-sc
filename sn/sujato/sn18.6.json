    {
      "segments": [
        {
          "scid": "sn18.6:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn18.6:1.2",
          "pli": "“Taṃ kiṃ maññasi, rāhula, ",
          "en": "“What do you think, Rāhula? "
        },
        {
          "scid": "sn18.6:1.3",
          "pli": "rūpasaññā niccā vā aniccā vā”ti? ",
          "en": "Is perception of sights permanent or impermanent?” "
        },
        {
          "scid": "sn18.6:1.4",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.6:1.5",
          "pli": "“saddasaññā … pe … ",
          "en": "“… perception of sounds … "
        },
        {
          "scid": "sn18.6:1.6",
          "pli": "gandhasaññā … ",
          "en": "perception of smells … "
        },
        {
          "scid": "sn18.6:1.7",
          "pli": "rasasaññā … ",
          "en": "perception of tastes … "
        },
        {
          "scid": "sn18.6:1.8",
          "pli": "phoṭṭhabbasaññā … ",
          "en": "perception of touches … "
        },
        {
          "scid": "sn18.6:1.9",
          "pli": "dhammasaññā niccā vā aniccā vā”ti? ",
          "en": "Is perception of thoughts permanent or impermanent?” "
        },
        {
          "scid": "sn18.6:1.10",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.6:1.11",
          "pli": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako rūpasaññāyapi nibbindati … pe … saddasaññāyapi nibbindati … gandhasaññāyapi nibbindati … rasasaññāyapi nibbindati … phoṭṭhabbasaññāyapi nibbindati … dhammasaññāyapi nibbindati … pe … ",
          "en": "“Seeing this, a learned noble disciple grows disillusioned with the perception of sights, sounds, smells, tastes, touches, and thoughts. …” "
        },
        {
          "scid": "sn18.6:1.12",
          "pli": "pajānātī”ti. ",
          "en": " "
        },
        {
          "scid": "sn18.6:1.13",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
