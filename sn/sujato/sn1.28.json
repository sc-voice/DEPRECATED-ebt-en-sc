      "segments": [
        {
          "scid": "sn1.28:1.1",
          "pli": "“Mahaddhanā mahābhogā, ",
          "en": "“The affluent and the wealthy, "
        },
        {
          "scid": "sn1.28:1.2",
          "pli": "raṭṭhavantopi khattiyā; ",
          "en": "even the aristocrats who rule the land, "
        },
        {
          "scid": "sn1.28:1.3",
          "pli": "Aññamaññābhigijjhanti, ",
          "en": "are jealous of each other, "
        },
        {
          "scid": "sn1.28:1.4",
          "pli": "kāmesu analaṅkatā. ",
          "en": "insatiable in sensual pleasures. "
        },
        {
          "scid": "sn1.28:2.1",
          "pli": "Tesu ussukkajātesu, ",
          "en": "Among those of such an avid nature, "
        },
        {
          "scid": "sn1.28:2.2",
          "pli": "bhavasotānusārisu; ",
          "en": "flowing along the stream of lives, "
        },
        {
          "scid": "sn1.28:2.3",
          "pli": "Kedha taṇhaṃ pajahiṃsu, ",
          "en": "who here has given up craving? "
        },
        {
          "scid": "sn1.28:2.4",
          "pli": "ke lokasmiṃ anussukā”ti. ",
          "en": "Who in the world is not avid?” "
        },
        {
          "scid": "sn1.28:3.1",
          "pli": "“Hitvā agāraṃ pabbajitā, ",
          "en": "“Having given up their home, their child, their cattle, "
        },
        {
          "scid": "sn1.28:3.2",
          "pli": "hitvā puttaṃ pasuṃ piyaṃ; ",
          "en": "and all that they love, they went forth. "
        },
        {
          "scid": "sn1.28:3.3",
          "pli": "Hitvā rāgañca dosañca, ",
          "en": "Having given up desire and hate, "
        },
        {
          "scid": "sn1.28:3.4",
          "pli": "avijjañca virājiya; ",
          "en": "having dispelled ignorance, "
        },
        {
          "scid": "sn1.28:3.5",
          "pli": "Khīṇāsavā arahanto, ",
          "en": "the perfected ones with defilements ended—"
        },
        {
          "scid": "sn1.28:3.6",
          "pli": "te lokasmiṃ anussukā”ti. ",
          "en": "they in the world are not avid.”"
        }
      ],
