        {
          "scid": "sn2.15:1.1",
          "pli": "Ekamantaṃ ṭhito kho candano devaputto bhagavantaṃ gāthāya ajjhabhāsi: ",
          "en": "Standing to one side, the god Candana addressed the Buddha in verse: "
        },
        {
          "scid": "sn2.15:2.1",
          "pli": "“Kathaṃsu tarati oghaṃ, ",
          "en": "“Who here crosses the flood, "
        },
        {
          "scid": "sn2.15:2.2",
          "pli": "rattindivamatandito; ",
          "en": "tireless all day and night? "
        },
        {
          "scid": "sn2.15:2.3",
          "pli": "Appatiṭṭhe anālambe, ",
          "en": "Who, not standing and unsupported, "
        },
        {
          "scid": "sn2.15:2.4",
          "pli": "ko gambhīre na sīdatī”ti. ",
          "en": "does not sink in the deep?” "
        },
        {
          "scid": "sn2.15:3.1",
          "pli": "“Sabbadā sīlasampanno, ",
          "en": "“Someone who is always endowed with ethics, "
        },
        {
          "scid": "sn2.15:3.2",
          "pli": "Paññavā susamāhito; ",
          "en": "wise and serene, "
        },
        {
          "scid": "sn2.15:3.3",
          "pli": "Āraddhavīriyo pahitatto, ",
          "en": "energetic and resolute, "
        },
        {
          "scid": "sn2.15:3.4",
          "pli": "Oghaṃ tarati duttaraṃ. ",
          "en": "crosses the flood so hard to cross. "
        },
        {
          "scid": "sn2.15:4.1",
          "pli": "Virato kāmasaññāya, ",
          "en": "Someone who desists from sensual perception, "
        },
        {
          "scid": "sn2.15:4.2",
          "pli": "rūpasaṃyojanātigo; ",
          "en": "has moved past the fetter of form, "
        },
        {
          "scid": "sn2.15:4.3",
          "pli": "Nandīrāgaparikkhīṇo, ",
          "en": "and has finished with relishing and greed "
        },
        {
          "scid": "sn2.15:4.4",
          "pli": "so gambhīre na sīdatī”ti. ",
          "en": "does not sink in the deep.”"
        }
      ],
