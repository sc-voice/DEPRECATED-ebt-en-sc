        {
          "scid": "sn35.54:1.1",
          "pli": "“Kathaṃ nu kho, bhante, jānato, kathaṃ passato, saṃyojanā pahīyantī”ti? ",
          "en": "“Sir, how does one know and see so that the fetters are given up?” "
        },
        {
          "scid": "sn35.54:1.2",
          "pli": "“Cakkhuṃ kho, bhikkhu, aniccato jānato passato saṃyojanā pahīyanti. ",
          "en": "“Mendicant, knowing and seeing the eye as impermanent, the fetters are given up …” "
        },
        {
          "scid": "sn35.54:1.3",
          "pli": "Rūpe … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.4",
          "pli": "cakkhuviññāṇaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.5",
          "pli": "cakkhusamphassaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.6",
          "pli": "yampidaṃ cakkhusamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi aniccato jānato passato saṃyojanā pahīyanti. ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.7",
          "pli": "Sotaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.8",
          "pli": "ghānaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.9",
          "pli": "jivhaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.10",
          "pli": "kāyaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.11",
          "pli": "manaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.12",
          "pli": "dhamme … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.13",
          "pli": "manoviññāṇaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.14",
          "pli": "manosamphassaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.15",
          "pli": "yampidaṃ manosamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi aniccato jānato passato saṃyojanā pahīyanti. ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.16",
          "pli": "Evaṃ kho, bhikkhu, jānato evaṃ passato saṃyojanā pahīyantī”ti. ",
          "en": " "
        },
        {
          "scid": "sn35.54:1.17",
          "pli": "Dutiyaṃ. ",
          "en": ""
        }
      ],
