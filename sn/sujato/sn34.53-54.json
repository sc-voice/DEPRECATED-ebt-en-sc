    {
      "segments": [
        {
          "scid": "sn34.53-54:1.1",
          "pli": "Sāvatthinidānaṃ … ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn34.53-54:1.2",
          "pli": "“samādhismiṃ sakkaccakārī hoti, na samādhismiṃ sātaccakārī … ",
          "en": "“One meditator is skilled in practicing carefully for immersion but not in practicing persistently for it. …” "
        },
        {
          "scid": "sn34.53-54:1.3",
          "pli": "samādhismiṃ sātaccakārī hoti, na samādhismiṃ sakkaccakārī … ",
          "en": " "
        },
        {
          "scid": "sn34.53-54:1.4",
          "pli": "neva samādhismiṃ sakkaccakārī hoti, na ca samādhismiṃ sātaccakārī … ",
          "en": " "
        },
        {
          "scid": "sn34.53-54:1.5",
          "pli": "samādhismiṃ sakkaccakārī ca hoti, samādhismiṃ sātaccakārī ca. ",
          "en": " "
        },
        {
          "scid": "sn34.53-54:1.6",
          "pli": "Tatra, bhikkhave, yvāyaṃ … pe … ",
          "en": " "
        },
        {
          "scid": "sn34.53-54:1.7",
          "pli": "uttamo ca pavaro cā”ti. ",
          "en": " "
        },
        {
          "scid": "sn34.53-54:2.1",
          "pli": "Tepaññāsamaṃ. “Samādhismiṃ sakkaccakārī hoti, na samādhismiṃ sappāyakārī … pe …. ",
          "en": "(These two discourses should be expanded in line with the previous set.) "
        },
        {
          "scid": "sn34.53-54:2.2",
          "pli": "Catupaññāsamaṃ. ",
          "en": ""
        }
      ],
