    {
      "segments": [
        {
          "scid": "sn1.27:1.1",
          "pli": "“Kuto sarā nivattanti, ",
          "en": "“From where do streams turn back? "
        },
        {
          "scid": "sn1.27:1.2",
          "pli": "kattha vaṭṭaṃ na vattati; ",
          "en": "Where does the cycle spin no more? "
        },
        {
          "scid": "sn1.27:1.3",
          "pli": "Kattha nāmañca rūpañca, ",
          "en": "Where do name and form "
        },
        {
          "scid": "sn1.27:1.4",
          "pli": "asesaṃ uparujjhatī”ti. ",
          "en": "cease with nothing left over?” "
        },
        {
          "scid": "sn1.27:2.1",
          "pli": "“Yattha āpo ca pathavī, ",
          "en": "“Where water and earth, "
        },
        {
          "scid": "sn1.27:2.2",
          "pli": "tejo vāyo na gādhati; ",
          "en": "fire and air find no footing. "
        },
        {
          "scid": "sn1.27:2.3",
          "pli": "Ato sarā nivattanti, ",
          "en": "From here the streams turn back; "
        },
        {
          "scid": "sn1.27:2.4",
          "pli": "ettha vaṭṭaṃ na vattati; ",
          "en": "here the cycle spins no more; "
        },
        {
          "scid": "sn1.27:2.5",
          "pli": "Ettha nāmañca rūpañca, ",
          "en": "and here it is that name and form "
        },
        {
          "scid": "sn1.27:2.6",
          "pli": "asesaṃ uparujjhatī”ti. ",
          "en": "cease with nothing left over.”"
        }
      ],
