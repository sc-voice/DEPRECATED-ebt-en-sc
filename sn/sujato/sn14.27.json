    {
      "segments": [
        {
          "scid": "sn14.27:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.27:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.27:1.3",
          "pli": "Pāṇātipātino pāṇātipātīhi saddhiṃ saṃsandanti samenti; ",
          "en": "those who kill living creatures with those who kill living creatures, "
        },
        {
          "scid": "sn14.27:1.4",
          "pli": "adinnādāyino … pe … ",
          "en": "those who steal … "
        },
        {
          "scid": "sn14.27:1.5",
          "pli": "kāmesumicchācārino … ",
          "en": "commit sexual misconduct … "
        },
        {
          "scid": "sn14.27:1.6",
          "pli": "musāvādino … ",
          "en": "lie … "
        },
        {
          "scid": "sn14.27:1.7",
          "pli": "pisuṇavācā … ",
          "en": "speak divisively … "
        },
        {
          "scid": "sn14.27:1.8",
          "pli": "pharusavācā … ",
          "en": "speak harshly … "
        },
        {
          "scid": "sn14.27:1.9",
          "pli": "samphappalāpino samphappalāpīhi saddhiṃ saṃsandanti samenti; ",
          "en": "talk nonsense … "
        },
        {
          "scid": "sn14.27:1.10",
          "pli": "abhijjhāluno abhijjhālūhi saddhiṃ saṃsandanti samenti; ",
          "en": "are covetous … "
        },
        {
          "scid": "sn14.27:1.11",
          "pli": "byāpannacittā byāpannacittehi saddhiṃ saṃsandanti samenti; ",
          "en": "are malicious … "
        },
        {
          "scid": "sn14.27:1.12",
          "pli": "micchādiṭṭhikā micchādiṭṭhikehi saddhiṃ saṃsandanti samenti. ",
          "en": "have wrong view … "
        },
        {
          "scid": "sn14.27:2.1",
          "pli": "Pāṇātipātā paṭiviratā pāṇātipātā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "Those who refrain from killing living creatures … "
        },
        {
          "scid": "sn14.27:2.2",
          "pli": "adinnādānā paṭiviratā … pe … ",
          "en": "who refrain from stealing … "
        },
        {
          "scid": "sn14.27:2.3",
          "pli": "kāmesumicchācārā paṭiviratā … ",
          "en": "who refrain from sexual misconduct … "
        },
        {
          "scid": "sn14.27:2.4",
          "pli": "musāvādā paṭiviratā … ",
          "en": "who refrain from lying … "
        },
        {
          "scid": "sn14.27:2.5",
          "pli": "pisuṇāya vācāya … ",
          "en": "who refrain from divisive speech … "
        },
        {
          "scid": "sn14.27:2.6",
          "pli": "pharusāya vācāya … ",
          "en": "who refrain from harsh speech … "
        },
        {
          "scid": "sn14.27:2.7",
          "pli": "samphappalāpā paṭiviratā samphappalāpā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from talking nonsense … "
        },
        {
          "scid": "sn14.27:2.8",
          "pli": "anabhijjhāluno anabhijjhālūhi saddhiṃ saṃsandanti samenti; ",
          "en": "are not covetous … "
        },
        {
          "scid": "sn14.27:2.9",
          "pli": "abyāpannacittā abyāpannacittehi saddhiṃ saṃsandanti samenti; ",
          "en": "are not malicious … "
        },
        {
          "scid": "sn14.27:2.10",
          "pli": "sammādiṭṭhikā sammādiṭṭhikehi saddhiṃ saṃsandanti samentī”ti. ",
          "en": "have right view with those who have right view.” "
        },
        {
          "scid": "sn14.27:2.11",
          "pli": "Pañcamaṃ. ",
          "en": ""
        }
      ],
