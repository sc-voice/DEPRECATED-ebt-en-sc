    {
      "segments": [
        {
          "scid": "sn35.99:1.1",
          "pli": "“Samādhiṃ, bhikkhave, bhāvetha. ",
          "en": "“Mendicants, develop immersion. "
        },
        {
          "scid": "sn35.99:1.2",
          "pli": "Samāhito, bhikkhave, bhikkhu yathābhūtaṃ pajānāti. ",
          "en": "A mendicant who has immersion truly understands. "
        },
        {
          "scid": "sn35.99:1.3",
          "pli": "Kiñca yathābhūtaṃ pajānāti? ",
          "en": "What do they truly understand? "
        },
        {
          "scid": "sn35.99:1.4",
          "pli": "‘Cakkhu aniccan’ti yathābhūtaṃ pajānāti; ",
          "en": "They truly understand that the eye is impermanent. "
        },
        {
          "scid": "sn35.99:1.5",
          "pli": "‘rūpā aniccā’ti yathābhūtaṃ pajānāti; ",
          "en": "They truly understand that sights … "
        },
        {
          "scid": "sn35.99:1.6",
          "pli": "‘cakkhuviññāṇaṃ aniccan’ti yathābhūtaṃ pajānāti; ",
          "en": "eye consciousness … "
        },
        {
          "scid": "sn35.99:1.7",
          "pli": "‘cakkhusamphasso anicco’ti yathābhūtaṃ pajānāti. ",
          "en": "eye contact … "
        },
        {
          "scid": "sn35.99:1.8",
          "pli": "‘Yampidaṃ cakkhusamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi aniccan’ti yathābhūtaṃ pajānāti … pe … ",
          "en": "the pleasant, painful, or neutral feeling that arises conditioned by eye contact is impermanent. … "
        },
        {
          "scid": "sn35.99:1.9",
          "pli": "‘mano aniccan’ti yathābhūtaṃ pajānāti. ",
          "en": "They truly understand that the mind is impermanent. "
        },
        {
          "scid": "sn35.99:1.10",
          "pli": "Dhammā … ",
          "en": "They truly understand that thoughts … "
        },
        {
          "scid": "sn35.99:1.11",
          "pli": "manoviññāṇaṃ … ",
          "en": "mind consciousness … "
        },
        {
          "scid": "sn35.99:1.12",
          "pli": "manosamphasso … ",
          "en": "mind contact … "
        },
        {
          "scid": "sn35.99:1.13",
          "pli": "‘yampidaṃ manosamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi aniccan’ti yathābhūtaṃ pajānāti. ",
          "en": "the pleasant, painful, or neutral feeling that arises conditioned by mind contact is impermanent. "
        },
        {
          "scid": "sn35.99:1.14",
          "pli": "Samādhiṃ, bhikkhave, bhāvetha. ",
          "en": "Mendicants, develop immersion. "
        },
        {
          "scid": "sn35.99:1.15",
          "pli": "Samāhito, bhikkhave, bhikkhu yathābhūtaṃ pajānātī”ti. ",
          "en": "A mendicant who has immersion truly understands.” "
        },
        {
          "scid": "sn35.99:1.16",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
