        {
          "scid": "sn35.16:1.1",
          "pli": "“Rūpānāhaṃ, bhikkhave, assādapariyesanaṃ acariṃ. ",
          "en": "“Mendicants, I went in search of the gratification of sights, "
        },
        {
          "scid": "sn35.16:1.2",
          "pli": "Yo rūpānaṃ assādo tadajjhagamaṃ. ",
          "en": "and I found it. …” "
        },
        {
          "scid": "sn35.16:1.3",
          "pli": "Yāvatā rūpānaṃ assādo paññāya me so sudiṭṭho. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.4",
          "pli": "Rūpānāhaṃ, bhikkhave, ādīnavapariyesanaṃ acariṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.5",
          "pli": "Yo rūpānaṃ ādīnavo tadajjhagamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.6",
          "pli": "Yāvatā rūpānaṃ ādīnavo paññāya me so sudiṭṭho. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.7",
          "pli": "Rūpānāhaṃ, bhikkhave, nissaraṇapariyesanaṃ acariṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.8",
          "pli": "Yaṃ rūpānaṃ nissaraṇaṃ tadajjhagamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.9",
          "pli": "Yāvatā rūpānaṃ nissaraṇaṃ, paññāya me taṃ sudiṭṭhaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.10",
          "pli": "Saddānāhaṃ, bhikkhave … ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.11",
          "pli": "gandhānāhaṃ, bhikkhave … ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.12",
          "pli": "rasānāhaṃ, bhikkhave … ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.13",
          "pli": "phoṭṭhabbānāhaṃ, bhikkhave … ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.14",
          "pli": "dhammānāhaṃ, bhikkhave, assādapariyesanaṃ acariṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.15",
          "pli": "Yo dhammānaṃ assādo tadajjhagamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.16",
          "pli": "Yāvatā dhammānaṃ assādo paññāya me so sudiṭṭho. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.17",
          "pli": "Dhammānāhaṃ, bhikkhave, ādīnavapariyesanaṃ acariṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.18",
          "pli": "Yo dhammānaṃ ādīnavo tadajjhagamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.19",
          "pli": "Yāvatā dhammānaṃ ādīnavo paññāya me so sudiṭṭho. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.20",
          "pli": "Dhammānāhaṃ, bhikkhave, nissaraṇapariyesanaṃ acariṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.21",
          "pli": "Yaṃ dhammānaṃ nissaraṇaṃ tadajjhagamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:1.22",
          "pli": "Yāvatā dhammānaṃ nissaraṇaṃ, paññāya me taṃ sudiṭṭhaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:2.1",
          "pli": "Yāvakīvañcāhaṃ, bhikkhave, imesaṃ channaṃ bāhirānaṃ āyatanānaṃ assādañca assādato, ādīnavañca ādīnavato, nissaraṇañca nissaraṇato yathābhūtaṃ nābbhaññāsiṃ … pe … paccaññāsiṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.16:2.2",
          "pli": "Ñāṇañca pana me dassanaṃ udapādi: ",
          "en": " "
        },
        {
          "scid": "sn35.16:2.3",
          "pli": "‘akuppā me vimutti, ayamantimā jāti, natthi dāni punabbhavo’”ti. ",
          "en": " "
        },
        {
          "scid": "sn35.16:2.4",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
