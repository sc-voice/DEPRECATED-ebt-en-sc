    {
      "segments": [
        {
          "scid": "sn24.44:1.1",
          "pli": "“Adukkhamasukhī attā hoti arogo paraṃ maraṇā”ti? ",
          "en": "“‘The self is neither happy nor suffering, and is sound after death’?” … "
        },
        {
          "scid": "sn24.44:1.2",
          "pli": "“Bhagavaṃmūlakā no, bhante, dhammā … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.1",
          "pli": "“Rūpe kho, bhikkhave, sati, rūpaṃ upādāya, rūpaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.2",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’ti. ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.3",
          "pli": "Vedanāya sati … ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.4",
          "pli": "saññāya sati … ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.5",
          "pli": "saṅkhāresu sati … ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.6",
          "pli": "viññāṇe sati, viññāṇaṃ upādāya, viññāṇaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.44:2.7",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’ti. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.1",
          "pli": "Taṃ kiṃ maññatha, bhikkhave, rūpaṃ niccaṃ vā aniccaṃ vā”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.2",
          "pli": "“Aniccaṃ, bhante” … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.3",
          "pli": "vipariṇāmadhammaṃ, api nu taṃ anupādāya evaṃ diṭṭhi uppajjeyya: ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.4",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.5",
          "pli": "“No hetaṃ, bhante”. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.6",
          "pli": "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.7",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.8",
          "pli": "“Vedanā … ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.9",
          "pli": "saññā … ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.10",
          "pli": "saṅkhārā … ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.11",
          "pli": "viññāṇaṃ niccaṃ vā aniccaṃ vā”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.12",
          "pli": "“Aniccaṃ, bhante” … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.13",
          "pli": "vipariṇāmadhammaṃ, api nu taṃ anupādāya evaṃ diṭṭhi uppajjeyya: ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.14",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.15",
          "pli": "“No hetaṃ, bhante”. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.16",
          "pli": "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.17",
          "pli": "‘adukkhamasukhī attā hoti arogo paraṃ maraṇā’”ti. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.18",
          "pli": "Chabbīsatimaṃ. ",
          "en": " "
        },
        {
          "scid": "sn24.44:3.19",
          "pli": "Dutiyapeyyālo. ",
          "en": " "
        },
        {
          "scid": "sn24.44:4.1",
          "pli": "Vātaṃ etaṃ mama so, ",
          "en": " "
        },
        {
          "scid": "sn24.44:4.2",
          "pli": "attā no ca me siyā; ",
          "en": " "
        },
        {
          "scid": "sn24.44:4.3",
          "pli": "Natthi karoto hetu ca, ",
          "en": " "
        },
        {
          "scid": "sn24.44:4.4",
          "pli": "mahādiṭṭhena aṭṭhamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn24.44:5.1",
          "pli": "Sassato asassato ceva, ",
          "en": " "
        },
        {
          "scid": "sn24.44:5.2",
          "pli": "antānantavā ca vuccati; ",
          "en": " "
        },
        {
          "scid": "sn24.44:5.3",
          "pli": "Taṃ jīvaṃ aññaṃ jīvañca, ",
          "en": " "
        },
        {
          "scid": "sn24.44:5.4",
          "pli": "tathāgatena cattāro. ",
          "en": " "
        },
        {
          "scid": "sn24.44:6.1",
          "pli": "Rūpī attā hoti arūpī ca attā hoti, ",
          "en": " "
        },
        {
          "scid": "sn24.44:6.2",
          "pli": "Rūpī ca arūpī ca attā hoti; ",
          "en": " "
        },
        {
          "scid": "sn24.44:6.3",
          "pli": "Neva rūpī nārūpī attā hoti, ",
          "en": " "
        },
        {
          "scid": "sn24.44:6.4",
          "pli": "Ekantasukhī attā hoti. ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.1",
          "pli": "Ekantadukkhī attā hoti, ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.2",
          "pli": "Sukhadukkhī attā hoti; ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.3",
          "pli": "Adukkhamasukhī attā hoti, ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.4",
          "pli": "Arogo paraṃ maraṇāti; ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.5",
          "pli": "Ime chabbīsati suttā, ",
          "en": " "
        },
        {
          "scid": "sn24.44:7.6",
          "pli": "Dutiyavārena desitā. ",
          "en": ""
        }
      ],
