    {
      "segments": [
        {
          "scid": "sn1.80:1.1",
          "pli": "“Kiṃsu lokasmi pajjoto, ",
          "en": "“What’s the lamp for the world? "
        },
        {
          "scid": "sn1.80:1.2",
          "pli": "kiṃsu lokasmi jāgaro; ",
          "en": "What in the world is wakeful? "
        },
        {
          "scid": "sn1.80:1.3",
          "pli": "Kiṃsu kamme sajīvānaṃ, ",
          "en": "Who are one’s work colleagues? "
        },
        {
          "scid": "sn1.80:1.4",
          "pli": "kimassa iriyāpatho. ",
          "en": "What is one’s walk of life? "
        },
        {
          "scid": "sn1.80:2.1",
          "pli": "Kiṃsu alasaṃ analasañca, ",
          "en": "What nurtures the idle and the tireless, "
        },
        {
          "scid": "sn1.80:2.2",
          "pli": "Mātā puttaṃva posati; ",
          "en": "like a mother her child? "
        },
        {
          "scid": "sn1.80:2.3",
          "pli": "Kiṃ bhūtā upajīvanti, ",
          "en": "By what do the creatures who live off the earth "
        },
        {
          "scid": "sn1.80:2.4",
          "pli": "Ye pāṇā pathavissitā”ti. ",
          "en": "sustain their life?” "
        },
        {
          "scid": "sn1.80:3.1",
          "pli": "“Paññā lokasmi pajjoto, ",
          "en": "“Wisdom is the lamp for the world. "
        },
        {
          "scid": "sn1.80:3.2",
          "pli": "sati lokasmi jāgaro; ",
          "en": "Mindfulness in the world is wakeful. "
        },
        {
          "scid": "sn1.80:3.3",
          "pli": "Gāvo kamme sajīvānaṃ, ",
          "en": "Cattle are one’s work colleagues, "
        },
        {
          "scid": "sn1.80:3.4",
          "pli": "sītassa iriyāpatho. ",
          "en": "and the furrow is one’s walk of life. "
        },
        {
          "scid": "sn1.80:4.1",
          "pli": "Vuṭṭhi alasaṃ analasañca, ",
          "en": "Rain nurtures the idle and the tireless, "
        },
        {
          "scid": "sn1.80:4.2",
          "pli": "Mātā puttaṃva posati; ",
          "en": "like a mother her child. "
        },
        {
          "scid": "sn1.80:4.3",
          "pli": "Vuṭṭhiṃ bhūtā upajīvanti, ",
          "en": "The creatures who live on the earth "
        },
        {
          "scid": "sn1.80:4.4",
          "pli": "Ye pāṇā pathavissitā”ti. ",
          "en": "sustain their life by rain.”"
        }
      ],
