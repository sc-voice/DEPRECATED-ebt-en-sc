    {
      "segments": [
        {
          "scid": "sn22.147:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.147:1.2",
          "pli": "“Saddhāpabbajitassa, bhikkhave, kulaputtassa ayamanudhammo hoti—",
          "en": "“Mendicants, when a gentleman has gone forth out of faith, this is what’s in line with the teachings. "
        },
        {
          "scid": "sn22.147:1.3",
          "pli": "yaṃ rūpe aniccānupassī vihareyya. ",
          "en": "They should live observing impermanence in form, "
        },
        {
          "scid": "sn22.147:1.4",
          "pli": "Vedanāya … ",
          "en": "feeling, "
        },
        {
          "scid": "sn22.147:1.5",
          "pli": "saññāya … ",
          "en": "perception, "
        },
        {
          "scid": "sn22.147:1.6",
          "pli": "saṅkhāresu … ",
          "en": "choices, "
        },
        {
          "scid": "sn22.147:1.7",
          "pli": "viññāṇe aniccānupassī vihareyya … pe … ",
          "en": "and consciousness. … "
        },
        {
          "scid": "sn22.147:1.8",
          "pli": "‘parimuccati dukkhasmā’ti vadāmī”ti. ",
          "en": "They’re freed from suffering, I say.” "
        },
        {
          "scid": "sn22.147:1.9",
          "pli": "Dvādasamaṃ. ",
          "en": ""
        }
      ],
