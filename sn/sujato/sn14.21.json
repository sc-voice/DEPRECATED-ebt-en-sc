    {
      "segments": [
        {
          "scid": "sn14.21:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.21:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.21:1.3",
          "pli": "Appassutā appassutehi saddhiṃ saṃsandanti samenti; ",
          "en": "the uneducated with the uneducated … "
        },
        {
          "scid": "sn14.21:1.4",
          "pli": "kusītā kusītehi saddhiṃ saṃsandanti samenti; ",
          "en": "lazy … "
        },
        {
          "scid": "sn14.21:1.5",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.21:1.6",
          "pli": "bahussutā bahussutehi saddhiṃ saṃsandanti samenti; ",
          "en": "learned... "
        },
        {
          "scid": "sn14.21:1.7",
          "pli": "āraddhavīriyā āraddhavīriyehi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samenti … pe …. ",
          "en": " "
        },
        {
          "scid": "sn14.21:2.1",
          "pli": "Appassutā appassutehi saddhiṃ saṃsandanti samenti; ",
          "en": "uneducated … "
        },
        {
          "scid": "sn14.21:2.2",
          "pli": "muṭṭhassatino muṭṭhassatīhi saddhiṃ saṃsandanti samenti; ",
          "en": "unmindful … "
        },
        {
          "scid": "sn14.21:2.3",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.21:2.4",
          "pli": "bahussutā bahussutehi saddhiṃ saṃsandanti samenti; ",
          "en": "learned... "
        },
        {
          "scid": "sn14.21:2.5",
          "pli": "upaṭṭhitassatino upaṭṭhitassatīhi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samentī”ti … pe …. (2) ",
          "en": "mindful... wise...” "
        },
        {
          "scid": "sn14.21:2.6",
          "pli": "Ekādasamaṃ. ",
          "en": ""
        }
      ],
