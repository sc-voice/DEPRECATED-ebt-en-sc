    {
      "segments": [
        {
          "scid": "sn1.59:1.1",
          "pli": "“Kiṃsu dutiyā purisassa hoti, ",
          "en": "“What is a person’s partner? "
        },
        {
          "scid": "sn1.59:1.2",
          "pli": "Kiṃsu cenaṃ pasāsati; ",
          "en": "What instructs them? "
        },
        {
          "scid": "sn1.59:1.3",
          "pli": "Kissa cābhirato macco, ",
          "en": "Enjoying what is a mortal "
        },
        {
          "scid": "sn1.59:1.4",
          "pli": "Sabbadukkhā pamuccatī”ti. ",
          "en": "released from all suffering?” "
        },
        {
          "scid": "sn1.59:2.1",
          "pli": "“Saddhā dutiyā purisassa hoti, ",
          "en": "“Faith is a person’s partner. "
        },
        {
          "scid": "sn1.59:2.2",
          "pli": "Paññā cenaṃ pasāsati; ",
          "en": "Wisdom instructs them. "
        },
        {
          "scid": "sn1.59:2.3",
          "pli": "Nibbānābhirato macco, ",
          "en": "Delighting in extinguishment a mortal "
        },
        {
          "scid": "sn1.59:2.4",
          "pli": "Sabbadukkhā pamuccatī”ti. ",
          "en": "is released from all suffering.”"
        }
      ],
