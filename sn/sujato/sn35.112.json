      "segments": [
        {
          "scid": "sn35.112:1.1",
          "pli": "“Rūpe, bhikkhave, anabhijānaṃ aparijānaṃ avirājayaṃ appajahaṃ abhabbo dukkhakkhayāya. ",
          "en": "“Mendicants, without directly knowing and completely understanding sights … "
        },
        {
          "scid": "sn35.112:1.2",
          "pli": "Sadde … ",
          "en": "sounds … "
        },
        {
          "scid": "sn35.112:1.3",
          "pli": "gandhe … ",
          "en": "smells … "
        },
        {
          "scid": "sn35.112:1.4",
          "pli": "rase … ",
          "en": "tastes … "
        },
        {
          "scid": "sn35.112:1.5",
          "pli": "phoṭṭhabbe … ",
          "en": "touches … "
        },
        {
          "scid": "sn35.112:1.6",
          "pli": "dhamme anabhijānaṃ aparijānaṃ avirājayaṃ appajahaṃ abhabbo dukkhakkhayāya. ",
          "en": "thoughts, without dispassion for them and giving them up, you can’t end suffering. "
        },
        {
          "scid": "sn35.112:1.7",
          "pli": "Rūpe ca kho, bhikkhave, abhijānaṃ parijānaṃ virājayaṃ pajahaṃ bhabbo dukkhakkhayāya. ",
          "en": "By directly knowing and completely understanding sights … "
        },
        {
          "scid": "sn35.112:1.8",
          "pli": "Sadde … ",
          "en": "sounds … "
        },
        {
          "scid": "sn35.112:1.9",
          "pli": "gandhe … ",
          "en": "smells … "
        },
        {
          "scid": "sn35.112:1.10",
          "pli": "rase … ",
          "en": "tastes … "
        },
        {
          "scid": "sn35.112:1.11",
          "pli": "phoṭṭhabbe … ",
          "en": "touches … "
        },
        {
          "scid": "sn35.112:1.12",
          "pli": "dhamme abhijānaṃ parijānaṃ virājayaṃ pajahaṃ bhabbo dukkhakkhayāyā”ti. ",
          "en": "thoughts, having dispassion for them and giving them up, you can end suffering.” "
        },
        {
          "scid": "sn35.112:1.13",
          "pli": "Navamaṃ. ",
          "en": ""
        }
