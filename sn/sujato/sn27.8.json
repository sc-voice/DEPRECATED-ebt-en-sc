    {
      "segments": [
        {
          "scid": "sn27.8:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn27.8:1.2",
          "pli": "“Yo, bhikkhave, rūpataṇhāya chandarāgo, cittasseso upakkileso. ",
          "en": "“Mendicants, desire and greed for craving for sights, "
        },
        {
          "scid": "sn27.8:1.3",
          "pli": "Yo saddataṇhāya … ",
          "en": "craving for sounds, "
        },
        {
          "scid": "sn27.8:1.4",
          "pli": "yo gandhataṇhāya … ",
          "en": "craving for smells, "
        },
        {
          "scid": "sn27.8:1.5",
          "pli": "yo rasataṇhāya … ",
          "en": "craving for tastes, "
        },
        {
          "scid": "sn27.8:1.6",
          "pli": "yo phoṭṭhabbataṇhāya … ",
          "en": "craving for touches, "
        },
        {
          "scid": "sn27.8:1.7",
          "pli": "yo dhammataṇhāya chandarāgo, cittasseso upakkileso. ",
          "en": "or craving for thoughts is a corruption of the mind. …” "
        },
        {
          "scid": "sn27.8:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno … pe … ",
          "en": " "
        },
        {
          "scid": "sn27.8:1.9",
          "pli": "abhiññā sacchikaraṇīyesu dhammesū”ti. ",
          "en": " "
        },
        {
          "scid": "sn27.8:1.10",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
