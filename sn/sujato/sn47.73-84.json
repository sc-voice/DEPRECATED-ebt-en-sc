    {
      "segments": [
        {
          "scid": "sn47.73-84:1.1",
          "pli": "“Seyyathāpi, bhikkhave, ye keci balakaraṇīyā kammantā karīyantī”ti vitthāretabbaṃ. ",
          "en": "“Mendicants, all the hard work that gets done depends on the earth and is grounded on the earth. …” "
        },
        {
          "scid": "sn47.73-84:1.2",
          "pli": "Balakaraṇīyavaggo aṭṭhamo. ",
          "en": "(To be expanded as in SN 45.149–160.) "
        },
        {
          "scid": "sn47.73-84:2.1",
          "pli": "Balaṃ bījañca nāgo ca, ",
          "en": "Hard work, seeds, and dragons, "
        },
        {
          "scid": "sn47.73-84:2.2",
          "pli": "rukkho kumbhena sūkiyā; ",
          "en": "a tree, a pot, and a spike, "
        },
        {
          "scid": "sn47.73-84:2.3",
          "pli": "Ākāsena ca dve meghā, ",
          "en": "the sky, and two on clouds, "
        },
        {
          "scid": "sn47.73-84:2.4",
          "pli": "nāvā āgantukā nadīti. ",
          "en": "a ship, a guest house, and a river."
        }
      ],
