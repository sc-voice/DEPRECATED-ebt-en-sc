    {
      "segments": [
        {
          "scid": "sn1.3:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn1.3:1.2",
          "pli": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, that deity recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn1.3:2.1",
          "pli": "“Upanīyati jīvitamappamāyu, ",
          "en": "“This life, so very short, is led onward; "
        },
        {
          "scid": "sn1.3:2.2",
          "pli": "Jarūpanītassa na santi tāṇā; ",
          "en": "one led on to old age has no shelter. "
        },
        {
          "scid": "sn1.3:2.3",
          "pli": "Etaṃ bhayaṃ maraṇe pekkhamāno, ",
          "en": "Seeing this peril in death, "
        },
        {
          "scid": "sn1.3:2.4",
          "pli": "Puññāni kayirātha sukhāvahānī”ti. ",
          "en": "do good deeds that bring you to joy.” "
        },
        {
          "scid": "sn1.3:3.1",
          "pli": "“Upanīyati jīvitamappamāyu, ",
          "en": "“This life, so very short, is led onward; "
        },
        {
          "scid": "sn1.3:3.2",
          "pli": "Jarūpanītassa na santi tāṇā; ",
          "en": "one led on to old age has no shelter. "
        },
        {
          "scid": "sn1.3:3.3",
          "pli": "Etaṃ bhayaṃ maraṇe pekkhamāno, ",
          "en": "Seeing this peril in death, "
        },
        {
          "scid": "sn1.3:3.4",
          "pli": "Lokāmisaṃ pajahe santipekkho”ti. ",
          "en": "a seeker of peace would drop the world’s bait.”"
        }
      ],
