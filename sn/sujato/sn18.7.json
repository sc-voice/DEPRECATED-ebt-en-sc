    {
      "segments": [
        {
          "scid": "sn18.7:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn18.7:1.2",
          "pli": "“Taṃ kiṃ maññasi, rāhula, ",
          "en": "“What do you think, Rāhula? "
        },
        {
          "scid": "sn18.7:1.3",
          "pli": "rūpasañcetanā niccā vā aniccā vā”ti? ",
          "en": "Is intention regarding sights permanent or impermanent?” "
        },
        {
          "scid": "sn18.7:1.4",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.7:1.5",
          "pli": "“saddasañcetanā … pe … ",
          "en": "“… intention regarding sounds … "
        },
        {
          "scid": "sn18.7:1.6",
          "pli": "gandhasañcetanā … ",
          "en": "intention regarding smells … "
        },
        {
          "scid": "sn18.7:1.7",
          "pli": "rasasañcetanā … ",
          "en": "intention regarding tastes … "
        },
        {
          "scid": "sn18.7:1.8",
          "pli": "phoṭṭhabbasañcetanā … ",
          "en": "intention regarding touches … "
        },
        {
          "scid": "sn18.7:1.9",
          "pli": "dhammasañcetanā niccā vā aniccā vā”ti? ",
          "en": "Is intention regarding thoughts permanent or impermanent?” "
        },
        {
          "scid": "sn18.7:1.10",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.7:1.11",
          "pli": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako rūpasañcetanāyapi nibbindati … pe … saddasañcetanāyapi nibbindati … gandhasañcetanāyapi nibbindati … rasasañcetanāyapi nibbindati … phoṭṭhabbasañcetanāyapi nibbindati … dhammasañcetanāyapi nibbindati … pe … ",
          "en": "“Seeing this, a learned noble disciple grows disillusioned with intention regarding sights, sounds, smells, tastes, touches, and thoughts. …” "
        },
        {
          "scid": "sn18.7:1.12",
          "pli": "pajānātī”ti. ",
          "en": " "
        },
        {
          "scid": "sn18.7:1.13",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
