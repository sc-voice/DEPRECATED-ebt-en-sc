    {
      "segments": [
        {
          "scid": "sn1.14:1.1",
          "pli": "“Khattiyo dvipadaṃ seṭṭho, ",
          "en": "“An aristocrat is the best of bipeds, "
        },
        {
          "scid": "sn1.14:1.2",
          "pli": "balībaddo catuppadaṃ; ",
          "en": "an ox is the best of quadrupeds, "
        },
        {
          "scid": "sn1.14:1.3",
          "pli": "Komārī seṭṭhā bhariyānaṃ, ",
          "en": "a maiden is the best of wives, "
        },
        {
          "scid": "sn1.14:1.4",
          "pli": "yo ca puttāna pubbajo”ti. ",
          "en": "and a first-born the best of sons.” "
        },
        {
          "scid": "sn1.14:2.1",
          "pli": "“Sambuddho dvipadaṃ seṭṭho, ",
          "en": "“A Buddha is the best of bipeds, "
        },
        {
          "scid": "sn1.14:2.2",
          "pli": "ājānīyo catuppadaṃ; ",
          "en": "a thoroughbred, the best of quadrupeds, "
        },
        {
          "scid": "sn1.14:2.3",
          "pli": "Sussūsā seṭṭhā bhariyānaṃ, ",
          "en": "a good listener is the best of wives, "
        },
        {
          "scid": "sn1.14:2.4",
          "pli": "yo ca puttānamassavo”ti. ",
          "en": "and the best of sons is loyal.”"
        }
      ],
