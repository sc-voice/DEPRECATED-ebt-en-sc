    {
      "segments": [
        {
          "scid": "sn1.21:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn1.21:1.2",
          "pli": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, that deity recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn1.21:2.1",
          "pli": "“Sattiyā viya omaṭṭho, ",
          "en": "“Like they’re struck by a sword, "
        },
        {
          "scid": "sn1.21:2.2",
          "pli": "ḍayhamānova matthake; ",
          "en": "like their head was on fire, "
        },
        {
          "scid": "sn1.21:2.3",
          "pli": "Kāmarāgappahānāya, ",
          "en": "a mendicant, mindful, should go forth, "
        },
        {
          "scid": "sn1.21:2.4",
          "pli": "sato bhikkhu paribbaje”ti. ",
          "en": "to give up sensual desire.” "
        },
        {
          "scid": "sn1.21:3.1",
          "pli": "“Sattiyā viya omaṭṭho, ",
          "en": "“Like they’re struck by a sword, "
        },
        {
          "scid": "sn1.21:3.2",
          "pli": "ḍayhamānova matthake; ",
          "en": "like their head was on fire, "
        },
        {
          "scid": "sn1.21:3.3",
          "pli": "Sakkāyadiṭṭhippahānāya, ",
          "en": "a mendicant, mindful, should go forth, "
        },
        {
          "scid": "sn1.21:3.4",
          "pli": "sato bhikkhu paribbaje”ti. ",
          "en": "to give up identity view.”"
        }
      ],
