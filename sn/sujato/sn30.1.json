        {
          "scid": "sn30.1:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn30.1:1.2",
          "pli": "“Catasso imā, bhikkhave, supaṇṇayoniyo. ",
          "en": "“Mendicants, phoenixes reproduce in these four ways. "
        },
        {
          "scid": "sn30.1:1.3",
          "pli": "Katamā catasso? ",
          "en": "What four? "
        },
        {
          "scid": "sn30.1:1.4",
          "pli": "Aṇḍajā supaṇṇā, jalābujā supaṇṇā, saṃsedajā supaṇṇā, opapātikā supaṇṇā—",
          "en": "Phoenixes are born from eggs, from a womb, from moisture, or spontaneously. "
        },
        {
          "scid": "sn30.1:1.5",
          "pli": "imā kho, bhikkhave, catasso supaṇṇayoniyo”ti. ",
          "en": "These are the four ways that phoenixes reproduce.” "
        },
        {
          "scid": "sn30.1:1.6",
          "pli": "Paṭhamaṃ. ",
          "en": ""
        }
      ],
