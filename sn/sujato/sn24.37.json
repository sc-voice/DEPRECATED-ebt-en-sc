    {
      "segments": [
        {
          "scid": "sn24.37:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn24.37:1.2",
          "pli": "“Kismiṃ nu kho, bhikkhave, sati, kiṃ upādāya, kiṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": "“Mendicants, when what exists, because of grasping what and insisting on what, does the view arise: "
        },
        {
          "scid": "sn24.37:1.3",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’”ti? ",
          "en": "‘The self has form and is sound after death’?” … "
        },
        {
          "scid": "sn24.37:1.4",
          "pli": "“Bhagavaṃmūlakā no, bhante, dhammā … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.1",
          "pli": "“Rūpe kho, bhikkhave, sati, rūpaṃ upādāya, rūpaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.2",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’ti. ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.3",
          "pli": "Vedanāya sati … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.4",
          "pli": "saññāya sati … ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.5",
          "pli": "saṅkhāresu sati … ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.6",
          "pli": "viññāṇe sati, viññāṇaṃ upādāya, viññāṇaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.37:2.7",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’ti. ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.1",
          "pli": "Taṃ kiṃ maññatha, bhikkhave, rūpaṃ niccaṃ vā aniccaṃ vā”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.2",
          "pli": "“Aniccaṃ, bhante” … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.3",
          "pli": "vipariṇāmadhammaṃ, api nu taṃ anupādāya evaṃ diṭṭhi uppajjeyya: ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.4",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.5",
          "pli": "“No hetaṃ, bhante”. ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.6",
          "pli": "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.7",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’”ti? ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.8",
          "pli": "“Vedanā … pe … ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.9",
          "pli": "“no hetaṃ, bhante”. ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.10",
          "pli": "“Iti kho, bhikkhave, dukkhe sati, dukkhaṃ upādāya, dukkhaṃ abhinivissa evaṃ diṭṭhi uppajjati: ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.11",
          "pli": "‘rūpī attā hoti arogo paraṃ maraṇā’”ti. ",
          "en": " "
        },
        {
          "scid": "sn24.37:3.12",
          "pli": "Ekūnavīsatimaṃ. ",
          "en": ""
        }
      ],
