    {
      "segments": [
        {
          "scid": "sn1.58:1.1",
          "pli": "“Kiṃsu uppatho akkhāto, ",
          "en": "“What’s declared to be a deviation? "
        },
        {
          "scid": "sn1.58:1.2",
          "pli": "kiṃsu rattindivakkhayo; ",
          "en": "What is ending day and night? "
        },
        {
          "scid": "sn1.58:1.3",
          "pli": "Kiṃ malaṃ brahmacariyassa, ",
          "en": "What’s the stain of celibacy? "
        },
        {
          "scid": "sn1.58:1.4",
          "pli": "kiṃ sinānamanodakan”ti. ",
          "en": "What’s the waterless bath?” "
        },
        {
          "scid": "sn1.58:2.1",
          "pli": "“Rāgo uppatho akkhāto, ",
          "en": "“Lust is declared to be a deviation. "
        },
        {
          "scid": "sn1.58:2.2",
          "pli": "Vayo rattindivakkhayo; ",
          "en": "Youth is ending day and night. "
        },
        {
          "scid": "sn1.58:2.3",
          "pli": "Itthī malaṃ brahmacariyassa, ",
          "en": "Women are the stain of celibacy, "
        },
        {
          "scid": "sn1.58:2.4",
          "pli": "Etthāyaṃ sajjate pajā; ",
          "en": "to which this generation clings. "
        },
        {
          "scid": "sn1.58:2.5",
          "pli": "Tapo ca brahmacariyañca, ",
          "en": "Austerity and celibacy "
        },
        {
          "scid": "sn1.58:2.6",
          "pli": "Taṃ sinānamanodakan”ti. ",
          "en": "are the waterless bath.”"
        }
      ],
