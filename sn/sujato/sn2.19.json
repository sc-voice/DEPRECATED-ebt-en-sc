    {
      "segments": [
        {
          "scid": "sn2.19:1.1",
          "pli": "Rājagahanidānaṃ. ",
          "en": "At Rājagaha. "
        },
        {
          "scid": "sn2.19:1.2",
          "pli": "Ekamantaṃ ṭhito kho uttaro devaputto bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, the god Uttara recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn2.19:2.1",
          "pli": "“Upanīyati jīvitamappamāyu, ",
          "en": "“This life, so very short, is led onward. "
        },
        {
          "scid": "sn2.19:2.2",
          "pli": "Jarūpanītassa na santi tāṇā; ",
          "en": "There’s no shelter for one led on by old age. "
        },
        {
          "scid": "sn2.19:2.3",
          "pli": "Etaṃ bhayaṃ maraṇe pekkhamāno, ",
          "en": "Seeing this peril in death, "
        },
        {
          "scid": "sn2.19:2.4",
          "pli": "Puññāni kayirātha sukhāvahānī”ti. ",
          "en": "do good deeds that bring happiness.” "
        },
        {
          "scid": "sn2.19:3.1",
          "pli": "“Upanīyati jīvitamappamāyu, ",
          "en": "“This life, so very short, is led onward. "
        },
        {
          "scid": "sn2.19:3.2",
          "pli": "Jarūpanītassa na santi tāṇā; ",
          "en": "There’s no shelter for one led on by old age. "
        },
        {
          "scid": "sn2.19:3.3",
          "pli": "Etaṃ bhayaṃ maraṇe pekkhamāno, ",
          "en": "Seeing this peril in death, "
        },
        {
          "scid": "sn2.19:3.4",
          "pli": "Lokāmisaṃ pajahe santipekkho”ti. ",
          "en": "a seeker of peace would drop the world’s bait.”"
        }
      ],
