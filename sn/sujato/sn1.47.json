    },
    {
      "segments": [
        {
          "scid": "sn1.47:1.1",
          "pli": "“Kesaṃ divā ca ratto ca, ",
          "en": "“Whose merit always grows "
        },
        {
          "scid": "sn1.47:1.2",
          "pli": "sadā puññaṃ pavaḍḍhati; ",
          "en": "by day and by night. "
        },
        {
          "scid": "sn1.47:1.3",
          "pli": "Dhammaṭṭhā sīlasampannā, ",
          "en": "Firm in principle, accomplished in conduct, "
        },
        {
          "scid": "sn1.47:1.4",
          "pli": "ke janā saggagāmino”ti. ",
          "en": "who’s going to heaven?” "
        },
        {
          "scid": "sn1.47:2.1",
          "pli": "“Ārāmaropā vanaropā, ",
          "en": "“Planters of parks or groves, "
        },
        {
          "scid": "sn1.47:2.2",
          "pli": "ye janā setukārakā; ",
          "en": "those who build a bridge, "
        },
        {
          "scid": "sn1.47:2.3",
          "pli": "Papañca udapānañca, ",
          "en": "a drinking place and well, "
        },
        {
          "scid": "sn1.47:2.4",
          "pli": "ye dadanti upassayaṃ. ",
          "en": "and those who give a residence. "
        },
        {
          "scid": "sn1.47:3.1",
          "pli": "Tesaṃ divā ca ratto ca, ",
          "en": "Their merit always grows "
        },
        {
          "scid": "sn1.47:3.2",
          "pli": "sadā puññaṃ pavaḍḍhati; ",
          "en": "by day and by night. "
        },
        {
          "scid": "sn1.47:3.3",
          "pli": "Dhammaṭṭhā sīlasampannā, ",
          "en": "Firm in principle, accomplished in conduct, "
        },
        {
          "scid": "sn1.47:3.4",
          "pli": "te janā saggagāmino”ti. ",
          "en": "they are going to heaven.”"
        }
      ],
