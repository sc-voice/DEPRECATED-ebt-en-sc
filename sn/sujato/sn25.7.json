    {
      "segments": [
        {
          "scid": "sn25.7:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn25.7:1.2",
          "pli": "“Rūpasañcetanā, bhikkhave, aniccā vipariṇāmī aññathābhāvī; ",
          "en": "“Mendicants, intention regarding sights is impermanent, perishing, and changing. "
        },
        {
          "scid": "sn25.7:1.3",
          "pli": "saddasañcetanā … ",
          "en": "Intention regarding sounds, "
        },
        {
          "scid": "sn25.7:1.4",
          "pli": "gandhasañcetanā … ",
          "en": "intention regarding smells, "
        },
        {
          "scid": "sn25.7:1.5",
          "pli": "rasasañcetanā … ",
          "en": "intention regarding tastes, "
        },
        {
          "scid": "sn25.7:1.6",
          "pli": "phoṭṭhabbasañcetanā … ",
          "en": "intention regarding touches, "
        },
        {
          "scid": "sn25.7:1.7",
          "pli": "dhammasañcetanā aniccā vipariṇāmī aññathābhāvī. ",
          "en": "and intentions regarding thoughts are impermanent, perishing, and changing. "
        },
        {
          "scid": "sn25.7:1.8",
          "pli": "Yo, bhikkhave, ime dhamme evaṃ saddahati adhimuccati, ayaṃ vuccati ‘saddhānusārī … pe … ",
          "en": "Someone who has faith and confidence in these principles is called a follower by faith. …” "
        },
        {
          "scid": "sn25.7:1.9",
          "pli": "sambodhiparāyano’”ti. ",
          "en": " "
        },
        {
          "scid": "sn25.7:1.10",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
