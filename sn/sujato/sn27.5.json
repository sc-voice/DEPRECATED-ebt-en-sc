    {
      "segments": [
        {
          "scid": "sn27.5:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn27.5:1.2",
          "pli": "“Yo, bhikkhave, cakkhusamphassajāya vedanāya chandarāgo, cittasseso upakkileso. ",
          "en": "“Mendicants, desire and greed for feeling born of eye contact, "
        },
        {
          "scid": "sn27.5:1.3",
          "pli": "Yo sotasamphassajāya vedanāya … ",
          "en": "feeling born of ear contact, "
        },
        {
          "scid": "sn27.5:1.4",
          "pli": "yo ghānasamphassajāya vedanāya … ",
          "en": "feeling born of nose contact, "
        },
        {
          "scid": "sn27.5:1.5",
          "pli": "yo jivhāsamphassajāya vedanāya … ",
          "en": "feeling born of tongue contact, "
        },
        {
          "scid": "sn27.5:1.6",
          "pli": "yo kāyasamphassajāya vedanāya … ",
          "en": "feeling born of body contact, "
        },
        {
          "scid": "sn27.5:1.7",
          "pli": "yo manosamphassajāya vedanāya chandarāgo, cittasseso upakkileso. ",
          "en": "or feeling born of mind contact is a defilement of the mind. …” "
        },
        {
          "scid": "sn27.5:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno … pe … ",
          "en": " "
        },
        {
          "scid": "sn27.5:1.9",
          "pli": "abhiññā sacchikaraṇīyesu dhammesū”ti. ",
          "en": " "
        },
        {
          "scid": "sn27.5:1.10",
          "pli": "Pañcamaṃ. ",
          "en": ""
        }
      ],
