    {
      "segments": [
        {
          "scid": "sn2.16:1.1",
          "pli": "Ekamantaṃ ṭhito kho vāsudatto devaputto bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, the god Vāsudatta recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn2.16:2.1",
          "pli": "“Sattiyā viya omaṭṭho, ",
          "en": "“Like they’re struck by a sword, "
        },
        {
          "scid": "sn2.16:2.2",
          "pli": "ḍayhamānova matthake; ",
          "en": "like their head was on fire, "
        },
        {
          "scid": "sn2.16:2.3",
          "pli": "Kāmarāgappahānāya, ",
          "en": "a mendicant should go forth mindfully, "
        },
        {
          "scid": "sn2.16:2.4",
          "pli": "sato bhikkhu paribbaje”ti. ",
          "en": "to give up sensual desire.” "
        },
        {
          "scid": "sn2.16:3.1",
          "pli": "“Sattiyā viya omaṭṭho, ",
          "en": "“Like they’re struck by a sword, "
        },
        {
          "scid": "sn2.16:3.2",
          "pli": "ḍayhamānova matthake; ",
          "en": "like their head was on fire, "
        },
        {
          "scid": "sn2.16:3.3",
          "pli": "Sakkāyadiṭṭhippahānāya, ",
          "en": "a mendicant should go forth mindfully, "
        },
        {
          "scid": "sn2.16:3.4",
          "pli": "sato bhikkhu paribbaje”ti. ",
          "en": "to give up identity view.”"
        }
      ],
