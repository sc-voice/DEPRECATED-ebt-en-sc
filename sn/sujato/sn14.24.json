    {
      "segments": [
        {
          "scid": "sn14.24:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.24:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.24:1.3",
          "pli": "Assaddhā assaddhehi saddhiṃ saṃsandanti samenti; ",
          "en": "the faithless with the faithless … "
        },
        {
          "scid": "sn14.24:1.4",
          "pli": "ahirikā ahirikehi saddhiṃ saṃsandanti samenti; ",
          "en": "shameless … "
        },
        {
          "scid": "sn14.24:1.5",
          "pli": "anottappino anottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "imprudent … "
        },
        {
          "scid": "sn14.24:1.6",
          "pli": "dussīlā dussīlehi saddhiṃ saṃsandanti samenti; ",
          "en": "unethical … "
        },
        {
          "scid": "sn14.24:1.7",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti. ",
          "en": "witless … "
        },
        {
          "scid": "sn14.24:2.1",
          "pli": "Saddhā saddhehi saddhiṃ saṃsandanti samenti; ",
          "en": "The faithful with the faithful … "
        },
        {
          "scid": "sn14.24:2.2",
          "pli": "hirimanā hirimanehi saddhiṃ saṃsandanti samenti; ",
          "en": "conscientious … "
        },
        {
          "scid": "sn14.24:2.3",
          "pli": "ottappino ottappīhi saddhiṃ saṃsandanti samenti; ",
          "en": "prudent... "
        },
        {
          "scid": "sn14.24:2.4",
          "pli": "sīlavanto sīlavantehi saddhiṃ saṃsandanti samenti; ",
          "en": "ethical … "
        },
        {
          "scid": "sn14.24:2.5",
          "pli": "paññavanto paññavantehi saddhiṃ saṃsandanti samentī”ti. ",
          "en": "and the wise with the wise.” "
        },
        {
          "scid": "sn14.24:2.6",
          "pli": "Dutiyaṃ. ",
          "en": ""
        }
      ],
