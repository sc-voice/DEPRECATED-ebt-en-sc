      "segments": [
        {
          "scid": "sn1.51:1.1",
          "pli": "“Kiṃsu yāva jarā sādhu, ",
          "en": "“What’s still good in old age? "
        },
        {
          "scid": "sn1.51:1.2",
          "pli": "kiṃsu sādhu patiṭṭhitaṃ; ",
          "en": "What’s good when grounded? "
        },
        {
          "scid": "sn1.51:1.3",
          "pli": "Kiṃsu narānaṃ ratanaṃ, ",
          "en": "What is people’s treasure? "
        },
        {
          "scid": "sn1.51:1.4",
          "pli": "kiṃsu corehi dūharan”ti. ",
          "en": "What’s hard for thieves to take?” "
        },
        {
          "scid": "sn1.51:2.1",
          "pli": "“Sīlaṃ yāva jarā sādhu, ",
          "en": "“Ethics are still good in old age. "
        },
        {
          "scid": "sn1.51:2.2",
          "pli": "saddhā sādhu patiṭṭhitā; ",
          "en": "Faith is good when grounded. "
        },
        {
          "scid": "sn1.51:2.3",
          "pli": "Paññā narānaṃ ratanaṃ, ",
          "en": "Wisdom is people’s treasure. "
        },
        {
          "scid": "sn1.51:2.4",
          "pli": "puññaṃ corehi dūharan”ti. ",
          "en": "Merit’s hard for thieves to take.”"
        }
      ],
