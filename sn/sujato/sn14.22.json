    {
      "segments": [
        {
          "scid": "sn14.22:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.22:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.22:1.3",
          "pli": "Kusītā kusītehi saddhiṃ saṃsandanti samenti; ",
          "en": "the lazy with the lazy … "
        },
        {
          "scid": "sn14.22:1.4",
          "pli": "muṭṭhassatino muṭṭhassatīhi saddhiṃ saṃsandanti samenti; ",
          "en": "unmindful … "
        },
        {
          "scid": "sn14.22:1.5",
          "pli": "duppaññā duppaññehi saddhiṃ saṃsandanti samenti; ",
          "en": "witless … "
        },
        {
          "scid": "sn14.22:1.6",
          "pli": "āraddhavīriyā āraddhavīriyehi saddhiṃ saṃsandanti samenti; ",
          "en": "energetic... "
        },
        {
          "scid": "sn14.22:1.7",
          "pli": "upaṭṭhitassatino upaṭṭhitassatīhi saddhiṃ saṃsandanti samenti; paññavanto paññavantehi saddhiṃ saṃsandanti samentī”ti … pe …. ",
          "en": "mindful... wise...” "
        },
        {
          "scid": "sn14.22:1.8",
          "pli": "Dvādasamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn14.22:1.9",
          "pli": "(Sabbattha atītānāgatapaccuppannaṃ kātabbaṃ.) ",
          "en": "(All these should be treated in terms of the past, future, and present.) "
        },
        {
          "scid": "sn14.22:1.10",
          "pli": "Dutiyo vaggo. ",
          "en": " "
        },
        {
          "scid": "sn14.22:2.1",
          "pli": "Sattimā sanidānañca, ",
          "en": " "
        },
        {
          "scid": "sn14.22:2.2",
          "pli": "giñjakāvasathena ca; ",
          "en": " "
        },
        {
          "scid": "sn14.22:2.3",
          "pli": "Hīnādhimutti caṅkamaṃ, ",
          "en": " "
        },
        {
          "scid": "sn14.22:2.4",
          "pli": "sagāthā assaddhasattamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn14.22:3.1",
          "pli": "Assaddhamūlakā pañca, ",
          "en": " "
        },
        {
          "scid": "sn14.22:3.2",
          "pli": "Cattāro ahirikamūlakā; ",
          "en": " "
        },
        {
          "scid": "sn14.22:3.3",
          "pli": "Anottappamūlakā tīṇi, ",
          "en": " "
        },
        {
          "scid": "sn14.22:3.4",
          "pli": "Duve appassutena ca. ",
          "en": " "
        },
        {
          "scid": "sn14.22:4.1",
          "pli": "Kusītaṃ ekakaṃ vuttaṃ, ",
          "en": " "
        },
        {
          "scid": "sn14.22:4.2",
          "pli": "Suttantā tīṇi pañcakā; ",
          "en": " "
        },
        {
          "scid": "sn14.22:4.3",
          "pli": "Bāvīsati vuttā suttā, ",
          "en": " "
        },
        {
          "scid": "sn14.22:4.4",
          "pli": "Dutiyo vaggo pavuccatīti. ",
          "en": ""
        }
      ],
