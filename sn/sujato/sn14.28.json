      "segments": [
        {
          "scid": "sn14.28:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.28:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.28:1.3",
          "pli": "Micchādiṭṭhikā micchādiṭṭhikehi saddhiṃ saṃsandanti samenti; ",
          "en": "those of wrong view with those of wrong view … "
        },
        {
          "scid": "sn14.28:1.4",
          "pli": "micchāsaṅkappā … pe … ",
          "en": "wrong thought … "
        },
        {
          "scid": "sn14.28:1.5",
          "pli": "micchāvācā … ",
          "en": "wrong speech … "
        },
        {
          "scid": "sn14.28:1.6",
          "pli": "micchākammantā … ",
          "en": "wrong action … "
        },
        {
          "scid": "sn14.28:1.7",
          "pli": "micchāājīvā … ",
          "en": "wrong livelihood … "
        },
        {
          "scid": "sn14.28:1.8",
          "pli": "micchāvāyāmā … ",
          "en": "wrong effort … "
        },
        {
          "scid": "sn14.28:1.9",
          "pli": "micchāsatino … ",
          "en": "wrong mindfulness … "
        },
        {
          "scid": "sn14.28:1.10",
          "pli": "micchāsamādhino micchāsamādhīhi saddhiṃ saṃsandanti samenti. ",
          "en": "wrong immersion … "
        },
        {
          "scid": "sn14.28:2.1",
          "pli": "Sammādiṭṭhikā sammādiṭṭhikehi saddhiṃ saṃsandanti samenti; ",
          "en": "Those who have right view … "
        },
        {
          "scid": "sn14.28:2.2",
          "pli": "sammāsaṅkappā … pe … ",
          "en": "right thought … "
        },
        {
          "scid": "sn14.28:2.3",
          "pli": "sammāvācā … ",
          "en": "right speech … "
        },
        {
          "scid": "sn14.28:2.4",
          "pli": "sammākammantā … ",
          "en": "right action … "
        },
        {
          "scid": "sn14.28:2.5",
          "pli": "sammāājīvā … ",
          "en": "right livelihood … "
        },
        {
          "scid": "sn14.28:2.6",
          "pli": "sammāvāyāmā … ",
          "en": "right effort … "
        },
        {
          "scid": "sn14.28:2.7",
          "pli": "sammāsatino … ",
          "en": "right mindfulness … "
        },
        {
          "scid": "sn14.28:2.8",
          "pli": "sammāsamādhino sammāsamādhīhi saddhiṃ saṃsandanti samentī”ti. ",
          "en": "right immersion with those who have right immersion.” "
        },
        {
          "scid": "sn14.28:2.9",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
