    {
      "segments": [
        {
          "scid": "sn18.8:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn18.8:1.2",
          "pli": "“Taṃ kiṃ maññasi, rāhula, ",
          "en": "“What do you think, Rāhula? "
        },
        {
          "scid": "sn18.8:1.3",
          "pli": "rūpataṇhā niccā vā aniccā vā”ti? ",
          "en": "Is craving for sights permanent or impermanent?” "
        },
        {
          "scid": "sn18.8:1.4",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.8:1.5",
          "pli": "“saddataṇhā … pe … ",
          "en": "“… craving for sounds … "
        },
        {
          "scid": "sn18.8:1.6",
          "pli": "gandhataṇhā … ",
          "en": "craving for smells … "
        },
        {
          "scid": "sn18.8:1.7",
          "pli": "rasataṇhā … ",
          "en": "craving for tastes … "
        },
        {
          "scid": "sn18.8:1.8",
          "pli": "phoṭṭhabbataṇhā … ",
          "en": "craving for touches … "
        },
        {
          "scid": "sn18.8:1.9",
          "pli": "dhammataṇhā niccā vā aniccā vā”ti? ",
          "en": "Is craving for thoughts permanent or impermanent?” "
        },
        {
          "scid": "sn18.8:1.10",
          "pli": "“Aniccā, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.8:1.11",
          "pli": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako rūpataṇhāyapi nibbindati … pe … saddataṇhāyapi nibbindati … gandhataṇhāyapi nibbindati … rasataṇhāyapi nibbindati … phoṭṭhabbataṇhāyapi nibbindati … dhammataṇhāyapi nibbindati … pe … ",
          "en": "“Seeing this, a learned noble disciple grows disillusioned with craving for sights, sounds, smells, tastes, touches, and thoughts. …” "
        },
        {
          "scid": "sn18.8:1.12",
          "pli": "pajānātī”ti. ",
          "en": " "
        },
        {
          "scid": "sn18.8:1.13",
          "pli": "Aṭṭhamaṃ. ",
          "en": ""
        }
      ],
