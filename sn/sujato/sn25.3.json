      "segments": [
        {
          "scid": "sn25.3:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn25.3:1.2",
          "pli": "“Cakkhuviññāṇaṃ, bhikkhave, aniccaṃ vipariṇāmi aññathābhāvi; ",
          "en": "“Mendicants, eye consciousness is impermanent, perishing, and changing. "
        },
        {
          "scid": "sn25.3:1.3",
          "pli": "sotaviññāṇaṃ … ",
          "en": "Ear consciousness, "
        },
        {
          "scid": "sn25.3:1.4",
          "pli": "ghānaviññāṇaṃ … ",
          "en": "nose consciousness, "
        },
        {
          "scid": "sn25.3:1.5",
          "pli": "jivhāviññāṇaṃ … ",
          "en": "tongue consciousness, "
        },
        {
          "scid": "sn25.3:1.6",
          "pli": "kāyaviññāṇaṃ … ",
          "en": "body consciousness, "
        },
        {
          "scid": "sn25.3:1.7",
          "pli": "manoviññāṇaṃ aniccaṃ vipariṇāmi aññathābhāvi. ",
          "en": "and mind consciousness are impermanent, perishing, and changing. "
        },
        {
          "scid": "sn25.3:1.8",
          "pli": "Yo bhikkhave … pe … ",
          "en": "Someone who has faith and confidence in these principles is called a follower by faith. …” "
        },
        {
          "scid": "sn25.3:1.9",
          "pli": "sambodhiparāyano”ti. ",
          "en": " "
        },
        {
          "scid": "sn25.3:1.10",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
