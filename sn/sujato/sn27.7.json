    {
      "segments": [
        {
          "scid": "sn27.7:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn27.7:1.2",
          "pli": "“Yo, bhikkhave, rūpasañcetanāya chandarāgo, cittasseso upakkileso. ",
          "en": "“Mendicants, desire and greed for intention regarding sights, "
        },
        {
          "scid": "sn27.7:1.3",
          "pli": "Yo saddasañcetanāya … ",
          "en": "intention regarding sounds, "
        },
        {
          "scid": "sn27.7:1.4",
          "pli": "yo gandhasañcetanāya … ",
          "en": "intention regarding smells, "
        },
        {
          "scid": "sn27.7:1.5",
          "pli": "yo rasasañcetanāya … ",
          "en": "intention regarding tastes, "
        },
        {
          "scid": "sn27.7:1.6",
          "pli": "yo phoṭṭhabbasañcetanāya … ",
          "en": "intention regarding touches, "
        },
        {
          "scid": "sn27.7:1.7",
          "pli": "yo dhammasañcetanāya chandarāgo, cittasseso upakkileso. ",
          "en": "or intention regarding thoughts is a corruption of the mind. …” "
        },
        {
          "scid": "sn27.7:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno … pe … ",
          "en": " "
        },
        {
          "scid": "sn27.7:1.9",
          "pli": "abhiññā sacchikaraṇīyesu dhammesū”ti. ",
          "en": " "
        },
        {
          "scid": "sn27.7:1.10",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
