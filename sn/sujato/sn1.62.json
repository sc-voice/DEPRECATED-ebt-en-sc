    {
      "segments": [
        {
          "scid": "sn1.62:1.1",
          "pli": "“Kenassu nīyati loko, ",
          "en": "“What leads the world on? "
        },
        {
          "scid": "sn1.62:1.2",
          "pli": "kenassu parikassati; ",
          "en": "What drags it around? "
        },
        {
          "scid": "sn1.62:1.3",
          "pli": "Kissassu ekadhammassa, ",
          "en": "What is the one thing "
        },
        {
          "scid": "sn1.62:1.4",
          "pli": "sabbeva vasamanvagū”ti. ",
          "en": "that has everything under its sway?” "
        },
        {
          "scid": "sn1.62:2.1",
          "pli": "“Cittena nīyati loko, ",
          "en": "“The mind leads the world on. "
        },
        {
          "scid": "sn1.62:2.2",
          "pli": "cittena parikassati; ",
          "en": "The mind drags it around. "
        },
        {
          "scid": "sn1.62:2.3",
          "pli": "Cittassa ekadhammassa, ",
          "en": "Mind is the one thing "
        },
        {
          "scid": "sn1.62:2.4",
          "pli": "sabbeva vasamanvagū”ti. ",
          "en": "that has everything under its sway.”"
        }
      ],
