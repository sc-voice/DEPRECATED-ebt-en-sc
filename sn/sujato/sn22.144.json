        {
          "scid": "sn22.144:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.144:1.2",
          "pli": "“Yo, bhikkhave, anattā; tatra vo rāgo pahātabbo. ",
          "en": "“Mendicants, you should give up greed for what is not-self. …” "
        },
        {
          "scid": "sn22.144:1.3",
          "pli": "Ko ca, bhikkhave, anattā? ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.4",
          "pli": "Rūpaṃ, bhikkhave, anattā; tatra vo rāgo pahātabbo. ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.5",
          "pli": "Vedanā anattā … ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.6",
          "pli": "saññā … ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.7",
          "pli": "saṅkhārā … ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.8",
          "pli": "viññāṇaṃ anattā; tatra vo rāgo pahātabbo. ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.9",
          "pli": "Yo, bhikkhave, anattā; tatra vo rāgo pahātabbo”ti. ",
          "en": " "
        },
        {
          "scid": "sn22.144:1.10",
          "pli": "Navamaṃ. ",
          "en": ""
        }
