    {
      "segments": [
        {
          "scid": "sn37.7:1.1",
          "pli": "“Pañcahi, anuruddha, dhammehi samannāgato mātugāmo kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjati. ",
          "en": " "
        },
        {
          "scid": "sn37.7:1.2",
          "pli": "Katamehi pañcahi? ",
          "en": " "
        },
        {
          "scid": "sn37.7:1.3",
          "pli": "Assaddho ca hoti, ahiriko ca hoti, anottappī ca hoti, issukī ca hoti, duppañño ca hoti—",
          "en": "“… They’re faithless, shameless, imprudent, jealous, and witless. …” "
        },
        {
          "scid": "sn37.7:1.4",
          "pli": "imehi kho, anuruddha, pañcahi dhammehi samannāgato mātugāmo kāyassa bhedā paraṃ maraṇā apāyaṃ duggatiṃ vinipātaṃ nirayaṃ upapajjatī”ti. ",
          "en": " "
        },
        {
          "scid": "sn37.7:1.5",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
