      "segments": [
        {
          "scid": "sn22.75:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.75:1.2",
          "pli": "“Sutavā, bhikkhave, ariyasāvako rūpassa samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ pajānāti. ",
          "en": "“Mendicants, an educated noble disciple truly understands the origin, the ending, the gratification, the drawback, and the escape when it comes to form, "
        },
        {
          "scid": "sn22.75:1.3",
          "pli": "Vedanāya … ",
          "en": "feeling, "
        },
        {
          "scid": "sn22.75:1.4",
          "pli": "saññāya … ",
          "en": "perception, "
        },
        {
          "scid": "sn22.75:1.5",
          "pli": "saṅkhārānaṃ … ",
          "en": "choices, "
        },
        {
          "scid": "sn22.75:1.6",
          "pli": "viññāṇassa samudayañca atthaṅgamañca assādañca ādīnavañca nissaraṇañca yathābhūtaṃ pajānātī”ti. ",
          "en": "and consciousness.” "
        },
        {
          "scid": "sn22.75:1.7",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
