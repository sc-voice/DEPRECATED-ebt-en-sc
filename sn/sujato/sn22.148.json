    {
      "segments": [
        {
          "scid": "sn22.148:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.148:1.2",
          "pli": "“Saddhāpabbajitassa, bhikkhave, kulaputtassa ayamanudhammo hoti—",
          "en": "“Mendicants, when a gentleman has gone forth out of faith, this is what’s in line with the teachings. "
        },
        {
          "scid": "sn22.148:1.3",
          "pli": "yaṃ rūpe dukkhānupassī vihareyya. ",
          "en": "They should live observing suffering in form, "
        },
        {
          "scid": "sn22.148:1.4",
          "pli": "Vedanāya … ",
          "en": "feeling, "
        },
        {
          "scid": "sn22.148:1.5",
          "pli": "saññāya … ",
          "en": "perception, "
        },
        {
          "scid": "sn22.148:1.6",
          "pli": "saṅkhāresu … ",
          "en": "choices, "
        },
        {
          "scid": "sn22.148:1.7",
          "pli": "viññāṇe dukkhānupassī vihareyya … pe … ",
          "en": "and consciousness. … "
        },
        {
          "scid": "sn22.148:1.8",
          "pli": "‘parimuccati dukkhasmā’ti vadāmī”ti. ",
          "en": "They’re freed from suffering, I say.” "
        },
        {
          "scid": "sn22.148:1.9",
          "pli": "Terasamaṃ. ",
          "en": ""
        }
      ],
