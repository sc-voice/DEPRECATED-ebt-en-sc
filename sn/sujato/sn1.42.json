    {
      "segments": [
        {
          "scid": "sn1.42:1.1",
          "pli": "“Kiṃdado balado hoti, ",
          "en": "“Giving what do you give strength? "
        },
        {
          "scid": "sn1.42:1.2",
          "pli": "kiṃdado hoti vaṇṇado; ",
          "en": "Giving what do you give beauty? "
        },
        {
          "scid": "sn1.42:1.3",
          "pli": "Kiṃdado sukhado hoti, ",
          "en": "Giving what do you give happiness? "
        },
        {
          "scid": "sn1.42:1.4",
          "pli": "kiṃdado hoti cakkhudo; ",
          "en": "Giving what do you give vision? "
        },
        {
          "scid": "sn1.42:1.5",
          "pli": "Ko ca sabbadado hoti, ",
          "en": "And who is the giver of all? "
        },
        {
          "scid": "sn1.42:1.6",
          "pli": "taṃ me akkhāhi pucchito”ti. ",
          "en": "Please answer my question.” "
        },
        {
          "scid": "sn1.42:2.1",
          "pli": "“Annado balado hoti, ",
          "en": "“Giving food you give strength. "
        },
        {
          "scid": "sn1.42:2.2",
          "pli": "vatthado hoti vaṇṇado; ",
          "en": "Giving clothes you give beauty. "
        },
        {
          "scid": "sn1.42:2.3",
          "pli": "Yānado sukhado hoti, ",
          "en": "Giving a vehicle you give happiness. "
        },
        {
          "scid": "sn1.42:2.4",
          "pli": "dīpado hoti cakkhudo. ",
          "en": "Giving a lamp you give vision. "
        },
        {
          "scid": "sn1.42:3.1",
          "pli": "So ca sabbadado hoti, ",
          "en": "And the giver of all "
        },
        {
          "scid": "sn1.42:3.2",
          "pli": "yo dadāti upassayaṃ; ",
          "en": "is the one who gives a residence. "
        },
        {
          "scid": "sn1.42:3.3",
          "pli": "Amataṃ dado ca so hoti, ",
          "en": "But a person who teaches the Dhamma "
        },
        {
          "scid": "sn1.42:3.4",
          "pli": "yo dhammamanusāsatī”ti. ",
          "en": "gives the gift of the Deathless.”"
        }
      ],
