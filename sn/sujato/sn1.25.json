      "segments": [
        {
          "scid": "sn1.25:1.1",
          "pli": "“Yo hoti bhikkhu arahaṃ katāvī, ",
          "en": "“When a mendicant is perfected, proficient, "
        },
        {
          "scid": "sn1.25:1.2",
          "pli": "Khīṇāsavo antimadehadhārī; ",
          "en": "with defilements ended, bearing the final body: "
        },
        {
          "scid": "sn1.25:1.3",
          "pli": "Ahaṃ vadāmītipi so vadeyya, ",
          "en": "would they say, ‘I speak’, "
        },
        {
          "scid": "sn1.25:1.4",
          "pli": "Mamaṃ vadantītipi so vadeyyā”ti. ",
          "en": "or even ‘they speak to me’?” "
        },
        {
          "scid": "sn1.25:2.1",
          "pli": "“Yo hoti bhikkhu arahaṃ katāvī, ",
          "en": "“When a mendicant is perfected, proficient, "
        },
        {
          "scid": "sn1.25:2.2",
          "pli": "Khīṇāsavo antimadehadhārī; ",
          "en": "with defilements ended, bearing the final body: "
        },
        {
          "scid": "sn1.25:2.3",
          "pli": "Ahaṃ vadāmītipi so vadeyya, ",
          "en": "they would say, ‘I speak’, "
        },
        {
          "scid": "sn1.25:2.4",
          "pli": "Mamaṃ vadantītipi so vadeyya; ",
          "en": "and also ‘they speak to me’. "
        },
        {
          "scid": "sn1.25:2.5",
          "pli": "Loke samaññaṃ kusalo viditvā, ",
          "en": "Skillful, understanding the world’s conventions, "
        },
        {
          "scid": "sn1.25:2.6",
          "pli": "Vohāramattena so vohareyyā”ti. ",
          "en": "they’d use these terms as no more than expressions.” "
        },
        {
          "scid": "sn1.25:3.1",
          "pli": "“Yo hoti bhikkhu arahaṃ katāvī, ",
          "en": "“When a mendicant is perfected, proficient, "
        },
        {
          "scid": "sn1.25:3.2",
          "pli": "Khīṇāsavo antimadehadhārī; ",
          "en": "with defilements ended, bearing the final body: "
        },
        {
          "scid": "sn1.25:3.3",
          "pli": "Mānaṃ nu kho so upagamma bhikkhu, ",
          "en": "is such a mendicant drawing close to conceit "
        },
        {
          "scid": "sn1.25:3.4",
          "pli": "Ahaṃ vadāmītipi so vadeyya; ",
          "en": "if they’d say, ‘I speak’, "
        },
        {
          "scid": "sn1.25:3.5",
          "pli": "Mamaṃ vadantītipi so vadeyyā”ti. ",
          "en": "or even ‘they speak to me’?” "
        },
        {
          "scid": "sn1.25:4.1",
          "pli": "“Pahīnamānassa na santi ganthā, ",
          "en": "“Someone who has given up conceit has no ties, "
        },
        {
          "scid": "sn1.25:4.2",
          "pli": "Vidhūpitā mānaganthassa sabbe; ",
          "en": "the ties of conceit are all cleared away. "
        },
        {
          "scid": "sn1.25:4.3",
          "pli": "Sa vītivatto maññataṃ sumedho, ",
          "en": "Though that clever person has transcended identity, "
        },
        {
          "scid": "sn1.25:4.4",
          "pli": "Ahaṃ vadāmītipi so vadeyya. ",
          "en": "they’d still say, ‘I speak’, "
        },
        {
          "scid": "sn1.25:5.1",
          "pli": "Mamaṃ vadantītipi so vadeyya, ",
          "en": "and also ‘they speak to me’. "
        },
        {
          "scid": "sn1.25:5.2",
          "pli": "Loke samaññaṃ kusalo viditvā; ",
          "en": "Skillful, understanding the world’s conventions, "
        },
        {
          "scid": "sn1.25:5.3",
          "pli": "Vohāramattena so vohareyyā”ti. ",
          "en": "they’d use these terms as no more than expressions.”"
        }
      ],
