    {
      "segments": [
        {
          "scid": "sn1.5:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn1.5:1.2",
          "pli": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, that deity recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn1.5:2.1",
          "pli": "“Kati chinde kati jahe, ",
          "en": "“Cut how many? Drop how many? "
        },
        {
          "scid": "sn1.5:2.2",
          "pli": "kati cuttari bhāvaye; ",
          "en": "How many more should be developed? "
        },
        {
          "scid": "sn1.5:2.3",
          "pli": "Kati saṅgātigo bhikkhu, ",
          "en": "How many kinds of clinging must a mendicant get over "
        },
        {
          "scid": "sn1.5:2.4",
          "pli": "oghatiṇṇoti vuccatī”ti. ",
          "en": "before you call them a flood-crosser?” "
        },
        {
          "scid": "sn1.5:3.1",
          "pli": "“Pañca chinde pañca jahe, ",
          "en": "“Five to cut, five to drop, "
        },
        {
          "scid": "sn1.5:3.2",
          "pli": "pañca cuttari bhāvaye; ",
          "en": "and five more to develop. "
        },
        {
          "scid": "sn1.5:3.3",
          "pli": "Pañca saṅgātigo bhikkhu, ",
          "en": "A mendicant must get over five kinds of clinging "
        },
        {
          "scid": "sn1.5:3.4",
          "pli": "oghatiṇṇoti vuccatī”ti. ",
          "en": "before you call them a flood-crosser.”"
        }
      ],
