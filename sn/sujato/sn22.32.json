    {
      "segments": [
        {
          "scid": "sn22.32:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.32:1.2",
          "pli": "“Pabhaṅguñca, bhikkhave, desessāmi appabhaṅguñca. ",
          "en": "“Mendicants, I will teach you the breakable and the unbreakable. "
        },
        {
          "scid": "sn22.32:1.3",
          "pli": "Taṃ suṇātha. ",
          "en": "Listen … "
        },
        {
          "scid": "sn22.32:1.4",
          "pli": "Kiñca, bhikkhave, pabhaṅgu, kiṃ appabhaṅgu? ",
          "en": "And what is the breakable? What is the unbreakable? "
        },
        {
          "scid": "sn22.32:1.5",
          "pli": "Rūpaṃ, bhikkhave, pabhaṅgu. ",
          "en": "Form is breakable, "
        },
        {
          "scid": "sn22.32:1.6",
          "pli": "Yo tassa nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu. ",
          "en": "but its cessation, settling, and ending is unbreakable. "
        },
        {
          "scid": "sn22.32:1.7",
          "pli": "Vedanā pabhaṅgu. ",
          "en": "Feeling … "
        },
        {
          "scid": "sn22.32:1.8",
          "pli": "Yo tassā nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu. ",
          "en": " "
        },
        {
          "scid": "sn22.32:1.9",
          "pli": "Saññā pabhaṅgu … ",
          "en": "perception … "
        },
        {
          "scid": "sn22.32:1.10",
          "pli": "saṅkhārā pabhaṅgu. ",
          "en": "choices … "
        },
        {
          "scid": "sn22.32:1.11",
          "pli": "Yo tesaṃ nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgu. ",
          "en": " "
        },
        {
          "scid": "sn22.32:1.12",
          "pli": "Viññāṇaṃ pabhaṅgu. ",
          "en": "consciousness is breakable, "
        },
        {
          "scid": "sn22.32:1.13",
          "pli": "Yo tassa nirodho vūpasamo atthaṅgamo, idaṃ appabhaṅgū”ti. ",
          "en": "but its cessation, settling, and ending is unbreakable.” "
        },
        {
          "scid": "sn22.32:1.14",
          "pli": "Ekādasamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn22.32:1.15",
          "pli": "Bhāravaggo tatiyo. ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.1",
          "pli": "Bhāraṃ pariññaṃ abhijānaṃ, ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.2",
          "pli": "chandarāgaṃ catutthakaṃ; ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.3",
          "pli": "Assādā ca tayo vuttā, ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.4",
          "pli": "abhinandanamaṭṭhamaṃ; ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.5",
          "pli": "Uppādaṃ aghamūlañca, ",
          "en": " "
        },
        {
          "scid": "sn22.32:2.6",
          "pli": "ekādasamo pabhaṅgūti. ",
          "en": ""
        }
      ],
