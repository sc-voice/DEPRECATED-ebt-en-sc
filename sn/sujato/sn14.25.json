    {
      "segments": [
        {
          "scid": "sn14.25:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.25:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.25:1.3",
          "pli": "Pāṇātipātino pāṇātipātīhi saddhiṃ saṃsandanti samenti; ",
          "en": "those who kill living creatures with those who kill living creatures, "
        },
        {
          "scid": "sn14.25:1.4",
          "pli": "adinnādāyino adinnādāyīhi saddhiṃ saṃsandanti samenti; ",
          "en": "those who steal … "
        },
        {
          "scid": "sn14.25:1.5",
          "pli": "kāmesumicchācārino kāmesumicchācārīhi saddhiṃ saṃsandanti samenti; ",
          "en": "commit sexual misconduct … "
        },
        {
          "scid": "sn14.25:1.6",
          "pli": "musāvādino musāvādīhi saddhiṃ saṃsandanti samenti; ",
          "en": "lie … "
        },
        {
          "scid": "sn14.25:1.7",
          "pli": "surāmerayamajjappamādaṭṭhāyino surāmerayamajjappamādaṭṭhāyīhi saddhiṃ saṃsandanti samenti. ",
          "en": "consume alcoholic drinks that cause negligence … "
        },
        {
          "scid": "sn14.25:2.1",
          "pli": "Pāṇātipātā paṭiviratā pāṇātipātā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "Those who refrain from killing living creatures … "
        },
        {
          "scid": "sn14.25:2.2",
          "pli": "adinnādānā paṭiviratā adinnādānā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from stealing … "
        },
        {
          "scid": "sn14.25:2.3",
          "pli": "kāmesumicchācārā paṭiviratā kāmesumicchācārā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from sexual misconduct … "
        },
        {
          "scid": "sn14.25:2.4",
          "pli": "musāvādā paṭiviratā musāvādā paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from lying … "
        },
        {
          "scid": "sn14.25:2.5",
          "pli": "surāmerayamajjappamādaṭṭhānā paṭiviratā surāmerayamajjappamādaṭṭhānā paṭiviratehi saddhiṃ saṃsandanti samentī”ti. ",
          "en": "those who refrain from consuming alcoholic drinks that cause negligence with those who refrain from consuming alcoholic drinks that cause negligence.” "
        },
        {
          "scid": "sn14.25:2.6",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
