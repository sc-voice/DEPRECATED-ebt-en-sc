    {
      "segments": [
        {
          "scid": "sn1.54:1.1",
          "pli": "“Kiṃsu vatthu manussānaṃ, ",
          "en": "“What is the ground of human beings? "
        },
        {
          "scid": "sn1.54:1.2",
          "pli": "kiṃsūdha paramo sakhā; ",
          "en": "What is the best companion here? "
        },
        {
          "scid": "sn1.54:1.3",
          "pli": "Kiṃsu bhūtā upajīvanti, ",
          "en": "By what do the creatures who live off the earth "
        },
        {
          "scid": "sn1.54:1.4",
          "pli": "ye pāṇā pathavissitā”ti. ",
          "en": "sustain their life?” "
        },
        {
          "scid": "sn1.54:2.1",
          "pli": "“Puttā vatthu manussānaṃ, ",
          "en": "“Children are the ground of human beings. "
        },
        {
          "scid": "sn1.54:2.2",
          "pli": "bhariyā ca paramo sakhā; ",
          "en": "A wife is the best companion. "
        },
        {
          "scid": "sn1.54:2.3",
          "pli": "Vuṭṭhiṃ bhūtā upajīvanti, ",
          "en": "The creatures who live off the earth "
        },
        {
          "scid": "sn1.54:2.4",
          "pli": "ye pāṇā pathavissitā”ti. ",
          "en": "sustain their life by rain.”"
        }
      ],
