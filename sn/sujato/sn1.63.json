    {
      "segments": [
        {
          "scid": "sn1.63:1.1",
          "pli": "“Kenassu nīyati loko, ",
          "en": "“What leads the world on? "
        },
        {
          "scid": "sn1.63:1.2",
          "pli": "kenassu parikassati; ",
          "en": "What drags it around? "
        },
        {
          "scid": "sn1.63:1.3",
          "pli": "Kissassu ekadhammassa, ",
          "en": "What is the one thing "
        },
        {
          "scid": "sn1.63:1.4",
          "pli": "sabbeva vasamanvagū”ti. ",
          "en": "that has everything under its sway?” "
        },
        {
          "scid": "sn1.63:2.1",
          "pli": "“Taṇhāya nīyati loko, ",
          "en": "“Craving leads the world on. "
        },
        {
          "scid": "sn1.63:2.2",
          "pli": "taṇhāya parikassati; ",
          "en": "Craving drags it around. "
        },
        {
          "scid": "sn1.63:2.3",
          "pli": "Taṇhāya ekadhammassa, ",
          "en": "Craving is the one thing "
        },
        {
          "scid": "sn1.63:2.4",
          "pli": "sabbeva vasamanvagū”ti. ",
          "en": "that has everything under its sway.”"
        }
      ],
