    {
      "segments": [
        {
          "scid": "sn35.55:1.1",
          "pli": "“Kathaṃ nu kho, bhante, jānato, kathaṃ passato saṃyojanā samugghātaṃ gacchantī”ti? ",
          "en": "“Sir, how does one know and see so that the fetters are uprooted?” "
        },
        {
          "scid": "sn35.55:1.2",
          "pli": "“Cakkhuṃ kho, bhikkhu, anattato jānato passato saṃyojanā samugghātaṃ gacchanti. ",
          "en": "“Mendicant, knowing and seeing the eye as not-self, the fetters are uprooted …” "
        },
        {
          "scid": "sn35.55:1.3",
          "pli": "Rūpe anattato … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.4",
          "pli": "cakkhuviññāṇaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.5",
          "pli": "cakkhusamphassaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.6",
          "pli": "yampidaṃ cakkhusamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi anattato jānato passato saṃyojanā samugghātaṃ gacchanti. ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.7",
          "pli": "Sotaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.8",
          "pli": "ghānaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.9",
          "pli": "jivhaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.10",
          "pli": "kāyaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.11",
          "pli": "manaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.12",
          "pli": "dhamme … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.13",
          "pli": "manoviññāṇaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.14",
          "pli": "manosamphassaṃ … ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.15",
          "pli": "yampidaṃ manosamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi anattato jānato passato saṃyojanā samugghātaṃ gacchanti. ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.16",
          "pli": "Evaṃ kho, bhikkhu, jānato evaṃ passato saṃyojanā samugghātaṃ gacchantī”ti. ",
          "en": " "
        },
        {
          "scid": "sn35.55:1.17",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
