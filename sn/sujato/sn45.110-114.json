    },
    {
      "segments": [
        {
          "scid": "sn45.110-114:1.1",
          "pli": "“Seyyathāpi, bhikkhave, yamunā nadī samuddaninnā samuddapoṇā samuddapabbhārā; ",
          "en": "“Mendicants, the Yamunā river slants, slopes, and inclines to the ocean. …” "
        },
        {
          "scid": "sn45.110-114:1.2",
          "pli": "evameva kho, bhikkhave, bhikkhu … pe … ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:1.3",
          "pli": "dutiyaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:2.1",
          "pli": "“Seyyathāpi, bhikkhave, aciravatī nadī samuddaninnā samuddapoṇā samuddapabbhārā; ",
          "en": "“… the Aciravatī river …” "
        },
        {
          "scid": "sn45.110-114:2.2",
          "pli": "evameva kho, bhikkhave, bhikkhu … pe … ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:2.3",
          "pli": "tatiyaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:3.1",
          "pli": "“Seyyathāpi, bhikkhave, sarabhū nadī samuddaninnā samuddapoṇā samuddapabbhārā; ",
          "en": "“… the Sarabhū river …” "
        },
        {
          "scid": "sn45.110-114:3.2",
          "pli": "evameva kho, bhikkhave, bhikkhu … pe … ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:3.3",
          "pli": "catutthaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:4.1",
          "pli": "“Seyyathāpi, bhikkhave, mahī nadī samuddaninnā samuddapoṇā samuddapabbhārā; ",
          "en": "“… the Mahī river …” "
        },
        {
          "scid": "sn45.110-114:4.2",
          "pli": "evameva kho, bhikkhave, bhikkhu … pe … ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:4.3",
          "pli": "pañcamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.1",
          "pli": "“Seyyathāpi, bhikkhave, yā kācimā mahānadiyo, seyyathidaṃ—",
          "en": "“… all the great rivers …” "
        },
        {
          "scid": "sn45.110-114:5.2",
          "pli": "gaṅgā, yamunā, aciravatī, sarabhū, mahī, sabbā tā samuddaninnā samuddapoṇā samuddapabbhārā; ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.3",
          "pli": "evameva kho, bhikkhave, bhikkhu ariyaṃ aṭṭhaṅgikaṃ maggaṃ bhāvento ariyaṃ aṭṭhaṅgikaṃ maggaṃ bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.4",
          "pli": "Kathañca, bhikkhave, bhikkhu ariyaṃ aṭṭhaṅgikaṃ maggaṃ bhāvento ariyaṃ aṭṭhaṅgikaṃ maggaṃ bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro? ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.5",
          "pli": "Idha, bhikkhave, bhikkhu sammādiṭṭhiṃ bhāveti rāgavinayapariyosānaṃ dosavinayapariyosānaṃ mohavinayapariyosānaṃ … pe … sammāsamādhiṃ bhāveti rāgavinayapariyosānaṃ dosavinayapariyosānaṃ mohavinayapariyosānaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.6",
          "pli": "Evaṃ kho, bhikkhave, bhikkhu ariyaṃ aṭṭhaṅgikaṃ maggaṃ bhāvento ariyaṃ aṭṭhaṅgikaṃ maggaṃ bahulīkaronto nibbānaninno hoti nibbānapoṇo nibbānapabbhāro”ti. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.7",
          "pli": "Chaṭṭhaṃ. ",
          "en": " "
        },
        {
          "scid": "sn45.110-114:5.8",
          "pli": "(Rāgavinayadvādasakī dutiyakī samuddaninnanti.) ",
          "en": ""
        }
      ],
