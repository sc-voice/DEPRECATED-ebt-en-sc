    {
      "segments": [
        {
          "scid": "sn40.11:1.1",
          "pli": "Atha kho candano devaputto … pe …. ",
          "en": "Then the god Candana … "
        },
        {
          "scid": "sn40.11:2.1",
          "pli": "Atha kho suyāmo devaputto … pe …. ",
          "en": "the god Suyāma … "
        },
        {
          "scid": "sn40.11:3.1",
          "pli": "Atha kho santusito devaputto … pe …. ",
          "en": "the god Santusita … "
        },
        {
          "scid": "sn40.11:4.1",
          "pli": "Atha kho sunimmito devaputto … pe …. ",
          "en": "the god Sunimmita … "
        },
        {
          "scid": "sn40.11:5.1",
          "pli": "Atha kho vasavatti devaputto … pe …. ",
          "en": "the god Vasavatti … "
        },
        {
          "scid": "sn40.11:6.1",
          "pli": "(Yathā sakkasuttaṃ tathā ime pañca peyyālā vitthāretabbā.) ",
          "en": "(These abbreviated texts should be expanded as in the Discourse With Sakka.) "
        },
        {
          "scid": "sn40.11:6.2",
          "pli": "Ekādasamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn40.11:6.3",
          "pli": "Moggallānavaggo paṭhamo. ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.1",
          "pli": "Savitakkāvitakkañca, ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.2",
          "pli": "sukhena ca upekkhako; ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.3",
          "pli": "Ākāsañceva viññāṇaṃ, ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.4",
          "pli": "ākiñcaṃ nevasaññinā; ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.5",
          "pli": "Animitto ca sakko ca, ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.6",
          "pli": "candanekādasena cāti. ",
          "en": " "
        },
        {
          "scid": "sn40.11:7.7",
          "pli": "Moggallānasaṃyuttaṃ samattaṃ. ",
          "en": "The Linked Discourses on Moggallāna are complete."
        }
      ],
