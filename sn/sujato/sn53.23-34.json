        },
        {
          "scid": "sn53.23-34:2.1",
          "pli": "Balaṃ bījañca nāgo ca, ",
          "en": "Hard work, seeds, and dragons, "
        },
        {
          "scid": "sn53.23-34:2.2",
          "pli": "rukkho kumbhena sūkiyā; ",
          "en": "a tree, a pot, and a spike, "
        },
        {
          "scid": "sn53.23-34:2.3",
          "pli": "Ākāsena ca dve meghā, ",
          "en": "the sky, and two on clouds, "
        },
        {
          "scid": "sn53.23-34:2.4",
          "pli": "nāvā āgantukā nadīti. ",
          "en": "a ship, a guest house, and a river."
