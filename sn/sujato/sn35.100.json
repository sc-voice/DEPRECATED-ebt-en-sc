    {
      "segments": [
        {
          "scid": "sn35.100:1.1",
          "pli": "“Paṭisallāne, bhikkhave, yogamāpajjatha. ",
          "en": "“Mendicants, meditate in retreat. "
        },
        {
          "scid": "sn35.100:1.2",
          "pli": "Paṭisallīno, bhikkhave, bhikkhu yathābhūtaṃ pajānāti. ",
          "en": "A mendicant in retreat truly understands. "
        },
        {
          "scid": "sn35.100:1.3",
          "pli": "Kiñca yathābhūtaṃ pajānāti? ",
          "en": "What do they truly understand? "
        },
        {
          "scid": "sn35.100:1.4",
          "pli": "‘Cakkhu aniccan’ti yathābhūtaṃ pajānāti; ",
          "en": "They truly understand that the eye is impermanent. "
        },
        {
          "scid": "sn35.100:1.5",
          "pli": "‘rūpā aniccā’ti yathābhūtaṃ pajānāti; ",
          "en": "They truly understand that sights … "
        },
        {
          "scid": "sn35.100:1.6",
          "pli": "‘cakkhuviññāṇaṃ aniccan’ti yathābhūtaṃ pajānāti; ",
          "en": "eye consciousness … "
        },
        {
          "scid": "sn35.100:1.7",
          "pli": "‘cakkhusamphasso anicco’ti yathābhūtaṃ pajānāti … pe … ",
          "en": "eye contact … "
        },
        {
          "scid": "sn35.100:1.8",
          "pli": "‘yampidaṃ manosamphassapaccayā uppajjati vedayitaṃ sukhaṃ vā dukkhaṃ vā adukkhamasukhaṃ vā tampi aniccan’ti yathābhūtaṃ pajānāti. ",
          "en": "the pleasant, painful, or neutral feeling that arises conditioned by mind contact is impermanent. "
        },
        {
          "scid": "sn35.100:1.9",
          "pli": "Paṭisallāne, bhikkhave, yogamāpajjatha. ",
          "en": "Mendicants, meditate in retreat. "
        },
        {
          "scid": "sn35.100:1.10",
          "pli": "Paṭisallīno, bhikkhave, bhikkhu yathābhūtaṃ pajānātī”ti. ",
          "en": "A mendicant in retreat truly understands.” "
        },
        {
          "scid": "sn35.100:1.11",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
