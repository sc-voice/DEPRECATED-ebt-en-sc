      "segments": [
        {
          "scid": "sn1.6:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn1.6:1.2",
          "pli": "Ekamantaṃ ṭhitā kho sā devatā bhagavato santike imaṃ gāthaṃ abhāsi: ",
          "en": "Standing to one side, that deity recited this verse in the Buddha’s presence: "
        },
        {
          "scid": "sn1.6:2.1",
          "pli": "“Kati jāgarataṃ suttā, ",
          "en": "“How many sleep while others wake? "
        },
        {
          "scid": "sn1.6:2.2",
          "pli": "kati suttesu jāgarā; ",
          "en": "How many wake among the sleeping? "
        },
        {
          "scid": "sn1.6:2.3",
          "pli": "Katibhi rajamādeti, ",
          "en": "By how many do you gather dust? "
        },
        {
          "scid": "sn1.6:2.4",
          "pli": "katibhi parisujjhatī”ti. ",
          "en": "By how many are you cleansed?” "
        },
        {
          "scid": "sn1.6:3.1",
          "pli": "“Pañca jāgarataṃ suttā, ",
          "en": "“Five sleep while others wake. "
        },
        {
          "scid": "sn1.6:3.2",
          "pli": "pañca suttesu jāgarā; ",
          "en": "Five wake among the sleeping. "
        },
        {
          "scid": "sn1.6:3.3",
          "pli": "Pañcabhi rajamādeti, ",
          "en": "By five you gather dust. "
        },
        {
          "scid": "sn1.6:3.4",
          "pli": "pañcabhi parisujjhatī”ti. ",
          "en": "By five you’re cleansed.”"
        }
      ],
