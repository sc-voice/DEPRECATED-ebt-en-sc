    {
      "segments": [
        {
          "scid": "sn1.72:1.1",
          "pli": "“Kiṃsu rathassa paññāṇaṃ, ",
          "en": "“What’s the mark of a chariot? "
        },
        {
          "scid": "sn1.72:1.2",
          "pli": "kiṃsu paññāṇamaggino; ",
          "en": "What’s the mark of fire? "
        },
        {
          "scid": "sn1.72:1.3",
          "pli": "Kiṃsu raṭṭhassa paññāṇaṃ, ",
          "en": "What’s the mark of a nation? "
        },
        {
          "scid": "sn1.72:1.4",
          "pli": "kiṃsu paññāṇamitthiyā”ti. ",
          "en": "What’s the mark of a woman?” "
        },
        {
          "scid": "sn1.72:2.1",
          "pli": "“Dhajo rathassa paññāṇaṃ, ",
          "en": "“A banner is the mark of a chariot. "
        },
        {
          "scid": "sn1.72:2.2",
          "pli": "dhūmo paññāṇamaggino; ",
          "en": "Smoke is the mark of fire. "
        },
        {
          "scid": "sn1.72:2.3",
          "pli": "Rājā raṭṭhassa paññāṇaṃ, ",
          "en": "A ruler is a nation’s mark. "
        },
        {
          "scid": "sn1.72:2.4",
          "pli": "bhattā paññāṇamitthiyā”ti. ",
          "en": "And a husband is the mark of a woman.”"
        }
      ],
