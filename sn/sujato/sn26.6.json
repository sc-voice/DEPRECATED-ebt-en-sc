      "segments": [
        {
          "scid": "sn26.6:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn26.6:1.2",
          "pli": "“Yo kho, bhikkhave, rūpasaññāya uppādo ṭhiti … pe … ",
          "en": "“Mendicants, the arising of perception of sights … "
        },
        {
          "scid": "sn26.6:1.3",
          "pli": "jarāmaraṇassa pātubhāvo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.6:1.4",
          "pli": "yo dhammasaññāya uppādo ṭhiti abhinibbatti pātubhāvo, dukkhasseso uppādo, rogānaṃ ṭhiti, jarāmaraṇassa pātubhāvo. ",
          "en": "perception of thoughts … is the manifestation of old age and death. "
        },
        {
          "scid": "sn26.6:1.5",
          "pli": "Yo ca kho, bhikkhave, rūpasaññāya nirodho … pe … ",
          "en": "The cessation of perception of sights … "
        },
        {
          "scid": "sn26.6:1.6",
          "pli": "jarāmaraṇassa atthaṅgamo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.6:1.7",
          "pli": "yo dhammasaññāya nirodho vūpasamo atthaṅgamo, dukkhasseso nirodho, rogānaṃ vūpasamo, jarāmaraṇassa atthaṅgamo”ti. ",
          "en": "perception of thoughts … is the ending of old age and death.” "
        },
        {
          "scid": "sn26.6:1.8",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
