    {
      "segments": [
        {
          "scid": "sn34.6:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn34.6:1.2",
          "pli": "“Cattārome, bhikkhave, jhāyī. ",
          "en": "“Mendicants, there are these four meditators. "
        },
        {
          "scid": "sn34.6:1.3",
          "pli": "Katame cattāro? ",
          "en": "What four? "
        },
        {
          "scid": "sn34.6:1.4",
          "pli": "Idha, bhikkhave, ekacco jhāyī samādhismiṃ samādhikusalo hoti, na samādhismiṃ gocarakusalo. ",
          "en": "One meditator is skilled in immersion but not in the meditation subjects for immersion. …” "
        },
        {
          "scid": "sn34.6:1.5",
          "pli": "Idha pana, bhikkhave, ekacco jhāyī samādhismiṃ gocarakusalo hoti, na samādhismiṃ samādhikusalo. ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.6",
          "pli": "Idha pana, bhikkhave, ekacco jhāyī neva samādhismiṃ samādhikusalo hoti, na ca samādhismiṃ gocarakusalo. ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.7",
          "pli": "Idha pana, bhikkhave, ekacco jhāyī samādhismiṃ samādhikusalo ca hoti, samādhismiṃ gocarakusalo ca. ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.8",
          "pli": "Tatra, bhikkhave, yvāyaṃ jhāyī samādhismiṃ samādhikusalo ca hoti samādhismiṃ gocarakusalo ca ayaṃ imesaṃ catunnaṃ jhāyīnaṃ aggo ca seṭṭho ca mokkho ca uttamo ca pavaro ca. ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.9",
          "pli": "Seyyathāpi, bhikkhave, gavā khīraṃ … pe … ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.10",
          "pli": "pavaro cā”ti. ",
          "en": " "
        },
        {
          "scid": "sn34.6:1.11",
          "pli": "Chaṭṭhaṃ. ",
          "en": ""
        }
      ],
