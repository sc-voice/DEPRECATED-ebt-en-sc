    {
      "segments": [
        {
          "scid": "sn34.50-52:1.1",
          "pli": "Sāvatthinidānaṃ … ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn34.50-52:1.2",
          "pli": "“samādhismiṃ abhinīhārakusalo hoti, na samādhismiṃ sakkaccakārī … ",
          "en": "“One meditator is skilled in projecting the mind purified by immersion but not in practicing carefully for it. …” "
        },
        {
          "scid": "sn34.50-52:1.3",
          "pli": "samādhismiṃ sakkaccakārī hoti, na samādhismiṃ abhinīhārakusalo … ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:1.4",
          "pli": "neva samādhismiṃ abhinīhārakusalo hoti, na ca samādhismiṃ sakkaccakārī … ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:1.5",
          "pli": "samādhismiṃ abhinīhārakusalo ca hoti, samādhismiṃ sakkaccakārī ca. ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:1.6",
          "pli": "Tatra, bhikkhave, yvāyaṃ jhāyī … pe … ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:1.7",
          "pli": "uttamo ca pavaro cā”ti. ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:2.1",
          "pli": "Paññāsamaṃ. “Samādhismiṃ abhinīhārakusalo hoti, na samādhismiṃ sātaccakārī … pe …. ",
          "en": "(These three discourses should be expanded in line with the previous set.) "
        },
        {
          "scid": "sn34.50-52:3.1",
          "pli": "Ekapaññāsamaṃ. “Samādhismiṃ abhinīhārakusalo hoti, na samādhismiṃ sappāyakārī … pe …. ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:3.2",
          "pli": "Dvepaññāsamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn34.50-52:3.3",
          "pli": "(Abhinīhāramūlakaṃ.) ",
          "en": ""
        }
      ],
