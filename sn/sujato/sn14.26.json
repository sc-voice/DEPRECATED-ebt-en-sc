    {
      "segments": [
        {
          "scid": "sn14.26:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn14.26:1.2",
          "pli": "“Dhātusova, bhikkhave, sattā saṃsandanti samenti. ",
          "en": "“Mendicants, sentient beings come together and converge because of an element: "
        },
        {
          "scid": "sn14.26:1.3",
          "pli": "Pāṇātipātino pāṇātipātīhi saddhiṃ saṃsandanti samenti; ",
          "en": "those who kill living creatures with those who kill living creatures, "
        },
        {
          "scid": "sn14.26:1.4",
          "pli": "adinnādāyino adinnādāyīhi saddhiṃ saṃsandanti samenti; ",
          "en": "those who steal … "
        },
        {
          "scid": "sn14.26:1.5",
          "pli": "kāmesumicchācārino kāmesumicchācārīhi saddhiṃ saṃsandanti samenti; ",
          "en": "commit sexual misconduct … "
        },
        {
          "scid": "sn14.26:1.6",
          "pli": "musāvādino musāvādīhi saddhiṃ saṃsandanti samenti; ",
          "en": "lie … "
        },
        {
          "scid": "sn14.26:1.7",
          "pli": "pisuṇavācā pisuṇavācehi saddhiṃ saṃsandanti samenti; ",
          "en": "speak divisively … "
        },
        {
          "scid": "sn14.26:1.8",
          "pli": "pharusavācā pharusavācehi saddhiṃ saṃsandanti samenti; ",
          "en": "speak harshly … "
        },
        {
          "scid": "sn14.26:1.9",
          "pli": "samphappalāpino samphappalāpīhi saddhiṃ saṃsandanti samenti. ",
          "en": "talk nonsense … "
        },
        {
          "scid": "sn14.26:2.1",
          "pli": "Pāṇātipātā paṭiviratā … pe … ",
          "en": "Those who refrain from killing living creatures. … "
        },
        {
          "scid": "sn14.26:2.2",
          "pli": "adinnādānā paṭiviratā … ",
          "en": "who refrain from stealing … "
        },
        {
          "scid": "sn14.26:2.3",
          "pli": "kāmesumicchācārā paṭiviratā … ",
          "en": "who refrain from sexual misconduct … "
        },
        {
          "scid": "sn14.26:2.4",
          "pli": "musāvādā paṭiviratā … ",
          "en": "who refrain from lying … "
        },
        {
          "scid": "sn14.26:2.5",
          "pli": "pisuṇāya vācāya paṭiviratā pisuṇāya vācāya paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from divisive speech … "
        },
        {
          "scid": "sn14.26:2.6",
          "pli": "pharusāya vācāya paṭiviratā pharusāya vācāya paṭiviratehi saddhiṃ saṃsandanti samenti; ",
          "en": "who refrain from harsh speech … "
        },
        {
          "scid": "sn14.26:2.7",
          "pli": "samphappalāpā paṭiviratā samphappalāpā paṭiviratehi saddhiṃ saṃsandanti samentī”ti. ",
          "en": "who refrain from talking nonsense with those who refrain from talking nonsense.” "
        },
        {
          "scid": "sn14.26:2.8",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
