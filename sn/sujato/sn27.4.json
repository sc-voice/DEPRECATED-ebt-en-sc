      "segments": [
        {
          "scid": "sn27.4:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn27.4:1.2",
          "pli": "“Yo, bhikkhave, cakkhusamphassasmiṃ chandarāgo, cittasseso upakkileso. ",
          "en": "“Mendicants, desire and greed for eye contact, "
        },
        {
          "scid": "sn27.4:1.3",
          "pli": "Yo sotasamphassasmiṃ … ",
          "en": "ear contact, "
        },
        {
          "scid": "sn27.4:1.4",
          "pli": "yo ghānasamphassasmiṃ … ",
          "en": "nose contact, "
        },
        {
          "scid": "sn27.4:1.5",
          "pli": "yo jivhāsamphassasmiṃ … ",
          "en": "tongue contact, "
        },
        {
          "scid": "sn27.4:1.6",
          "pli": "yo kāyasamphassasmiṃ … ",
          "en": "body contact, "
        },
        {
          "scid": "sn27.4:1.7",
          "pli": "yo manosamphassasmiṃ chandarāgo, cittasseso upakkileso. ",
          "en": "or mind contact is a corruption of the mind. …” "
        },
        {
          "scid": "sn27.4:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno … pe … ",
          "en": " "
        },
        {
          "scid": "sn27.4:1.9",
          "pli": "abhiññā sacchikaraṇīyesu dhammesū”ti. ",
          "en": " "
        },
        {
          "scid": "sn27.4:1.10",
          "pli": "Catutthaṃ. ",
          "en": ""
        }
      ],
