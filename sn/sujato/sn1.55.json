    {
      "segments": [
        {
          "scid": "sn1.55:1.1",
          "pli": "“Kiṃsu janeti purisaṃ, ",
          "en": "“What gives birth to a person? "
        },
        {
          "scid": "sn1.55:1.2",
          "pli": "kiṃsu tassa vidhāvati; ",
          "en": "What do they have that runs about? "
        },
        {
          "scid": "sn1.55:1.3",
          "pli": "Kiṃsu saṃsāramāpādi, ",
          "en": "What enters transmigration? "
        },
        {
          "scid": "sn1.55:1.4",
          "pli": "kiṃsu tassa mahabbhayan”ti. ",
          "en": "What’s their greatest fear?” "
        },
        {
          "scid": "sn1.55:2.1",
          "pli": "“Taṇhā janeti purisaṃ, ",
          "en": "“Craving gives birth to a person. "
        },
        {
          "scid": "sn1.55:2.2",
          "pli": "cittamassa vidhāvati; ",
          "en": "Their mind is what runs about. "
        },
        {
          "scid": "sn1.55:2.3",
          "pli": "Satto saṃsāramāpādi, ",
          "en": "A sentient being enters transmigration. "
        },
        {
          "scid": "sn1.55:2.4",
          "pli": "dukkhamassa mahabbhayan”ti. ",
          "en": "Suffering is their greatest fear.”"
        }
      ],
