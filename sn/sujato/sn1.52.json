      "segments": [
        {
          "scid": "sn1.52:1.1",
          "pli": "“Kiṃsu ajarasā sādhu, ",
          "en": "“What’s good because it never gets old? "
        },
        {
          "scid": "sn1.52:1.2",
          "pli": "kiṃsu sādhu adhiṭṭhitaṃ; ",
          "en": "What's good when committed? "
        },
        {
          "scid": "sn1.52:1.3",
          "pli": "Kiṃsu narānaṃ ratanaṃ, ",
          "en": "What is people’s treasure? "
        },
        {
          "scid": "sn1.52:1.4",
          "pli": "kiṃsu corehyahāriyan”ti. ",
          "en": "What can thieves never take?” "
        },
        {
          "scid": "sn1.52:2.1",
          "pli": "“Sīlaṃ ajarasā sādhu, ",
          "en": "“Ethics are good because they never get old. "
        },
        {
          "scid": "sn1.52:2.2",
          "pli": "saddhā sādhu adhiṭṭhitā; ",
          "en": "Faith is good when committed. "
        },
        {
          "scid": "sn1.52:2.3",
          "pli": "Paññā narānaṃ ratanaṃ, ",
          "en": "Wisdom is people’s treasure. "
        },
        {
          "scid": "sn1.52:2.4",
          "pli": "puññaṃ corehyahāriyan”ti. ",
          "en": "Merit’s what thieves can never take.”"
        }
      ],
