    {
      "segments": [
        {
          "scid": "sn1.53:1.1",
          "pli": "“Kiṃsu pavasato mittaṃ, ",
          "en": "“Who’s your friend abroad? "
        },
        {
          "scid": "sn1.53:1.2",
          "pli": "kiṃsu mittaṃ sake ghare; ",
          "en": "Who’s your friend at home? "
        },
        {
          "scid": "sn1.53:1.3",
          "pli": "Kiṃ mittaṃ atthajātassa, ",
          "en": "Who’s your friend in need? "
        },
        {
          "scid": "sn1.53:1.4",
          "pli": "kiṃ mittaṃ samparāyikan”ti. ",
          "en": "Who’s your friend in the next life?” "
        },
        {
          "scid": "sn1.53:2.1",
          "pli": "“Sattho pavasato mittaṃ, ",
          "en": "“A caravan is your friend abroad. "
        },
        {
          "scid": "sn1.53:2.2",
          "pli": "mātā mittaṃ sake ghare; ",
          "en": "Mother is your friend at home. "
        },
        {
          "scid": "sn1.53:2.3",
          "pli": "Sahāyo atthajātassa, ",
          "en": "A comrade in a time of need "
        },
        {
          "scid": "sn1.53:2.4",
          "pli": "hoti mittaṃ punappunaṃ; ",
          "en": "is a friend time and again. "
        },
        {
          "scid": "sn1.53:2.5",
          "pli": "Sayaṅkatāni puññāni, ",
          "en": "But the good deeds you’ve done yourself—"
        },
        {
          "scid": "sn1.53:2.6",
          "pli": "taṃ mittaṃ samparāyikan”ti. ",
          "en": "that’s your friend in the next life.”"
        }
      ],
