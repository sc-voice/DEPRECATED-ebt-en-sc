    {
      "segments": [
        {
          "scid": "sn22.149:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn22.149:1.2",
          "pli": "“Saddhāpabbajitassa, bhikkhave, kulaputtassa ayamanudhammo hoti—",
          "en": "“Mendicants, when a gentleman has gone forth out of faith, this is what’s in line with the teachings. "
        },
        {
          "scid": "sn22.149:1.3",
          "pli": "yaṃ rūpe anattānupassī vihareyya. ",
          "en": "They should live observing not-self in form, "
        },
        {
          "scid": "sn22.149:1.4",
          "pli": "Vedanāya … ",
          "en": "feeling, "
        },
        {
          "scid": "sn22.149:1.5",
          "pli": "saññāya … ",
          "en": "perception, "
        },
        {
          "scid": "sn22.149:1.6",
          "pli": "saṅkhāresu … ",
          "en": "choices, "
        },
        {
          "scid": "sn22.149:1.7",
          "pli": "viññāṇe anattānupassī vihareyya. ",
          "en": "and consciousness. … "
        },
        {
          "scid": "sn22.149:1.8",
          "pli": "Anattānupassī viharanto, vedanāya … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.9",
          "pli": "saññāya … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.10",
          "pli": "saṅkhāresu … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.11",
          "pli": "viññāṇe anattānupassī viharanto rūpaṃ parijānāti, vedanaṃ … pe … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.12",
          "pli": "saññaṃ … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.13",
          "pli": "saṅkhāre … ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.14",
          "pli": "viññāṇaṃ parijānāti. ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.15",
          "pli": "So rūpaṃ parijānaṃ vedanaṃ parijānaṃ saññaṃ parijānaṃ saṅkhāre parijānaṃ viññāṇaṃ parijānaṃ parimuccati rūpamhā, parimuccati vedanāya, parimuccati saññāya, parimuccati saṅkhārehi, parimuccati viññāṇamhā, parimuccati jātiyā jarāya maraṇena sokehi paridevehi dukkhehi domanassehi upāyāsehi; ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.16",
          "pli": "‘parimuccati dukkhasmā’ti vadāmī”ti. ",
          "en": "They’re freed from suffering, I say.” "
        },
        {
          "scid": "sn22.149:1.17",
          "pli": "Cuddasamaṃ. ",
          "en": " "
        },
        {
          "scid": "sn22.149:1.18",
          "pli": "Kukkuḷavaggo catuttho. ",
          "en": " "
        },
        {
          "scid": "sn22.149:2.1",
          "pli": "Kukkuḷā tayo aniccena, ",
          "en": " "
        },
        {
          "scid": "sn22.149:2.2",
          "pli": "dukkhena apare tayo; ",
          "en": " "
        },
        {
          "scid": "sn22.149:2.3",
          "pli": "Anattena tayo vuttā, ",
          "en": " "
        },
        {
          "scid": "sn22.149:2.4",
          "pli": "kulaputtena dve dukāti. ",
          "en": ""
        }
      ],
