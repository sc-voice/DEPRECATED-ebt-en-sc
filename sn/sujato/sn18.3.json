    {
      "segments": [
        {
          "scid": "sn18.3:1.1",
          "pli": "Sāvatthiyaṃ viharati. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn18.3:1.2",
          "pli": "“Taṃ kiṃ maññasi, rāhula, ",
          "en": "“What do you think, Rāhula? "
        },
        {
          "scid": "sn18.3:1.3",
          "pli": "cakkhuviññāṇaṃ niccaṃ vā aniccaṃ vā”ti? ",
          "en": "Is eye consciousness permanent or impermanent?” "
        },
        {
          "scid": "sn18.3:1.4",
          "pli": "“Aniccaṃ, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.3:1.5",
          "pli": "“sotaviññāṇaṃ … pe … ",
          "en": "“… ear consciousness … "
        },
        {
          "scid": "sn18.3:1.6",
          "pli": "ghānaviññāṇaṃ … ",
          "en": "nose consciousness … "
        },
        {
          "scid": "sn18.3:1.7",
          "pli": "jivhāviññāṇaṃ … ",
          "en": "tongue consciousness … "
        },
        {
          "scid": "sn18.3:1.8",
          "pli": "kāyaviññāṇaṃ … ",
          "en": "body consciousness … "
        },
        {
          "scid": "sn18.3:1.9",
          "pli": "manoviññāṇaṃ niccaṃ vā aniccaṃ vā”ti? ",
          "en": "Is mind consciousness permanent or impermanent?” "
        },
        {
          "scid": "sn18.3:1.10",
          "pli": "“Aniccaṃ, bhante” … ",
          "en": "“Impermanent, sir.” … "
        },
        {
          "scid": "sn18.3:1.11",
          "pli": "“evaṃ passaṃ, rāhula, sutavā ariyasāvako cakkhuviññāṇasmimpi nibbindati … pe … sotaviññāṇasmimpi nibbindati … ghānaviññāṇasmimpi nibbindati … jivhāviññāṇasmimpi nibbindati … kāyaviññāṇasmimpi nibbindati … manoviññāṇasmimpi nibbindati; ",
          "en": "“Seeing this, a learned noble disciple grows disillusioned with eye consciousness, ear consciousness, nose consciousness, tongue consciousness, body consciousness, and mind consciousness. "
        },
        {
          "scid": "sn18.3:1.12",
          "pli": "nibbindaṃ virajjati … pe … ",
          "en": "Being disillusioned, desire fades away. …” "
        },
        {
          "scid": "sn18.3:1.13",
          "pli": "pajānātī”ti. ",
          "en": " "
        },
        {
          "scid": "sn18.3:1.14",
          "pli": "Tatiyaṃ. ",
          "en": ""
        }
      ],
