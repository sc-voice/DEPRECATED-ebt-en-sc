        {
          "scid": "sn26.7:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn26.7:1.2",
          "pli": "“Yo kho, bhikkhave, rūpasañcetanāya uppādo ṭhiti … pe … ",
          "en": "“Mendicants, the arising of intentions regarding sights … "
        },
        {
          "scid": "sn26.7:1.3",
          "pli": "jarāmaraṇassa pātubhāvo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.7:1.4",
          "pli": "yo dhammasañcetanāya uppādo ṭhiti abhinibbatti pātubhāvo, dukkhasseso uppādo, rogānaṃ ṭhiti, jarāmaraṇassa pātubhāvo. ",
          "en": "intentions regarding thoughts … is the manifestation of old age and death. "
        },
        {
          "scid": "sn26.7:1.5",
          "pli": "Yo ca kho, bhikkhave, rūpasañcetanāya nirodho … pe … ",
          "en": "The cessation of intentions regarding sights … "
        },
        {
          "scid": "sn26.7:1.6",
          "pli": "jarāmaraṇassa atthaṅgamo … pe … ",
          "en": " "
        },
        {
          "scid": "sn26.7:1.7",
          "pli": "yo dhammasañcetanāya nirodho vūpasamo atthaṅgamo, dukkhasseso nirodho, rogānaṃ vūpasamo, jarāmaraṇassa atthaṅgamo”ti. ",
          "en": "intentions regarding thoughts … is the ending of old age and death.” "
        },
        {
          "scid": "sn26.7:1.8",
          "pli": "Sattamaṃ. ",
          "en": ""
        }
      ],
