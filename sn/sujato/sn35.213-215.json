    {
      "segments": [
        {
          "scid": "sn35.213-215:1.1",
          "pli": "“Rūpā, bhikkhave, aniccā atītā anāgatā paccuppannā. ",
          "en": "“Mendicants, in the past … future … present sights, sounds, smells, tastes, touches, and thoughts are impermanent. "
        },
        {
          "scid": "sn35.213-215:1.2",
          "pli": "Yadaniccaṃ, taṃ dukkhaṃ. ",
          "en": "What’s impermanent is suffering …” "
        },
        {
          "scid": "sn35.213-215:1.3",
          "pli": "Yaṃ dukkhaṃ, tadanattā. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.4",
          "pli": "Yadanattā, taṃ ‘netaṃ mama, nesohamasmi, na meso attā’ti evametaṃ yathābhūtaṃ sammappaññāya daṭṭhabbaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.5",
          "pli": "Saddā … ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.6",
          "pli": "gandhā … ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.7",
          "pli": "rasā … ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.8",
          "pli": "phoṭṭhabbā … ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.9",
          "pli": "dhammā aniccā atītā anāgatā paccuppannā. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.10",
          "pli": "Yadaniccaṃ taṃ dukkhaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.11",
          "pli": "Yaṃ dukkhaṃ tadanattā. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.12",
          "pli": "Yadanattā taṃ ‘netaṃ mama, nesohamasmi, na meso attā’ti evametaṃ yathābhūtaṃ sammappaññāya daṭṭhabbaṃ. ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.13",
          "pli": "Evaṃ passaṃ … pe … ",
          "en": " "
        },
        {
          "scid": "sn35.213-215:1.14",
          "pli": "nāparaṃ itthattāyāti pajānātī”ti. ",
          "en": ""
        }
      ],
