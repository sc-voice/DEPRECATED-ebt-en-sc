    {
      "segments": [
        {
          "scid": "sn27.9:1.1",
          "pli": "Sāvatthinidānaṃ. ",
          "en": "At Sāvatthī. "
        },
        {
          "scid": "sn27.9:1.2",
          "pli": "“Yo, bhikkhave, pathavīdhātuyā chandarāgo, cittasseso upakkileso. ",
          "en": "“Mendicants, desire and greed for the earth element, "
        },
        {
          "scid": "sn27.9:1.3",
          "pli": "Yo āpodhātuyā … ",
          "en": "the water element, "
        },
        {
          "scid": "sn27.9:1.4",
          "pli": "yo tejodhātuyā … ",
          "en": "the fire element, "
        },
        {
          "scid": "sn27.9:1.5",
          "pli": "yo vāyodhātuyā … ",
          "en": "the air element, "
        },
        {
          "scid": "sn27.9:1.6",
          "pli": "yo ākāsadhātuyā … ",
          "en": "the space element, "
        },
        {
          "scid": "sn27.9:1.7",
          "pli": "yo viññāṇadhātuyā chandarāgo, cittasseso upakkileso. ",
          "en": "or the consciousness element is a corruption of the mind. …” "
        },
        {
          "scid": "sn27.9:1.8",
          "pli": "Yato kho, bhikkhave, bhikkhuno imesu chasu ṭhānesu cetaso upakkileso pahīno hoti, nekkhammaninnañcassa cittaṃ hoti. ",
          "en": " "
        },
        {
          "scid": "sn27.9:1.9",
          "pli": "Nekkhammaparibhāvitaṃ cittaṃ kammaniyaṃ khāyati, abhiññā sacchikaraṇīyesu dhammesū”ti. ",
          "en": " "
        },
        {
          "scid": "sn27.9:1.10",
          "pli": "Navamaṃ. ",
          "en": ""
        }
      ],
